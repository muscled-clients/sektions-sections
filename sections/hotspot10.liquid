<section id="sek-hotspots-simple-{{ section_id }}" class="sek-hotspots-simple">
  <div class="sek-hss__container">
    <!-- Header -->
    {%- if section.settings.heading != blank -%}
      <div class="sek-hss__header">
        <h2 class="sek-hss__heading">{{ section.settings.heading }}</h2>
      </div>
    {%- endif -%}

    <!-- Image with Hotspots -->
    <div class="sek-hss__image-wrapper">
      {%- if section.settings.image != blank -%}
        <img
          class="sek-hss__image"
          src="{{ section.settings.image | image_url: width: 1920 }}"
          alt="{{ section.settings.image.alt | default: section.settings.heading | escape }}"
          loading="lazy"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}"
        >
      {%- else -%}
        <div class="sek-hss__image-placeholder">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
            <circle cx="8.5" cy="8.5" r="1.5"></circle>
            <polyline points="21 15 16 10 5 21"></polyline>
          </svg>
        </div>
      {%- endif -%}

      <!-- Hotspots -->
      {%- for block in section.blocks -%}
        {%- if block.type == 'hotspot' -%}
          <div
            class="sek-hss__hotspot"
            style="left: {{ block.settings.position_x }}%; top: {{ block.settings.position_y }}%;"
            data-position="{{ block.settings.tooltip_position }}"
            {{ block.shopify_attributes }}
          >
            <button class="sek-hss__marker" type="button" aria-label="View details">
              <span class="sek-hss__icon">+</span>
            </button>

            <div class="sek-hss__tooltip">
              <p class="sek-hss__tooltip-content">
                {%- if block.settings.title != blank -%}
                  <span class="sek-hss__tooltip-title">{{ block.settings.title }}</span>{% if block.settings.description != blank %}:{% endif %}
                {%- endif -%}
                {{ block.settings.description }}
              </p>
            </div>
          </div>
        {%- endif -%}
      {%- endfor -%}

      {%- if section.blocks.size == 0 -%}
        <!-- Default placeholder hotspots -->
        <div class="sek-hss__hotspot" style="left: 12%; top: 65%;" data-position="bottom">
          <button class="sek-hss__marker" type="button" aria-label="View details">
            <span class="sek-hss__icon">+</span>
          </button>
          <div class="sek-hss__tooltip">
            <p class="sek-hss__tooltip-content">
              <span class="sek-hss__tooltip-title">Pillow Case</span>: Premium cotton pillow case with soft, breathable fabric for ultimate comfort.
            </p>
          </div>
        </div>

        <div class="sek-hss__hotspot" style="left: 52%; top: 32%;" data-position="bottom">
          <button class="sek-hss__marker" type="button" aria-label="View details">
            <span class="sek-hss__icon">+</span>
          </button>
          <div class="sek-hss__tooltip">
            <p class="sek-hss__tooltip-content">
              <span class="sek-hss__tooltip-title">Bed Frame</span>: Sturdy, modern wood bedframe with natural finish and sleek design.
            </p>
          </div>
        </div>

        <div class="sek-hss__hotspot" style="left: 36%; top: 58%;" data-position="bottom">
          <button class="sek-hss__marker" type="button" aria-label="View details">
            <span class="sek-hss__icon">+</span>
          </button>
          <div class="sek-hss__tooltip">
            <p class="sek-hss__tooltip-content">
              <span class="sek-hss__tooltip-title">Duvet Case</span>: Luxurious, hypoallergenic duvet case with button closure, patterned design.
            </p>
          </div>
        </div>

        <div class="sek-hss__hotspot" style="left: 78%; top: 55%;" data-position="left">
          <button class="sek-hss__marker" type="button" aria-label="View details">
            <span class="sek-hss__icon">+</span>
          </button>
          <div class="sek-hss__tooltip">
            <p class="sek-hss__tooltip-content">
              <span class="sek-hss__tooltip-title">Side Table</span>: Modern metal side table with minimalist design and dual-tier storage.
            </p>
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

<script>
  (function() {
    function initHotspotsSimple() {
      const sectionId = '{{ section_id }}';
      const section = document.getElementById('sek-hotspots-simple-' + sectionId);
      if (!section) return;

      const hotspots = section.querySelectorAll('.sek-hss__hotspot');
      const markers = section.querySelectorAll('.sek-hss__marker');

      // Click handler for toggle
      markers.forEach(marker => {
        marker.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();

          const hotspot = this.closest('.sek-hss__hotspot');

          // Close all other tooltips
          hotspots.forEach(h => {
            if (h !== hotspot) {
              h.classList.remove('is-active');
            }
          });

          // Toggle current tooltip
          hotspot.classList.toggle('is-active');
        });
      });

      // Close tooltips when clicking outside
      document.addEventListener('click', function(e) {
        if (!e.target.closest('.sek-hss__hotspot')) {
          hotspots.forEach(h => {
            h.classList.remove('is-active');
          });
        }
      });

      // Close tooltips on escape key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          hotspots.forEach(h => {
            h.classList.remove('is-active');
          });
        }
      });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initHotspotsSimple);
    } else {
      initHotspotsSimple();
    }
  })();
</script>

