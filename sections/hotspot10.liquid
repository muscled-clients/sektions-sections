{% comment %}
  SEK Hotspots Simple - Interactive image with text-only tooltips
  Features: Full-width image, positioned hotspots with pulse animation, simple text tooltips (title + description)
{% endcomment %}

{%- assign section_id = section.id -%}

{% style %}
  #sek-hotspots-simple-{{ section_id }},
  #sek-hotspots-simple-{{ section_id }} * {
    box-sizing: border-box;
  }

  #sek-hotspots-simple-{{ section_id }} {
    padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px;
    background: {{ section.settings.background_color }};
    overflow: hidden;
    width: 100%;
  }

  #sek-hotspots-simple-{{ section_id }} .sek-hss__container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 12px;
  }

  /* Header */
  #sek-hotspots-simple-{{ section_id }} .sek-hss__header {
    text-align: center;
    margin-bottom: 20px;
  }

  #sek-hotspots-simple-{{ section_id }} .sek-hss__heading {
    font-size: 22px;
    font-weight: 700;
    line-height: 1.2;
    color: {{ section.settings.heading_color }};
    margin: 0;
  }

  /* Image Container */
  #sek-hotspots-simple-{{ section_id }} .sek-hss__image-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  #sek-hotspots-simple-{{ section_id }} .sek-hss__image {
    width: 100%;
    height: auto;
    display: block;
  }

  #sek-hotspots-simple-{{ section_id }} .sek-hss__image-placeholder {
    width: 100%;
    aspect-ratio: 16 / 9;
    background: linear-gradient(135deg, #e8e4df 0%, #d4cfc7 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #sek-hotspots-simple-{{ section_id }} .sek-hss__image-placeholder svg {
    width: 50px;
    height: 50px;
    opacity: 0.3;
  }

  /* Hotspot Marker */
  #sek-hotspots-simple-{{ section_id }} .sek-hss__hotspot {
    position: absolute;
    z-index: 10;
    transform: translate(-50%, -50%);
  }

  #sek-hotspots-simple-{{ section_id }} .sek-hss__marker {
    width: 32px;
    height: 32px;
    background: {{ section.settings.marker_background }};
    border: none;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    position: relative;
    transition: transform 0.2s ease;
    box-shadow: none;
    outline: none;
    -webkit-appearance: none;
    appearance: none;
  }

  #sek-hotspots-simple-{{ section_id }} .sek-hss__marker:hover {
    transform: scale(1.1);
  }

  #sek-hotspots-simple-{{ section_id }} .sek-hss__marker:focus {
    outline: none;
  }

  #sek-hotspots-simple-{{ section_id }} .sek-hss__icon {
    font-size: 18px;
    font-weight: 300;
    line-height: 1;
    color: {{ section.settings.marker_icon_color }};
    font-family: Arial, sans-serif;
  }

  /* Pulse Animation - subtle ring effect */
  #sek-hotspots-simple-{{ section_id }} .sek-hss__marker::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: transparent;
    border: 2px solid {{ section.settings.marker_background }};
    opacity: 0;
    z-index: -1;
    animation: sekHssPulse-{{ section_id }} 3s ease-out infinite;
  }

  @keyframes sekHssPulse-{{ section_id }} {
    0% {
      transform: scale(1);
      opacity: 0.5;
    }
    100% {
      transform: scale(1.8);
      opacity: 0;
    }
  }

  /* Tooltip */
  #sek-hotspots-simple-{{ section_id }} .sek-hss__tooltip {
    position: absolute;
    top: calc(100% + 10px);
    left: 50%;
    transform: translateX(-50%);
    background: {{ section.settings.tooltip_background }};
    padding: 10px;
    min-width: 160px;
    max-width: 200px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.12);
    opacity: 0;
    visibility: hidden;
    transition: all 0.25s ease;
    pointer-events: none;
    z-index: 20;
  }

  /* Tooltip Arrow */
  #sek-hotspots-simple-{{ section_id }} .sek-hss__tooltip::before {
    content: '';
    position: absolute;
    top: -5px;
    left: 50%;
    transform: translateX(-50%) rotate(45deg);
    width: 10px;
    height: 10px;
    background: {{ section.settings.tooltip_background }};
  }

  /* Tooltip Active State */
  #sek-hotspots-simple-{{ section_id }} .sek-hss__hotspot.is-active .sek-hss__tooltip {
    opacity: 1;
    visibility: visible;
    pointer-events: all;
  }

  /* Desktop Hover */
  @media (min-width: 1024px) {
    #sek-hotspots-simple-{{ section_id }} .sek-hss__hotspot:hover .sek-hss__tooltip {
      opacity: 1;
      visibility: visible;
      pointer-events: all;
    }
  }

  /* Tooltip Content */
  #sek-hotspots-simple-{{ section_id }} .sek-hss__tooltip-content {
    font-size: 12px;
    line-height: 1.4;
    color: {{ section.settings.tooltip_text_color }};
    margin: 0;
  }

  #sek-hotspots-simple-{{ section_id }} .sek-hss__tooltip-title {
    font-weight: 700;
    color: {{ section.settings.tooltip_title_color }};
  }

  /* Tooltip Position Variants */
  #sek-hotspots-simple-{{ section_id }} .sek-hss__hotspot[data-position="top"] .sek-hss__tooltip {
    top: auto;
    bottom: calc(100% + 10px);
  }

  #sek-hotspots-simple-{{ section_id }} .sek-hss__hotspot[data-position="top"] .sek-hss__tooltip::before {
    top: auto;
    bottom: -5px;
  }

  #sek-hotspots-simple-{{ section_id }} .sek-hss__hotspot[data-position="left"] .sek-hss__tooltip {
    top: 50%;
    left: auto;
    right: calc(100% + 10px);
    transform: translateY(-50%);
  }

  #sek-hotspots-simple-{{ section_id }} .sek-hss__hotspot[data-position="left"] .sek-hss__tooltip::before {
    top: 50%;
    left: auto;
    right: -5px;
    transform: translateY(-50%) rotate(45deg);
  }

  #sek-hotspots-simple-{{ section_id }} .sek-hss__hotspot[data-position="right"] .sek-hss__tooltip {
