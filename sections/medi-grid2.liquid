{% style %}
  .media-grid-2-{{ section.id }} {
    --media-grid-2-bg: {{ section.settings.background_color }};
    --media-grid-2-title-color: {{ section.settings.title_color }};
    --media-grid-2-button-bg: {{ section.settings.button_bg_color }};
    --media-grid-2-button-text: {{ section.settings.button_text_color }};
    --media-grid-2-button-hover-bg: {{ section.settings.button_hover_bg_color }};
    --media-grid-2-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  }
{% endstyle %}

<section class="media-grid-2 media-grid-2-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="media-grid-2__container">
    <div class="media-grid-2__grid">
      {% for block in section.blocks %}
        {% if block.type == 'media_card' %}
          <a
            href="{{ block.settings.link | default: '#' }}"
            class="media-grid-2__card{% if block.settings.large_card %} media-grid-2__card--large{% endif %}"
            {{ block.shopify_attributes }}
          >
            <!-- Background Image -->
            <div class="media-grid-2__image-wrapper">
              {% if block.settings.image != blank %}
                <img
                  src="{{ block.settings.image | image_url: width: 1200 }}"
                  alt="{{ block.settings.image.alt | default: block.settings.title }}"
                  class="media-grid-2__image"
                  loading="lazy"
                >
              {% else %}
                <div class="media-grid-2__image-placeholder">
                  {{ 'lifestyle-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
              <div class="media-grid-2__overlay"></div>
            </div>

            <!-- Content -->
            <div class="media-grid-2__content">
              {% if block.settings.title != blank %}
                <h3 class="media-grid-2__title">{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.button_text != blank %}
                <span class="media-grid-2__button">{{ block.settings.button_text }}</span>
              {% endif %}
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  /* Base Section - Isolated Styles */
  .media-grid-2 {
    display: block;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    background-color: var(--media-grid-2-bg);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    padding: 0;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    overflow: hidden;
    position: relative;
  }

  .media-grid-2 *,
  .media-grid-2 *::before,
  .media-grid-2 *::after {
    box-sizing: border-box;
  }

  .media-grid-2 a {
    text-decoration: none;
    color: inherit;
  }

  .media-grid-2 img {
    max-width: 100%;
    height: auto;
    border: 0;
    vertical-align: middle;
  }

  .media-grid-2 h3 {
    margin: 0;
    padding: 0;
  }

  /* Container */
  .media-grid-2__container {
    display: block;
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
    padding: 0 {{ section.settings.side_padding }}px;
  }

  /* Grid Layout */
  .media-grid-2__grid {
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: minmax(250px, auto);
    grid-auto-flow: dense;
    gap: {{ section.settings.grid_gap }}px;
  }

  /* Card */
  .media-grid-2__card {
    position: relative;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    text-align: center;
    min-height: 250px;
    overflow: hidden;
    cursor: pointer;
  }

  /* Image Wrapper */
  .media-grid-2__image-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .media-grid-2__image {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .media-grid-2__card:hover .media-grid-2__image {
    transform: scale(1.05);
  }

  .media-grid-2__image-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    background-color: #e0e0e0;
  }

  .media-grid-2__image-placeholder svg {
    display: block;
    width: 50%;
    max-width: 200px;
    height: auto;
    opacity: 0.5;
  }

  /* Overlay */
  .media-grid-2__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000000;
    opacity: var(--media-grid-2-overlay-opacity);
    z-index: 2;
    transition: opacity 0.3s ease;
  }

  .media-grid-2__card:hover .media-grid-2__overlay {
    opacity: calc(var(--media-grid-2-overlay-opacity) + 0.1);
  }

  /* Content */
  .media-grid-2__content {
    position: relative;
    z-index: 3;
    padding: 24px 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .media-grid-2__title {
    font-size: 22px;
    font-weight: 400;
    color: var(--media-grid-2-title-color);
    line-height: 1.3;
    letter-spacing: 0.01em;
  }

  /* Button */
  .media-grid-2__button {
    display: inline-block;
    background-color: var(--media-grid-2-button-bg);
    color: var(--media-grid-2-button-text);
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 10px 16px;
    border: none;
    transition: background-color 0.25s ease;
  }

  .media-grid-2__card:hover .media-grid-2__button {
    background-color: var(--media-grid-2-button-hover-bg);
  }

  /* ========================================
     RESPONSIVE BREAKPOINTS
     ======================================== */

  /* Small Mobile (< 400px) */
  @media screen and (max-width: 399px) {
    .media-grid-2__grid {
      grid-auto-rows: minmax(220px, auto);
    }

    .media-grid-2__card {
      min-height: 220px;
    }

    .media-grid-2__card--large {
      min-height: 280px;
    }

    .media-grid-2__content {
      padding: 20px 16px;
      gap: 10px;
    }

    .media-grid-2__title {
      font-size: 20px;
    }

    .media-grid-2__button {
      font-size: 11px;
      padding: 8px 14px;
    }
  }

  /* Medium Mobile (400px+) */
  @media screen and (min-width: 400px) {
    .media-grid-2__grid {
      grid-auto-rows: minmax(280px, auto);
    }

    .media-grid-2__card {
      min-height: 280px;
    }

    .media-grid-2__card--large {
      min-height: 320px;
    }

    .media-grid-2__title {
      font-size: 24px;
    }
  }

  /* Large Mobile (550px+) */
  @media screen and (min-width: 550px) {
    .media-grid-2__grid {
      grid-template-columns: repeat(2, 1fr);
      grid-auto-rows: minmax(280px, auto);
    }

    .media-grid-2__card--large {
      grid-row: span 2;
    }

    .media-grid-2__content {
      padding: 28px 24px;
    }

    .media-grid-2__title {
      font-size: 26px;
    }

    .media-grid-2__button {
      font-size: 12px;
      padding: 10px 16px;
    }
  }

  /* Tablet (768px+) */
  @media screen and (min-width: 768px) {
    .media-grid-2__grid {
      grid-template-columns: repeat(3, 1fr);
      grid-auto-rows: minmax(260px, auto);
    }

    .media-grid-2__card {
      min-height: 260px;
    }

    .media-grid-2__card--large {
      grid-row: span 2;
      min-height: auto;
    }

    .media-grid-2__content {
      padding: 30px 24px;
      gap: 14px;
    }

    .media-grid-2__title {
      font-size: 26px;
    }
  }

  /* Desktop (1024px+) */
  @media screen and (min-width: 1024px) {
    .media-grid-2__grid {
      grid-auto-rows: minmax(300px, auto);
    }

    .media-grid-2__card {
      min-height: 300px;
    }

    .media-grid-2__content {
      padding: 36px 28px;
      gap: 16px;
    }

    .media-grid-2__title {
      font-size: 30px;
    }

    .media-grid-2__button {
      font-size: 13px;
      padding: 12px 20px;
    }
  }

  /* Large Desktop (1400px+) */
  @media screen and (min-width: 1400px) {
    .media-grid-2__grid {
      grid-auto-rows: minmax(340px, auto);
    }

    .media-grid-2__card {
      min-height: 340px;
    }

    .media-grid-2__content {
      padding: 40px 32px;
    }

    .media-grid-2__title {
      font-size: 34px;
    }

    .media-grid-2__button {
      font-size: 14px;
      padding: 12px 22px;
    }
  }
</style>

