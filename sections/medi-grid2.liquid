        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "checkbox",
          "id": "large_card",
          "label": "Large Card (Spans 2 Rows)",
          "default": false,
          "info": "Enable for the first card to create the featured layout"
        }
      ]
    }
  ],
  "presets": [
