  "tag": "section",
  "class": "media-grid-2-section",
  "settings": [
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#f8eedd"
    },
    {
      "type": "color",
      "id": "button_bg_color",
