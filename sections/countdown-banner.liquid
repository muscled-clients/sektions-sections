<style>
  #shopify-section-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
    background-color: {{ section.settings.background_color }};
  }

  #countdown-banner-{{ section.id }} {
    position: relative;
    width: 100%;
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    border-radius: {{ section.settings.border_radius }}px;
    overflow: hidden;
    min-height: {{ section.settings.min_height_desktop }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #countdown-banner-{{ section.id }} .banner-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  #countdown-banner-{{ section.id }} .banner-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness({{ section.settings.image_brightness | divided_by: 100.0 }});
  }

  #countdown-banner-{{ section.id }} .banner-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  #countdown-banner-{{ section.id }} .banner-content {
    position: relative;
    z-index: 3;
    text-align: center;
    padding: 40px 20px;
    width: 100%;
    max-width: 800px;
  }

  #countdown-banner-{{ section.id }} .banner-heading {
    font-size: {{ section.settings.heading_size_desktop }}px;
    font-weight: {{ section.settings.heading_weight }};
    color: {{ section.settings.heading_color }};
    margin-bottom: {{ section.settings.heading_margin }}px;
    line-height: 1.2;
    text-transform: {{ section.settings.heading_transform }};
  }

  #countdown-banner-{{ section.id }} .banner-subheading {
    font-size: {{ section.settings.subheading_size }}px;
    color: {{ section.settings.subheading_color }};
    margin-bottom: {{ section.settings.subheading_margin }}px;
    line-height: 1.4;
  }

  #countdown-banner-{{ section.id }} .banner-button {
    display: inline-block;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    transition: all 0.3s ease;
    margin-bottom: 30px;
  }

  #countdown-banner-{{ section.id }} .banner-button:hover {
    background-color: {{ section.settings.button_hover_bg_color }};
    color: {{ section.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  #countdown-banner-{{ section.id }} .countdown-timer {
    display: flex;
    justify-content: center;
    gap: {{ section.settings.countdown_spacing | default: 30 }}px;
    flex-wrap: wrap;
  }

  #countdown-banner-{{ section.id }} .countdown-item {
    text-align: center;
    min-width: 60px;
  }

  #countdown-banner-{{ section.id }} .countdown-number {
    font-size: {{ section.settings.countdown_number_size }}px;
    font-weight: {{ section.settings.countdown_number_weight }};
    color: {{ section.settings.countdown_number_color }};
    line-height: 1;
    display: block;
  }

  #countdown-banner-{{ section.id }} .countdown-label {
    font-size: {{ section.settings.countdown_label_size }}px;
    color: {{ section.settings.countdown_label_color }};
    text-transform: uppercase;
    margin-top: 5px;
    letter-spacing: 1px;
  }

  #countdown-banner-{{ section.id }} .countdown-separator {
    display: inline-block;
    width: 0;
    height: 50px;
    border-left: {{ section.settings.countdown_separator_thickness | default: 1 }}px solid {{ section.settings.countdown_separator_color | default: '#ffffff' }};
    opacity: {{ section.settings.countdown_separator_opacity | default: 50 | divided_by: 100.0 }};
    margin: 0 {{ section.settings.separator_margin | default: 20 }}px;
    align-self: center;
    flex-shrink: 0;
  }

  #countdown-banner-{{ section.id }} .expired-message {
    font-size: 24px;
    color: {{ section.settings.expired_text_color }};
    font-weight: bold;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    #countdown-banner-{{ section.id }} {
      min-height: {{ section.settings.min_height_mobile }}px;
    }

    #countdown-banner-{{ section.id }} .banner-background.mobile-only {
      display: block;
    }

    #countdown-banner-{{ section.id }} .banner-background.desktop-only {
      display: none;
    }

    #countdown-banner-{{ section.id }} .banner-heading {
      font-size: {{ section.settings.heading_size_mobile }}px;
    }

    #countdown-banner-{{ section.id }} .banner-subheading {
      font-size: {{ section.settings.subheading_size_mobile }}px;
    }

    #countdown-banner-{{ section.id }} .countdown-timer {
      gap: {{ section.settings.countdown_spacing_mobile | default: 20 }}px;
    }

    #countdown-banner-{{ section.id }} .countdown-number {
      font-size: {{ section.settings.countdown_number_size_mobile }}px;
    }

    #countdown-banner-{{ section.id }} .countdown-label {
      font-size: {{ section.settings.countdown_label_size_mobile }}px;
    }

    #countdown-banner-{{ section.id }} .countdown-separator {
      height: 35px;
      margin: 0 {{ section.settings.separator_margin_mobile | default: 12 }}px;
      border-left-width: {{ section.settings.countdown_separator_thickness | default: 1 }}px;
    }

    #countdown-banner-{{ section.id }} .banner-content {
      padding: 30px 15px;
    }
  }

  /* Desktop Styles */
  @media (min-width: 769px) {
    #countdown-banner-{{ section.id }} .banner-background.mobile-only {
      display: none;
    }

    #countdown-banner-{{ section.id }} .banner-background.desktop-only {
      display: block;
    }
  }
</style>

<div id="countdown-banner-{{ section.id }}">
