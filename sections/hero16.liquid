{% style %}
  #shopify-section-{{ section.id }} {
    --h16-bg: {{ section.settings.background_color }};
    --h16-text: {{ section.settings.text_color }};
    --h16-heading: {{ section.settings.heading_color }};
    --h16-btn-bg: {{ section.settings.button_bg }};
    --h16-btn-text: {{ section.settings.button_text_color }};
    --h16-stars: {{ section.settings.stars_color }};
    --h16-check: {{ section.settings.check_color }};
    --h16-badge-bg: {{ section.settings.badge_bg }};
    display: block;
    width: 100%;
    max-width: 100%;
    margin-top: {{ section.settings.margin_top | times: 0.7 | round }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.7 | round }}px;
  }
  @media (min-width: 550px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top | times: 0.8 | round }}px;
      margin-bottom: {{ section.settings.margin_bottom | times: 0.8 | round }}px;
    }
  }
  @media (min-width: 768px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top | times: 0.9 | round }}px;
      margin-bottom: {{ section.settings.margin_bottom | times: 0.9 | round }}px;
    }
  }
  @media (min-width: 1024px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{% endstyle %}

<!-- Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

<style>
  /* Box-sizing */
  .hero-16,
  .hero-16 *,
  .hero-16 *::before,
  .hero-16 *::after {
    box-sizing: border-box;
  }

  /* Base - Small Mobile (< 400px) */
  .hero-16 {
    background: var(--h16-bg, #dbeafe);
    padding: 40px 16px;
    font-family: 'Inter', sans-serif;
    position: relative;
    overflow: hidden;
  }

  .hero-16__container {
    max-width: 1300px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .hero-16__content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  /* Rating Badge */
  .hero-16__badge {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: var(--h16-badge-bg, rgba(255, 255, 255, 0.5));
    padding: 8px 14px;
    border-radius: 30px;
    margin-bottom: 20px;
  }

  .hero-16__stars {
    display: flex;
    gap: 2px;
  }

  .hero-16__star {
    width: 18px;
    height: 18px;
    background: var(--h16-stars, #00b67a);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-16__star svg {
    width: 11px;
    height: 11px;
    fill: #ffffff;
  }

  .hero-16__rating-text {
    font-size: 13px;
    font-weight: 500;
    color: var(--h16-heading, #000000);
  }

  .hero-16__rating-text strong {
    font-weight: 700;
  }

  /* Heading */
  .hero-16__heading {
    font-size: 32px;
    font-weight: 800;
    line-height: 1.1;
    color: var(--h16-heading, #000000);
    margin: 0 0 16px;
  }

  /* Description */
  .hero-16__description {
    font-size: 15px;
    font-weight: 400;
    line-height: 1.6;
    color: var(--h16-text, #333333);
    margin: 0 0 24px;
    max-width: 500px;
  }

  /* Button */
  .hero-16__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 16px 32px;
    background: var(--h16-btn-bg, #ffe658);
    color: var(--h16-btn-text, #000000);
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-decoration: none;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-bottom: 28px;
  }

  .hero-16__btn:hover {
    background: #fff89c;
    transform: translateY(-2px);
  }

  .hero-16__btn svg {
    width: 16px;
    height: 16px;
    stroke: currentColor;
    stroke-width: 2.5;
    fill: none;
  }

  /* Features */
  .hero-16__features {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .hero-16__feature {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .hero-16__check {
    width: 22px;
    height: 22px;
    min-width: 22px;
    border-radius: 50%;
    background: var(--h16-check, #22c55e);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-16__check svg {
    width: 12px;
    height: 12px;
    stroke: #ffffff;
    stroke-width: 3;
    fill: none;
  }

  .hero-16__feature-text {
    font-size: 14px;
    font-weight: 500;
    color: var(--h16-heading, #000000);
  }

  /* Image */
  .hero-16__image-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-16__image {
    max-width: 100%;
    height: auto;
    object-fit: contain;
  }

  /* Medium Mobile (400px+) */
  @media (min-width: 400px) {
    .hero-16 {
      padding: 50px 20px;
    }

    .hero-16__badge {
      padding: 10px 16px;
      margin-bottom: 24px;
    }

    .hero-16__star {
      width: 20px;
      height: 20px;
    }

    .hero-16__star svg {
      width: 12px;
      height: 12px;
    }

    .hero-16__rating-text {
      font-size: 14px;
    }

    .hero-16__heading {
      font-size: 38px;
    }

    .hero-16__description {
      font-size: 16px;
      margin-bottom: 26px;
    }

    .hero-16__btn {
      padding: 18px 36px;
      font-size: 14px;
    }

    .hero-16__check {
      width: 24px;
      height: 24px;
      min-width: 24px;
    }

    .hero-16__check svg {
      width: 13px;
      height: 13px;
    }

    .hero-16__feature-text {
      font-size: 15px;
    }
  }

  /* Large Mobile (550px+) */
  @media (min-width: 550px) {
    .hero-16 {
      padding: 60px 24px;
    }

    .hero-16__container {
      gap: 40px;
    }

    .hero-16__heading {
      font-size: 44px;
      margin-bottom: 18px;
    }

    .hero-16__description {
      font-size: 17px;
      margin-bottom: 28px;
    }

    .hero-16__btn {
      padding: 20px 40px;
      font-size: 15px;
      margin-bottom: 32px;
    }

    .hero-16__features {
      gap: 12px;
    }

    .hero-16__feature-text {
      font-size: 16px;
    }
  }

  /* Tablet (768px+) */
  @media (min-width: 768px) {
    .hero-16 {
      padding: 60px 40px;
    }

    .hero-16__container {
      flex-direction: row;
      align-items: center;
      gap: 40px;
    }

    .hero-16__content {
      flex: 1;
      max-width: 55%;
    }

    .hero-16__heading {
      font-size: 46px;
    }

    .hero-16__image-wrapper {
      flex: 1;
      max-width: 45%;
    }
  }

  /* Desktop (1024px+) */
  @media (min-width: 1024px) {
    .hero-16 {
      padding: 70px 50px;
    }

    .hero-16__container {
      gap: 50px;
    }

    .hero-16__content {
      max-width: 58%;
    }

    .hero-16__badge {
      padding: 12px 20px;
      margin-bottom: 28px;
    }

    .hero-16__star {
      width: 22px;
      height: 22px;
    }

    .hero-16__star svg {
      width: 13px;
      height: 13px;
    }

    .hero-16__rating-text {
      font-size: 15px;
    }

    .hero-16__heading {
      font-size: 54px;
      margin-bottom: 20px;
    }

    .hero-16__description {
      font-size: 18px;
      margin-bottom: 32px;
      max-width: 550px;
    }

    .hero-16__btn {
      padding: 22px 46px;
      font-size: 15px;
      border-radius: 10px;
      margin-bottom: 36px;
    }

    .hero-16__btn svg {
      width: 18px;
      height: 18px;
    }

    .hero-16__features {
      gap: 14px;
    }

    .hero-16__check {
      width: 26px;
      height: 26px;
      min-width: 26px;
    }

    .hero-16__check svg {
      width: 14px;
      height: 14px;
    }

    .hero-16__feature-text {
      font-size: 17px;
    }

    .hero-16__image-wrapper {
      max-width: 42%;
    }
  }

  /* Large Desktop (1400px+) */
  @media (min-width: 1400px) {
    .hero-16 {
      padding: 80px 60px;
    }

    .hero-16__container {
      max-width: 1500px;
      gap: 60px;
    }

    .hero-16__heading {
      font-size: 62px;
      margin-bottom: 24px;
    }

    .hero-16__description {
      font-size: 19px;
      max-width: 580px;
    }

    .hero-16__btn {
      padding: 24px 52px;
      font-size: 16px;
    }

    .hero-16__feature-text {
      font-size: 18px;
    }
  }
</style>

<section class="hero-16" data-section-id="{{ section.id }}">
  <div class="hero-16__container">
    <!-- Content -->
    <div class="hero-16__content">
      <!-- Rating Badge -->
      {%- if section.settings.show_rating -%}
        <div class="hero-16__badge">
          <div class="hero-16__stars">
            {%- for i in (1..5) -%}
              <div class="hero-16__star">
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              </div>
            {%- endfor -%}
          </div>
          <span class="hero-16__rating-text">{{ section.settings.rating_text }}</span>
        </div>
      {%- endif -%}

      <!-- Heading -->
      {%- if section.settings.heading != blank -%}
        <h1 class="hero-16__heading">{{ section.settings.heading }}</h1>
      {%- endif -%}

      <!-- Description -->
      {%- if section.settings.description != blank -%}
        <p class="hero-16__description">{{ section.settings.description }}</p>
      {%- endif -%}

      <!-- Button -->
      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_link }}" class="hero-16__btn">
          {{ section.settings.button_text }}
          <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <line x1="5" y1="12" x2="19" y2="12"/>
            <polyline points="12 5 19 12 12 19"/>
          </svg>
        </a>
      {%- endif -%}

      <!-- Features -->
      {%- if section.blocks.size > 0 -%}
        <div class="hero-16__features">
          {%- for block in section.blocks -%}
            <div class="hero-16__feature" {{ block.shopify_attributes }}>
              <div class="hero-16__check">
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
              </div>
              <span class="hero-16__feature-text">{{ block.settings.text }}</span>
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>

    <!-- Image -->
    <div class="hero-16__image-wrapper">
      {%- if section.settings.image != blank -%}
        {{ section.settings.image | image_url: width: 1000 | image_tag: class: 'hero-16__image', loading: 'eager' }}
      {%- else -%}
        <div class="hero-16__image" style="width: 300px; height: 400px; background: linear-gradient(135deg, #333 0%, #666 100%); border-radius: 20px;"></div>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SEK Hero 16",
  "tag": "section",
  "class": "section-hero-16",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "The Most Delicious Meal Replacement"
    },
