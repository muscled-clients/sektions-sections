<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sectionId = '{{ section.id }}';
    const section = document.querySelector(`[data-section-id="${sectionId}"]`);
    if (!section) return;

    const tabs = section.querySelectorAll('.feature-24__tab');
    const contents = section.querySelectorAll('.feature-24__tab-content');
    const images = section.querySelectorAll('.feature-24__image, [data-image-index]');
    const autoplayDuration = parseInt(section.dataset.autoplayDuration) * 1000 || 6000;

    let currentIndex = 0;
    let autoplayInterval = null;

    // Set CSS variable for animation duration
    section.style.setProperty('--autoplay-duration', (autoplayDuration / 1000) + 's');

    function switchTab(index) {
      // Remove active from all
      tabs.forEach(t => t.classList.remove('active'));
      contents.forEach(c => c.classList.remove('active'));
      images.forEach(i => i.classList.remove('active'));

      // Add active to current
      if (tabs[index]) tabs[index].classList.add('active');
      if (contents[index]) contents[index].classList.add('active');
      if (images[index]) images[index].classList.add('active');

      currentIndex = index;
    }

    // Tab click handlers
    tabs.forEach((tab, index) => {
      tab.addEventListener('click', function() {
        switchTab(index);
        resetAutoplay();
      });
    });

    // Autoplay
    function startAutoplay() {
      if ({{ section.settings.autoplay }} && tabs.length > 1) {
        autoplayInterval = setInterval(function() {
          const nextIndex = (currentIndex + 1) % tabs.length;
          switchTab(nextIndex);
        }, autoplayDuration);
      }
    }

    function resetAutoplay() {
      clearInterval(autoplayInterval);
      startAutoplay();
    }

    // Intersection Observer for autoplay
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          startAutoplay();
        } else {
          clearInterval(autoplayInterval);
        }
      });
    }, { threshold: 0.3 });

    observer.observe(section);
  });
</script>

