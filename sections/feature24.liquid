          {%- for block in section.blocks -%}
            <div class="feature-24__image {% if forloop.first %}active{% endif %}" data-image-index="{{ forloop.index0 }}">
              {%- if block.settings.image != blank -%}
                {{ block.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', alt: block.settings.tab_title }}
