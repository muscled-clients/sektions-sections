<section class="feature-24" data-section-id="{{ section.id }}" data-autoplay-duration="{{ section.settings.autoplay_duration }}">
  <div class="feature-24__container">
    <div class="feature-24__grid">
      <!-- Content -->
      <div class="feature-24__content">
        {%- if section.settings.label != blank -%}
          <div class="feature-24__label">{{ section.settings.label }}</div>
        {%- endif -%}

        {%- if section.settings.title != blank -%}
          <h2 class="feature-24__title">{{ section.settings.title }}</h2>
        {%- endif -%}

        {%- if section.settings.subtitle != blank -%}
          <p class="feature-24__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}

        <!-- Tabs -->
        <div class="feature-24__tabs">
          {%- for block in section.blocks -%}
            <div class="feature-24__tab-wrapper">
              <button class="feature-24__tab {% if forloop.first %}active{% endif %}"
                      data-tab-index="{{ forloop.index0 }}"
                      {{ block.shopify_attributes }}>
                <svg class="feature-24__progress" viewBox="0 0 70 70">
                  <circle class="feature-24__progress-circle" cx="35" cy="35" r="32.5"></circle>
                </svg>
                <div class="feature-24__tab-icon">
                  {%- if block.settings.icon != blank -%}
                    {{ block.settings.icon | image_url: width: 64 | image_tag }}
                  {%- else -%}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"/>
                      <path d="M12 6v6l4 2"/>
                    </svg>
                  {%- endif -%}
                </div>
              </button>
              {%- if block.settings.tab_label != blank -%}
                <span class="feature-24__tab-label">{{ block.settings.tab_label }}</span>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>

        <!-- Tab Contents -->
        {%- for block in section.blocks -%}
          <div class="feature-24__tab-content {% if forloop.first %}active{% endif %}" data-content-index="{{ forloop.index0 }}">
            {%- if block.settings.tab_title != blank -%}
              <h3 class="feature-24__tab-title">{{ block.settings.tab_title }}</h3>
            {%- endif -%}

            {%- if block.settings.tab_description != blank -%}
              <p class="feature-24__tab-description">{{ block.settings.tab_description }}</p>
            {%- endif -%}

