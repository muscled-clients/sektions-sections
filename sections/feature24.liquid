    font-weight: 600;
    color: var(--f24-text, #666666);
    text-transform: uppercase;
    letter-spacing: 0.3px;
  }

  .feature-24__tab-icon {
    width: 22px;
    height: 22px;
    color: var(--f24-heading, #1a1a1a);
  }

  .feature-24__tab-icon img,
  .feature-24__tab-icon svg {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* Progress Circle - Mobile First */
  .feature-24__progress {
    position: absolute;
    top: -3px;
    left: -3px;
    width: 54px;
    height: 54px;
    transform: rotate(-90deg);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .feature-24__tab.active .feature-24__progress {
    opacity: 1;
  }

  .feature-24__progress-circle {
    fill: none;
    stroke: var(--f24-progress, #ff6a1b);
    stroke-width: 2;
    stroke-linecap: round;
    stroke-dasharray: 151;
    stroke-dashoffset: 151;
  }

  .feature-24__tab.active .feature-24__progress-circle {
    animation: progress-fill var(--autoplay-duration, 6s) linear forwards;
  }

  @keyframes progress-fill {
    to {
      stroke-dashoffset: 0;
    }
  }

  /* Tab Content - Mobile First */
  .feature-24__tab-content {
    display: none;
    animation: fadeIn 0.4s ease;
  }

  .feature-24__tab-content.active {
    display: block;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

