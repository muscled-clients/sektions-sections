{% comment %}
  Section: Community Image with Text
  Two-column layout with full-height image and text content
{% endcomment %}

<section class="community-section">
  <div class="community-container">

    <div class="community-image">
      {%- if section.settings.image != blank -%}
        <img
          src="{{ section.settings.image | image_url: width: 1200 }}"
          srcset="{{ section.settings.image | image_url: width: 600 }} 600w,
                  {{ section.settings.image | image_url: width: 900 }} 900w,
                  {{ section.settings.image | image_url: width: 1200 }} 1200w,
                  {{ section.settings.image | image_url: width: 1600 }} 1600w"
          sizes="(min-width: 990px) 60vw, 100vw"
          alt="{{ section.settings.image.alt | escape }}"
          class="community-image__img"
          loading="lazy"
        >
      {%- else -%}
        <div class="community-image__placeholder">
          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {%- endif -%}
    </div>

    <div class="community-content">
      <div class="community-content__inner">

        {%- if section.settings.label != blank -%}
          <p class="community-content__label">{{ section.settings.label }}</p>
        {%- endif -%}

        {%- if section.settings.heading != blank -%}
          <h2 class="community-content__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}

        {%- if section.settings.text != blank -%}
          <div class="community-content__text">
            {{ section.settings.text }}
          </div>
        {%- endif -%}

        {%- if section.settings.bold_text != blank -%}
          <p class="community-content__bold">{{ section.settings.bold_text }}</p>
        {%- endif -%}

        {%- if section.settings.button_text != blank -%}
          <a href="{{ section.settings.button_url }}" class="community-content__button">
            {{ section.settings.button_text }}
          </a>
        {%- endif -%}

      </div>
    </div>

  </div>
</section>

<style>
  .community-section {
    width: 100%;
    overflow: hidden;
    margin-bottom: 120px;
  }

  .community-container {
    display: grid;
    grid-template-columns: 60% 40%;
    min-height: 600px;
  }

  .community-image {
    position: relative;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .community-image__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .community-image__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #e0e0e0;
  }

  .placeholder-svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  .community-content {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 80px 60px;
    background-color: {{ section.settings.background_color }};
  }

  .community-content__inner {
    max-width: 520px;
    width: 100%;
  }

  .community-content__label {
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: {{ section.settings.label_color }};
    margin: 0 0 16px 0;
  }

  .community-content__heading {
    font-size: 32px;
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: -0.5px;
    text-transform: uppercase;
    color: {{ section.settings.heading_color }};
    margin: 0 0 20px 0;
  }

  .community-content__text {
    font-size: 14px;
    line-height: 1.7;
    color: {{ section.settings.text_color }};
    margin-bottom: 20px;
  }

  .community-content__text p {
    margin: 0 0 16px 0;
  }

  .community-content__text p:last-child {
    margin-bottom: 0;
  }

  .community-content__bold {
    font-size: 14px;
    font-weight: 700;
    line-height: 1.5;
    color: {{ section.settings.text_color }};
    margin: 0 0 24px 0;
  }

  .community-content__button {
    display: inline-block;
    padding: 14px 40px;
    font-size: 12px;
    font-weight: 700;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    text-decoration: none;
    color: {{ section.settings.button_text_color }};
    background-color: {{ section.settings.button_background_color }};
    border: 2px solid {{ section.settings.button_border_color }};
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .community-content__button:hover {
    background-color: {{ section.settings.button_hover_background }};
    color: {{ section.settings.button_hover_text }};
    border-color: {{ section.settings.button_hover_border }};
  }

  @media screen and (max-width: 989px) {
    .community-container {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .community-image {
      min-height: 400px;
    }

    .community-content {
      padding: 60px 40px;
    }

    .community-content__heading {
      font-size: 28px;
    }
  }

  @media screen and (max-width: 749px) {
    .community-image {
      min-height: 300px;
    }

    .community-content {
      padding: 40px 20px;
    }

    .community-content__heading {
      font-size: 24px;
      margin-bottom: 16px;
    }

    .community-content__text {
      font-size: 13px;
      margin-bottom: 16px;
    }

    .community-content__bold {
      font-size: 13px;
      margin-bottom: 20px;
    }

    .community-content__button {
      width: 100%;
      text-align: center;
      padding: 12px 24px;
    }
  }
</style>

