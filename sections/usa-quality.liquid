{% comment %}
  USA Quality Section
  - Light background with two-column layout
  - Image on left, content on right
  - 4 feature items in 2x2 grid with icons
  - Highlighted text on heading
{% endcomment %}

<div class="usaq" style="
  --usaq-bg: {{ section.settings.background_color }};
  --usaq-tagline: {{ section.settings.tagline_color }};
  --usaq-title: {{ section.settings.title_color }};
  --usaq-highlight-bg: {{ section.settings.highlight_bg_color }};
  --usaq-highlight-text: {{ section.settings.highlight_text_color }};
  --usaq-feature-title: {{ section.settings.feature_title_color }};
  --usaq-feature-desc: {{ section.settings.feature_desc_color }};
  --usaq-icon: {{ section.settings.icon_color }};
">
  <div class="usaq__container">
    <!-- Left Image -->
    <div class="usaq__image-wrapper">
      {% if section.settings.main_image != blank %}
        <img
          src="{{ section.settings.main_image | image_url: width: 1200 }}"
          srcset="{{ section.settings.main_image | image_url: width: 600 }} 600w,
                  {{ section.settings.main_image | image_url: width: 900 }} 900w,
                  {{ section.settings.main_image | image_url: width: 1200 }} 1200w"
          sizes="(max-width: 768px) 100vw, 50vw"
          alt="{{ section.settings.main_image.alt | default: section.settings.tagline }}"
          class="usaq__image"
          loading="lazy"
        >
      {% else %}
        <div class="usaq__image-placeholder">
          {{ 'image' | placeholder_svg_tag: 'usaq__placeholder-svg' }}
        </div>
      {% endif %}
    </div>

    <!-- Right Content -->
    <div class="usaq__content">
      <!-- Tagline -->
      {% if section.settings.tagline != blank %}
        <p class="usaq__tagline">{{ section.settings.tagline }}</p>
      {% endif %}

      <!-- Main Heading -->
      <h2 class="usaq__heading">
        {% if section.settings.heading_line1 != blank %}
          <span class="usaq__heading-line">{{ section.settings.heading_line1 }}</span>
        {% endif %}
        {% if section.settings.heading_line2 != blank or section.settings.heading_highlight != blank %}
          <span class="usaq__heading-line">
            {% if section.settings.heading_line2 != blank %}
              {{ section.settings.heading_line2 }}
            {% endif %}
            {% if section.settings.heading_highlight != blank %}
              <span class="usaq__heading-highlight">{{ section.settings.heading_highlight }}</span>
            {% endif %}
          </span>
        {% endif %}
      </h2>

      <!-- Features Grid -->
      <div class="usaq__features">
        {% for block in section.blocks %}
          {% if block.type == 'feature' %}
            <div class="usaq__feature" {{ block.shopify_attributes }}>
              <div class="usaq__feature-icon">
                {% if block.settings.icon != blank %}
                  <img src="{{ block.settings.icon | image_url: width: 72 }}" alt="{{ block.settings.title }}" loading="lazy">
                {% else %}
                  <svg width="36" height="36" viewBox="0 0 36 36" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="18" cy="18" r="16" stroke="currentColor" stroke-width="2"/>
                    <path d="M12 18L16 22L24 14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                {% endif %}
              </div>
              {% if block.settings.title != blank %}
                <h3 class="usaq__feature-title">{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.description != blank %}
                <p class="usaq__feature-desc">{{ block.settings.description }}</p>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
  /* ========================================
     USA QUALITY - BASE STYLES
     ======================================== */
  .usaq {
    display: flex;
    padding: 64px 24px;
    flex-direction: column;
    align-items: center;
    gap: 48px;
    background: var(--usaq-bg, #FFFFFF);
    overflow: hidden;
  }

  .usaq__container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 48px;
    width: 100%;
    max-width: 1400px;
  }

  /* ========================================
     IMAGE STYLES
     ======================================== */
  .usaq__image-wrapper {
    width: 100%;
    position: relative;
  }

  .usaq__image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    aspect-ratio: 4 / 3;
    border-radius: 8px;
  }

  .usaq__image-placeholder {
    width: 100%;
    aspect-ratio: 4 / 3;
    background: #E5E5E5;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
  }

  .usaq__placeholder-svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  /* ========================================
     CONTENT STYLES
     ======================================== */
  .usaq__content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 24px;
    width: 100%;
  }

  .usaq__tagline {
    font-family: inherit;
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--usaq-tagline, #666666);
    margin: 0;
  }

  .usaq__heading {
    font-family: inherit;
    font-size: clamp(28px, 6vw, 42px);
    font-weight: 700;
    line-height: 1.15;
    color: var(--usaq-title, #000000);
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .usaq__heading-line {
    display: block;
  }

  .usaq__heading-highlight {
    display: inline-block;
    background: var(--usaq-highlight-bg, #00D4D4);
    color: var(--usaq-highlight-text, #000000);
    padding: 2px 10px;
    margin-left: 8px;
  }

  /* ========================================
     FEATURES GRID STYLES
     ======================================== */
  .usaq__features {
    display: grid;
    grid-template-columns: 1fr;
    gap: 32px;
    width: 100%;
    margin-top: 16px;
  }

  .usaq__feature {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 12px;
  }

  .usaq__feature-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    color: var(--usaq-icon, #000000);
  }

  .usaq__feature-icon img {
    width: 36px;
    height: 36px;
    object-fit: contain;
  }

  .usaq__feature-icon svg {
    width: 36px;
    height: 36px;
  }

  .usaq__feature-title {
    font-family: inherit;
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--usaq-feature-title, #000000);
    margin: 0;
  }

  .usaq__feature-desc {
    font-family: inherit;
    font-size: 14px;
    font-weight: 400;
    line-height: 1.5;
    color: var(--usaq-feature-desc, #666666);
    margin: 0;
    max-width: 280px;
  }

  /* ========================================
     RESPONSIVE - SMALL MOBILE (400px+)
     ======================================== */
  @media (min-width: 400px) {
    .usaq {
      padding: 72px 28px;
      gap: 56px;
    }

    .usaq__tagline {
      font-size: 13px;
    }

    .usaq__features {
      grid-template-columns: repeat(2, 1fr);
      gap: 28px;
    }
  }

  /* ========================================
     RESPONSIVE - MOBILE LANDSCAPE (550px+)
     ======================================== */
  @media (min-width: 550px) {
    .usaq {
      padding: 80px 36px;
      gap: 64px;
    }

    .usaq__content {
      gap: 28px;
    }

    .usaq__tagline {
      font-size: 14px;
    }

    .usaq__features {
      gap: 32px;
    }

    .usaq__feature-title {
      font-size: 17px;
    }

    .usaq__feature-desc {
      font-size: 15px;
    }
  }

  /* ========================================
     RESPONSIVE - TABLET (768px+)
     ======================================== */
  @media (min-width: 768px) {
    .usaq {
      padding: 88px 48px;
      gap: 80px;
    }

    .usaq__container {
      flex-direction: row;
      align-items: center;
      gap: 48px;
    }

    .usaq__image-wrapper {
      flex: 1;
      max-width: 50%;
    }

    .usaq__image {
      aspect-ratio: 4 / 5;
    }

    .usaq__content {
      flex: 1;
      max-width: 50%;
    }

    .usaq__features {
      gap: 36px 32px;
    }
  }

  /* ========================================
     RESPONSIVE - DESKTOP (1024px+)
     ======================================== */
  @media (min-width: 1024px) {
    .usaq {
      padding: 96px 48px;
    }

    .usaq__container {
      gap: 64px;
    }

    .usaq__content {
      gap: 32px;
    }

    .usaq__features {
      gap: 40px 48px;
      margin-top: 24px;
    }

    .usaq__feature-title {
      font-size: 18px;
    }

    .usaq__feature-desc {
      font-size: 16px;
      max-width: 300px;
    }
  }

  /* ========================================
     RESPONSIVE - LARGE DESKTOP (1200px+)
     ======================================== */
  @media (min-width: 1200px) {
    .usaq__container {
      gap: 80px;
    }

    .usaq__image-wrapper {
      max-width: 550px;
    }

    .usaq__content {
      max-width: 550px;
    }

    .usaq__features {
      gap: 48px 56px;
    }
  }

  /* ========================================
     RESPONSIVE - XL DESKTOP (1400px+)
     ======================================== */
  @media (min-width: 1400px) {
    .usaq {
      padding: 96px 64px;
    }

    .usaq__container {
      gap: 100px;
    }

    .usaq__image-wrapper {
      max-width: 600px;
    }

    .usaq__content {
      max-width: 600px;
    }
  }

  /* ========================================
     RESPONSIVE - XXL DESKTOP (1600px+)
     ======================================== */
  @media (min-width: 1600px) {
    .usaq__container {
      max-width: 1500px;
    }

    .usaq__image-wrapper {
      max-width: 650px;
    }

    .usaq__content {
      max-width: 650px;
    }
  }
</style>

{% schema %}
{
  "name": "USA Quality",
  "tag": "section",
  "class": "usaq-section",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "100% AMERICAN-MADE QUALITY."
    },
    {
      "type": "text",
      "id": "heading_line1",
      "label": "Heading Line 1",
      "default": "BUILT, PRINTED AND"
    },
    {
      "type": "text",
      "id": "heading_line2",
      "label": "Heading Line 2 (before highlight)",
      "default": "SHIPPED IN THE"
    },
    {
      "type": "text",
      "id": "heading_highlight",
      "label": "Highlighted Text (with background)",
      "default": "USA"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "tagline_color",
      "label": "Tagline Color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "highlight_bg_color",
      "label": "Highlight Background",
      "default": "#00D4D4"
    },
    {
      "type": "color",
      "id": "highlight_text_color",
      "label": "Highlight Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "feature_title_color",
      "label": "Feature Title Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "feature_desc_color",
      "label": "Feature Description Color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Default Icon Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "FEATURE TITLE"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Feature description goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "USA Quality",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "title": "MADE IN THE USA",
            "description": "All production and shipping handled locally."
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "IN-HOUSE QUALITY",
            "description": "No outsourcing. Full control, every step."
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "FAST U.S. SHIPPING",
            "description": "Quick delivery from within the country."
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "RELIABLE WORKFLOW",
            "description": "Consistent, secure, and always on time."
          }
        }
      ]
    }
  ]
}
{% endschema %}
