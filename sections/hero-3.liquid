{% comment %}
  SEK Hero 3 - 3-column hero with floating cards over video/image background
  Features: Video/image background, 3 floating cards (2 images + content), star rating below button
{% endcomment %}

{%- assign section_id = section.id -%}

{% style %}
  @import url('https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;500;600;700&family=Montserrat:wght@400;500;600&display=swap');

  /* Hero Container */
  #sek-hero3-{{ section_id }} {
    position: relative;
    width: 100%;
    min-height: {{ section.settings.min_height_mobile }}px;
    overflow: hidden;
    margin-top: {{ section.settings.section_padding_top_mobile }}px;
    margin-bottom: {{ section.settings.section_padding_bottom_mobile }}px;
  }

  @media (min-width: 1024px) {
    #sek-hero3-{{ section_id }} {
      min-height: {{ section.settings.min_height_desktop }}px;
      margin-top: {{ section.settings.section_padding_top_desktop }}px;
      margin-bottom: {{ section.settings.section_padding_bottom_desktop }}px;
    }
  }

  /* Background Video/Image */
  #sek-hero3-{{ section_id }} .sek-h3__bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  #sek-hero3-{{ section_id }} .sek-h3__bg img,
  #sek-hero3-{{ section_id }} .sek-h3__bg video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Dark Overlay */
  #sek-hero3-{{ section_id }} .sek-h3__bg::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  }

  /* Cards Container */
  #sek-hero3-{{ section_id }} .sek-h3__cards {
    position: relative;
    z-index: 3;
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding: 30px 20px;
    min-height: {{ section.settings.min_height_mobile }}px;
    align-items: center;
    justify-content: center;
  }

  @media (min-width: 1024px) {
    #sek-hero3-{{ section_id }} .sek-h3__cards {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 20px;
      padding: 60px 80px;
      min-height: {{ section.settings.min_height_desktop }}px;
      align-items: stretch;
    }
  }

  /* Image Cards */
  #sek-hero3-{{ section_id }} .sek-h3__image-card {
    display: none;
    background: {{ section.settings.card_bg }};
    border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    overflow: hidden;
  }

  @media (min-width: 1024px) {
    #sek-hero3-{{ section_id }} .sek-h3__image-card {
      display: block;
      height: {{ section.settings.card_height }}px;
    }
  }

  #sek-hero3-{{ section_id }} .sek-h3__image-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Content Card */
  #sek-hero3-{{ section_id }} .sek-h3__content-card {
    background: {{ section.settings.card_bg }};
    border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    padding: 32px 24px;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    max-width: 400px;
  }

  @media (min-width: 1024px) {
    #sek-hero3-{{ section_id }} .sek-h3__content-card {
      padding: 40px 32px;
      height: {{ section.settings.card_height }}px;
      max-width: none;
    }
  }

  /* Heading */
  #sek-hero3-{{ section_id }} .sek-h3__heading {
    font-family: 'Josefin Sans', sans-serif;
    font-size: {{ section.settings.heading_size_mobile }}px;
    font-weight: {{ section.settings.heading_weight }};
    line-height: 1.3;
    color: {{ section.settings.heading_color }};
    margin: 0 0 12px;
  }

  @media (min-width: 750px) {
    #sek-hero3-{{ section_id }} .sek-h3__heading {
      font-size: {{ section.settings.heading_size_desktop }}px;
      margin-bottom: 16px;
    }
  }

  /* Description */
  #sek-hero3-{{ section_id }} .sek-h3__text {
    font-family: 'Montserrat', sans-serif;
    font-size: {{ section.settings.text_size_mobile }}px;
    font-weight: 400;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    margin: 0 0 20px;
  }

  @media (min-width: 750px) {
    #sek-hero3-{{ section_id }} .sek-h3__text {
      font-size: {{ section.settings.text_size_desktop }}px;
      margin-bottom: 24px;
    }
  }

  /* Button */
  #sek-hero3-{{ section_id }} .sek-h3__btn {
    display: inline-block;
    padding: 14px 40px;
    font-family: 'Montserrat', sans-serif;
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    text-decoration: none;
    background-color: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text_color }};
    border: none;
    transition: all 0.25s ease;
  }

  #sek-hero3-{{ section_id }} .sek-h3__btn:hover {
    background-color: {{ section.settings.button_hover_bg }};
  }

  /* Star Rating - Below Button */
  #sek-hero3-{{ section_id }} .sek-h3__rating {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    margin-top: 20px;
  }

  #sek-hero3-{{ section_id }} .sek-h3__stars {
    display: flex;
    gap: 2px;
  }

  #sek-hero3-{{ section_id }} .sek-h3__star {
    width: 14px;
    height: 14px;
    fill: {{ section.settings.star_color }};
  }

  #sek-hero3-{{ section_id }} .sek-h3__rating-text {
    font-family: 'Montserrat', sans-serif;
    font-size: 13px;
    color: {{ section.settings.text_color }};
  }

  /* Mobile Images */
  #sek-hero3-{{ section_id }} .sek-h3__mobile-images {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
    width: 100%;
    max-width: 400px;
  }

  @media (min-width: 1024px) {
    #sek-hero3-{{ section_id }} .sek-h3__mobile-images {
      display: none;
    }
  }

  #sek-hero3-{{ section_id }} .sek-h3__mobile-images img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
  }
{% endstyle %}

<section id="sek-hero3-{{ section_id }}" class="sek-hero3">
  <!-- Background Video/Image -->
  <div class="sek-h3__bg">
    {%- if section.settings.video_url != blank -%}
      <video autoplay muted loop playsinline>
        <source src="{{ section.settings.video_url }}" type="video/mp4">
      </video>
    {%- elsif section.settings.background_video != blank -%}
      {{ section.settings.background_video | video_tag: autoplay: true, loop: true, muted: true, playsinline: true }}
    {%- elsif section.settings.background_image != blank -%}
      {{ section.settings.background_image | image_url: width: 2000 | image_tag: loading: 'eager' }}
    {%- else -%}
      <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #4a9c8c 0%, #d4cfc6 50%, #e8d4c4 100%);"></div>
    {%- endif -%}
  </div>

  <!-- Cards Container -->
  <div class="sek-h3__cards">
    <!-- Left Image Card (Desktop) -->
    <div class="sek-h3__image-card">
      {%- if section.settings.left_image != blank -%}
        {{ section.settings.left_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
      {%- endif -%}
    </div>

    <!-- Middle Image Card (Desktop) -->
    <div class="sek-h3__image-card">
      {%- if section.settings.middle_image != blank -%}
        {{ section.settings.middle_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
      {%- endif -%}
    </div>

    <!-- Content Card (Right) -->
    <div class="sek-h3__content-card">
      {%- if section.settings.heading != blank -%}
        <h2 class="sek-h3__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <p class="sek-h3__text">{{ section.settings.text }}</p>
      {%- endif -%}

      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_link }}" class="sek-h3__btn">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}

      {%- if section.settings.show_rating -%}
        <div class="sek-h3__rating">
          <div class="sek-h3__stars">
            {%- for i in (1..5) -%}
              <svg class="sek-h3__star" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            {%- endfor -%}
          </div>
          {%- if section.settings.rating_text != blank -%}
            <span class="sek-h3__rating-text">{{ section.settings.rating_text }}</span>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>

    <!-- Mobile Images (below content on mobile) -->
    {%- if section.settings.left_image != blank or section.settings.middle_image != blank -%}
      <div class="sek-h3__mobile-images">
        {%- if section.settings.left_image != blank -%}
          {{ section.settings.left_image | image_url: width: 600 | image_tag: loading: 'lazy' }}
        {%- endif -%}
        {%- if section.settings.middle_image != blank -%}
          {{ section.settings.middle_image | image_url: width: 600 | image_tag: loading: 'lazy' }}
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
</section>

