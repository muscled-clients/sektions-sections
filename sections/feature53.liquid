{% style %}
  #shopify-section-{{ section.id }} {
    --f53-bg: {{ section.settings.background_color }};
    --f53-text: {{ section.settings.text_color }};
    --f53-label: {{ section.settings.label_color }};
    --f53-heading: {{ section.settings.heading_color }};
    --f53-title: {{ section.settings.feature_title_color }};
    --f53-icon-bg: {{ section.settings.icon_bg_color }};
    display: block;
    width: 100%;
    max-width: 100%;
    margin-top: {{ section.settings.margin_top | times: 0.7 | round }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.7 | round }}px;
  }
  @media (min-width: 550px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top | times: 0.8 | round }}px;
      margin-bottom: {{ section.settings.margin_bottom | times: 0.8 | round }}px;
    }
  }
  @media (min-width: 768px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top | times: 0.9 | round }}px;
      margin-bottom: {{ section.settings.margin_bottom | times: 0.9 | round }}px;
    }
  }
  @media (min-width: 1024px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{% endstyle %}

<!-- Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
  /* Box-sizing */
  .feature-53,
  .feature-53 *,
  .feature-53 *::before,
  .feature-53 *::after {
    box-sizing: border-box;
  }

  /* Base - Small Mobile (< 400px) */
  .feature-53 {
    background: var(--f53-bg, #f5f5f5);
    padding: 40px 16px;
    font-family: 'Inter', sans-serif;
    position: relative;
  }

  .feature-53__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Header */
  .feature-53__header {
    text-align: center;
    margin-bottom: 40px;
  }

  .feature-53__label {
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.5px;
    color: var(--f53-label, #8b7355);
    margin: 0 0 12px;
  }

  .feature-53__heading {
    font-size: 28px;
    font-weight: 700;
    line-height: 1.2;
    color: var(--f53-heading, #000000);
    margin: 0 0 14px;
  }

  .feature-53__description {
    font-size: 14px;
    font-weight: 400;
    line-height: 1.6;
    color: var(--f53-text, #666666);
    margin: 0 auto;
    max-width: 600px;
  }

  /* Features Layout */
  .feature-53__layout {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 30px;
  }

  /* Image */
  .feature-53__image-wrapper {
    width: 220px;
    height: 220px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    order: -1;
  }

  .feature-53__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .feature-53__image-wrapper:hover .feature-53__image {
    transform: scale(1.05);
  }

  /* Features Grid */
  .feature-53__features {
    display: flex;
    flex-direction: column;
    gap: 28px;
    width: 100%;
  }

  .feature-53__left,
  .feature-53__right {
    display: flex;
    flex-direction: column;
    gap: 28px;
  }

  /* Feature Item */
  .feature-53__item {
    display: flex;
    align-items: flex-start;
    gap: 14px;
  }

  .feature-53__left .feature-53__item {
    flex-direction: row;
    text-align: left;
  }

  .feature-53__right .feature-53__item {
    flex-direction: row;
    text-align: left;
  }

  /* Icon */
  .feature-53__icon {
    width: 44px;
    height: 44px;
    min-width: 44px;
    border-radius: 50%;
    background: var(--f53-icon-bg, #ffffff);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .feature-53__icon svg {
    width: 20px;
    height: 20px;
  }

  /* Feature Content */
  .feature-53__content {
    flex: 1;
  }

  .feature-53__title {
    font-size: 15px;
    font-weight: 700;
    line-height: 1.3;
    color: var(--f53-title, #000000);
    margin: 0 0 6px;
  }

  .feature-53__text {
    font-size: 13px;
    font-weight: 400;
    line-height: 1.5;
    color: var(--f53-text, #666666);
    margin: 0;
  }

  /* Medium Mobile (400px+) */
  @media (min-width: 400px) {
    .feature-53 {
      padding: 50px 20px;
    }

    .feature-53__header {
      margin-bottom: 45px;
    }

    .feature-53__label {
      font-size: 14px;
    }

    .feature-53__heading {
      font-size: 32px;
    }

    .feature-53__description {
      font-size: 15px;
    }

    .feature-53__image-wrapper {
      width: 250px;
      height: 250px;
    }

    .feature-53__icon {
      width: 48px;
      height: 48px;
      min-width: 48px;
    }

    .feature-53__icon svg {
      width: 22px;
      height: 22px;
    }

    .feature-53__title {
      font-size: 16px;
    }

    .feature-53__text {
      font-size: 14px;
    }
  }

  /* Large Mobile (550px+) */
  @media (min-width: 550px) {
    .feature-53 {
      padding: 60px 24px;
    }

    .feature-53__header {
      margin-bottom: 50px;
    }

    .feature-53__heading {
      font-size: 36px;
    }

    .feature-53__description {
      font-size: 16px;
      max-width: 650px;
    }

    .feature-53__layout {
      gap: 40px;
    }

    .feature-53__image-wrapper {
      width: 280px;
      height: 280px;
    }

    .feature-53__features {
      flex-direction: row;
      justify-content: space-between;
      gap: 40px;
    }

    .feature-53__left,
    .feature-53__right {
      flex: 1;
      max-width: 260px;
    }

    .feature-53__left .feature-53__item {
      flex-direction: row-reverse;
      text-align: right;
    }

    .feature-53__right .feature-53__item {
      flex-direction: row;
      text-align: left;
    }
  }

  /* Tablet (768px+) */
  @media (min-width: 768px) {
    .feature-53 {
      padding: 70px 40px;
    }

    .feature-53__header {
      margin-bottom: 50px;
    }

    .feature-53__heading {
      font-size: 40px;
      margin-bottom: 16px;
    }

    .feature-53__description {
      font-size: 17px;
      max-width: 700px;
    }

    .feature-53__layout {
      flex-direction: row;
      justify-content: center;
      align-items: center;
      gap: 30px;
    }

    .feature-53__image-wrapper {
      width: 300px;
      height: 300px;
      order: 0;
    }

    .feature-53__features {
      display: contents;
    }

    .feature-53__left,
    .feature-53__right {
      width: 220px;
      max-width: none;
      gap: 50px;
    }

    .feature-53__left {
      order: -1;
    }

    .feature-53__right {
      order: 1;
    }

    .feature-53__icon {
      width: 50px;
      height: 50px;
      min-width: 50px;
    }

    .feature-53__title {
      font-size: 17px;
      margin-bottom: 8px;
    }

    .feature-53__text {
      font-size: 14px;
      line-height: 1.55;
    }
  }

  /* Desktop (1024px+) */
  @media (min-width: 1024px) {
    .feature-53 {
      padding: 80px 50px;
    }

    .feature-53__header {
      margin-bottom: 60px;
    }

    .feature-53__label {
      font-size: 15px;
      margin-bottom: 14px;
    }

    .feature-53__heading {
      font-size: 46px;
      margin-bottom: 18px;
    }

    .feature-53__description {
      font-size: 18px;
      max-width: 750px;
    }

    .feature-53__layout {
      gap: 50px;
    }

    .feature-53__image-wrapper {
      width: 360px;
      height: 360px;
    }

    .feature-53__left,
    .feature-53__right {
      width: 280px;
      gap: 60px;
    }

    .feature-53__icon {
      width: 54px;
      height: 54px;
      min-width: 54px;
    }

    .feature-53__icon svg {
      width: 24px;
      height: 24px;
    }

    .feature-53__title {
      font-size: 18px;
    }

    .feature-53__text {
      font-size: 15px;
    }
  }

  /* Large Desktop (1400px+) */
  @media (min-width: 1400px) {
    .feature-53 {
      padding: 100px 60px;
    }

    .feature-53__container {
      max-width: 1400px;
    }

    .feature-53__header {
      margin-bottom: 70px;
    }

    .feature-53__heading {
      font-size: 52px;
    }

    .feature-53__description {
      font-size: 19px;
      max-width: 800px;
    }

    .feature-53__layout {
      gap: 70px;
    }

    .feature-53__image-wrapper {
      width: 420px;
      height: 420px;
    }

    .feature-53__left,
    .feature-53__right {
      width: 320px;
      gap: 70px;
    }

    .feature-53__item {
      gap: 18px;
    }

    .feature-53__icon {
      width: 58px;
      height: 58px;
      min-width: 58px;
    }

    .feature-53__icon svg {
      width: 26px;
      height: 26px;
    }

    .feature-53__title {
      font-size: 19px;
      margin-bottom: 10px;
    }

    .feature-53__text {
      font-size: 16px;
      line-height: 1.6;
    }
  }
</style>

<section class="feature-53" data-section-id="{{ section.id }}">
  <div class="feature-53__container">
    <!-- Header -->
    <div class="feature-53__header">
      {%- if section.settings.label != blank -%}
        <p class="feature-53__label">{{ section.settings.label }}</p>
      {%- endif -%}
      {%- if section.settings.heading != blank -%}
        <h2 class="feature-53__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.description != blank -%}
        <p class="feature-53__description">{{ section.settings.description }}</p>
      {%- endif -%}
    </div>

    <!-- Features Layout -->
    <div class="feature-53__layout">
      <!-- Left Features -->
      <div class="feature-53__left">
        {%- for block in section.blocks -%}
          {%- if block.settings.position == 'left' -%}
            <div class="feature-53__item" {{ block.shopify_attributes }}>
              <div class="feature-53__icon" style="{% if block.settings.icon_color != blank %}color: {{ block.settings.icon_color }};{% endif %}">
