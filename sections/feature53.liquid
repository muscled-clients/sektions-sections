      <!-- Right Features -->
      <div class="feature-53__right">
        {%- for block in section.blocks -%}
          {%- if block.settings.position == 'right' -%}
            <div class="feature-53__item" {{ block.shopify_attributes }}>
              <div class="feature-53__icon" style="{% if block.settings.icon_color != blank %}color: {{ block.settings.icon_color }};{% endif %}">
