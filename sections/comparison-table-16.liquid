{% style %}
  #shopify-section-{{ section.id }} {
    --ct16-bg: {{ section.settings.background_color }};
    --ct16-heading: {{ section.settings.heading_color }};
    --ct16-text: {{ section.settings.text_color }};
    --ct16-check: {{ section.settings.check_color }};
    --ct16-x: {{ section.settings.x_color }};
    --ct16-card-bg: {{ section.settings.card_background }};
    --ct16-card-text: {{ section.settings.card_text_color }};
    --ct16-border: {{ section.settings.border_color }};
    --ct16-accent: {{ section.settings.accent_color }};
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }
{% endstyle %}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600;700;800&family=Assistant:wght@400;500;600&display=swap');

  .comparison-table-16 {
    background: var(--ct16-bg, #ffffff);
    padding: 40px 0;
    font-family: 'Assistant', sans-serif;
  }

  .comparison-table-16__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .comparison-table-16__header {
    text-align: center;
    margin-bottom: 40px;
  }

  .comparison-table-16__title {
    font-family: 'Montserrat', sans-serif;
    font-size: 32px;
    font-weight: 800;
    color: var(--ct16-heading, #1a1b18);
    margin: 0 0 12px;
    line-height: 1.2;
  }

  .comparison-table-16__subtitle {
    font-size: 16px;
    color: var(--ct16-text, #666666);
    margin: 0;
    line-height: 1.5;
  }

  /* Grid Layout */
  .comparison-table-16__grid {
    display: flex;
    gap: 0;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    padding-bottom: 10px;
  }

  /* Column Card */
  .comparison-table-16__column {
    flex: 1;
    min-width: 180px;
    border: 1px solid var(--ct16-border, #e5e5e5);
    border-right: none;
    display: flex;
    flex-direction: column;
  }

  .comparison-table-16__column:last-child {
    border-right: 1px solid var(--ct16-border, #e5e5e5);
  }

  .comparison-table-16__column:first-child {
    min-width: 220px;
    max-width: 250px;
  }

  /* Column Header */
  .comparison-table-16__column-header {
    padding: 16px 20px;
    text-align: center;
    min-height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid var(--ct16-border, #e5e5e5);
  }

  .comparison-table-16__column:first-child .comparison-table-16__column-header {
    justify-content: center;
  }

  .comparison-table-16__column-title {
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    font-weight: 600;
    color: var(--ct16-heading, #1a1b18);
    margin: 0;
  }

  .comparison-table-16__column-title--badge {
    background: var(--ct16-accent, #f97316);
    color: #ffffff;
    padding: 8px 24px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 600;
  }

  /* Column Content */
  .comparison-table-16__column-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  /* Product Cell */
  .comparison-table-16__product-cell {
    flex: 1;
    padding: 20px 16px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    border-bottom: 1px solid var(--ct16-border, #e5e5e5);
  }

  .comparison-table-16__product-cell:last-child {
    border-bottom: none;
  }

  .comparison-table-16__product-image {
    width: 80px;
    height: 80px;
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .comparison-table-16__product-image img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .comparison-table-16__product-image-placeholder {
    width: 80px;
    height: 80px;
    background: var(--ct16-card-bg, #f97316);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .comparison-table-16__product-image-placeholder svg {
    width: 40px;
    height: 40px;
    color: #ffffff;
  }

  .comparison-table-16__product-title {
    font-family: 'Montserrat', sans-serif;
    font-size: 12px;
    font-weight: 700;
    color: var(--ct16-heading, #1a1b18);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    line-height: 1.4;
    margin: 0;
  }

  /* Value Cell */
  .comparison-table-16__value-cell {
    flex: 1;
    padding: 24px 16px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    border-bottom: 1px solid var(--ct16-border, #e5e5e5);
    min-height: 140px;
  }

  .comparison-table-16__value-cell:last-child {
    border-bottom: none;
  }

  .comparison-table-16__icon {
    font-size: 28px;
    line-height: 1;
    margin-bottom: 12px;
  }

  .comparison-table-16__icon--check {
    color: var(--ct16-check, #22c55e);
  }

  .comparison-table-16__icon--x {
    color: var(--ct16-x, #ef4444);
  }

  .comparison-table-16__cell-text {
    font-size: 13px;
    color: var(--ct16-text, #666666);
    line-height: 1.5;
    max-width: 160px;
  }

  /* Responsive */
  @media (min-width: 768px) {
    .comparison-table-16 {
      padding: 60px 0;
    }

    .comparison-table-16__title {
      font-size: 42px;
    }

    .comparison-table-16__subtitle {
      font-size: 18px;
    }

    .comparison-table-16__column {
      min-width: 160px;
    }

    .comparison-table-16__column:first-child {
      min-width: 200px;
    }

    .comparison-table-16__product-image,
    .comparison-table-16__product-image-placeholder {
      width: 90px;
      height: 90px;
    }

    .comparison-table-16__product-title {
      font-size: 11px;
    }

    .comparison-table-16__cell-text {
      font-size: 14px;
    }
  }

  @media (min-width: 992px) {
    .comparison-table-16 {
      padding: 80px 0;
    }

    .comparison-table-16__column:first-child {
      min-width: 220px;
      max-width: 260px;
    }

    .comparison-table-16__product-image,
    .comparison-table-16__product-image-placeholder {
      width: 100px;
      height: 100px;
    }

    .comparison-table-16__product-title {
      font-size: 12px;
    }

    .comparison-table-16__value-cell {
      padding: 30px 20px;
    }
  }
</style>

<section class="comparison-table-16" data-section-id="{{ section.id }}">
