{% comment %}
  Image With Text 15 Section
  Two-column layout with image and tabbed/toggle content
{% endcomment %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 990px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .image-text-15-{{ section.id }} {
    --iwt15-heading-color: {{ section.settings.heading_color }};
    --iwt15-text-color: {{ section.settings.text_color }};
    --iwt15-bg-color: {{ section.settings.background_color }};
    --iwt15-toggle-color: {{ section.settings.toggle_color }};
    --iwt15-border-color: {{ section.settings.border_color }};
    --iwt15-image-radius: {{ section.settings.image_border_radius }}px;
  }
{%- endstyle -%}

<div class="image-text-15 image-text-15-{{ section.id }} section-{{ section.id }}-padding" style="background-color: var(--iwt15-bg-color, #f1f0ed);">
  <div class="image-text-15__container page-width">
    <div class="image-text-15__grid image-text-15__grid--{{ section.settings.layout }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">

      <!-- Image Column -->
      <div class="image-text-15__media">
        <div class="image-text-15__media-wrapper">
          {%- if section.settings.image != blank -%}
            {{
              section.settings.image
              | image_url: width: 1200
              | image_tag:
                loading: 'lazy',
                sizes: '(min-width: 990px) 50vw, 100vw',
                widths: '375, 750, 1000, 1200',
                class: 'image-text-15__image'
            }}
          {%- else -%}
            <div class="image-text-15__placeholder">
              {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {%- endif -%}
        </div>
      </div>

      <!-- Content Column -->
      <div class="image-text-15__content">
        <div class="image-text-15__content-inner">
          <!-- Toggle Tabs -->
          <div class="image-text-15__toggles">
            {%- for block in section.blocks -%}
              <button
                type="button"
                class="image-text-15__toggle{% if forloop.first %} is-active{% endif %}"
                data-toggle-index="{{ forloop.index0 }}"
                data-section-id="{{ section.id }}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.tab_label }}
              </button>
            {%- endfor -%}
          </div>

          <!-- Tab Content Panels -->
          <div class="image-text-15__panels">
            {%- for block in section.blocks -%}
              <div
                class="image-text-15__panel{% if forloop.first %} is-active{% endif %}"
                data-panel-index="{{ forloop.index0 }}"
                data-section-id="{{ section.id }}"
              >
                {%- if block.settings.heading != blank -%}
                  <h2 class="image-text-15__heading {{ section.settings.heading_size }}">
                    {{ block.settings.heading }}
                  </h2>
                {%- endif -%}

                {%- if block.settings.text != blank -%}
                  <div class="image-text-15__text rte">
                    {{ block.settings.text }}
                  </div>
                {%- endif -%}

                {%- if block.settings.button_label != blank -%}
                  <a
                    {% if block.settings.button_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link }}"
                    {% endif %}
                    class="image-text-15__button"
                  >
                    {{ block.settings.button_label | escape }}
                  </a>
                {%- endif -%}
              </div>
            {%- endfor -%}
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<style>
  .image-text-15 {
    width: 100%;
  }

  .image-text-15__container {
    width: 100%;
  }

  .image-text-15__grid {
    display: flex;
    flex-direction: column;
    gap: 24px;
    align-items: center;
  }

  @media screen and (min-width: 990px) {
    .image-text-15__grid {
      flex-direction: row;
      gap: 48px;
      align-items: stretch;
    }

    .image-text-15__grid--image_right {
      flex-direction: row-reverse;
    }
  }

  /* Media Column */
  .image-text-15__media {
    width: 100%;
  }

  @media screen and (min-width: 990px) {
    .image-text-15__media {
      width: 50%;
      flex-shrink: 0;
    }
  }

  .image-text-15__media-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    border-radius: var(--iwt15-image-radius, 12px);
    background-color: rgba(0, 0, 0, 0.05);
  }

  .image-text-15__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .image-text-15__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #e8e8e8;
  }

  .image-text-15__placeholder .placeholder-svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Content Column */
  .image-text-15__content {
    width: 100%;
    display: flex;
    align-items: center;
  }

  @media screen and (min-width: 990px) {
    .image-text-15__content {
      width: 50%;
      padding: 20px 0;
    }
  }

  .image-text-15__content-inner {
    width: 100%;
  }

  /* Toggle Tabs */
  .image-text-15__toggles {
    display: flex;
    flex-direction: column;
    margin-bottom: 24px;
  }

  @media screen and (min-width: 990px) {
    .image-text-15__toggles {
      margin-bottom: 32px;
    }
  }

  .image-text-15__toggle {
    background: none;
    border: none;
    border-top: 1px solid var(--iwt15-border-color, #c4c4c4);
    padding: 12px 0;
    font-size: 18px;
    font-weight: 600;
    color: var(--iwt15-toggle-color, #67645e);
    cursor: pointer;
    text-align: left;
    opacity: 0.75;
    transition: opacity 0.25s ease;
    width: 100%;
  }

  @media screen and (min-width: 990px) {
    .image-text-15__toggle {
      font-size: 22px;
      padding: 16px 0;
    }
  }

  .image-text-15__toggle:last-child {
    border-bottom: 1px solid var(--iwt15-border-color, #c4c4c4);
  }

  .image-text-15__toggle:hover,
  .image-text-15__toggle.is-active {
    opacity: 1;
  }

  /* Panels */
  .image-text-15__panels {
    position: relative;
  }

  .image-text-15__panel {
    display: none;
    animation: fadeIn 0.3s ease;
  }

  .image-text-15__panel.is-active {
    display: block;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .image-text-15__heading {
    margin: 0 0 16px;
    color: var(--iwt15-heading-color, #67645e);
    line-height: 1.3;
    font-weight: 600;
  }

  .image-text-15__text {
    font-size: 14px;
    line-height: 1.7;
    color: var(--iwt15-text-color, #67645e);
    margin: 0 0 24px;
  }

  @media screen and (min-width: 990px) {
    .image-text-15__text {
      font-size: 16px;
    }
  }

  .image-text-15__button {
    display: inline-block;
    padding: 12px 24px;
    background-color: transparent;
    color: var(--iwt15-text-color, #67645e);
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    border: 1px solid var(--iwt15-text-color, #67645e);
    border-radius: 0;
    transition: all 0.3s ease;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .image-text-15__button:hover {
    background-color: var(--iwt15-text-color, #67645e);
    color: var(--iwt15-bg-color, #f1f0ed);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    initImageText15('{{ section.id }}');
  });

  {% comment %} Re-initialize on section reload in the theme editor {% endcomment %}
  if (Shopify.designMode) {
    document.addEventListener('shopify:section:load', function(event) {
      if (event.detail.sectionId === '{{ section.id }}') {
        initImageText15('{{ section.id }}');
      }
    });
  }

  function initImageText15(sectionId) {
    const section = document.querySelector('.image-text-15-' + sectionId);
    if (!section) return;

    const toggles = section.querySelectorAll('.image-text-15__toggle');
    const panels = section.querySelectorAll('.image-text-15__panel');
    const isMobile = window.innerWidth < 990;

    toggles.forEach(function(toggle) {
      // Click event for both mobile and desktop
      toggle.addEventListener('click', function() {
        const index = this.getAttribute('data-toggle-index');
        activateTab(sectionId, index);
      });

      // Hover event for desktop only
      if (!isMobile) {
        toggle.addEventListener('mouseenter', function() {
          const index = this.getAttribute('data-toggle-index');
          activateTab(sectionId, index);
        });
      }
    });

    // Update hover behavior on resize
    let resizeTimeout;
    window.addEventListener('resize', function() {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(function() {
        // Reinitialize on significant resize
        initImageText15(sectionId);
      }, 250);
    });
  }

  function activateTab(sectionId, index) {
    const section = document.querySelector('.image-text-15-' + sectionId);
    if (!section) return;

    const toggles = section.querySelectorAll('.image-text-15__toggle');
    const panels = section.querySelectorAll('.image-text-15__panel');

    // Remove active class from all
    toggles.forEach(function(t) {
      t.classList.remove('is-active');
    });
    panels.forEach(function(p) {
      p.classList.remove('is-active');
    });

    // Add active class to selected
    const activeToggle = section.querySelector('.image-text-15__toggle[data-toggle-index="' + index + '"]');
    const activePanel = section.querySelector('.image-text-15__panel[data-panel-index="' + index + '"]');

    if (activeToggle) activeToggle.classList.add('is-active');
    if (activePanel) activePanel.classList.add('is-active');
  }
</script>

