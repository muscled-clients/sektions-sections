<section class="product-ingredients-4" data-section-id="{{ section.id }}">
  <div class="product-ingredients-4__container">
    {%- if section.settings.heading != blank or section.settings.subtitle != blank -%}
      <div class="product-ingredients-4__header">
        {%- if section.settings.heading != blank -%}
          <h2 class="product-ingredients-4__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.subtitle != blank -%}
          <p class="product-ingredients-4__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="product-ingredients-4__layout">
      <!-- Center Image -->
      <div class="product-ingredients-4__center">
        {%- if section.settings.center_image != blank -%}
          <img
            src="{{ section.settings.center_image | image_url: width: 520 }}"
            alt="{{ section.settings.heading | default: 'Product' }}"
            class="product-ingredients-4__center-image"
            loading="lazy"
          >
        {%- else -%}
          <div class="product-ingredients-4__center-placeholder"></div>
        {%- endif -%}
      </div>

      <!-- Ingredient Items -->
      <div class="product-ingredients-4__items">
        {%- for block in section.blocks -%}
          <div class="product-ingredients-4__item" {{ block.shopify_attributes }}>
            <div class="product-ingredients-4__item-image-wrapper">
              {%- if block.settings.image != blank -%}
                <img
                  src="{{ block.settings.image | image_url: width: 180 }}"
                  alt="{{ block.settings.title }}"
                  class="product-ingredients-4__item-image"
                  loading="lazy"
                >
              {%- else -%}
                <div class="product-ingredients-4__item-placeholder"></div>
              {%- endif -%}
            </div>
            {%- if block.settings.title != blank -%}
              <h3 class="product-ingredients-4__item-title">{{ block.settings.title }}</h3>
            {%- endif -%}
            {%- if block.settings.description != blank -%}
              <p class="product-ingredients-4__item-description">{{ block.settings.description }}</p>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

