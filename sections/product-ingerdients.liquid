    height: 70px;
    border-radius: 50%;
    border: 1px solid var(--pi4-border-color, #ececec);
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--pi4-bg, #fff);
    margin-bottom: 8px;
    overflow: hidden;
  }

  .product-ingredients-4__item-image {
    width: 48px;
    height: 48px;
    object-fit: contain;
  }

  .product-ingredients-4__item-placeholder {
    width: 48px;
    height: 48px;
