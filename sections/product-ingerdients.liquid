    line-height: 1.2;
  }

  .product-ingredients-4__subtitle {
    font-size: 12px;
    font-weight: 400;
    color: var(--pi4-text-color, #666);
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.5;
  }

  /* Circular Layout Container - Mobile First (stacked grid) */
  .product-ingredients-4__layout {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
    min-height: auto;
  }

  /* Center Circle - Mobile First */
  .product-ingredients-4__center {
    position: relative;
    top: auto;
    left: auto;
    transform: none;
    width: 160px;
    height: 160px;
    border-radius: 50%;
    border: 1px solid var(--pi4-border-color, #ececec);
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--pi4-bg, #fff);
    z-index: 1;
    margin: 0 auto 24px;
  }

  .product-ingredients-4__center-image {
    width: 110px;
    height: 110px;
    object-fit: contain;
  }

  .product-ingredients-4__center-placeholder {
    width: 110px;
    height: 110px;
    background: linear-gradient(135deg, var(--pi4-accent-color) 0%, var(--pi4-border-color) 100%);
    border-radius: 50%;
    opacity: 0.3;
  }

  /* Ingredient Items - Mobile First (grid) */
  .product-ingredients-4__items {
    position: relative;
    width: 100%;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px 12px;
    min-height: auto;
  }

