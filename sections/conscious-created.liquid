<!-- Consciously Created Section with Rotating Badge -->
<style>
  @keyframes spin-{{ section.id }} {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  #conscious-created-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
    background-color: {{ section.settings.outer_background }};
  }

  #conscious-created-{{ section.id }} .section-container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 {{ section.settings.container_padding }}px;
  }

  #conscious-created-{{ section.id }} .content-wrapper {
    position: relative;
    display: flex;
    gap: {{ section.settings.column_gap }}px;
    align-items: stretch;
  }

  /* Left Column */
  #conscious-created-{{ section.id }} .left-column {
    flex: {{ section.settings.left_column_ratio }};
    background-color: {{ section.settings.left_background_color }};
    padding: {{ section.settings.content_padding }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    border-radius: {{ section.settings.border_radius }}px;
    box-shadow: {{ section.settings.section_shadow }};
  }

  #conscious-created-{{ section.id }} .heading {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    color: {{ section.settings.heading_color }};
    line-height: {{ section.settings.heading_line_height }};
    margin-bottom: {{ section.settings.heading_margin_bottom }}px;
  }

  #conscious-created-{{ section.id }} .description {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
    line-height: {{ section.settings.description_line_height }};
    margin-bottom: {{ section.settings.description_margin_bottom }}px;
  }

  #conscious-created-{{ section.id }} .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    background-color: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    width: fit-content;
  }

  #conscious-created-{{ section.id }} .cta-button:hover {
    background-color: {{ section.settings.button_hover_background }};
    color: {{ section.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  #conscious-created-{{ section.id }} .button-arrow {
    transition: transform 0.3s ease;
  }

  #conscious-created-{{ section.id }} .cta-button:hover .button-arrow {
    transform: translateX(4px);
  }

  /* Right Column */
  #conscious-created-{{ section.id }} .right-column {
    flex: {{ section.settings.right_column_ratio }};
    position: relative;
    background-color: {{ section.settings.right_background_color }};
    min-height: {{ section.settings.min_height }}px;
    border-radius: {{ section.settings.border_radius }}px;
    overflow: hidden;
    box-shadow: {{ section.settings.section_shadow }};
  }

  #conscious-created-{{ section.id }} .right-column img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Rotating Badge */
  #conscious-created-{{ section.id }} .rotating-badge {
    position: absolute;
    width: {{ section.settings.badge_size }}px;
    height: {{ section.settings.badge_size }}px;
    top: {{ section.settings.badge_top_position }}px;
    left: calc({{ section.settings.left_column_ratio }}% + {{ section.settings.column_gap | divided_by: 2.0 }}px);
    transform: translateX(-50%);
    z-index: 10;
    animation: spin-{{ section.id }} {{ section.settings.rotation_speed }}s linear infinite;
  }

  {% if section.settings.pause_on_hover %}
  #conscious-created-{{ section.id }} .rotating-badge:hover {
    animation-play-state: paused;
  }
  {% endif %}

  #conscious-created-{{ section.id }} .rotating-badge img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    #conscious-created-{{ section.id }} {
      padding: 20px;
    }

    #conscious-created-{{ section.id }} .section-container {
      padding: 0;
    }

    #conscious-created-{{ section.id }} .content-wrapper {
      flex-direction: column;
      gap: 10px;
    }

    #conscious-created-{{ section.id }} .right-column {
      min-height: auto;
      max-height: {{ section.settings.min_height_mobile }}px;
      border-radius: {{ section.settings.border_radius }}px;
      order: -1;
      box-shadow: none;
      overflow: hidden;
    }

    #conscious-created-{{ section.id }} .right-column img {
      width: 100%;
      height: {{ section.settings.min_height_mobile }}px;
      object-fit: cover;
      object-position: center top;
    }

    #conscious-created-{{ section.id }} .left-column {
      padding: {{ section.settings.content_padding_mobile }}px;
      text-align: {{ section.settings.mobile_text_align }};
      border-radius: {{ section.settings.border_radius }}px;
      box-shadow: none;
    }

    #conscious-created-{{ section.id }} .heading {
      font-family: Georgia, 'Times New Roman', serif;
      font-size: {{ section.settings.heading_size_mobile }}px;
      font-style: italic;
      font-weight: 700;
      margin-bottom: 18px;
      line-height: 1.2;
      color: #000000;
    }

    #conscious-created-{{ section.id }} .description {
      font-family: system-ui, -apple-system, sans-serif;
      font-size: {{ section.settings.description_size_mobile }}px;
      font-weight: 400;
      margin-bottom: 22px;
      line-height: 1.55;
      color: #333333;
    }

    #conscious-created-{{ section.id }} .cta-button {
      margin: 0;
      font-size: 15px;
      padding: 12px 24px;
    }

    #conscious-created-{{ section.id }} .rotating-badge {
      width: {{ section.settings.badge_size_mobile }}px;
      height: {{ section.settings.badge_size_mobile }}px;
      top: {{ section.settings.badge_top_position_mobile }}px;
      left: 50%;
    }
  }

  /* Reverse Layout Option */
  {% if section.settings.reverse_layout %}
    #conscious-created-{{ section.id }} .content-wrapper {
      direction: rtl;
    }
    #conscious-created-{{ section.id }} .left-column,
    #conscious-created-{{ section.id }} .right-column {
      direction: ltr;
    }
  {% endif %}
</style>

<section id="conscious-created-{{ section.id }}">
  <div class="section-container">
    <div class="content-wrapper">
      <!-- Left Column -->
      <div class="left-column">
        {% if section.settings.heading != blank %}
          <h2 class="heading">{{ section.settings.heading }}</h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <p class="description">{{ section.settings.description }}</p>
        {% endif %}

        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link | default: '#' }}" class="cta-button">
            {{ section.settings.button_text }}
            {% if section.settings.show_button_arrow %}
              <svg class="button-arrow" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M7 10H13M13 10L10 7M13 10L10 13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            {% endif %}
          </a>
        {% endif %}
      </div>

      <!-- Right Column -->
      <div class="right-column">
        {% if section.settings.right_image %}
          <img src="{{ section.settings.right_image | image_url: width: 1200 }}"
               alt="{{ section.settings.right_image_alt | escape }}"
               loading="lazy">
        {% else %}
          <!-- Placeholder if no image selected -->
          <div style="width: 100%; height: 100%; background-color: #f0f0f0;"></div>
        {% endif %}
      </div>

      <!-- Rotating Badge -->
      {% if section.settings.badge_image %}
        <div class="rotating-badge">
          <img src="{{ section.settings.badge_image | image_url: width: 300 }}"
               alt="{{ section.settings.badge_alt | escape }}">
        </div>
      {% endif %}
    </div>
  </div>
</section>

