{% style %}
  #shopify-section-{{ section.id }} {
    --vwt7-bg: {{ section.settings.background_color }};
    --vwt7-heading: {{ section.settings.heading_color }};
    --vwt7-text: {{ section.settings.text_color }};
    --vwt7-icon: {{ section.settings.icon_color }};
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }
{% endstyle %}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Petrona:wght@400;500;600;700;800;900&family=Inter:wght@400;500;600&display=swap');

  .video-with-text-7 {
    background: var(--vwt7-bg, #f5f3ef);
    padding: 50px 0;
    font-family: 'Inter', sans-serif;
  }

  .video-with-text-7__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .video-with-text-7__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 32px;
    align-items: center;
  }

  /* Content */
  .video-with-text-7__content {
    text-align: center;
    order: 1;
  }

  .video-with-text-7__title {
    font-family: 'Petrona', serif;
    font-size: 32px;
    font-weight: 700;
    line-height: 1.2;
    color: var(--vwt7-heading, #4a5328);
    margin: 0 0 16px;
  }

  .video-with-text-7__description {
    font-size: 14px;
    line-height: 1.7;
    color: var(--vwt7-text, #4a5328);
    margin: 0 0 32px;
    max-width: 550px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Features */
  .video-with-text-7__features {
    display: flex;
    justify-content: center;
    gap: 24px;
    flex-wrap: wrap;
  }

  .video-with-text-7__feature {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    min-width: 70px;
  }

  .video-with-text-7__feature-icon {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--vwt7-icon, #4a5328);
  }

  .video-with-text-7__feature-icon svg {
    width: 100%;
    height: 100%;
  }

  .video-with-text-7__feature-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .video-with-text-7__feature-text {
    font-size: 12px;
    font-weight: 500;
    color: var(--vwt7-text, #4a5328);
    text-align: center;
    line-height: 1.4;
  }

  /* Media */
  .video-with-text-7__media {
    order: 2;
  }

  .video-with-text-7__video-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 4 / 5;
    border-radius: {{ section.settings.video_border_radius }}px;
    overflow: hidden;
    background: #e0e0e0;
  }

  .video-with-text-7__video-wrapper video,
  .video-with-text-7__video-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-with-text-7__video-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #c9d6a3 0%, #8fa058 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 14px;
  }

  /* Responsive */
  @media (min-width: 768px) {
    .video-with-text-7 {
      padding: 70px 0;
    }

    .video-with-text-7__title {
      font-size: 40px;
    }

    .video-with-text-7__description {
      font-size: 15px;
      margin-bottom: 40px;
    }

    .video-with-text-7__features {
      gap: 40px;
    }

    .video-with-text-7__feature {
      min-width: 80px;
    }

    .video-with-text-7__feature-icon {
      width: 36px;
      height: 36px;
    }

    .video-with-text-7__feature-text {
      font-size: 13px;
    }
  }

  @media (min-width: 1024px) {
    .video-with-text-7 {
      padding: 80px 0;
    }

    .video-with-text-7__container {
      padding: 0 60px;
    }

    .video-with-text-7__grid {
      grid-template-columns: 1fr 1fr;
      gap: 60px;
    }

    .video-with-text-7__content {
      text-align: left;
      order: {{ section.settings.content_position }};
    }

    .video-with-text-7__media {
      order: {% if section.settings.content_position == '1' %}2{% else %}1{% endif %};
    }

    .video-with-text-7__title {
      font-size: 44px;
      margin-bottom: 20px;
    }

    .video-with-text-7__description {
      font-size: 15px;
      margin-left: 0;
      margin-right: 0;
      margin-bottom: 40px;
    }

    .video-with-text-7__features {
      justify-content: flex-start;
      gap: 48px;
    }

    .video-with-text-7__feature-icon {
      width: 40px;
      height: 40px;
    }

    .video-with-text-7__feature-text {
      font-size: 14px;
    }

    .video-with-text-7__video-wrapper {
      aspect-ratio: 9 / 11;
    }
  }

  @media (min-width: 1400px) {
    .video-with-text-7__grid {
      gap: 90px;
    }

    .video-with-text-7__title {
      font-size: 48px;
    }

    .video-with-text-7__description {
      font-size: 16px;
    }

    .video-with-text-7__features {
      gap: 56px;
    }

    .video-with-text-7__feature-icon {
      width: 44px;
      height: 44px;
    }
  }
</style>

<section class="video-with-text-7" data-section-id="{{ section.id }}">
  <div class="video-with-text-7__container">
    <div class="video-with-text-7__grid">
      <!-- Content -->
      <div class="video-with-text-7__content">
        {%- if section.settings.title != blank -%}
          <h2 class="video-with-text-7__title">{{ section.settings.title }}</h2>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <p class="video-with-text-7__description">{{ section.settings.description }}</p>
        {%- endif -%}

        {%- if section.blocks.size > 0 -%}
          <div class="video-with-text-7__features">
            {%- for block in section.blocks -%}
              <div class="video-with-text-7__feature" {{ block.shopify_attributes }}>
                <span class="video-with-text-7__feature-icon">
                  {%- if block.settings.custom_icon != blank -%}
                    {{ block.settings.custom_icon | image_url: width: 100 | image_tag }}
                  {%- else -%}
                    {%- case block.settings.icon -%}
                      {%- when 'gift' -%}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                          <rect x="3" y="8" width="18" height="4" rx="1"/>
                          <path d="M12 8v13"/>
                          <path d="M19 12v7a2 2 0 01-2 2H7a2 2 0 01-2-2v-7"/>
                          <path d="M7.5 8a2.5 2.5 0 010-5C9 3 12 8 12 8s3-5 4.5-5a2.5 2.5 0 010 5"/>
                        </svg>
                      {%- when 'wash' -%}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                          <circle cx="12" cy="12" r="9"/>
                          <path d="M12 6v2M8 9a4 4 0 008 0"/>
                        </svg>
                      {%- when 'reversible' -%}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M17 1l4 4-4 4"/>
                          <path d="M3 11V9a4 4 0 014-4h14"/>
                          <path d="M7 23l-4-4 4-4"/>
                          <path d="M21 13v2a4 4 0 01-4 4H3"/>
                        </svg>
                      {%- when 'leaf' -%}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M6 3v18"/>
                          <path d="M18 9a6 6 0 00-12 0c0 7 6 12 12 12V9z"/>
                        </svg>
                      {%- when 'heart' -%}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"/>
                        </svg>
                      {%- when 'shield' -%}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                        </svg>
                      {%- when 'star' -%}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                          <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                        </svg>
                      {%- when 'recycle' -%}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M7 19H4.815a1.83 1.83 0 01-1.57-.881 1.785 1.785 0 01-.004-1.784L7.196 9.5"/>
                          <path d="M11 19h8.203a1.83 1.83 0 001.556-.89 1.784 1.784 0 00-.001-1.78l-1.758-3.097"/>
                          <path d="M14 16l3 3-3 3"/>
                          <path d="M8.293 13.596L4.875 9.5l3.418-4.096"/>
                          <path d="M14 5l-3 3-3-3"/>
                          <path d="M11 5h3.5a1.83 1.83 0 011.57.881c.315.543.315 1.213.004 1.758L14.196 10.5"/>
                        </svg>
                      {%- else -%}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                          <polyline points="20 6 9 17 4 12"/>
                        </svg>
                    {%- endcase -%}
                  {%- endif -%}
                </span>
                <span class="video-with-text-7__feature-text">{{ block.settings.text }}</span>
              </div>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>

      <!-- Media -->
      <div class="video-with-text-7__media">
        <div class="video-with-text-7__video-wrapper">
          {%- if section.settings.video != blank -%}
            <video autoplay loop muted playsinline>
              <source src="{{ section.settings.video.sources[1].url }}" type="video/mp4">
            </video>
          {%- elsif section.settings.image != blank -%}
            {{ section.settings.image | image_url: width: 1000 | image_tag: loading: 'lazy' }}
          {%- else -%}
            <div class="video-with-text-7__video-placeholder">
              <span>Add video</span>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</section>

