<section id="sek-hotspots-simple-{{ section_id }}" class="sek-hotspots-simple">
  <div class="sek-hss__container">
    <!-- Header -->
    {%- if section.settings.heading != blank -%}
      <div class="sek-hss__header">
        <h2 class="sek-hss__heading">{{ section.settings.heading }}</h2>
      </div>
    {%- endif -%}

    <!-- Image with Hotspots -->
    <div class="sek-hss__image-wrapper">
      {%- if section.settings.image != blank -%}
        <img
          class="sek-hss__image"
          src="{{ section.settings.image | image_url: width: 1920 }}"
          alt="{{ section.settings.image.alt | default: section.settings.heading | escape }}"
          loading="lazy"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}"
        >
      {%- else -%}
        <div class="sek-hss__image-placeholder">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
            <circle cx="8.5" cy="8.5" r="1.5"></circle>
            <polyline points="21 15 16 10 5 21"></polyline>
          </svg>
        </div>
      {%- endif -%}

      <!-- Hotspots -->
      {%- for block in section.blocks -%}
        {%- if block.type == 'hotspot' -%}
          {%- assign hotspot_product = block.settings.product -%}
          <div
            class="sek-hss__hotspot"
            style="left: {{ block.settings.position_x }}%; top: {{ block.settings.position_y }}%;"
            data-hotspot-id="{{ block.id }}"
            data-title="{{ block.settings.title | escape }}"
            data-description="{{ block.settings.description | escape }}"
            data-price="{%- if hotspot_product != blank -%}{{ hotspot_product.price | money }}{%- else -%}{{ block.settings.price }}{%- endif -%}"
            data-image="{%- if hotspot_product != blank and hotspot_product.featured_image != blank -%}{{ hotspot_product.featured_image | image_url: width: 400 }}{%- elsif block.settings.product_image != blank -%}{{ block.settings.product_image | image_url: width: 400 }}{%- endif -%}"
            data-link="{%- if hotspot_product != blank -%}{{ hotspot_product.url }}{%- else -%}{{ block.settings.button_link }}{%- endif -%}"
            data-button-text="{{ block.settings.button_text | default: 'View Product' | escape }}"
            {{ block.shopify_attributes }}
          >
            <button class="sek-hss__marker" type="button" aria-label="View {{ block.settings.title | default: 'product' | escape }}">
              <span class="sek-hss__icon">+</span>
            </button>
          </div>
        {%- endif -%}
      {%- endfor -%}

      {%- if section.blocks.size == 0 -%}
        <!-- Default placeholder hotspots -->
        <div class="sek-hss__hotspot" style="left: 12%; top: 65%;" data-hotspot-id="placeholder-1" data-title="Pillow Case" data-description="Premium cotton pillow case with soft, breathable fabric for ultimate comfort." data-price="$49.00" data-image="" data-link="#" data-button-text="View Product">
          <button class="sek-hss__marker" type="button" aria-label="View Pillow Case">
            <span class="sek-hss__icon">+</span>
          </button>
        </div>

        <div class="sek-hss__hotspot" style="left: 52%; top: 32%;" data-hotspot-id="placeholder-2" data-title="Bed Frame" data-description="Sturdy, modern wood bedframe with natural finish and sleek design." data-price="$599.00" data-image="" data-link="#" data-button-text="View Product">
          <button class="sek-hss__marker" type="button" aria-label="View Bed Frame">
            <span class="sek-hss__icon">+</span>
          </button>
        </div>

        <div class="sek-hss__hotspot" style="left: 36%; top: 58%;" data-hotspot-id="placeholder-3" data-title="Duvet Case" data-description="Luxurious, hypoallergenic duvet case with button closure, patterned design." data-price="$129.00" data-image="" data-link="#" data-button-text="View Product">
          <button class="sek-hss__marker" type="button" aria-label="View Duvet Case">
            <span class="sek-hss__icon">+</span>
          </button>
        </div>

        <div class="sek-hss__hotspot" style="left: 78%; top: 55%;" data-hotspot-id="placeholder-4" data-title="Side Table" data-description="Modern metal side table with minimalist design and dual-tier storage." data-price="$149.00" data-image="" data-link="#" data-button-text="View Product">
          <button class="sek-hss__marker" type="button" aria-label="View Side Table">
            <span class="sek-hss__icon">+</span>
          </button>
        </div>
      {%- endif -%}

      <!-- Product Panel - Slides in from right -->
      <div class="sek-hss__panel" id="sek-hss-panel-{{ section_id }}">
        <button type="button" class="sek-hss__panel-close" aria-label="Close panel">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
        <div class="sek-hss__panel-image-placeholder" id="sek-hss-panel-image-{{ section_id }}">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
            <circle cx="8.5" cy="8.5" r="1.5"></circle>
            <polyline points="21 15 16 10 5 21"></polyline>
          </svg>
        </div>
        <h3 class="sek-hss__panel-title" id="sek-hss-panel-title-{{ section_id }}">Product Name</h3>
        <p class="sek-hss__panel-price" id="sek-hss-panel-price-{{ section_id }}">$0.00</p>
        <p class="sek-hss__panel-description" id="sek-hss-panel-desc-{{ section_id }}">Product description</p>
        <a href="#" class="sek-hss__panel-btn" id="sek-hss-panel-btn-{{ section_id }}">View Product</a>
      </div>
    </div>
  </div>
</section>

<script>
  (function() {
    function initHotspotsSimple() {
      const sectionId = '{{ section_id }}';
      const section = document.getElementById('sek-hotspots-simple-' + sectionId);
      if (!section) return;

      const hotspots = section.querySelectorAll('.sek-hss__hotspot');
      const markers = section.querySelectorAll('.sek-hss__marker');
      const panel = document.getElementById('sek-hss-panel-' + sectionId);
      const panelClose = panel.querySelector('.sek-hss__panel-close');
      const panelImageContainer = document.getElementById('sek-hss-panel-image-' + sectionId);
      const panelTitle = document.getElementById('sek-hss-panel-title-' + sectionId);
      const panelPrice = document.getElementById('sek-hss-panel-price-' + sectionId);
      const panelDesc = document.getElementById('sek-hss-panel-desc-' + sectionId);
      const panelBtn = document.getElementById('sek-hss-panel-btn-' + sectionId);

      let activeHotspot = null;

      function updatePanel(hotspot) {
        const title = hotspot.dataset.title || 'Product';
        const description = hotspot.dataset.description || '';
        const price = hotspot.dataset.price || '';
        const image = hotspot.dataset.image || '';
        const link = hotspot.dataset.link || '#';
        const buttonText = hotspot.dataset.buttonText || 'View Product';

        panelTitle.textContent = title;
        panelDesc.textContent = description;
        panelPrice.textContent = price;
        panelBtn.href = link;
        panelBtn.textContent = buttonText;

        // Update image
        if (image) {
          panelImageContainer.innerHTML = '<img src="' + image + '" alt="' + title + '" class="sek-hss__panel-image">';
        } else {
          panelImageContainer.innerHTML = '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><circle cx="8.5" cy="8.5" r="1.5"></circle><polyline points="21 15 16 10 5 21"></polyline></svg>';
          panelImageContainer.className = 'sek-hss__panel-image-placeholder';
        }
      }

      function showPanel(hotspot) {
        if (activeHotspot === hotspot && panel.classList.contains('is-visible')) {
          closePanel();
          return;
        }

        // Remove active state from all hotspots
        hotspots.forEach(h => h.classList.remove('is-active'));

        // Set active hotspot
        activeHotspot = hotspot;
        hotspot.classList.add('is-active');

        // Update and show panel
        updatePanel(hotspot);
        panel.classList.add('is-visible');
      }

      function closePanel() {
        panel.classList.remove('is-visible');
        hotspots.forEach(h => h.classList.remove('is-active'));
        activeHotspot = null;
      }

      // Click handler for hotspot markers
      markers.forEach(marker => {
        marker.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          const hotspot = this.closest('.sek-hss__hotspot');
          showPanel(hotspot);
        });
      });

      // Close button handler
      panelClose.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        closePanel();
      });

      // Close panel when clicking outside
      document.addEventListener('click', function(e) {
        if (!e.target.closest('.sek-hss__hotspot') && !e.target.closest('.sek-hss__panel')) {
          closePanel();
        }
      });

      // Close panel on escape key
      document.addEventListener('keydown', function(e) {
