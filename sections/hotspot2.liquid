     RESPONSIVE BREAKPOINTS
     ======================================== */

  /* Small Mobile (< 400px) */
  @media (max-width: 399px) {
    #sek-hotspots-simple-{{ section_id }} .sek-hss__container {
      padding: 0 10px;
    }

    #sek-hotspots-simple-{{ section_id }} .sek-hss__header {
      margin-bottom: 16px;
    }

    #sek-hotspots-simple-{{ section_id }} .sek-hss__heading {
      font-size: 20px;
    }

    #sek-hotspots-simple-{{ section_id }} .sek-hss__marker {
      width: 24px;
      height: 24px;
      border-width: 2px;
    }

    #sek-hotspots-simple-{{ section_id }} .sek-hss__icon {
      font-size: 14px;
    }

    #sek-hotspots-simple-{{ section_id }} .sek-hss__panel {
      width: 220px;
      padding: 12px;
      top: 12px;
    }

    #sek-hotspots-simple-{{ section_id }} .sek-hss__panel.is-visible {
