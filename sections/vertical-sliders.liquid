<!-- Vertical Sliders Section -->
<style>
  @keyframes slideUp-{{ section.id }} {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(-50%);
    }
  }

  @keyframes slideDown-{{ section.id }} {
    0% {
      transform: translateY(-50%);
    }
    100% {
      transform: translateY(0);
    }
  }

  #vertical-sliders-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
    background-color: {{ section.settings.background_color }};
  }

  #vertical-sliders-{{ section.id }} .container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 {{ section.settings.container_padding }}px;
  }

  #vertical-sliders-{{ section.id }} .content-wrapper {
    display: grid;
    grid-template-columns: {{ section.settings.left_column_width }}% 1fr;
    gap: {{ section.settings.column_gap }}px;
    align-items: center;
  }

  /* Left Column - Content */
  #vertical-sliders-{{ section.id }} .content-column {
    padding-right: {{ section.settings.content_padding_right }}px;
  }

  #vertical-sliders-{{ section.id }} .heading {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    color: {{ section.settings.heading_color }};
    line-height: {{ section.settings.heading_line_height }};
    margin-bottom: {{ section.settings.heading_margin_bottom }}px;
    letter-spacing: -0.02em;
  }

  #vertical-sliders-{{ section.id }} .description {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
    line-height: {{ section.settings.description_line_height }};
    margin-bottom: {{ section.settings.description_margin_bottom }}px;
  }

  #vertical-sliders-{{ section.id }} .cta-button {
    display: inline-block;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    background-color: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  #vertical-sliders-{{ section.id }} .cta-button:hover {
    background-color: {{ section.settings.button_hover_background }};
    color: {{ section.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  /* Right Column - Sliders */
  #vertical-sliders-{{ section.id }} .sliders-column {
    display: flex;
    gap: {{ section.settings.slider_gap }}px;
    height: {{ section.settings.slider_height }}px;
    overflow: hidden;
    position: relative;
  }

  #vertical-sliders-{{ section.id }} .slider-track {
    flex: 1;
    position: relative;
    overflow: hidden;
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  #vertical-sliders-{{ section.id }} .slider-content {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.image_gap }}px;
    position: absolute;
    width: 100%;
  }

  #vertical-sliders-{{ section.id }} .slider-content.up {
    animation: slideUp-{{ section.id }} {{ section.settings.animation_duration }}s linear infinite;
  }

  #vertical-sliders-{{ section.id }} .slider-content.down {
    animation: slideDown-{{ section.id }} {{ section.settings.animation_duration }}s linear infinite;
  }

  {% if section.settings.pause_on_hover %}
  #vertical-sliders-{{ section.id }} .slider-track:hover .slider-content {
    animation-play-state: paused;
  }
  {% endif %}

  #vertical-sliders-{{ section.id }} .slider-image {
    width: 100%;
    aspect-ratio: {{ section.settings.image_aspect_ratio }};
    object-fit: cover;
    border-radius: {{ section.settings.image_border_radius }}px;
    display: block;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    #vertical-sliders-{{ section.id }} .content-wrapper {
      grid-template-columns: 1fr;
      gap: {{ section.settings.mobile_gap }}px;
    }

    #vertical-sliders-{{ section.id }} .content-column {
      padding-right: 0;
      text-align: {{ section.settings.mobile_text_align }};
    }

    #vertical-sliders-{{ section.id }} .heading {
      font-size: {{ section.settings.heading_size_mobile }}px;
    }

    #vertical-sliders-{{ section.id }} .description {
      font-size: {{ section.settings.description_size_mobile }}px;
    }

    #vertical-sliders-{{ section.id }} .cta-button {
      {% if section.settings.mobile_text_align == 'center' %}
        margin: 0 auto;
        display: table;
      {% endif %}
    }

    #vertical-sliders-{{ section.id }} .sliders-column {
      height: {{ section.settings.slider_height_mobile }}px;
    }
  }
</style>

<section id="vertical-sliders-{{ section.id }}">
  <div class="container">
    <div class="content-wrapper">
      <!-- Left Column - Content -->
      <div class="content-column">
        {% if section.settings.heading != blank %}
          <h2 class="heading">{{ section.settings.heading }}</h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <p class="description">{{ section.settings.description }}</p>
        {% endif %}

        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link | default: '#' }}" class="cta-button">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>

      <!-- Right Column - Sliders -->
      <div class="sliders-column">
        <!-- Left Slider (Moving Up) -->
        <div class="slider-track">
          <div class="slider-content up">
            {% assign left_images = section.blocks | where: 'type', 'left_slider_image' %}
            {% for block in left_images %}
              {% if block.settings.image %}
                <img class="slider-image"
                     src="{{ block.settings.image | image_url: width: 600 }}"
                     alt="{{ block.settings.image_alt | escape }}"
                     loading="lazy">
              {% endif %}
            {% endfor %}
            <!-- Duplicate for seamless loop -->
            {% for block in left_images %}
              {% if block.settings.image %}
                <img class="slider-image"
                     src="{{ block.settings.image | image_url: width: 600 }}"
                     alt="{{ block.settings.image_alt | escape }}"
                     loading="lazy">
              {% endif %}
            {% endfor %}
          </div>
        </div>

        <!-- Right Slider (Moving Down) -->
        <div class="slider-track">
          <div class="slider-content down">
            {% assign right_images = section.blocks | where: 'type', 'right_slider_image' %}
            {% for block in right_images %}
              {% if block.settings.image %}
                <img class="slider-image"
                     src="{{ block.settings.image | image_url: width: 600 }}"
                     alt="{{ block.settings.image_alt | escape }}"
                     loading="lazy">
              {% endif %}
            {% endfor %}
            <!-- Duplicate for seamless loop -->
            {% for block in right_images %}
              {% if block.settings.image %}
                <img class="slider-image"
                     src="{{ block.settings.image | image_url: width: 600 }}"
                     alt="{{ block.settings.image_alt | escape }}"
                     loading="lazy">
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

