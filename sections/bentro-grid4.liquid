{% style %}
  .bento-grid-4-{{ section.id }} {
    --bento-4-bg: {{ section.settings.background_color }};
    --bento-4-card-bg: {{ section.settings.card_bg_color }};
    --bento-4-stat-color: {{ section.settings.stat_color }};
    --bento-4-label-color: {{ section.settings.label_color }};
    --bento-4-heading-accent: {{ section.settings.heading_accent_color }};
    --bento-4-heading-text: {{ section.settings.heading_text_color }};
  }
{% endstyle %}

<section class="bento-grid-4 bento-grid-4-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="bento-grid-4__container">
    <div class="bento-grid-4__grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'large_stat' %}
            <div class="bento-grid-4__card bento-grid-4__card--large-stat" {{ block.shopify_attributes }}>
              <div class="bento-grid-4__stat-content">
                <span class="bento-grid-4__stat-number">{{ block.settings.stat_number | default: '2M+' }}</span>
                <span class="bento-grid-4__stat-label">{{ block.settings.stat_label | default: 'Followers' }}</span>
              </div>
            </div>

          {% when 'heading_card' %}
            <div class="bento-grid-4__card bento-grid-4__card--heading" {{ block.shopify_attributes }}>
              <h2 class="bento-grid-4__heading">
                <span class="bento-grid-4__heading-accent">{{ block.settings.heading_accent | default: 'About us' }}</span>
                <span class="bento-grid-4__heading-text"> {{ block.settings.heading_text | default: 'in a few numbers' }}</span>
              </h2>
            </div>

          {% when 'image_stat_card' %}
            <div class="bento-grid-4__card bento-grid-4__card--image-stat" {{ block.shopify_attributes }}>
              <div class="bento-grid-4__image-section">
                {% if block.settings.image != blank %}
                  <img
                    src="{{ block.settings.image | image_url: width: 600 }}"
                    alt="{{ block.settings.image.alt | default: 'Illustration' }}"
                    class="bento-grid-4__image"
                    loading="lazy"
                  >
                {% else %}
                  <div class="bento-grid-4__image-placeholder">
                    {{ 'image' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
              <div class="bento-grid-4__stat-section">
                <span class="bento-grid-4__stat-number bento-grid-4__stat-number--medium">{{ block.settings.stat_number | default: '875 MW' }}</span>
                <span class="bento-grid-4__stat-label bento-grid-4__stat-label--medium">{{ block.settings.stat_label | default: 'Installed production capacity' }}</span>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  /* Base Section */
  .bento-grid-4 {
    display: block;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    background-color: var(--bento-4-bg);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    padding: 24px 16px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    overflow: hidden;
    position: relative;
  }

  .bento-grid-4 *,
  .bento-grid-4 *::before,
  .bento-grid-4 *::after {
    box-sizing: border-box;
  }

  .bento-grid-4 img {
    max-width: 100%;
    height: auto;
    border: 0;
    vertical-align: middle;
  }

  .bento-grid-4 h2 {
    margin: 0;
    padding: 0;
  }

  /* Container */
  .bento-grid-4__container {
    display: block;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Grid Layout - Mobile (1 column) */
  .bento-grid-4__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 12px;
  }

  /* Card Base */
  .bento-grid-4__card {
    background-color: var(--bento-4-card-bg);
    border-radius: 16px;
    overflow: hidden;
    display: flex;
    position: relative;
  }

  /* Large Stat Card */
  .bento-grid-4__card--large-stat {
    padding: 24px 20px;
    min-height: 160px;
    align-items: flex-start;
    justify-content: flex-start;
  }

  .bento-grid-4__stat-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: 100%;
  }

  .bento-grid-4__stat-number {
    font-size: 48px;
    font-weight: 700;
    color: var(--bento-4-stat-color);
    line-height: 1;
    letter-spacing: -0.02em;
  }

  .bento-grid-4__stat-label {
    font-size: 13px;
    font-weight: 400;
    color: var(--bento-4-label-color);
    margin-top: 8px;
    line-height: 1.4;
  }

  /* Heading Card */
  .bento-grid-4__card--heading {
    padding: 24px 20px;
    min-height: 160px;
    align-items: flex-end;
    justify-content: flex-start;
  }

  .bento-grid-4__heading {
    font-size: 24px;
    font-weight: 700;
    line-height: 1.15;
    margin: 0;
  }

  .bento-grid-4__heading-accent {
    color: var(--bento-4-heading-accent);
  }

  .bento-grid-4__heading-text {
    color: var(--bento-4-heading-text);
  }

  /* Combined Image + Stat Card */
  .bento-grid-4__card--image-stat {
    flex-direction: column;
    padding: 0;
    min-height: 280px;
  }

  .bento-grid-4__image-section {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 24px 20px;
    min-height: 160px;
  }

  .bento-grid-4__image {
    display: block;
    width: auto;
    height: auto;
    max-width: 100%;
    max-height: 140px;
    object-fit: contain;
  }

  .bento-grid-4__image-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100px;
  }

  .bento-grid-4__image-placeholder svg {
    display: block;
    width: 80px;
    height: 80px;
    opacity: 0.4;
  }

  .bento-grid-4__stat-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 20px;
    min-height: 100px;
  }

  .bento-grid-4__stat-number--medium {
    font-size: 32px;
  }

  .bento-grid-4__stat-label--medium {
    font-size: 11px;
    text-align: center;
    opacity: 0.7;
    margin-top: 6px;
  }

  /* ========================================
     RESPONSIVE BREAKPOINTS
     ======================================== */

  /* Small Mobile (< 400px) */
  @media screen and (max-width: 399px) {
    .bento-grid-4 {
      padding: 16px 12px;
    }

    .bento-grid-4__grid {
      gap: 10px;
    }

    .bento-grid-4__card {
      border-radius: 14px;
    }

    .bento-grid-4__card--large-stat {
      padding: 20px 16px;
      min-height: 140px;
    }

    .bento-grid-4__stat-number {
      font-size: 40px;
    }

    .bento-grid-4__stat-label {
      font-size: 12px;
    }

    .bento-grid-4__card--heading {
      padding: 20px 16px;
      min-height: 140px;
    }

    .bento-grid-4__heading {
      font-size: 22px;
    }

    .bento-grid-4__card--image-stat {
      min-height: 240px;
    }

    .bento-grid-4__image-section {
      padding: 16px;
      min-height: 140px;
    }

    .bento-grid-4__image {
      max-height: 110px;
    }

    .bento-grid-4__stat-section {
      padding: 16px;
      min-height: 80px;
    }

    .bento-grid-4__stat-number--medium {
      font-size: 26px;
    }

    .bento-grid-4__stat-label--medium {
      font-size: 10px;
    }
  }

  /* Medium Mobile (400px+) - 2 columns */
  @media screen and (min-width: 400px) {
    .bento-grid-4 {
      padding: 24px 16px;
    }

    .bento-grid-4__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 12px;
    }

    /* First large stat and heading span full width on 2-col */
    .bento-grid-4__card--large-stat,
    .bento-grid-4__card--heading {
      grid-column: span 2;
    }

    .bento-grid-4__stat-number {
      font-size: 52px;
    }

    .bento-grid-4__heading {
      font-size: 26px;
    }

    .bento-grid-4__stat-number--medium {
      font-size: 34px;
    }

    .bento-grid-4__stat-label--medium {
      font-size: 11px;
    }
  }

  /* Large Mobile (550px+) */
  @media screen and (min-width: 550px) {
    .bento-grid-4 {
      padding: 32px 24px;
    }

    .bento-grid-4__grid {
      gap: 14px;
    }

    .bento-grid-4__card {
      border-radius: 18px;
    }

    .bento-grid-4__card--large-stat {
      padding: 28px 24px;
    }

    .bento-grid-4__stat-number {
      font-size: 60px;
    }

    .bento-grid-4__stat-label {
      font-size: 14px;
      margin-top: 10px;
    }

    .bento-grid-4__card--heading {
      padding: 28px 24px;
    }

    .bento-grid-4__heading {
      font-size: 30px;
    }

    .bento-grid-4__card--image-stat {
      min-height: 320px;
    }

    .bento-grid-4__image-section {
      padding: 28px 24px;
      min-height: 180px;
    }

    .bento-grid-4__image {
      max-height: 150px;
    }

    .bento-grid-4__stat-section {
      padding: 24px 20px;
      min-height: 110px;
    }

    .bento-grid-4__stat-number--medium {
      font-size: 38px;
    }

    .bento-grid-4__stat-label--medium {
      font-size: 12px;
    }
  }

  /* Tablet (768px+) - 3 columns */
  @media screen and (min-width: 768px) {
    .bento-grid-4 {
      padding: 40px 30px;
    }

    .bento-grid-4__grid {
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: repeat(2, 1fr);
      gap: 16px;
    }

    /* Large stat spans 2 rows in first column */
    .bento-grid-4__card--large-stat {
      grid-column: 1;
      grid-row: span 1;
    }

    /* Heading spans 2 rows in first column */
    .bento-grid-4__card--heading {
      grid-column: 1;
      grid-row: span 1;
    }

    /* Image+stat cards take single cells */
    .bento-grid-4__card--image-stat {
      grid-column: span 1;
      grid-row: span 1;
      min-height: auto;
    }

    .bento-grid-4__card {
      border-radius: 20px;
    }

    .bento-grid-4__card--large-stat {
      padding: 32px 28px;
      min-height: auto;
    }

    .bento-grid-4__stat-number {
      font-size: 68px;
    }

    .bento-grid-4__stat-label {
      font-size: 15px;
    }

    .bento-grid-4__card--heading {
      padding: 32px 28px;
      min-height: auto;
    }

    .bento-grid-4__heading {
      font-size: 34px;
    }

    .bento-grid-4__image-section {
      padding: 20px;
      min-height: 140px;
    }

    .bento-grid-4__image {
      max-height: 120px;
    }

    .bento-grid-4__stat-section {
      padding: 16px;
      min-height: 90px;
    }

    .bento-grid-4__stat-number--medium {
      font-size: 36px;
    }

    .bento-grid-4__stat-label--medium {
      font-size: 11px;
    }
  }

  /* Desktop (1024px+) */
  @media screen and (min-width: 1024px) {
    .bento-grid-4 {
      padding: 50px 40px;
    }

    .bento-grid-4__grid {
      gap: 18px;
    }

    .bento-grid-4__card {
      border-radius: 22px;
    }

    .bento-grid-4__card--large-stat {
      padding: 36px 32px;
    }

    .bento-grid-4__stat-number {
      font-size: 80px;
    }

    .bento-grid-4__stat-label {
      font-size: 16px;
      margin-top: 12px;
    }

    .bento-grid-4__card--heading {
      padding: 36px 32px;
    }

    .bento-grid-4__heading {
      font-size: 40px;
    }

    .bento-grid-4__image-section {
      padding: 24px;
      min-height: 160px;
    }

    .bento-grid-4__image {
      max-height: 140px;
    }

    .bento-grid-4__stat-section {
      padding: 20px;
      min-height: 100px;
    }

    .bento-grid-4__stat-number--medium {
      font-size: 42px;
    }

    .bento-grid-4__stat-label--medium {
      font-size: 13px;
    }
  }

  /* Large Desktop (1400px+) */
  @media screen and (min-width: 1400px) {
    .bento-grid-4 {
      padding: 60px 50px;
    }

    .bento-grid-4__container {
      max-width: 1300px;
    }

    .bento-grid-4__grid {
      gap: 20px;
    }

    .bento-grid-4__card {
      border-radius: 24px;
    }

    .bento-grid-4__card--large-stat {
      padding: 44px 36px;
    }

    .bento-grid-4__stat-number {
      font-size: 90px;
    }

    .bento-grid-4__stat-label {
      font-size: 17px;
      margin-top: 14px;
    }

    .bento-grid-4__card--heading {
      padding: 44px 36px;
    }

    .bento-grid-4__heading {
      font-size: 46px;
    }

    .bento-grid-4__image-section {
      padding: 28px;
      min-height: 180px;
    }

    .bento-grid-4__image {
      max-height: 160px;
    }

    .bento-grid-4__stat-section {
      padding: 24px;
      min-height: 120px;
    }

    .bento-grid-4__stat-number--medium {
      font-size: 48px;
    }

    .bento-grid-4__stat-label--medium {
      font-size: 14px;
    }
  }
</style>

