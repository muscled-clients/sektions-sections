{% style %}
  #table-{{ section.id }} {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    margin-top: {{ section.settings.top_margin }}px;
    margin-bottom: {{ section.settings.bottom_margin }}px;
    padding: 0 20px;
    background-color: {{ section.settings.table_color }};
    position: relative;
    z-index: 1;
    font-family: {{ section.settings.select_font }};
  }

  #table-{{ section.id }} .section-title {
    text-align: center;
    font-size: {{ section.settings.header_text_size }}px;
    font-weight: 600;
    {% if section.settings.header_text_style == 'cursive' %}
    font-style: italic;
    {% else %}
    font-style: normal;
    {% endif %}
    color: {{ section.settings.benefits_text_color }};
    margin: 0 0 40px 0;
  }

  #table-{{ section.id }} .table-wrapper {
    width: 100%;
  }

  #table-{{ section.id }} .compare-table {
    width: 100%;
    display: flex;
    flex-direction: column;
  }

  #table-{{ section.id }} .table-row {
    display: flex;
    width: 100%;
  }

  #table-{{ section.id }} .table-cell {
    padding: 18px 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    font-size: 15px;
    font-weight: 400;
    border: {{ section.settings.border_thickness }}px solid {{ section.settings.border_color }};
    border-radius: {{ section.settings.corner_radius }}px;
    margin: -{{ section.settings.border_thickness | divided_by: 2 }}px;
  }

  #table-{{ section.id }} .table-cell.feature-name {
    {% if section.settings.number_of_columns == '2' %}
    width: 40%;
    {% else %}
    width: 30%;
    {% endif %}
    flex-shrink: 0;
    justify-content: center;
    text-align: center;
    font-weight: 400;
    color: {{ section.settings.benefits_text_color }};
    background-color: {{ section.settings.table_color }};
  }

  #table-{{ section.id }} .table-cell.brand-cell {
    flex: 1;
    color: {{ section.settings.others_text_color }};
    background-color: {{ section.settings.table_color }};
  }

  #table-{{ section.id }} .table-cell.brand-cell.active {
    background-color: {{ section.settings.highlighted_color }};
    color: {{ section.settings.highlighted_text_color }};
    border-color: {{ section.settings.highlighted_color }};
  }

  /* Header row */
  #table-{{ section.id }} .table-row.header-row .table-cell.feature-name {
    background: transparent;
    border: none;
  }

  #table-{{ section.id }} .table-row.header-row .table-cell.brand-cell {
    padding: 25px 20px;
    flex-direction: column;
    gap: 8px;
    border: none;
    border-bottom: {{ section.settings.border_thickness }}px solid {{ section.settings.border_color }};
  }

  #table-{{ section.id }} .table-row.header-row .table-cell.brand-cell.active {
    border: none;
    border-top-left-radius: {{ section.settings.corner_radius }}px;
    border-top-right-radius: {{ section.settings.corner_radius }}px;
  }

  #table-{{ section.id }} .header-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  #table-{{ section.id }} .header-logo {
    max-width: 140px;
    max-height: 60px;
    object-fit: contain;
  }

  #table-{{ section.id }} .header-name {
    font-weight: 500;
    font-size: 16px;
  }

  /* Last row - rounded bottom corners for active column */
  #table-{{ section.id }} .table-row.feature-row:last-child .table-cell.brand-cell.active {
    border-bottom-left-radius: {{ section.settings.corner_radius }}px;
    border-bottom-right-radius: {{ section.settings.corner_radius }}px;
  }

  /* Icons */
  #table-{{ section.id }} .check-icon,
  #table-{{ section.id }} .x-icon {
    width: 24px;
    height: 24px;
  }

  #table-{{ section.id }} .check-icon svg,
  #table-{{ section.id }} .x-icon svg {
    width: 100%;
    height: 100%;
  }

  #table-{{ section.id }} .brand-cell .check-icon svg {
    fill: none;
    stroke: {{ section.settings.others_icon_color }};
    stroke-width: 2;
  }

  #table-{{ section.id }} .brand-cell.active .check-icon svg {
    stroke: {{ section.settings.highlighted_icon_color }};
  }

  #table-{{ section.id }} .brand-cell .x-icon svg {
    fill: {{ section.settings.others_icon_color }};
  }

  #table-{{ section.id }} .brand-cell.active .x-icon svg {
    fill: {{ section.settings.highlighted_icon_color }};
  }

  /* Hide third column if 2 columns selected */
  {% if section.settings.number_of_columns == '2' %}
  #table-{{ section.id }} .table-cell.brand-cell:nth-child(4) {
    display: none;
  }
  {% endif %}

  /* Mobile responsive */
  @media (max-width: 768px) {
    #table-{{ section.id }} .section-title {
      font-size: {{ section.settings.header_text_size | times: 0.7 | round }}px;
    }

    #table-{{ section.id }} .table-cell {
      padding: 12px 8px;
      font-size: 12px;
    }

    #table-{{ section.id }} .table-cell.feature-name {
      width: 35%;
    }

    #table-{{ section.id }} .table-row.header-row .table-cell.brand-cell {
      padding: 15px 8px;
    }

    #table-{{ section.id }} .header-name {
      font-size: 12px;
    }

    #table-{{ section.id }} .header-logo {
      max-width: 70px;
      max-height: 35px;
    }

    #table-{{ section.id }} .check-icon,
    #table-{{ section.id }} .x-icon {
      width: 18px;
      height: 18px;
    }
  }

  @media (max-width: 480px) {
    #table-{{ section.id }} .table-cell {
      padding: 10px 5px;
      font-size: 10px;
    }

    #table-{{ section.id }} .table-cell.feature-name {
      width: 30%;
    }

    #table-{{ section.id }} .header-logo {
      max-width: 50px;
    }
  }
{% endstyle %}

<div id="table-{{ section.id }}">
  {% if section.settings.header_text != blank %}
    <h2 class="section-title">{{ section.settings.header_text }}</h2>
  {% endif %}

  <div class="table-wrapper">
    <div class="compare-table">
      {%- comment -%} Header Row {%- endcomment -%}
      <div class="table-row header-row">
        <div class="table-cell feature-name"></div>

        {%- comment -%} Column 1 - Always highlighted {%- endcomment -%}
        <div class="table-cell brand-cell active">
          <div class="header-content">
            {% if section.settings.column1_logo != blank %}
              <img class="header-logo" src="{{ section.settings.column1_logo | image_url: width: 280 }}" alt="{{ section.settings.column1_text }}">
            {% endif %}
            {% if section.settings.column1_text != blank %}
              <span class="header-name">{{ section.settings.column1_text }}</span>
            {% endif %}
          </div>
        </div>

        {%- comment -%} Column 2 {%- endcomment -%}
        <div class="table-cell brand-cell">
          <div class="header-content">
            <span class="header-name">{{ section.settings.column2_text }}</span>
          </div>
        </div>

        {%- comment -%} Column 3 {%- endcomment -%}
        {% if section.settings.number_of_columns == '3' %}
        <div class="table-cell brand-cell">
          <div class="header-content">
            <span class="header-name">{{ section.settings.column3_text }}</span>
          </div>
        </div>
        {% endif %}
      </div>

      {%- comment -%} Feature Rows {%- endcomment -%}
      {% for block in section.blocks %}
        {% if block.type == 'row' %}
          <div class="table-row feature-row" {{ block.shopify_attributes }}>
            <div class="table-cell feature-name">{{ block.settings.header }}</div>

            {%- comment -%} Column 1 - Active {%- endcomment -%}
            <div class="table-cell brand-cell active">
              {% if block.settings.compare_1 == 'check' %}
                <span class="check-icon">
                  <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="none">
                    <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/>
                    <path d="M8 12l2.5 2.5L16 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
                  </svg>
                </span>
              {% else %}
                <span class="x-icon">
                  <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z"/>
                  </svg>
                </span>
              {% endif %}
            </div>

            {%- comment -%} Column 2 {%- endcomment -%}
            <div class="table-cell brand-cell">
              {% if block.settings.compare_2 == 'check' %}
                <span class="check-icon">
                  <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="none">
                    <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/>
                    <path d="M8 12l2.5 2.5L16 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
                  </svg>
                </span>
              {% else %}
                <span class="x-icon">
                  <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z"/>
                  </svg>
                </span>
              {% endif %}
            </div>

            {%- comment -%} Column 3 {%- endcomment -%}
            {% if section.settings.number_of_columns == '3' %}
            <div class="table-cell brand-cell">
              {% if block.settings.compare_3 == 'check' %}
                <span class="check-icon">
                  <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="none">
                    <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/>
                    <path d="M8 12l2.5 2.5L16 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
                  </svg>
                </span>
              {% else %}
                <span class="x-icon">
                  <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z"/>
                  </svg>
                </span>
              {% endif %}
            </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Table",
  "tag": "section",
  "class": "section-table",
  "settings": [
    {
      "type": "header",
      "content": "Number of Columns"
    },
    {
      "type": "select",
      "id": "number_of_columns",
      "label": "Select number of columns",
      "options": [
        { "value": "2", "label": "2 Columns" },
        { "value": "3", "label": "3 Columns" }
