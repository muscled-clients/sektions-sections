<section class="hotspots-section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="hs-container-{{ section.id }}">
    {%- if section.settings.subheading != blank or section.settings.heading != blank or section.settings.description != blank -%}
      <div class="hs-header-{{ section.id }}">
        {%- if section.settings.subheading != blank -%}
          <p class="hs-subheading-{{ section.id }}">{{ section.settings.subheading }}</p>
        {%- endif -%}
        {%- if section.settings.heading != blank -%}
          <h2 class="hs-heading-{{ section.id }}">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <p class="hs-description-{{ section.id }}">{{ section.settings.description }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="hs-image-wrapper-{{ section.id }}">
      {%- if section.settings.image != blank -%}
        <img
          class="hs-image-{{ section.id }}"
          src="{{ section.settings.image | image_url: width: 1600 }}"
          alt="{{ section.settings.image.alt | default: section.settings.heading | escape }}"
          loading="lazy"
        >
      {%- else -%}
        {{ 'collection-2' | placeholder_svg_tag: 'hs-image-' | append: section.id }}
      {%- endif -%}

      {%- for block in section.blocks -%}
        {%- if block.type == 'hotspot' -%}
          <div
            class="hs-dot-{{ section.id }}"
            style="left: {{ block.settings.position_x }}%; top: {{ block.settings.position_y }}%;"
            data-hotspot="{{ forloop.index0 }}"
            {{ block.shopify_attributes }}
          >
            <div class="hs-dot-inner-{{ section.id }}">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
              </svg>
            </div>

            <!-- Product Card - Small tooltip -->
            {%- assign product = block.settings.product -%}
            {%- assign card_link = product.url | default: block.settings.custom_link | default: '#' -%}
            <a href="{{ card_link }}" class="hs-card-{{ section.id }} position-{{ block.settings.card_position }}" data-card="{{ forloop.index0 }}">
              {%- if product != blank -%}
                <img
                  class="hs-card-image-{{ section.id }}"
                  src="{{ product.featured_image | image_url: width: 200 }}"
                  alt="{{ product.title | escape }}"
                  loading="lazy"
                >
                <div class="hs-card-content-{{ section.id }}">
                  <h4 class="hs-card-title-{{ section.id }}">{{ product.title }}</h4>
                  <p class="hs-card-price-{{ section.id }}">
                    {{ product.price | money }}
                    {%- if product.compare_at_price > product.price -%}
                      <span class="compare">{{ product.compare_at_price | money }}</span>
                    {%- endif -%}
                  </p>
                </div>
              {%- else -%}
                {%- if block.settings.custom_image != blank -%}
                  <img
                    class="hs-card-image-{{ section.id }}"
                    src="{{ block.settings.custom_image | image_url: width: 200 }}"
                    alt="{{ block.settings.custom_title | escape }}"
                    loading="lazy"
                  >
                {%- endif -%}
                <div class="hs-card-content-{{ section.id }}">
                  <h4 class="hs-card-title-{{ section.id }}">{{ block.settings.custom_title | default: 'Product Title' }}</h4>
                  {%- if block.settings.custom_price != blank -%}
                    <p class="hs-card-price-{{ section.id }}">{{ block.settings.custom_price }}</p>
                  {%- endif -%}
                </div>
              {%- endif -%}
            </a>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const section = document.querySelector('[data-section-id="{{ section.id }}"]');
    if (!section) return;

    const hotspots = section.querySelectorAll('[data-hotspot]');
    const cards = section.querySelectorAll('[data-card]');
    const triggerType = '{{ section.settings.trigger_type }}';

    function closeAllCards() {
      cards.forEach(card => card.classList.remove('active'));
    }

    function toggleCard(index) {
      const card = section.querySelector(`[data-card="${index}"]`);
      const isActive = card.classList.contains('active');
      closeAllCards();
      if (!isActive) {
        card.classList.add('active');
      }
    }

    hotspots.forEach((hotspot, index) => {
      const dotInner = hotspot.querySelector('[class*="hs-dot-inner"]');

      if (triggerType === 'click') {
        // Only toggle on dot click, not card click
        if (dotInner) {
          dotInner.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            toggleCard(index);
          });
        }
      } else {
        hotspot.addEventListener('mouseenter', function() {
          closeAllCards();
          const card = section.querySelector(`[data-card="${index}"]`);
          card.classList.add('active');
        });

        hotspot.addEventListener('mouseleave', function(e) {
          const card = section.querySelector(`[data-card="${index}"]`);
          const relatedTarget = e.relatedTarget;
          if (!card.contains(relatedTarget)) {
            card.classList.remove('active');
          }
        });

        const card = section.querySelector(`[data-card="${index}"]`);
        card.addEventListener('mouseleave', function(e) {
          const relatedTarget = e.relatedTarget;
          if (!hotspot.contains(relatedTarget)) {
            card.classList.remove('active');
          }
        });
      }
    });

    // Close on outside click (only for click mode)
    if (triggerType === 'click') {
      document.addEventListener('click', function(e) {
        if (!e.target.closest('[data-hotspot]')) {
          closeAllCards();
        }
      });

      // Close on escape key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          closeAllCards();
        }
      });
    }
  });
</script>

