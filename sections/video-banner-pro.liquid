<div class="sek-vbp-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="sek-video-banner-pro">
  {% for block in section.blocks %}
    <div class="sek-vbp__slide{% if forloop.first %} sek-vbp__slide--active{% endif %}" data-slide-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
      <!-- Media Background -->
      <div class="sek-vbp__media">
        {% if block.settings.video != blank %}
          {{ block.settings.video | video_tag: autoplay: true, loop: true, muted: true, playsinline: true, class: 'sek-vbp__video', data-video: '' }}
        {% elsif block.settings.video_url != blank %}
          <video class="sek-vbp__video" autoplay loop muted playsinline data-video>
            <source src="{{ block.settings.video_url }}" type="video/mp4">
          </video>
        {% elsif block.settings.image != blank %}
          <img
            src="{{ block.settings.image | image_url: width: 1920 }}"
            srcset="{{ block.settings.image | image_url: width: 800 }} 800w,
                    {{ block.settings.image | image_url: width: 1200 }} 1200w,
                    {{ block.settings.image | image_url: width: 1600 }} 1600w,
                    {{ block.settings.image | image_url: width: 1920 }} 1920w"
            sizes="100vw"
            alt="{{ block.settings.image.alt | default: block.settings.heading | escape }}"
            class="sek-vbp__image"
            loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
          >
        {% else %}
          {%- assign placeholder_num = forloop.index0 | modulo: 6 | plus: 1 -%}
          {{ 'collection-' | append: placeholder_num | placeholder_svg_tag: 'sek-vbp__image' }}
        {% endif %}
      </div>

      <!-- Overlay -->
      <div class="sek-vbp__overlay"></div>

      <!-- Content -->
      <div class="sek-vbp__content sek-vbp__content--{{ block.settings.content_position }}">
        <div class="sek-vbp__inner">
          {% if block.settings.subheading != blank %}
            <p class="sek-vbp__subheading">{{ block.settings.subheading }}</p>
          {% endif %}

          {% if block.settings.heading != blank %}
            <h2 class="sek-vbp__heading">{{ block.settings.heading }}</h2>
          {% endif %}

          {% if block.settings.description != blank %}
            <p class="sek-vbp__description">{{ block.settings.description }}</p>
          {% endif %}

          {% if block.settings.button_text != blank or block.settings.button2_text != blank %}
            <div class="sek-vbp__buttons">
              {% if block.settings.button_text != blank %}
                <a href="{{ block.settings.button_link }}" class="sek-vbp__btn sek-vbp__btn--primary">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
              {% if block.settings.button2_text != blank %}
                <a href="{{ block.settings.button2_link }}" class="sek-vbp__btn sek-vbp__btn--secondary">
                  {{ block.settings.button2_text }}
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  {% endfor %}

  <!-- Play/Pause Button -->
  <button type="button" class="sek-vbp__play" aria-label="Play/Pause video" data-play-btn>
    <svg class="sek-vbp__play-icon--play" viewBox="0 0 24 24" fill="currentColor">
      <polygon points="5,3 19,12 5,21"></polygon>
    </svg>
    <svg class="sek-vbp__play-icon--pause" viewBox="0 0 24 24" fill="currentColor">
      <rect x="6" y="4" width="4" height="16"></rect>
      <rect x="14" y="4" width="4" height="16"></rect>
    </svg>
  </button>

  <!-- Pagination -->
  {% if section.blocks.size > 1 %}
    <div class="sek-vbp__pagination">
      {% for block in section.blocks %}
        <button type="button" class="sek-vbp__dot{% if forloop.first %} sek-vbp__dot--active{% endif %}" data-dot-index="{{ forloop.index0 }}" aria-label="Go to slide {{ forloop.index }}">
          <svg class="sek-vbp__dot-progress" viewBox="0 0 44 44">
            <circle cx="22" cy="22" r="20"></circle>
            <circle class="progress-ring" cx="22" cy="22" r="20"></circle>
          </svg>
          <span>{{ forloop.index }}</span>
        </button>
      {% endfor %}
    </div>
  {% endif %}
</div>

<script>
  (function() {
    const section = document.querySelector('[data-section-id="{{ section.id }}"]');
    if (!section) return;

    const slides = Array.from(section.querySelectorAll('.sek-vbp__slide'));
    const dots = Array.from(section.querySelectorAll('.sek-vbp__dot'));
    const playBtn = section.querySelector('[data-play-btn]');
    const videos = Array.from(section.querySelectorAll('[data-video]'));

    if (slides.length === 0) return;

    let currentIndex = 0;
    let autoplayInterval = null;
    let isPaused = false;
    const autoplaySpeed = {{ section.settings.autoplay_speed }};
    const autoplayEnabled = {{ section.settings.autoplay }};

    function goToSlide(index) {
      // Remove active from all
      slides.forEach(slide => slide.classList.remove('sek-vbp__slide--active'));
      dots.forEach(dot => dot.classList.remove('sek-vbp__dot--active'));

      // Pause all videos
      videos.forEach(video => {
        if (video.pause) video.pause();
      });

      // Set new active
      currentIndex = index;
      slides[currentIndex].classList.add('sek-vbp__slide--active');
      if (dots[currentIndex]) {
        dots[currentIndex].classList.add('sek-vbp__dot--active');
      }

      // Play video on current slide if not paused
      const currentVideo = slides[currentIndex].querySelector('[data-video]');
      if (currentVideo && currentVideo.play && !isPaused) {
        currentVideo.play();
      }

      // Reset autoplay timer
      if (autoplayEnabled && !isPaused) {
        resetAutoplay();
      }
    }

    function nextSlide() {
      const next = (currentIndex + 1) % slides.length;
      goToSlide(next);
    }

    function resetAutoplay() {
      if (autoplayInterval) {
        clearInterval(autoplayInterval);
      }
      if (autoplayEnabled && !isPaused) {
        autoplayInterval = setInterval(nextSlide, autoplaySpeed);
      }
    }

    function togglePause() {
      isPaused = !isPaused;
      playBtn.classList.toggle('is-paused', isPaused);

      const currentVideo = slides[currentIndex].querySelector('[data-video]');
      if (currentVideo) {
        if (isPaused) {
          currentVideo.pause();
        } else {
          currentVideo.play();
        }
      }

      if (isPaused) {
        clearInterval(autoplayInterval);
        // Remove active class to stop animation
        dots.forEach(dot => {
          dot.classList.remove('sek-vbp__dot--active');
        });
        dots[currentIndex].classList.add('sek-vbp__dot--active');
      } else {
        resetAutoplay();
        // Re-trigger animation
        dots[currentIndex].classList.remove('sek-vbp__dot--active');
        void dots[currentIndex].offsetWidth; // Force reflow
        dots[currentIndex].classList.add('sek-vbp__dot--active');
      }
    }

    // Event listeners
    if (playBtn) {
      playBtn.addEventListener('click', togglePause);
    }

    dots.forEach((dot, i) => {
      dot.addEventListener('click', () => {
        if (i !== currentIndex) {
          goToSlide(i);
        }
      });
    });

    // Start autoplay
    if (autoplayEnabled && slides.length > 1) {
      resetAutoplay();
    }

    // Handle visibility change
    document.addEventListener('visibilitychange', () => {
      if (document.hidden) {
        clearInterval(autoplayInterval);
      } else if (autoplayEnabled && !isPaused) {
        resetAutoplay();
      }
    });
  })();
</script>

