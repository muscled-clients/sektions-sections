{% style %}
  #shopify-section-{{ section.id }} {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    overflow: hidden;
  }

  .sek-vbp-{{ section.id }} {
    --sek-vbp-height-mobile: {{ section.settings.height_mobile }}px;
    --sek-vbp-height-desktop: {{ section.settings.height_desktop }}px;
    --sek-vbp-overlay: {{ section.settings.overlay_color }};
    --sek-vbp-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    --sek-vbp-text: {{ section.settings.text_color }};
    --sek-vbp-btn-bg: {{ section.settings.button_bg }};
    --sek-vbp-btn-text: {{ section.settings.button_text }};
    --sek-vbp-btn2-bg: {{ section.settings.button2_bg }};
    --sek-vbp-btn2-text: {{ section.settings.button2_text }};

    position: relative;
    width: 100%;
    height: var(--sek-vbp-height-mobile);
    overflow: hidden;
    background: #121212;
    box-sizing: border-box;
  }

  .sek-vbp-{{ section.id }} *,
  .sek-vbp-{{ section.id }} *::before,
  .sek-vbp-{{ section.id }} *::after {
    box-sizing: border-box;
  }

  /* Slides */
  .sek-vbp-{{ section.id }} .sek-vbp__slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity 0.5s ease;
    z-index: 1;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__slide--active {
    opacity: 1;
    z-index: 2;
  }

  /* Video/Image Background */
  .sek-vbp-{{ section.id }} .sek-vbp__media {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Overlay */
  .sek-vbp-{{ section.id }} .sek-vbp__overlay {
    position: absolute;
    inset: 0;
    background: var(--sek-vbp-overlay);
    opacity: var(--sek-vbp-overlay-opacity);
    z-index: 3;
  }

  /* Content */
  .sek-vbp-{{ section.id }} .sek-vbp__content {
    position: absolute;
    inset: 0;
    z-index: 5;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 40px 15px;
    color: var(--sek-vbp-text);
  }

  .sek-vbp-{{ section.id }} .sek-vbp__content--left {
    align-items: flex-start;
    text-align: left;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__content--right {
    align-items: flex-end;
    text-align: right;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__inner {
    max-width: 100%;
    width: 100%;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__subheading {
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin-bottom: 10px;
    opacity: 0.9;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__heading {
    font-size: 26px;
    font-weight: 700;
    line-height: 1.15;
    margin: 0 0 12px;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__description {
    font-size: 13px;
    line-height: 1.5;
    margin-bottom: 20px;
    opacity: 0.9;
    max-width: 100%;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__content--center .sek-vbp__description {
    margin-left: auto;
    margin-right: auto;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__buttons {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__content--center .sek-vbp__buttons {
    justify-content: center;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 10px 20px;
    font-size: 12px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
    min-width: 100px;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__btn--primary {
    background: var(--sek-vbp-btn-bg);
    color: var(--sek-vbp-btn-text);
    border: 2px solid var(--sek-vbp-btn-bg);
  }

  .sek-vbp-{{ section.id }} .sek-vbp__btn--primary:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 20px rgba(0,0,0,0.3);
  }

  .sek-vbp-{{ section.id }} .sek-vbp__btn--secondary {
    background: var(--sek-vbp-btn2-bg);
    color: var(--sek-vbp-btn2-text);
    border: 2px solid var(--sek-vbp-btn2-text);
  }

  .sek-vbp-{{ section.id }} .sek-vbp__btn--secondary:hover {
    background: var(--sek-vbp-btn2-text);
    color: var(--sek-vbp-btn2-bg);
  }

  /* Play Button */
  .sek-vbp-{{ section.id }} .sek-vbp__play {
    position: absolute;
    top: 12px;
    left: 12px;
    z-index: 10;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: rgba(0,0,0,0.4);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    backdrop-filter: blur(4px);
    transition: all 0.3s ease;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__play:hover {
    background: rgba(0,0,0,0.6);
    transform: scale(1.1);
  }

  .sek-vbp-{{ section.id }} .sek-vbp__play svg {
    width: 14px;
    height: 14px;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__play-icon--pause {
    display: none;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__play.is-paused .sek-vbp__play-icon--play {
    display: block;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__play.is-paused .sek-vbp__play-icon--pause {
    display: none;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__play:not(.is-paused) .sek-vbp__play-icon--play {
    display: none;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__play:not(.is-paused) .sek-vbp__play-icon--pause {
    display: block;
  }

  /* Pagination */
  .sek-vbp-{{ section.id }} .sek-vbp__pagination {
    position: absolute;
    bottom: 15px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    display: flex;
    gap: 8px;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__dot {
    position: relative;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: rgba(0,0,0,0.3);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 10px;
    font-weight: 600;
    backdrop-filter: blur(4px);
    transition: all 0.3s ease;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__dot:hover {
    background: rgba(0,0,0,0.5);
  }

  .sek-vbp-{{ section.id }} .sek-vbp__dot-progress {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    transform: rotate(-90deg);
  }

  .sek-vbp-{{ section.id }} .sek-vbp__dot-progress circle {
    fill: none;
    stroke: rgba(255,255,255,0.3);
    stroke-width: 2;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__dot-progress .progress-ring {
    stroke: #fff;
    stroke-dasharray: 126;
    stroke-dashoffset: 126;
    transition: stroke-dashoffset 0.1s linear;
  }

  .sek-vbp-{{ section.id }} .sek-vbp__dot--active .progress-ring {
    animation: sek-vbp-progress-{{ section.id }} {{ section.settings.autoplay_speed }}ms linear forwards;
  }

  @keyframes sek-vbp-progress-{{ section.id }} {
    from {
      stroke-dashoffset: 126;
    }
    to {
      stroke-dashoffset: 0;
    }
  }

  /* Medium Mobile - 400px */
  @media (min-width: 400px) {
    .sek-vbp-{{ section.id }} .sek-vbp__content {
      padding: 45px 20px;
    }

    .sek-vbp-{{ section.id }} .sek-vbp__subheading {
