{% style %}
  #shopify-section-{{ section.id }} {
    --h46-bg: {{ section.settings.background_color }};
    --h46-text: {{ section.settings.text_color }};
    --h46-heading-accent: {{ section.settings.heading_accent_color }};
    --h46-badge-bg: {{ section.settings.badge_bg_color }};
    --h46-badge-text: {{ section.settings.badge_text_color }};
    --h46-btn-bg: {{ section.settings.button_bg_color }};
    --h46-btn-text: {{ section.settings.button_text_color }};
    --h46-btn-hover: {{ section.settings.button_hover_color }};
    --h46-card-bg: {{ section.settings.card_bg_color }};
    --h46-card-text: {{ section.settings.card_text_color }};
    --h46-number: {{ section.settings.number_color }};
    --h46-border: {{ section.settings.border_color }};
    --h46-label: {{ section.settings.label_color }};
    display: block;
    width: 100%;
    max-width: 100%;
    overflow: hidden;
    margin-top: {{ section.settings.margin_top | times: 0.7 | round }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.7 | round }}px;
  }
  @media (min-width: 550px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top | times: 0.8 | round }}px;
      margin-bottom: {{ section.settings.margin_bottom | times: 0.8 | round }}px;
    }
  }
  @media (min-width: 768px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top | times: 0.9 | round }}px;
      margin-bottom: {{ section.settings.margin_bottom | times: 0.9 | round }}px;
    }
  }
  @media (min-width: 1024px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{% endstyle %}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=Inter:wght@400;500;600&display=swap');

  /* Box-sizing */
  .hero-46,
  .hero-46 *,
  .hero-46 *::before,
  .hero-46 *::after {
    box-sizing: border-box;
  }

  /* Base - Small Mobile (< 400px) */
  .hero-46 {
    background: var(--h46-bg, #ffffff);
    padding: 40px 15px;
    font-family: 'Inter', sans-serif;
  }

  .hero-46__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Hero Header */
  .hero-46__header {
    text-align: center;
    margin-bottom: 30px;
  }

  .hero-46__badge {
    display: inline-block;
    padding: 8px 16px;
    background: var(--h46-badge-bg, #2D4D51);
    color: var(--h46-badge-text, #ffffff);
    font-size: 10px;
    font-weight: 500;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    border-radius: 4px;
    margin-bottom: 16px;
  }

  .hero-46__heading {
    font-family: 'Cormorant Garamond', serif;
    font-size: 32px;
    font-weight: 600;
    line-height: 1.2;
    color: var(--h46-text, #000000);
    margin: 0 0 14px;
  }

  .hero-46__heading-accent {
    font-weight: 400;
    font-style: italic;
    color: var(--h46-heading-accent, #6b8a8e);
  }

  .hero-46__description {
    font-family: 'Cormorant Garamond', serif;
    font-size: 16px;
    font-style: italic;
    line-height: 1.6;
    color: var(--h46-text, #000000);
    opacity: 0.85;
    margin: 0 0 20px;
    max-width: 450px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-46__btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background: var(--h46-btn-bg, #2D4D51);
    color: var(--h46-btn-text, #ffffff);
    font-family: 'Inter', sans-serif;
    font-size: 13px;
    font-weight: 500;
    text-decoration: none;
    border-radius: 100px;
    transition: all 0.3s ease;
  }

  .hero-46__btn:hover {
    background: var(--h46-btn-hover, #1e3538);
    transform: translateY(-2px);
  }

  .hero-46__btn svg {
    width: 14px;
    height: 14px;
    stroke: currentColor;
    stroke-width: 2;
    fill: none;
  }

  /* Card Section */
  .hero-46__card {
    background: var(--h46-card-bg, #f5f3f0);
    border-radius: 16px;
    padding: 24px;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  /* Features List */
  .hero-46__features {
    display: flex;
    flex-direction: column;
  }

  .hero-46__feature {
    padding: 14px 0;
    border-bottom: 1px solid var(--h46-border, rgba(0, 0, 0, 0.1));
  }

  .hero-46__feature:first-child {
    padding-top: 0;
  }

  .hero-46__feature:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .hero-46__feature-number {
    font-size: 10px;
    font-weight: 400;
    color: var(--h46-number, #999999);
    margin-bottom: 4px;
    display: block;
  }

  .hero-46__feature-text {
    font-size: 13px;
    font-weight: 500;
    color: var(--h46-card-text, #000000);
    line-height: 1.4;
    margin: 0;
  }

  /* Comparison Images */
  .hero-46__comparisons {
    display: flex;
    gap: 12px;
  }

  .hero-46__comparison {
    flex: 1;
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    aspect-ratio: 3 / 4;
    background: #e0e0e0;
    touch-action: none;
    user-select: none;
  }

  .hero-46__comparison-before,
  .hero-46__comparison-after {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-46__comparison-before {
    z-index: 2;
    clip-path: inset(0 50% 0 0);
  }

  .hero-46__comparison-after {
    z-index: 1;
  }

  /* Labels */
  .hero-46__comparison-label {
    position: absolute;
    top: 10px;
    font-size: 8px;
    font-weight: 500;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: var(--h46-label, #2D4D51);
    z-index: 5;
    padding: 4px 8px;
    background: rgba(255, 255, 255, 0.85);
    border-radius: 3px;
  }

  .hero-46__comparison-label--before {
    left: 10px;
  }

  .hero-46__comparison-label--after {
    right: 10px;
  }

  /* Slider Handle */
  .hero-46__slider {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 2px;
    background: rgba(255, 255, 255, 0.8);
    z-index: 10;
    cursor: ew-resize;
  }

  .hero-46__slider-handle {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 36px;
    height: 36px;
    background: rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(7px);
    border: 1px solid rgba(255, 255, 255, 0.6);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: ew-resize;
  }

  .hero-46__slider-handle::before,
  .hero-46__slider-handle::after {
    content: '';
    position: absolute;
    width: 6px;
    height: 6px;
    border-top: 1.5px solid rgba(255, 255, 255, 0.9);
    border-left: 1.5px solid rgba(255, 255, 255, 0.9);
  }

  .hero-46__slider-handle::before {
    left: 8px;
    transform: rotate(-45deg);
  }

  .hero-46__slider-handle::after {
    right: 8px;
    transform: rotate(135deg);
  }

  /* Medium Mobile (400px+) */
  @media (min-width: 400px) {
    .hero-46 {
      padding: 50px 20px;
    }

