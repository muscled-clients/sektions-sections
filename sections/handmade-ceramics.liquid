<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sliderId = 'slider-track-{{ section.id }}';
    const sliderTrack = document.getElementById(sliderId);

    if (!sliderTrack) return;

    // Auto-scroll functionality for both desktop and mobile
    function enableAutoScroll() {
      // Enable animation for both desktop and mobile
      sliderTrack.style.animation = 'slide-right-to-left {{ section.settings.animation_speed }}s linear infinite';
      sliderTrack.style.overflow = 'hidden';
    }

    // Initialize
    enableAutoScroll();

    // Handle window resize
    window.addEventListener('resize', enableAutoScroll);

    // Pause animation on hover/touch for both desktop and mobile
    const slider = sliderTrack.closest('.products-slider');

    // Mouse events (desktop)
    slider.addEventListener('mouseenter', () => {
      sliderTrack.style.animationPlayState = 'paused';
    });

    slider.addEventListener('mouseleave', () => {
      sliderTrack.style.animationPlayState = 'running';
    });

    // Touch events (mobile)
    slider.addEventListener('touchstart', () => {
      sliderTrack.style.animationPlayState = 'paused';
    });

    slider.addEventListener('touchend', () => {
      sliderTrack.style.animationPlayState = 'running';
    });
  });
</script>

