  #handmade-ceramics-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
    max-width: 100%;
    overflow-x: hidden;
  }

  #handmade-ceramics-{{ section.id }} .ceramics-container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 {{ section.settings.horizontal_padding }}px;
    display: grid;
    grid-template-columns: {{ section.settings.left_side_width }}% {{ section.settings.right_side_width }}%;
    gap: {{ section.settings.desktop_gap }}px;
    align-items: start;
  }

  /* Product Slider Styles */
  #handmade-ceramics-{{ section.id }} .products-slider {
    position: relative;
    overflow: hidden;
    height: {{ section.settings.slider_height }}px;
    min-height: 600px;
  }

  #handmade-ceramics-{{ section.id }} .slider-track {
    display: flex;
    gap: {{ section.settings.product_gap }}px;
    animation: slide-right-to-left {{ section.settings.animation_speed }}s linear infinite;
    width: max-content;
  }

  #handmade-ceramics-{{ section.id }} .product-card {
    flex-shrink: 0;
    width: 360px;
    min-height: 550px;
    background: {{ section.settings.card_background }};
    border-radius: {{ section.settings.card_border_radius }}px;
    overflow: visible;
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  #handmade-ceramics-{{ section.id }} .product-card:hover {
    transform: translateY(-{{ section.settings.hover_lift }}px);
  }

  #handmade-ceramics-{{ section.id }} .product-image-wrapper {
    position: relative;
    width: 360px;
    height: 487px;
    overflow: hidden;
    background-color: #f5f5f5;
    margin: 0 auto;
    flex-shrink: 0;
  }

  #handmade-ceramics-{{ section.id }} .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  #handmade-ceramics-{{ section.id }} .product-badge {
    position: absolute;
    top: {{ section.settings.badge_top }}px;
    left: {{ section.settings.badge_left }}px;
    background: {{ section.settings.badge_background }};
    color: {{ section.settings.badge_text_color }};
    padding: {{ section.settings.badge_padding_y }}px {{ section.settings.badge_padding_x }}px;
    border-radius: {{ section.settings.badge_border_radius }}px;
    font-size: {{ section.settings.badge_font_size }}px;
    font-weight: {{ section.settings.badge_font_weight }};
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  #handmade-ceramics-{{ section.id }} .product-info {
    padding: {{ section.settings.product_info_padding }}px !important;
    flex: 1 !important;
    display: flex !important;
    flex-direction: column !important;
    justify-content: flex-start !important;
    background: rgba(255, 255, 255, 0.9) !important;
    min-height: 60px !important;
    position: relative !important;
    z-index: 10 !important;
  }

  #handmade-ceramics-{{ section.id }} .product-title {
    font-size: {{ section.settings.product_title_size }}px !important;
    font-weight: {{ section.settings.product_title_weight }} !important;
    color: {{ section.settings.product_title_color }} !important;
    margin-bottom: {{ section.settings.title_margin_bottom }}px !important;
    line-height: 1.3 !important;
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
  }

  #handmade-ceramics-{{ section.id }} .product-price {
    font-size: {{ section.settings.product_price_size }}px !important;
    font-weight: {{ section.settings.product_price_weight }} !important;
    color: {{ section.settings.product_price_color }} !important;
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
  }

  /* Content Section Styles */
  #handmade-ceramics-{{ section.id }} .content-section {
    padding-left: {{ section.settings.content_padding_left }}px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
  }

  #handmade-ceramics-{{ section.id }} .ceramics-heading {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    color: {{ section.settings.heading_color }};
    margin-bottom: {{ section.settings.heading_margin_bottom }}px;
    line-height: {{ section.settings.heading_line_height }};
    font-family: {{ section.settings.heading_font_family }};
  }

  #handmade-ceramics-{{ section.id }} .ceramics-description {
    font-size: {{ section.settings.description_size }}px;
    line-height: {{ section.settings.description_line_height }};
    color: {{ section.settings.description_color }};
    margin-bottom: {{ section.settings.description_margin_bottom }}px;
