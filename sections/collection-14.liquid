{% style %}
  #shopify-section-{{ section.id }} {
    --col14-gap-desktop: {{ section.settings.gap_desktop }}px;
    --col14-gap-mobile: {{ section.settings.gap_mobile }}px;
    --col14-card-height-desktop: {{ section.settings.card_height_desktop }}px;
    --col14-card-height-mobile: {{ section.settings.card_height_mobile }}px;
    --col14-overlay: {{ section.settings.overlay_color }};
    --col14-subtitle: {{ section.settings.subtitle_color }};
    --col14-title: {{ section.settings.title_color }};
    --col14-text: {{ section.settings.text_color }};
    --col14-btn-bg: {{ section.settings.button_background }};
    --col14-btn-text: {{ section.settings.button_text_color }};
    --col14-btn-border: {{ section.settings.button_border_color }};
    --col14-btn-hover-bg: {{ section.settings.button_hover_background }};
    --col14-btn-hover-text: {{ section.settings.button_hover_text_color }};
    --col14-section-bg: {{ section.settings.section_background }};
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 0;
    overflow: hidden;
    margin-top: {{ section.settings.section_margin_top | times: 0.7 }}px;
    margin-bottom: {{ section.settings.section_margin_bottom | times: 0.7 }}px;
  }
{% endstyle %}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Montserrat:wght@400;500;600;700&display=swap');

  .collection-14 *,
  .collection-14 *::before,
  .collection-14 *::after {
    box-sizing: border-box;
  }

  .collection-14 {
    background: var(--col14-section-bg, #fff);
    padding: 24px 12px;
    font-family: 'Inter', sans-serif;
  }

  .collection-14__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .collection-14__grid {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .collection-14__card {
    position: relative;
    height: 280px;
    border-radius: 10px;
    overflow: hidden;
    flex: 1 1 0;
    transition: flex 0.5s ease;
  }

  .collection-14__card-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .collection-14__card-overlay {
    position: absolute;
    inset: 0;
    background: var(--col14-overlay, rgba(0, 0, 0, 0.2));
    transition: background 0.3s ease;
  }

  .collection-14__card-content {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 16px;
    z-index: 2;
  }

  /* Text alignment classes */
  .collection-14__card-content--left {
    align-items: flex-start;
    text-align: left;
  }

  .collection-14__card-content--center {
    align-items: center;
    text-align: center;
  }

  .collection-14__card-content--right {
    align-items: flex-end;
    text-align: right;
  }

  .collection-14__subtitle {
    font-size: 10px;
    font-weight: 600;
    color: var(--col14-subtitle, #fff);
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin: 0 0 6px;
    opacity: 0.9;
  }

  .collection-14__title {
    font-family: 'Montserrat', sans-serif;
    font-size: 20px;
    font-weight: 700;
    color: var(--col14-title, #fff);
    margin: 0 0 8px;
    line-height: 1.2;
  }

  .collection-14__text {
    font-size: 12px;
    line-height: 1.5;
    color: var(--col14-text, rgba(255, 255, 255, 0.9));
    margin: 0 0 14px;
    max-width: 280px;
  }

  /* Button base styles */
  .collection-14__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    font-size: 11px;
    font-weight: 600;
    font-family: inherit;
    text-decoration: none;
    border-radius: 100px;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 10px 18px;
  }

  /* Button style: solid */
  .collection-14__button--solid {
    background: var(--col14-btn-bg, #fff);
    color: var(--col14-btn-text, #000);
    border: none;
  }

  .collection-14__button--solid:hover {
    background: var(--col14-btn-hover-bg, #f0f0f0);
    color: var(--col14-btn-hover-text, #000);
  }

  /* Button style: outline */
  .collection-14__button--outline {
    background: transparent;
    color: var(--col14-btn-text, #fff);
    border: 1px solid var(--col14-btn-border, #fff);
  }

  .collection-14__button--outline:hover {
    background: var(--col14-btn-hover-bg, #fff);
    color: var(--col14-btn-hover-text, #000);
    border-color: var(--col14-btn-hover-bg, #fff);
  }

  /* Button style: link */
  .collection-14__button--link {
    background: transparent;
    color: var(--col14-btn-text, #fff);
    border: none;
    padding: 6px 0;
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .collection-14__button--link:hover {
    color: var(--col14-btn-hover-text, rgba(255, 255, 255, 0.8));
  }

  .collection-14__button svg {
    width: 12px;
    height: 12px;
    transition: transform 0.3s ease;
  }

  .collection-14__button:hover svg {
    transform: translateX(4px);
  }

  /* 400px breakpoint */
  @media (min-width: 400px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.section_margin_top | times: 0.75 }}px;
      margin-bottom: {{ section.settings.section_margin_bottom | times: 0.75 }}px;
    }

    .collection-14 {
      padding: 28px 14px;
    }

    .collection-14__grid {
      gap: 14px;
    }

    .collection-14__card {
      height: 320px;
      border-radius: 11px;
    }

    .collection-14__card-content {
      padding: 18px;
    }

    .collection-14__subtitle {
      font-size: 10px;
      letter-spacing: 1.8px;
    }

    .collection-14__title {
      font-size: 22px;
      margin-bottom: 10px;
    }

    .collection-14__text {
      font-size: 12px;
      margin-bottom: 16px;
    }

    .collection-14__button {
      font-size: 11px;
      padding: 10px 20px;
    }

    .collection-14__button svg {
      width: 13px;
      height: 13px;
    }
  }

  /* 550px breakpoint */
  @media (min-width: 550px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.section_margin_top | times: 0.8 }}px;
      margin-bottom: {{ section.settings.section_margin_bottom | times: 0.8 }}px;
    }

    .collection-14 {
      padding: 32px 18px;
    }

    .collection-14__grid {
      gap: var(--col14-gap-mobile, 16px);
    }

    .collection-14__card {
      height: calc(var(--col14-card-height-mobile, 400px) * 0.9);
      border-radius: 12px;
    }

    .collection-14__card-content {
      padding: 20px;
    }

    .collection-14__subtitle {
      font-size: 11px;
      letter-spacing: 2px;
      margin-bottom: 7px;
    }

    .collection-14__title {
      font-size: 26px;
    }

    .collection-14__text {
      font-size: 13px;
      max-width: 300px;
    }

    .collection-14__button {
      font-size: 12px;
      padding: 11px 22px;
      gap: 7px;
    }

    .collection-14__button svg {
      width: 14px;
      height: 14px;
    }

    .collection-14__button--link {
      padding: 7px 0;
    }
  }

  /* 768px breakpoint - tablet */
  @media (min-width: 768px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.section_margin_top | times: 0.85 }}px;
      margin-bottom: {{ section.settings.section_margin_bottom | times: 0.85 }}px;
    }

    .collection-14 {
      padding: 40px 24px;
    }

    .collection-14__grid {
      flex-direction: row;
      gap: var(--col14-gap-desktop, 20px);
    }

    .collection-14__card {
      height: calc(var(--col14-card-height-desktop, 500px) * 0.85);
    }

    .collection-14__card-content {
      padding: 26px;
    }

    .collection-14__subtitle {
      font-size: 12px;
    }

    .collection-14__title {
      font-size: 30px;
    }

    .collection-14__text {
      font-size: 13px;
      opacity: 0;
      transform: translateY(20px);
      transition: all 0.4s ease;
      max-width: 320px;
    }

    .collection-14__button {
      font-size: 12px;
      padding: 12px 24px;
      opacity: 0;
      transform: translateY(20px);
      transition: all 0.4s ease 0.1s;
    }

    .collection-14__button svg {
      width: 15px;
      height: 15px;
    }

    .collection-14__card:hover {
      flex: 2 1 0;
    }

    .collection-14__card:hover .collection-14__card-image {
      transform: scale(1.05);
    }

    .collection-14__card:hover .collection-14__text {
      opacity: 1;
      transform: translateY(0);
    }

    .collection-14__card:hover .collection-14__button {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* 1024px breakpoint - desktop */
  @media (min-width: 1024px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.section_margin_top | times: 0.9 }}px;
      margin-bottom: {{ section.settings.section_margin_bottom | times: 0.9 }}px;
    }

    .collection-14 {
      padding: 50px 36px;
    }

    .collection-14__card {
      height: calc(var(--col14-card-height-desktop, 500px) * 0.92);
    }

    .collection-14__card-content {
      padding: 32px;
    }

    .collection-14__subtitle {
      font-size: 12px;
      margin-bottom: 8px;
    }

    .collection-14__title {
      font-size: 36px;
      margin-bottom: 12px;
    }

    .collection-14__text {
      font-size: 14px;
      max-width: 350px;
      margin-bottom: 18px;
    }

    .collection-14__button {
      font-size: 13px;
      padding: 13px 26px;
    }

    .collection-14__button svg {
      width: 16px;
      height: 16px;
    }

    .collection-14__button--link {
      padding: 8px 0;
      text-underline-offset: 4px;
    }
  }

  /* 1400px breakpoint - large desktop */
  @media (min-width: 1400px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.section_margin_top }}px;
      margin-bottom: {{ section.settings.section_margin_bottom }}px;
    }

    .collection-14 {
      padding: 60px 40px;
    }

    .collection-14__card {
      height: var(--col14-card-height-desktop, 500px);
    }

    .collection-14__card-content {
      padding: 40px;
    }

    .collection-14__subtitle {
      font-size: 13px;
    }

    .collection-14__title {
      font-size: 42px;
    }

    .collection-14__text {
      font-size: 15px;
      max-width: 380px;
      margin-bottom: 20px;
    }

    .collection-14__button {
      font-size: 14px;
      padding: 14px 28px;
      gap: 8px;
    }
  }

  /* Mobile text alignment override */
  @media (max-width: 767px) {
    .collection-14__card-content[data-mobile-align="left"] {
      align-items: flex-start;
      text-align: left;
    }

    .collection-14__card-content[data-mobile-align="center"] {
      align-items: center;
      text-align: center;
    }

    .collection-14__card-content[data-mobile-align="right"] {
      align-items: flex-end;
      text-align: right;
    }
  }
</style>

<section class="collection-14">
  <div class="collection-14__container">
    <div class="collection-14__grid">
      {%- for block in section.blocks -%}
        <div class="collection-14__card" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            <img
              src="{{ block.settings.image | image_url: width: 1200 }}"
              alt="{{ block.settings.title | escape }}"
              class="collection-14__card-image"
              loading="lazy"
            >
          {%- else -%}
            <div class="collection-14__card-image" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
          {%- endif -%}

          <div class="collection-14__card-overlay"></div>

          <div
            class="collection-14__card-content collection-14__card-content--{{ block.settings.text_align_desktop }}"
            data-mobile-align="{{ block.settings.text_align_mobile }}"
          >
            {%- if block.settings.subtitle != blank -%}
              <p class="collection-14__subtitle">{{ block.settings.subtitle }}</p>
            {%- endif -%}

            {%- if block.settings.title != blank -%}
              <h3 class="collection-14__title">{{ block.settings.title }}</h3>
            {%- endif -%}

            {%- if block.settings.text != blank -%}
              <p class="collection-14__text">{{ block.settings.text }}</p>
            {%- endif -%}

            {%- if block.settings.button_text != blank -%}
              <a href="{{ block.settings.button_url }}" class="collection-14__button collection-14__button--{{ block.settings.button_style }}">
                {{ block.settings.button_text }}
                {%- if block.settings.show_arrow -%}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                {%- endif -%}
              </a>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

