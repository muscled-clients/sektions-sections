{% comment %}
  Image Grid with Promo Card Section
  Left: 2x3 grid of images, Right: Large promotional card
{% endcomment %}

<div class="image-grid-promo" style="
  --card-bg: {{ section.settings.card_bg }};
  --title-color: {{ section.settings.title_color }};
  --description-color: {{ section.settings.description_color }};
  --button-bg: {{ section.settings.button_bg }};
  --button-text-color: {{ section.settings.button_text_color }};
  --title-size: {{ section.settings.title_size }}px;
  --description-size: {{ section.settings.description_size }}px;
  --button-size: {{ section.settings.button_size }}px;
  --image-gap: {{ section.settings.image_gap }}px;
  --section-gap: {{ section.settings.section_gap }}px;
  --card-padding: {{ section.settings.card_padding }}px;
  --card-border-radius: {{ section.settings.card_border_radius }}px;
  --button-border-radius: {{ section.settings.button_border_radius }}px;
  --section-padding-top: {{ section.settings.section_padding_top }}px;
  --section-padding-bottom: {{ section.settings.section_padding_bottom }}px;
">
  <div class="image-grid-promo__container">
    <div class="image-grid-promo__wrapper">
      <!-- Left Side: Image Grid -->
      <div class="image-grid-promo__images">
        {% for block in section.blocks %}
          {% if block.type == 'image' %}
            <div class="image-grid-promo__image-item" {{ block.shopify_attributes }}>
              {% if block.settings.image %}
                <img src="{{ block.settings.image | img_url: '600x' }}" alt="{{ block.settings.image.alt | escape }}" loading="lazy">
              {% else %}
                <div class="image-grid-promo__placeholder">{{ 'image' | placeholder_svg_tag }}</div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Right Side: Promo Card -->
      <div class="image-grid-promo__card">
        {% if section.settings.title != blank %}
          <h2 class="image-grid-promo__title">{{ section.settings.title }}</h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <p class="image-grid-promo__description">{{ section.settings.description }}</p>
        {% endif %}

        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_url }}" class="image-grid-promo__button">
            {{ section.settings.button_text }}
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
.image-grid-promo {
  width: 100%;
  background-color: #ffffff;
  padding: var(--section-padding-top, 60px) 20px var(--section-padding-bottom, 60px);
}

.image-grid-promo__container {
  max-width: 1400px;
  margin: 0 auto;
}

.image-grid-promo__wrapper {
  display: grid;
  grid-template-columns: 62% 38%;
  gap: var(--section-gap, 24px);
  align-items: stretch;
}

/* Left Side: Image Grid */
.image-grid-promo__images {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(2, 1fr);
  gap: var(--image-gap, 16px);
}

.image-grid-promo__image-item {
  position: relative;
  overflow: hidden;
  {% comment %} border-radius: 8px; {% endcomment %}
  aspect-ratio: 1 / 1;
}

.image-grid-promo__image-item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  transition: transform 0.3s ease;
}

.image-grid-promo__image-item:hover img {
  transform: scale(1.05);
}

.image-grid-promo__placeholder {
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-grid-promo__placeholder svg {
  width: 60%;
  height: 60%;
  opacity: 0.3;
}

/* Right Side: Promo Card */
.image-grid-promo__card {
  background-color: var(--card-bg, #4F5B3F);
  padding: var(--card-padding, 60px);
  border-radius: var(--card-border-radius, 8px);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.image-grid-promo__title {
  font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  font-size: var(--title-size, 40px);
  font-weight: 700;
  color: var(--title-color, #FFFFFF);
  margin: 0 0 24px;
  line-height: 1.2;
}

.image-grid-promo__description {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  font-size: var(--description-size, 18px);
  font-weight: 400;
  color: var(--description-color, #D1D1D1);
  margin: 0 0 32px;
  line-height: 1.6;
}

.image-grid-promo__button {
  font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  font-size: var(--button-size, 16px);
  font-weight: 700;
  color: var(--button-text-color, #FFFFFF);
  background-color: var(--button-bg, #1D1D1D);
  padding: 14px 28px;
  border-radius: var(--button-border-radius, 8px);
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  transition: background-color 0.3s ease, transform 0.3s ease;
  cursor: pointer;
}

.image-grid-promo__button:hover {
  background-color: #333333;
  transform: translateX(4px);
}

.image-grid-promo__button svg {
  width: 20px;
  height: 20px;
}

/* Tablet Layout */
@media screen and (max-width: 1024px) {
  .image-grid-promo__wrapper {
    grid-template-columns: 1fr;
  }

  .image-grid-promo__images {
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(2, 1fr);
  }

  .image-grid-promo__card {
    padding: var(--card-padding, 50px);
  }

  .image-grid-promo__title {
    font-size: calc(var(--title-size, 40px) * 0.9);
  }

  .image-grid-promo__description {
    font-size: calc(var(--description-size, 18px) * 0.95);
  }
}

/* Mobile Layout */
@media screen and (max-width: 768px) {
  .image-grid-promo {
    padding: var(--section-padding-top, 40px) 16px var(--section-padding-bottom, 40px);
  }

  .image-grid-promo__images {
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: auto;
  }

  .image-grid-promo__card {
    padding: var(--card-padding, 40px);
  }

  .image-grid-promo__title {
    font-size: calc(var(--title-size, 40px) * 0.75);
  }

  .image-grid-promo__description {
    font-size: calc(var(--description-size, 18px) * 0.9);
    margin-bottom: 24px;
  }
}

/* Small Mobile Layout */
@media screen and (max-width: 480px) {
  .image-grid-promo__images {
    grid-template-columns: 1fr 1fr;
    gap: 0;
  }

  .image-grid-promo__card {
    {% comment %} padding: var(--card-padding, 32px); {% endcomment %}
    padding: 16px;
  }

  .image-grid-promo__title {
    {% comment %} font-size: calc(var(--title-size, 40px) * 0.65); {% endcomment %}
    font-size: 20px;
    margin-bottom: 12px;
  }

  .image-grid-promo__description {
    font-size: 14px;
    margin-bottom: 16px;
  }

  .image-grid-promo__button {
    gap: 10px;
    font-size: 16px;
    padding: 16px 24px;
    max-width: 200px;
    justify-content: center;
    align-items: center;
    display: flex;
  }

  .image-grid-promo {
    padding-inline: 0;
  }

  .image-grid-promo__wrapper {
    gap: 0;
    grid-template-columns: 1fr 1fr;
  }
  .image-grid-promo__image-item {
    aspect-ratio: auto;
  }
}

@media screen and (max-width: 400px) {
  .image-grid-promo__button {
    flex-direction: column;
    gap: 0px;
    align-items: center;
    justify-content: center;
  }
}
</style>

