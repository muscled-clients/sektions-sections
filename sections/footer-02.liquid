{% style %}
  #shopify-section-{{ section.id }} {
    width: 100%;
    max-width: 100%;
    margin-left: 0;
    margin-right: 0;
    padding-left: 0;
    padding-right: 0;
  }

  .footer-section-{{ section.id }} {
    --footer-bg: {{ section.settings.background_color }};
    --footer-text: {{ section.settings.text_color }};
    --footer-heading: {{ section.settings.heading_color }};
    --footer-link: {{ section.settings.link_color }};
    --footer-link-hover: {{ section.settings.link_hover_color }};
    --footer-accent: {{ section.settings.accent_color }};
    --footer-border: {{ section.settings.border_color }};
    --footer-input-bg: {{ section.settings.input_background }};
    --footer-input-text: {{ section.settings.input_text_color }};
    --footer-btn-bg: {{ section.settings.button_background }};
    --footer-btn-text: {{ section.settings.button_text_color }};
    background-color: var(--footer-bg);
    color: var(--footer-text);
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .footer-section-{{ section.id }} * {
    box-sizing: border-box;
  }

  .footer-container-{{ section.id }} {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* Features Row */
  .footer-features-{{ section.id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
    margin-bottom: 40px;
    padding-bottom: 40px;
    border-bottom: 1px solid var(--footer-border);
  }

  .footer-feature-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 15px;
    border: 1px solid var(--footer-border);
    border-radius: {{ section.settings.border_radius }}px;
    transition: all 0.3s ease;
  }

  .footer-feature-{{ section.id }}:hover .footer-feature-icon-{{ section.id }} {
    transform: scale(1.1);
  }

  .footer-feature-icon-{{ section.id }} {
    width: 40px;
    height: 40px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--footer-accent);
    border-radius: 50%;
    transition: transform 0.4s ease;
  }

  .footer-feature-icon-{{ section.id }} svg {
    width: 20px;
    height: 20px;
    stroke: var(--footer-btn-text);
  }

  .footer-feature-content-{{ section.id }} {
    flex: 1;
  }

  .footer-feature-title-{{ section.id }} {
    font-size: 14px;
    font-weight: 700;
    color: var(--footer-heading);
    margin: 0 0 4px 0;
  }

  .footer-feature-desc-{{ section.id }} {
    font-size: 12px;
    color: var(--footer-text);
    margin: 0;
    opacity: 0.8;
  }

  /* Main Content Grid */
  .footer-main-{{ section.id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
    margin-bottom: 40px;
  }

  /* Brand Column */
  .footer-brand-{{ section.id }} {
    max-width: 350px;
  }

  .footer-logo-{{ section.id }} {
    max-height: {{ section.settings.logo_height }}px;
    width: auto;
    margin-bottom: 20px;
  }

  .footer-brand-text-{{ section.id }} {
    font-size: 14px;
    line-height: 1.6;
    color: var(--footer-text);
    margin: 0 0 25px 0;
    opacity: 0.9;
  }

  /* Newsletter */
  .footer-newsletter-{{ section.id }} {
    margin-bottom: 25px;
  }

  .footer-newsletter-title-{{ section.id }} {
    font-size: 16px;
    font-weight: 700;
    color: var(--footer-heading);
    margin: 0 0 10px 0;
  }

  .footer-newsletter-form-{{ section.id }} {
    display: flex;
    gap: 10px;
  }

  .footer-newsletter-input-{{ section.id }} {
    flex: 1;
    padding: 12px 16px;
    font-size: 14px;
    background: var(--footer-input-bg);
    color: var(--footer-input-text);
    border: 1px solid var(--footer-border);
    border-radius: {{ section.settings.border_radius }}px;
    outline: none;
  }

  .footer-newsletter-input-{{ section.id }}::placeholder {
    color: var(--footer-input-text);
    opacity: 0.6;
  }

  .footer-newsletter-btn-{{ section.id }} {
    padding: 12px 24px;
    font-size: 14px;
    font-weight: 600;
    background: var(--footer-btn-bg);
    color: var(--footer-btn-text);
    border: none;
    border-radius: {{ section.settings.border_radius }}px;
    cursor: pointer;
    transition: opacity 0.25s ease;
  }

  .footer-newsletter-btn-{{ section.id }}:hover {
    opacity: 0.85;
  }

  .footer-newsletter-success-{{ section.id }} {
    display: none;
    font-size: 14px;
    color: var(--footer-accent);
    margin-top: 10px;
  }

  .footer-newsletter-{{ section.id }}.success .footer-newsletter-form-{{ section.id }} {
    display: none;
  }

  .footer-newsletter-{{ section.id }}.success .footer-newsletter-success-{{ section.id }} {
    display: block;
  }

  /* Social Links */
  .footer-social-{{ section.id }} {
    display: flex;
    gap: 10px;
  }

  .footer-social-link-{{ section.id }} {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--footer-border);
    border-radius: 50%;
    transition: all 0.25s ease;
  }

  .footer-social-link-{{ section.id }}:hover {
    background: var(--footer-accent);
  }

  .footer-social-link-{{ section.id }} svg {
    width: 18px;
    height: 18px;
    fill: var(--footer-text);
    transition: fill 0.25s ease;
  }

  .footer-social-link-{{ section.id }}:hover svg {
    fill: var(--footer-btn-text);
  }

  /* Menu Columns */
  .footer-menus-{{ section.id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }

  .footer-menu-{{ section.id }} {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-menu-title-{{ section.id }} {
    font-size: 16px;
    font-weight: 700;
    color: var(--footer-heading);
    margin: 0 0 15px 0;
  }

  .footer-menu-item-{{ section.id }} {
    margin-bottom: 10px;
  }

  .footer-menu-link-{{ section.id }} {
    font-size: 14px;
    color: var(--footer-link);
    text-decoration: none;
    transition: color 0.25s ease;
    line-height: 1.3;
  }

  .footer-menu-link-{{ section.id }}:hover {
    color: var(--footer-link-hover);
  }

  /* Bottom Bar */
  .footer-bottom-{{ section.id }} {
    display: flex;
    flex-direction: column;
    gap: 20px;
    padding-top: 30px;
    border-top: 1px solid var(--footer-border);
    text-align: center;
  }

  .footer-copyright-{{ section.id }} {
    font-size: 13px;
    color: var(--footer-text);
    opacity: 0.7;
    margin: 0;
  }

  .footer-copyright-{{ section.id }} a {
    color: var(--footer-link);
    text-decoration: none;
  }

  /* Payment Icons */
  .footer-payments-{{ section.id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    flex-wrap: wrap;
  }

  .footer-payment-{{ section.id }} {
    height: 32px;
    width: auto;
    opacity: 0.8;
  }

  .footer-payment-{{ section.id }} svg {
    height: 100%;
    width: auto;
  }

  /* Responsive - Tablet */
  @media (min-width: 768px) {
    .footer-features-{{ section.id }} {
      grid-template-columns: repeat(4, 1fr);
    }

    .footer-menus-{{ section.id }} {
      grid-template-columns: repeat(4, 1fr);
    }

    .footer-bottom-{{ section.id }} {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      text-align: left;
    }
  }

  /* Responsive - Desktop */
  @media (min-width: 1024px) {
    .footer-container-{{ section.id }} {
      padding: 0 80px;
    }

    .footer-main-{{ section.id }} {
      grid-template-columns: 1fr 2fr;
      gap: 60px;
    }

    .footer-feature-{{ section.id }} {
      padding: 20px;
    }

    .footer-feature-icon-{{ section.id }} {
      width: 48px;
      height: 48px;
    }

    .footer-feature-icon-{{ section.id }} svg {
      width: 24px;
      height: 24px;
    }

    .footer-feature-title-{{ section.id }} {
      font-size: 15px;
    }

    .footer-feature-desc-{{ section.id }} {
      font-size: 13px;
    }

    .footer-menu-title-{{ section.id }} {
      font-size: 18px;
    }

    .footer-payment-{{ section.id }} {
      height: 36px;
    }
  }
{% endstyle %}

<footer class="footer-section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="footer-container-{{ section.id }}">
    {%- if section.settings.show_features -%}
      <!-- Features Row -->
      <div class="footer-features-{{ section.id }}">
        {%- for block in section.blocks -%}
          {%- if block.type == 'feature' -%}
            <div class="footer-feature-{{ section.id }}" {{ block.shopify_attributes }}>
              <div class="footer-feature-icon-{{ section.id }}">
                {%- case block.settings.icon -%}
                  {%- when 'shipping' -%}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <rect x="1" y="3" width="15" height="13"></rect>
                      <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
                      <circle cx="5.5" cy="18.5" r="2.5"></circle>
                      <circle cx="18.5" cy="18.5" r="2.5"></circle>
                    </svg>
                  {%- when 'returns' -%}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="1 4 1 10 7 10"></polyline>
                      <path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10"></path>
                    </svg>
                  {%- when 'warranty' -%}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                      <polyline points="9 12 11 14 15 10"></polyline>
                    </svg>
                  {%- when 'support' -%}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
                    </svg>
                  {%- when 'secure' -%}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                      <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                  {%- when 'quality' -%}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="8" r="7"></circle>
                      <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"></polyline>
                    </svg>
                  {%- else -%}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                {%- endcase -%}
              </div>
              <div class="footer-feature-content-{{ section.id }}">
                <h4 class="footer-feature-title-{{ section.id }}">{{ block.settings.title }}</h4>
                {%- if block.settings.description != blank -%}
                  <p class="footer-feature-desc-{{ section.id }}">{{ block.settings.description }}</p>
                {%- endif -%}
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}

    <!-- Main Content -->
    <div class="footer-main-{{ section.id }}">
      <!-- Brand Column -->
      <div class="footer-brand-{{ section.id }}">
        {%- if section.settings.logo != blank -%}
          <img
            class="footer-logo-{{ section.id }}"
            src="{{ section.settings.logo | image_url: height: 100 }}"
            alt="{{ shop.name }}"
            loading="lazy"
          >
        {%- else -%}
          <h3 style="font-size: 24px; font-weight: 700; color: var(--footer-heading); margin: 0 0 20px 0;">{{ shop.name }}</h3>
        {%- endif -%}

        {%- if section.settings.brand_text != blank -%}
          <p class="footer-brand-text-{{ section.id }}">{{ section.settings.brand_text }}</p>
        {%- endif -%}

        {%- if section.settings.show_newsletter -%}
          <!-- Newsletter -->
          <div class="footer-newsletter-{{ section.id }}" data-newsletter>
            <h4 class="footer-newsletter-title-{{ section.id }}">{{ section.settings.newsletter_title }}</h4>
            <form class="footer-newsletter-form-{{ section.id }}" data-newsletter-form>
              <input
                type="email"
                class="footer-newsletter-input-{{ section.id }}"
                placeholder="{{ section.settings.newsletter_placeholder }}"
                required
              >
              <button type="submit" class="footer-newsletter-btn-{{ section.id }}">
                {{ section.settings.newsletter_button }}
              </button>
            </form>
            <p class="footer-newsletter-success-{{ section.id }}">{{ section.settings.newsletter_success }}</p>
          </div>
        {%- endif -%}

        {%- if section.settings.show_social -%}
          <!-- Social Links -->
          <div class="footer-social-{{ section.id }}">
            {%- if section.settings.social_facebook != blank -%}
