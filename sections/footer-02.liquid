              </a>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>

      <!-- Menu Columns -->
      <div class="footer-menus-{{ section.id }}">
        {%- for block in section.blocks -%}
          {%- if block.type == 'menu' -%}
            <div {{ block.shopify_attributes }}>
              <h4 class="footer-menu-title-{{ section.id }}">{{ block.settings.title }}</h4>
              {%- if block.settings.menu != blank -%}
                <ul class="footer-menu-{{ section.id }}">
                  {%- for link in linklists[block.settings.menu].links -%}
                    <li class="footer-menu-item-{{ section.id }}">
                      <a href="{{ link.url }}" class="footer-menu-link-{{ section.id }}">{{ link.title }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>
          {%- endif -%}
