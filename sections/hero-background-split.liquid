{%- liquid
  assign container_width = section.settings.container_width | append: 'px'
  assign tilt_angle = section.settings.tilt_angle | append: 'deg'
  assign section_height = section.settings.section_height | append: 'px'
  assign heading_font_size = section.settings.heading_font_size | append: 'px'
  assign body_font_size = section.settings.body_font_size | append: 'px'
  assign pad_top = section.settings.padding_top | append: 'px'
  assign pad_bottom = section.settings.padding_bottom | append: 'px'
-%}

<style>
  .section-{{ section.id }} {
    --container-width: {{ container_width }};
    --tilt-angle: {{ tilt_angle }};
    --section-height: {{ section_height }};
    --heading-font-size: {{ heading_font_size }};
    --body-font-size: {{ body_font_size }};
    --pad-top: {{ pad_top }};
    --pad-bottom: {{ pad_bottom }};
    --bg-color: {{ section.settings.background_color }};
    --heading-color: {{ section.settings.heading_color }};
    --text-color: {{ section.settings.text_color }};
    --button-bg: {{ section.settings.button_bg_color }};
    --button-text: {{ section.settings.button_text_color }};
    --button-hover-bg: {{ section.settings.button_hover_bg_color }};
    --button-hover-text: {{ section.settings.button_hover_text_color }};
  }

  .section-{{ section.id }} .hero-bg-split {
    background-color: var(--bg-color);
  }

  .section-{{ section.id }} .hero-bg-split__wrapper {
    position: relative;
    height: var(--section-height);
    min-height: 500px;
    overflow: hidden;
    isolation: isolate;
  }

  .section-{{ section.id }} .hero-bg-split__background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .section-{{ section.id }} .hero-bg-split__bg-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: left center;
    transform: rotate(var(--tilt-angle));
    transform-origin: 30% center;
  }

  .section-{{ section.id }} .hero-bg-split__overlay {
    position: relative;
    z-index: 1;
    height: 100%;
    max-width: var(--container-width);
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    padding: var(--pad-top) 2rem var(--pad-bottom);
  }

  .section-{{ section.id }} .hero-bg-split__empty {
    height: 100%;
  }

  .section-{{ section.id }} .hero-bg-split__content {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: right;
    padding-left: 2rem;
    transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1);
    will-change: transform;
  }

  .section-{{ section.id }} .hero-bg-split__heading {
    font-size: var(--heading-font-size);
    font-weight: {{ section.settings.heading_font_weight }};
    color: var(--heading-color);
    line-height: 1.1;
    margin: 0 0 1.5rem 0;
    white-space: nowrap;
  }

  .section-{{ section.id }} .hero-bg-split__body {
    font-size: var(--body-font-size);
    color: var(--text-color);
    line-height: 1.6;
    margin: 0 0 2rem 0;
  }

  .section-{{ section.id }} .hero-bg-split__body p {
    margin: 0;
  }

  .section-{{ section.id }} .hero-bg-split__button {
    display: inline-block;
    padding: 0.875rem 2.5rem;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.3s ease;
    cursor: pointer;
    background: var(--button-bg);
    color: var(--button-text);
    border: none;
    margin-left: auto;
  }

  .section-{{ section.id }} .hero-bg-split__button:hover {
    background: var(--button-hover-bg);
    color: var(--button-hover-text);
    transform: translateY(-2px);
  }

  @media screen and (max-width: 768px) {
    .section-{{ section.id }} .hero-bg-split__overlay {
      grid-template-columns: 1fr;
      text-align: center;
      padding: 2rem 1rem;
    }

    .section-{{ section.id }} .hero-bg-split__empty {
      display: none;
    }

    .section-{{ section.id }} .hero-bg-split__content {
      text-align: center;
      padding-left: 0;
    }

    .section-{{ section.id }} .hero-bg-split__heading {
      font-size: calc(var(--heading-font-size) * 0.75);
      white-space: normal;
    }

    .section-{{ section.id }} .hero-bg-split__body {
      font-size: calc(var(--body-font-size) * 0.9);
    }

    .section-{{ section.id }} .hero-bg-split__button {
      margin-left: 0;
    }
  }
</style>

<section class="hero-bg-split section-{{ section.id }}" role="region" aria-labelledby="hero-heading-{{ section.id }}">
  <div class="hero-bg-split__wrapper">
    {%- if section.settings.background_image != blank -%}
      <div class="hero-bg-split__background">
        {{
          section.settings.background_image
          | image_url: width: 1920
          | image_tag:
            loading: 'lazy',
            class: 'hero-bg-split__bg-image',
            alt: section.settings.image_alt,
            sizes: '100vw',
            widths: '800, 1200, 1600, 1920'
        }}
      </div>
    {%- endif -%}
  
  <div class="hero-bg-split__overlay">
    <div class="hero-bg-split__empty">
      <!-- Empty column - background shows through -->
    </div>
    
    <div class="hero-bg-split__content">
      {%- if section.settings.heading != blank -%}
        <h1 id="hero-heading-{{ section.id }}" class="hero-bg-split__heading">
          {{ section.settings.heading }}
        </h1>
      {%- endif -%}

      {%- if section.settings.body != blank -%}
        <div class="hero-bg-split__body">
          {{ section.settings.body }}
        </div>
      {%- endif -%}

      {%- if section.settings.button_label != blank and section.settings.button_url != blank -%}
        <a 
          href="{{ section.settings.button_url }}"
          class="hero-bg-split__button"
          {% if section.settings.button_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}
        >
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}
    </div>
  </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const section = document.querySelector('.section-{{ section.id }}');
  const content = section.querySelector('.hero-bg-split__content');
  
  if (!content) return;

  let ticking = false;
  let lastScrollY = window.scrollY;
  let lastTimestamp = Date.now();
  let scrollVelocity = 0;

  function updateContentPosition() {
    const currentScrollY = window.scrollY;
    const currentTime = Date.now();
    const deltaTime = currentTime - lastTimestamp;
    const deltaScroll = currentScrollY - lastScrollY;
    
    // Calculate scroll velocity (pixels per millisecond)
    if (deltaTime > 0) {
      scrollVelocity = Math.abs(deltaScroll) / deltaTime;
    }
    
    const sectionRect = section.getBoundingClientRect();
    const sectionTop = sectionRect.top + currentScrollY;
    const sectionBottom = sectionTop + sectionRect.height;
    
    // Check if section is in viewport
    if (currentScrollY + window.innerHeight > sectionTop && currentScrollY < sectionBottom) {
      const sectionCenter = sectionTop + (sectionRect.height / 2);
      const scrollProgress = (currentScrollY + (window.innerHeight / 2) - sectionCenter) / (sectionRect.height / 2);
      
      // Clamp the progress between -1 and 1
      const clampedProgress = Math.max(-1, Math.min(1, scrollProgress));
      
      // Adjust animation speed based on scroll velocity
      const velocityMultiplier = Math.min(scrollVelocity * 150, 1); // Increased sensitivity
      const baseMovement = 60; // Increased base movement
      const velocityBoost = velocityMultiplier * 40; // Increased velocity boost
      const maxMovement = baseMovement + velocityBoost;
      
      // Apply transform based on scroll progress and velocity
      const translateY = clampedProgress * maxMovement;
      
      // Faster transition durations for more responsiveness
      const transitionDuration = scrollVelocity > 0.3 ? '0.05s' : '0.3s';
      content.style.transition = `transform ${transitionDuration} cubic-bezier(0.23, 1, 0.32, 1)`;
      content.style.transform = `translateY(${translateY}px)`;
    }
    
    lastScrollY = currentScrollY;
    lastTimestamp = currentTime;
    ticking = false;
  }

  function requestTick() {
    if (!ticking) {
      requestAnimationFrame(updateContentPosition);
      ticking = true;
    }
  }

  // Scroll event listener
  window.addEventListener('scroll', requestTick, { passive: true });
  
  // Initial position
  updateContentPosition();
});
</script>

