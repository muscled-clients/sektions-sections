{% style %}
  #shopify-section-{{ section.id }} {
    --vwt9-bg: {{ section.settings.background_color }};
    --vwt9-text: {{ section.settings.text_color }};
    --vwt9-heading: {{ section.settings.heading_color }};
    --vwt9-label: {{ section.settings.label_color }};
    --vwt9-accent: {{ section.settings.accent_color }};
    --vwt9-btn-bg: {{ section.settings.button_background }};
    --vwt9-btn-text: {{ section.settings.button_text_color }};
    --vwt9-gradient-start: {{ section.settings.gradient_start }};
    --vwt9-gradient-end: {{ section.settings.gradient_end }};
