<style>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Inter:wght@400;500;600&display=swap');

  .video-with-text-9 {
    background: var(--vwt9-bg, #ffffff);
    padding: 40px 20px;
    font-family: 'Inter', sans-serif;
  }

  .video-with-text-9__container {
    max-width: 1300px;
    margin: 0 auto;
  }

  .video-with-text-9__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 32px;
    align-items: center;
  }

  /* Video Side */
  .video-with-text-9__media {
    position: relative;
    order: 1;
  }

  .video-with-text-9__video-wrapper {
    position: relative;
    border-radius: {{ section.settings.video_border_radius }}px;
    overflow: hidden;
    aspect-ratio: 9 / 12;
    background: #000;
  }

  .video-with-text-9__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-with-text-9__video-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #1a1a1a 0%, #333 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
    font-size: 14px;
  }

  /* Video Controls */
  .video-with-text-9__controls {
    position: absolute;
    top: 16px;
    left: 16px;
    display: flex;
    gap: 8px;
    z-index: 10;
  }

  .video-with-text-9__control-btn {
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.95);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.25s ease;
    backdrop-filter: blur(8px);
  }

  .video-with-text-9__control-btn:hover {
    transform: scale(1.1);
  }

  .video-with-text-9__control-btn svg {
    width: 18px;
    height: 18px;
    color: #1a1a1a;
  }

  .video-with-text-9__control-btn .pause-icon,
  .video-with-text-9__control-btn .unmute-icon {
    display: none;
  }

  .video-with-text-9__control-btn.playing .play-icon {
    display: none;
  }

  .video-with-text-9__control-btn.playing .pause-icon {
    display: block;
  }

  .video-with-text-9__control-btn.unmuted .mute-icon {
    display: none;
  }

  .video-with-text-9__control-btn.unmuted .unmute-icon {
    display: block;
  }

  /* Content Side */
  .video-with-text-9__content {
    order: 2;
  }

  .video-with-text-9__label {
    font-size: 12px;
    font-weight: 600;
    color: var(--vwt9-label, #666666);
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 16px;
  }

  .video-with-text-9__title {
    font-family: 'Montserrat', sans-serif;
    font-size: 32px;
    font-weight: 700;
    color: var(--vwt9-heading, #1a1a1a);
    margin: 0 0 20px;
    line-height: 1.2;
  }

  .video-with-text-9__title-gradient {
    background: linear-gradient(135deg, var(--vwt9-gradient-start, #667eea) 0%, var(--vwt9-gradient-end, #f093fb) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: block;
  }

  .video-with-text-9__description {
    font-size: 15px;
    font-weight: 400;
    color: var(--vwt9-text, #666666);
    margin: 0 0 28px;
    line-height: 1.7;
  }

  /* Features Grid */
  .video-with-text-9__features {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
    margin-bottom: 32px;
  }

  .video-with-text-9__feature {
    display: flex;
    align-items: flex-start;
    gap: 16px;
  }

  .video-with-text-9__feature-icon {
    width: 44px;
    height: 44px;
    min-width: 44px;
    border-radius: 12px;
    background: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.4s ease;
  }

  .video-with-text-9__feature:hover .video-with-text-9__feature-icon {
    transform: scale(1.1);
  }

  .video-with-text-9__feature-icon img {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }

  .video-with-text-9__feature-icon svg {
    width: 24px;
    height: 24px;
    color: var(--vwt9-heading, #1a1a1a);
  }

  .video-with-text-9__feature-content {
    flex: 1;
  }

  .video-with-text-9__feature-title {
    font-size: 15px;
    font-weight: 600;
    color: var(--vwt9-heading, #1a1a1a);
    margin: 0 0 4px;
  }

  .video-with-text-9__feature-text {
    font-size: 13px;
    font-weight: 400;
    color: var(--vwt9-text, #666666);
    margin: 0;
    line-height: 1.5;
  }

  /* Button */
  .video-with-text-9__button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: var(--vwt9-btn-bg, #1a1a1a);
    color: var(--vwt9-btn-text, #ffffff);
    padding: 14px 32px;
    border-radius: 100px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .video-with-text-9__button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  .video-with-text-9__button--underline {
    background: transparent;
    color: var(--vwt9-heading, #1a1a1a);
    padding: 0;
    border-radius: 0;
    border-bottom: 2px solid currentColor;
    padding-bottom: 4px;
  }

  .video-with-text-9__button--underline:hover {
    opacity: 0.7;
    transform: none;
  }

  .video-with-text-9__button-icon {
    width: 16px;
    height: 16px;
  }

  /* Tablet */
  @media (min-width: 768px) {
    .video-with-text-9 {
      padding: 50px 30px;
    }

    .video-with-text-9__title {
      font-size: 38px;
    }

    .video-with-text-9__features {
      grid-template-columns: repeat(2, 1fr);
    }

    .video-with-text-9__video-wrapper {
      aspect-ratio: 10 / 12;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .video-with-text-9 {
      padding: 70px 50px;
    }

    .video-with-text-9__grid {
      grid-template-columns: 1fr 1fr;
      gap: 60px;
    }

    .video-with-text-9__media {
      order: {% if section.settings.video_position == 'right' %}2{% else %}1{% endif %};
    }

    .video-with-text-9__content {
      order: {% if section.settings.video_position == 'right' %}1{% else %}2{% endif %};
    }

    .video-with-text-9__title {
      font-size: 44px;
    }

    .video-with-text-9__description {
      font-size: 16px;
    }

    .video-with-text-9__features {
      grid-template-columns: repeat(3, 1fr);
      gap: 24px;
    }

    .video-with-text-9__feature {
      flex-direction: column;
      text-align: center;
      align-items: center;
    }

    .video-with-text-9__video-wrapper {
      aspect-ratio: 9.6 / 12;
    }
  }

  /* Large Desktop */
  @media (min-width: 1400px) {
    .video-with-text-9 {
      padding: 90px 60px;
    }

    .video-with-text-9__grid {
      gap: 80px;
    }

    .video-with-text-9__title {
      font-size: 48px;
    }

    .video-with-text-9__feature-icon {
      width: 52px;
      height: 52px;
      min-width: 52px;
    }

    .video-with-text-9__feature-icon img,
    .video-with-text-9__feature-icon svg {
      width: 28px;
      height: 28px;
    }
  }
</style>

<section class="video-with-text-9" data-section-id="{{ section.id }}">
  <div class="video-with-text-9__container">
    <div class="video-with-text-9__grid">
      <!-- Video -->
      <div class="video-with-text-9__media">
        <div class="video-with-text-9__video-wrapper">
          {%- if section.settings.video != blank -%}
            {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true, controls: false, class: 'video-with-text-9__video' }}
          {%- else -%}
            <div class="video-with-text-9__video-placeholder">
              <span>Add video</span>
            </div>
          {%- endif -%}

          <!-- Video Controls -->
          <div class="video-with-text-9__controls">
            <button class="video-with-text-9__control-btn video-with-text-9__play-btn playing" type="button" aria-label="Play/Pause video">
              <svg class="play-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <polygon points="5 3 19 12 5 21 5 3"/>
              </svg>
              <svg class="pause-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <rect x="6" y="4" width="4" height="16"/>
                <rect x="14" y="4" width="4" height="16"/>
              </svg>
            </button>
            <button class="video-with-text-9__control-btn video-with-text-9__mute-btn" type="button" aria-label="Mute/Unmute video">
              <svg class="mute-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"/>
                <line x1="23" y1="9" x2="17" y2="15"/>
                <line x1="17" y1="9" x2="23" y2="15"/>
              </svg>
              <svg class="unmute-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"/>
                <path d="M19.07 4.93a10 10 0 0 1 0 14.14M15.54 8.46a5 5 0 0 1 0 7.07"/>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Content -->
      <div class="video-with-text-9__content">
        {%- if section.settings.label != blank -%}
          <div class="video-with-text-9__label">{{ section.settings.label }}</div>
        {%- endif -%}

        {%- if section.settings.title != blank or section.settings.title_gradient != blank -%}
          <h2 class="video-with-text-9__title">
            {%- if section.settings.title != blank -%}{{ section.settings.title }} {%- endif -%}
            {%- if section.settings.title_gradient != blank -%}
              <span class="video-with-text-9__title-gradient">{{ section.settings.title_gradient }}</span>
            {%- endif -%}
          </h2>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <p class="video-with-text-9__description">{{ section.settings.description }}</p>
        {%- endif -%}

        <!-- Features -->
        {%- if section.blocks.size > 0 -%}
          <div class="video-with-text-9__features">
            {%- for block in section.blocks -%}
              <div class="video-with-text-9__feature" {{ block.shopify_attributes }}>
                <div class="video-with-text-9__feature-icon" style="{% unless block.settings.icon != blank %}color: {{ block.settings.icon_color }};{% endunless %}">
                  {%- if block.settings.icon != blank -%}
                    {{ block.settings.icon | image_url: width: 56 | image_tag }}
                  {%- else -%}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                      <polyline points="22 4 12 14.01 9 11.01"/>
                    </svg>
                  {%- endif -%}
                </div>
                <div class="video-with-text-9__feature-content">
                  {%- if block.settings.title != blank -%}
                    <h4 class="video-with-text-9__feature-title">{{ block.settings.title }}</h4>
                  {%- endif -%}
                  {%- if block.settings.text != blank -%}
                    <p class="video-with-text-9__feature-text">{{ block.settings.text }}</p>
                  {%- endif -%}
                </div>
              </div>
            {%- endfor -%}
          </div>
        {%- endif -%}

        {%- if section.settings.button_text != blank -%}
          <a href="{{ section.settings.button_link }}" class="video-with-text-9__button {% if section.settings.button_style == 'underline' %}video-with-text-9__button--underline{% endif %}">
            <span>{{ section.settings.button_text }}</span>
            {%- if section.settings.button_style != 'underline' -%}
              <svg class="video-with-text-9__button-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="5" y1="12" x2="19" y2="12"/>
                <polyline points="12 5 19 12 12 19"/>
              </svg>
            {%- endif -%}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sectionId = '{{ section.id }}';
    const section = document.querySelector(`[data-section-id="${sectionId}"]`);
    if (!section) return;

    const video = section.querySelector('.video-with-text-9__video');
    const playBtn = section.querySelector('.video-with-text-9__play-btn');
    const muteBtn = section.querySelector('.video-with-text-9__mute-btn');

    if (video && playBtn) {
      playBtn.addEventListener('click', function() {
        if (video.paused) {
          video.play();
          this.classList.add('playing');
        } else {
          video.pause();
          this.classList.remove('playing');
        }
      });
    }

    if (video && muteBtn) {
      muteBtn.addEventListener('click', function() {
        if (video.muted) {
          video.muted = false;
          this.classList.add('unmuted');
        } else {
          video.muted = true;
          this.classList.remove('unmuted');
        }
      });
    }
  });
</script>

