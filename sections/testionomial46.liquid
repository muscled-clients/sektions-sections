{% comment %}
  SEK Testimonials 46 - Horizontal scrolling testimonial marquee
  Features: Two rows, opposite scroll directions, avatar cards, star ratings, gradient backgrounds
{% endcomment %}

{%- assign section_id = section.id -%}

{% style %}
  @import url('https://fonts.googleapis.com/css2?family=Baskervville:ital@0;1&family=Inter:wght@400;500;600;700&display=swap');

  /* Shopify Section Wrapper */
  #shopify-section-{{ section_id }} {
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 0;
    overflow: hidden;
  }

  /* Section Container */
  #sek-t46-{{ section_id }} {
    padding: {{ section.settings.section_padding_top_mobile | times: 0.7 }}px 0 {{ section.settings.section_padding_bottom_mobile | times: 0.7 }}px;
    background: {{ section.settings.bg_gradient }};
    overflow: hidden;
    box-sizing: border-box;
  }

  #sek-t46-{{ section_id }} *,
  #sek-t46-{{ section_id }} *::before,
  #sek-t46-{{ section_id }} *::after {
    box-sizing: border-box;
  }

  /* Section Header */
  #sek-t46-{{ section_id }} .sek-t46__header {
    text-align: center;
    padding: 0 15px;
    margin-bottom: {{ section.settings.header_spacing_mobile | times: 0.7 }}px;
  }

  #sek-t46-{{ section_id }} .sek-t46__heading {
    font-family: 'Inter', sans-serif;
    font-size: 24px;
    font-weight: 700;
    color: {{ section.settings.heading_color }};
    margin: 0 0 8px;
    line-height: 1.2;
  }

  #sek-t46-{{ section_id }} .sek-t46__heading em {
    font-style: normal;
    color: {{ section.settings.accent_color }};
  }

  #sek-t46-{{ section_id }} .sek-t46__subheading {
    font-family: 'Inter', sans-serif;
    font-size: 13px;
    font-weight: 400;
    color: {{ section.settings.subheading_color }};
    margin: 0;
    line-height: 1.5;
  }

  /* Marquee Rows Container */
  #sek-t46-{{ section_id }} .sek-t46__rows {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.row_gap_mobile | times: 0.7 }}px;
  }

  /* Single Row */
  #sek-t46-{{ section_id }} .sek-t46__row {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  /* Track */
  #sek-t46-{{ section_id }} .sek-t46__track {
    display: flex;
    gap: {{ section.settings.card_gap_mobile | times: 0.7 }}px;
    width: fit-content;
  }

  /* Animation - Left */
  #sek-t46-{{ section_id }} .sek-t46__track--left {
    animation: sek-t46-scroll-left-{{ section_id }} {{ section.settings.scroll_speed_mobile }}s linear infinite;
  }

  /* Animation - Right */
  #sek-t46-{{ section_id }} .sek-t46__track--right {
    animation: sek-t46-scroll-right-{{ section_id }} {{ section.settings.scroll_speed_mobile }}s linear infinite;
  }

  /* Pause on Hover */
  {%- if section.settings.pause_on_hover -%}
  #sek-t46-{{ section_id }} .sek-t46__row:hover .sek-t46__track {
    animation-play-state: paused;
  }
  {%- endif -%}

  @keyframes sek-t46-scroll-left-{{ section_id }} {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  @keyframes sek-t46-scroll-right-{{ section_id }} {
    0% { transform: translateX(-50%); }
    100% { transform: translateX(0); }
  }

  /* Testimonial Card */
  #sek-t46-{{ section_id }} .sek-t46__card {
    flex-shrink: 0;
    display: flex;
    align-items: flex-start;
    gap: 12px;
    width: {{ section.settings.card_width_mobile | times: 0.8 }}px;
    padding: 16px;
    background: {{ section.settings.card_bg }};
    border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
    border-radius: {{ section.settings.card_radius }}px;
    box-shadow: {{ section.settings.card_shadow }};
  }

  /* Card Content */
  #sek-t46-{{ section_id }} .sek-t46__content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  /* Quote */
  #sek-t46-{{ section_id }} .sek-t46__quote {
    font-family: 'Baskervville', serif;
    font-size: 14px;
    font-style: italic;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.quote_color }};
    margin: 0 0 12px;
  }

  /* Author Info */
  #sek-t46-{{ section_id }} .sek-t46__author {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  #sek-t46-{{ section_id }} .sek-t46__name {
    font-family: 'Inter', sans-serif;
    font-size: 12px;
    font-weight: 600;
    color: {{ section.settings.name_color }};
    margin: 0;
  }

  #sek-t46-{{ section_id }} .sek-t46__location {
    font-family: 'Inter', sans-serif;
    font-size: 10px;
    font-weight: 400;
    color: {{ section.settings.location_color }};
    margin: 0;
  }

  /* Stars */
  #sek-t46-{{ section_id }} .sek-t46__stars {
    display: flex;
    gap: 2px;
    margin-top: 6px;
  }

  #sek-t46-{{ section_id }} .sek-t46__star {
    width: 12px;
    height: 12px;
    fill: {{ section.settings.star_color }};
  }

  /* Avatar */
  #sek-t46-{{ section_id }} .sek-t46__avatar {
    flex-shrink: 0;
    width: {{ section.settings.avatar_size_mobile | times: 0.8 }}px;
    height: {{ section.settings.avatar_size_mobile | times: 0.8 }}px;
    border-radius: 50%;
    overflow: hidden;
    background: {{ section.settings.avatar_bg }};
  }

  #sek-t46-{{ section_id }} .sek-t46__avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Avatar Placeholder */
  #sek-t46-{{ section_id }} .sek-t46__avatar-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    font-weight: 600;
    color: #ffffff;
    background: {{ section.settings.avatar_bg }};
  }

