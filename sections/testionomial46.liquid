<section id="sek-t46-{{ section_id }}" class="sek-t46">
  <!-- Header -->
  {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
    <div class="sek-t46__header">
      {%- if section.settings.heading != blank -%}
        <h2 class="sek-t46__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.subheading != blank -%}
        <p class="sek-t46__subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}
    </div>
  {%- endif -%}

  <!-- Marquee Rows -->
  <div class="sek-t46__rows">
    {%- comment -%} Row 1 - Scrolls Left {%- endcomment -%}
    <div class="sek-t46__row">
      <div class="sek-t46__track sek-t46__track--left">
        {%- for i in (1..2) -%}
          {%- for block in section.blocks -%}
            {%- if block.type == 'testimonial_row_1' -%}
              <div class="sek-t46__card" {{ block.shopify_attributes }}>
                <div class="sek-t46__content">
                  <p class="sek-t46__quote">"{{ block.settings.quote }}"</p>
                  <div class="sek-t46__author">
                    <p class="sek-t46__name">{{ block.settings.name }}</p>
                    {%- if block.settings.location != blank -%}
                      <p class="sek-t46__location">{{ block.settings.location }}</p>
                    {%- endif -%}
                    {%- if section.settings.show_stars -%}
                      <div class="sek-t46__stars">
                        {%- for star in (1..5) -%}
                          <svg class="sek-t46__star" viewBox="0 0 24 24">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                          </svg>
                        {%- endfor -%}
                      </div>
                    {%- endif -%}
                  </div>
                </div>
                <div class="sek-t46__avatar">
                  {%- if block.settings.avatar != blank -%}
                    {{ block.settings.avatar | image_url: width: 200 | image_tag: loading: 'lazy' }}
                  {%- else -%}
                    <div class="sek-t46__avatar-placeholder">{{ block.settings.name | slice: 0 }}</div>
                  {%- endif -%}
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}

          {%- comment -%} Placeholder cards if no blocks {%- endcomment -%}
          {%- assign row1_count = 0 -%}
          {%- for block in section.blocks -%}
            {%- if block.type == 'testimonial_row_1' -%}
              {%- assign row1_count = row1_count | plus: 1 -%}
            {%- endif -%}
          {%- endfor -%}
          {%- if row1_count == 0 -%}
            {%- for j in (1..3) -%}
              <div class="sek-t46__card">
                <div class="sek-t46__content">
                  <p class="sek-t46__quote">"This product exceeded all my expectations. The quality is outstanding and customer service was incredibly helpful."</p>
                  <div class="sek-t46__author">
                    <p class="sek-t46__name">Happy Customer</p>
                    <p class="sek-t46__location">New York, NY</p>
                    <div class="sek-t46__stars">
                      {%- for star in (1..5) -%}
                        <svg class="sek-t46__star" viewBox="0 0 24 24">
                          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        </svg>
                      {%- endfor -%}
                    </div>
                  </div>
                </div>
                <div class="sek-t46__avatar">
                  <div class="sek-t46__avatar-placeholder">H</div>
                </div>
              </div>
            {%- endfor -%}
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

    {%- comment -%} Row 2 - Scrolls Right {%- endcomment -%}
    <div class="sek-t46__row">
      <div class="sek-t46__track sek-t46__track--right">
        {%- for i in (1..2) -%}
          {%- for block in section.blocks -%}
            {%- if block.type == 'testimonial_row_2' -%}
              <div class="sek-t46__card" {{ block.shopify_attributes }}>
                <div class="sek-t46__content">
                  <p class="sek-t46__quote">"{{ block.settings.quote }}"</p>
                  <div class="sek-t46__author">
                    <p class="sek-t46__name">{{ block.settings.name }}</p>
                    {%- if block.settings.location != blank -%}
                      <p class="sek-t46__location">{{ block.settings.location }}</p>
                    {%- endif -%}
                    {%- if section.settings.show_stars -%}
                      <div class="sek-t46__stars">
                        {%- for star in (1..5) -%}
                          <svg class="sek-t46__star" viewBox="0 0 24 24">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                          </svg>
                        {%- endfor -%}
                      </div>
                    {%- endif -%}
                  </div>
                </div>
                <div class="sek-t46__avatar">
                  {%- if block.settings.avatar != blank -%}
                    {{ block.settings.avatar | image_url: width: 200 | image_tag: loading: 'lazy' }}
                  {%- else -%}
                    <div class="sek-t46__avatar-placeholder">{{ block.settings.name | slice: 0 }}</div>
                  {%- endif -%}
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}

          {%- comment -%} Placeholder cards if no blocks {%- endcomment -%}
          {%- assign row2_count = 0 -%}
          {%- for block in section.blocks -%}
            {%- if block.type == 'testimonial_row_2' -%}
              {%- assign row2_count = row2_count | plus: 1 -%}
            {%- endif -%}
          {%- endfor -%}
          {%- if row2_count == 0 -%}
            {%- for j in (1..3) -%}
              <div class="sek-t46__card">
                <div class="sek-t46__content">
                  <p class="sek-t46__quote">"Amazing experience from start to finish. Will definitely be ordering again and recommending to friends!"</p>
                  <div class="sek-t46__author">
                    <p class="sek-t46__name">Satisfied Buyer</p>
                    <p class="sek-t46__location">Los Angeles, CA</p>
