      </div>
    {%- endif -%}
  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sectionId = '{{ section.id }}';
    const section = document.querySelector(`[data-section-id="${sectionId}"]`);
    if (!section) return;

    // Initialize Swiper for mobile
    const swiperEl = section.querySelector('.multicolumns-video-2__swiper');
    const paginationEl = section.querySelector('.multicolumns-video-2__pagination');

    if (swiperEl && typeof Swiper !== 'undefined') {
      new Swiper(swiperEl, {
        slidesPerView: 'auto',
        spaceBetween: 16,
        grabCursor: true,
        pagination: {
          el: paginationEl,
          clickable: true
        },
        breakpoints: {
          400: {
            spaceBetween: 20
          },
          550: {
            spaceBetween: 20
          },
          768: {
            spaceBetween: 24
          }
        }
      });
    }

    // Video play/pause functionality for all videos
    section.querySelectorAll('.multicolumns-video-2__media').forEach(media => {
      const video = media.querySelector('video');
      const playBtn = media.querySelector('.multicolumns-video-2__play-btn');

      if (!video || !playBtn) return;

      playBtn.addEventListener('click', () => {
        if (video.paused) {
          // Pause all other videos first
          section.querySelectorAll('.multicolumns-video-2__media').forEach(otherMedia => {
            const otherVideo = otherMedia.querySelector('video');
            if (otherVideo && otherVideo !== video) {
              otherVideo.pause();
              otherMedia.classList.remove('is-playing');
            }
          });

          video.play();
          media.classList.add('is-playing');
        } else {
          video.pause();
          media.classList.remove('is-playing');
        }
      });

      video.addEventListener('ended', () => {
        media.classList.remove('is-playing');
      });
    });
  });
</script>

