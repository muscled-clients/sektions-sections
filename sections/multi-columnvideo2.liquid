{% style %}
  #shopify-section-{{ section.id }} {
    --mcv2-bg: {{ section.settings.background_color }};
    --mcv2-text: {{ section.settings.text_color }};
    --mcv2-accent: {{ section.settings.accent_color }};
    --mcv2-btn-bg: {{ section.settings.button_bg_color }};
    --mcv2-btn-text: {{ section.settings.button_text_color }};
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }
{% endstyle %}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<style>
  @import url('https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Figtree:wght@400;500;600;700&display=swap');

  .multicolumns-video-2,
  .multicolumns-video-2 * {
    box-sizing: border-box;
  }

  /* Base - Small Mobile (< 400px) */
  .multicolumns-video-2 {
    background: var(--mcv2-bg, #ffffff);
    padding: 30px 0;
    font-family: 'Figtree', sans-serif;
    overflow-x: hidden;
    max-width: 100vw;
  }

  .multicolumns-video-2__container {
    max-width: 1300px;
    margin: 0 auto;
    overflow-x: hidden;
    width: 100%;
  }

  .multicolumns-video-2__header {
    text-align: center;
    margin-bottom: 24px;
    padding: 0 15px;
  }

  .multicolumns-video-2__subtitle {
    font-family: 'Bodoni Moda', serif;
    font-size: 11px;
    font-weight: 400;
    font-style: italic;
    color: var(--mcv2-accent, #d7ae0b);
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin: 0 0 8px;
  }

  .multicolumns-video-2__title {
    font-family: 'Bodoni Moda', serif;
    font-size: 24px;
    font-weight: 500;
    color: var(--mcv2-text, #333333);
    margin: 0 0 12px;
    line-height: 1.2;
  }

  .multicolumns-video-2__description {
    font-size: 13px;
    color: var(--mcv2-text, #333333);
    opacity: 0.75;
    margin: 0 auto;
    max-width: 100%;
    line-height: 1.5;
  }

  /* Swiper Container - Mobile */
  .multicolumns-video-2__swiper-wrapper {
    overflow: hidden;
    margin: 0 -15px;
    padding: 0 15px;
  }

  .multicolumns-video-2__swiper {
    overflow: visible;
    padding: 0;
  }

  .multicolumns-video-2__swiper .swiper-wrapper {
    align-items: stretch;
  }

  .multicolumns-video-2__swiper .swiper-slide {
    width: 75%;
    height: auto;
  }

  /* Grid - Desktop */
  .multicolumns-video-2__grid {
    display: none;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  /* Column Item */
  .multicolumns-video-2__item {
    text-align: center;
  }

  /* Swiper Pagination */
  .multicolumns-video-2__pagination {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 20px;
    padding: 0 15px;
  }

  .multicolumns-video-2__pagination .swiper-pagination-bullet {
    width: 8px;
    height: 8px;
    background: var(--mcv2-text, #333333);
    opacity: 0.25;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .multicolumns-video-2__pagination .swiper-pagination-bullet-active {
    opacity: 1;
    background: var(--mcv2-accent, #d7ae0b);
  }

  .multicolumns-video-2__media {
    position: relative;
    aspect-ratio: 1 / 1;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 14px;
    cursor: pointer;
    background: #f0f0f0;
  }

  .multicolumns-video-2__video,
  .multicolumns-video-2__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .multicolumns-video-2__media:hover .multicolumns-video-2__video,
  .multicolumns-video-2__media:hover .multicolumns-video-2__image {
    transform: scale(1.03);
  }

  .multicolumns-video-2__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #e8e4dc 0%, #c9c4b8 100%);
  }

  /* Play Button */
  .multicolumns-video-2__play-btn {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    z-index: 10;
  }

  .multicolumns-video-2__play-btn:hover {
    transform: translate(-50%, -50%) scale(1.1);
    box-shadow: 0 6px 25px rgba(0, 0, 0, 0.2);
  }

  .multicolumns-video-2__play-btn svg {
    width: 16px;
    height: 16px;
    color: var(--mcv2-text, #333333);
    margin-left: 2px;
  }

  .multicolumns-video-2__media.is-playing .multicolumns-video-2__play-btn {
    opacity: 0;
    pointer-events: none;
  }

  .multicolumns-video-2__media:hover.is-playing .multicolumns-video-2__play-btn {
    opacity: 1;
    pointer-events: auto;
  }

  .multicolumns-video-2__media.is-playing .multicolumns-video-2__play-btn svg.icon-play {
    display: none;
  }

  .multicolumns-video-2__media.is-playing .multicolumns-video-2__play-btn svg.icon-pause {
    display: block;
  }

  .multicolumns-video-2__play-btn svg.icon-pause {
    display: none;
    margin-left: 0;
  }

  /* Content */
  .multicolumns-video-2__number {
    font-family: 'Bodoni Moda', serif;
    font-size: 22px;
    font-weight: 500;
    color: var(--mcv2-accent, #d7ae0b);
    margin-bottom: 6px;
    line-height: 1;
  }

  .multicolumns-video-2__item-title {
    font-family: 'Bodoni Moda', serif;
    font-size: 17px;
    font-weight: 500;
    color: var(--mcv2-text, #333333);
    margin: 0 0 8px;
    line-height: 1.3;
  }

  .multicolumns-video-2__item-text {
    font-size: 13px;
    color: var(--mcv2-text, #333333);
    opacity: 0.7;
    margin: 0;
    line-height: 1.5;
    max-width: 100%;
    padding: 0 10px;
  }

  /* Footer Button */
  .multicolumns-video-2__footer {
    text-align: center;
    margin-top: 28px;
  }

  .multicolumns-video-2__btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background: var(--mcv2-btn-bg, #333333);
    color: var(--mcv2-btn-text, #ffffff);
    font-family: 'Figtree', sans-serif;
    font-size: 12px;
    font-weight: 600;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: 0;
    transition: all 0.3s ease;
  }

  .multicolumns-video-2__btn:hover {
    background: var(--mcv2-accent, #d7ae0b);
    color: #ffffff;
  }

  .multicolumns-video-2__btn svg {
    width: 14px;
    height: 14px;
    transition: transform 0.3s ease;
  }

  .multicolumns-video-2__btn:hover svg {
    transform: translateX(4px);
  }

