<section class="multicolumns-video-2" data-section-id="{{ section.id }}">
  <div class="multicolumns-video-2__container">
    {%- if section.settings.subtitle != blank or section.settings.heading != blank or section.settings.description != blank -%}
      <div class="multicolumns-video-2__header">
        {%- if section.settings.subtitle != blank -%}
          <p class="multicolumns-video-2__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
        {%- if section.settings.heading != blank -%}
          <h2 class="multicolumns-video-2__title">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <p class="multicolumns-video-2__description">{{ section.settings.description }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <!-- Swiper for Mobile/Tablet -->
    <div class="multicolumns-video-2__swiper-wrapper">
      <div class="multicolumns-video-2__swiper swiper" data-swiper-mobile>
        <div class="swiper-wrapper">
          {%- for block in section.blocks -%}
            <div class="swiper-slide">
              <div class="multicolumns-video-2__item" {{ block.shopify_attributes }}>
                <div class="multicolumns-video-2__media">
                  {%- if block.settings.video != blank -%}
                    {{ block.settings.video | video_tag: autoplay: false, loop: true, muted: true, playsinline: true, class: 'multicolumns-video-2__video' }}
                  {%- elsif block.settings.video_url != blank -%}
                    <video class="multicolumns-video-2__video" loop muted playsinline>
                      <source src="{{ block.settings.video_url }}" type="video/mp4">
                    </video>
                  {%- elsif block.settings.image != blank -%}
                    {{ block.settings.image | image_url: width: 800 | image_tag: class: 'multicolumns-video-2__image', loading: 'lazy' }}
                  {%- else -%}
                    <div class="multicolumns-video-2__placeholder"></div>
                  {%- endif -%}

                  {%- if block.settings.video != blank or block.settings.video_url != blank -%}
                    <button type="button" class="multicolumns-video-2__play-btn" aria-label="Play video">
                      <svg class="icon-play" viewBox="0 0 24 24" fill="currentColor">
                        <polygon points="5 3 19 12 5 21 5 3"/>
                      </svg>
                      <svg class="icon-pause" viewBox="0 0 24 24" fill="currentColor">
                        <rect x="6" y="4" width="4" height="16"/>
                        <rect x="14" y="4" width="4" height="16"/>
                      </svg>
                    </button>
                  {%- endif -%}
                </div>

                <div class="multicolumns-video-2__content">
                  {%- if section.settings.show_numbers -%}
                    <div class="multicolumns-video-2__number">{{ forloop.index | prepend: '0' | slice: -2, 2 }}</div>
                  {%- endif -%}
                  {%- if block.settings.title != blank -%}
                    <h3 class="multicolumns-video-2__item-title">{{ block.settings.title }}</h3>
                  {%- endif -%}
                  {%- if block.settings.text != blank -%}
                    <p class="multicolumns-video-2__item-text">{{ block.settings.text }}</p>
                  {%- endif -%}
                </div>
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    </div>
    <div class="multicolumns-video-2__pagination"></div>

    <!-- Grid for Desktop -->
    <div class="multicolumns-video-2__grid">
      {%- for block in section.blocks -%}
        <div class="multicolumns-video-2__item" {{ block.shopify_attributes }}>
          <div class="multicolumns-video-2__media">
            {%- if block.settings.video != blank -%}
              {{ block.settings.video | video_tag: autoplay: false, loop: true, muted: true, playsinline: true, class: 'multicolumns-video-2__video' }}
            {%- elsif block.settings.video_url != blank -%}
              <video class="multicolumns-video-2__video" loop muted playsinline>
                <source src="{{ block.settings.video_url }}" type="video/mp4">
              </video>
            {%- elsif block.settings.image != blank -%}
              {{ block.settings.image | image_url: width: 800 | image_tag: class: 'multicolumns-video-2__image', loading: 'lazy' }}
            {%- else -%}
              <div class="multicolumns-video-2__placeholder"></div>
            {%- endif -%}

            {%- if block.settings.video != blank or block.settings.video_url != blank -%}
              <button type="button" class="multicolumns-video-2__play-btn" aria-label="Play video">
                <svg class="icon-play" viewBox="0 0 24 24" fill="currentColor">
                  <polygon points="5 3 19 12 5 21 5 3"/>
                </svg>
                <svg class="icon-pause" viewBox="0 0 24 24" fill="currentColor">
                  <rect x="6" y="4" width="4" height="16"/>
                  <rect x="14" y="4" width="4" height="16"/>
                </svg>
              </button>
            {%- endif -%}
          </div>

          <div class="multicolumns-video-2__content">
            {%- if section.settings.show_numbers -%}
              <div class="multicolumns-video-2__number">{{ forloop.index | prepend: '0' | slice: -2, 2 }}</div>
            {%- endif -%}
            {%- if block.settings.title != blank -%}
              <h3 class="multicolumns-video-2__item-title">{{ block.settings.title }}</h3>
            {%- endif -%}
            {%- if block.settings.text != blank -%}
              <p class="multicolumns-video-2__item-text">{{ block.settings.text }}</p>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>

    {%- if section.settings.button_text != blank -%}
      <div class="multicolumns-video-2__footer">
        <a href="{{ section.settings.button_link }}" class="multicolumns-video-2__btn">
          {{ section.settings.button_text }}
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="5" y1="12" x2="19" y2="12"/>
            <polyline points="12 5 19 12 12 19"/>
          </svg>
