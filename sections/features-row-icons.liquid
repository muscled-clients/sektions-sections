<style>
  .features-row-section {
    width: 100%;
    padding: {{ section.settings.section_padding_top }}px 20px {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    border-top: {{ section.settings.border_top_width }}px solid {{ section.settings.border_color }};
    border-bottom: {{ section.settings.border_bottom_width }}px solid {{ section.settings.border_color }};
  }

  .features-row-container {
    max-width: {{ section.settings.container_max_width }}px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0;
  }

  .features-row-item {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    padding: {{ section.settings.item_padding }}px {{ section.settings.item_padding_right }}px {{ section.settings.item_padding }}px {{ section.settings.item_padding_left }}px;
    gap: {{ section.settings.title_description_gap }}px;
    position: relative;
  }

  .features-row-item:not(:last-child)::after {
    content: '';
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 1px;
    height: 60%;
    background-color: {{ section.settings.separator_color }};
  }

  .features-row-title-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: {{ section.settings.icon_title_gap }}px;
  }

  .features-row-icon {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .features-row-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .features-row-icon svg {
    width: 100%;
    height: 100%;
    color: {{ section.settings.title_color }};
  }

  .features-row-title {
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: {{ section.settings.title_color }};
    margin: 0;
    line-height: 1.2;
  }

  .features-row-description {
    font-size: {{ section.settings.description_font_size }}px;
    font-weight: 400;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    margin: 0;
  }

  .features-row-dots {
    display: none;
    justify-content: center;
    gap: 8px;
    margin-top: 24px;
  }

  .features-row-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: #d0d0d0;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .features-row-dot.active {
    background-color: #333333;
  }

  @media (max-width: 768px) {
    .features-row-container {
      grid-template-columns: 1fr;
      gap: 0;
      position: relative;
      overflow: hidden;
    }

    .features-row-item {
      display: none;
      padding: 40px 20px;
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 16px;
    }

    .features-row-item:not(:last-child)::after {
      display: none;
    }

    .features-row-item.active {
      display: flex;
    }

    .features-row-dots {
      display: flex;
    }

    .features-row-title-row {
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 12px;
    }

    .features-row-icon {
      width: 40px;
      height: 40px;
    }

    .features-row-title {
      font-size: 16px;
      text-align: center;
      letter-spacing: 1px;
    }

    .features-row-description {
      font-size: 14px;
      text-align: center;
      line-height: 1.6;
    }
  }
</style>

<div class="features-row-section">
  <div class="features-row-container" id="features-row-{{ section.id }}">
    {% for block in section.blocks %}
      <div class="features-row-item {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
        <div class="features-row-title-row">
          <div class="features-row-icon">
            {% if block.settings.icon != blank %}
              <img src="{{ block.settings.icon | img_url: 'master' }}" alt="{{ block.settings.title }}" loading="lazy">
            {% else %}
              {% case forloop.index %}
                {% when 1 %}
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M20 7h-4V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v2H4a1 1 0 0 0-1 1v11a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V8a1 1 0 0 0-1-1zM10 5h4v2h-4V5zm5 13H9v-2h6v2z"/>
                  </svg>
                {% when 2 %}
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M12 2L3 7v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-9-5z"/>
                    <path d="M9 12l2 2 4-4"/>
                  </svg>
                {% when 3 %}
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <rect x="3" y="5" width="18" height="14" rx="2"/>
                    <path d="M3 10h18M7 15h.01M11 15h2"/>
                  </svg>
                {% when 4 %}
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M3 12h18M3 6h18M3 18h18"/>
                    <path d="M9 3l6 6-6 6"/>
                  </svg>
                {% else %}
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M12 6v6l4 2"/>
                  </svg>
              {% endcase %}
            {% endif %}
          </div>

          {% if block.settings.title != blank %}
            <h3 class="features-row-title">{{ block.settings.title }}</h3>
          {% endif %}
        </div>

        {% if block.settings.description != blank %}
          <p class="features-row-description">{{ block.settings.description }}</p>
        {% endif %}
      </div>
    {% endfor %}
  </div>

  <div class="features-row-dots" id="features-dots-{{ section.id }}">
    {% for block in section.blocks %}
      <span class="features-row-dot {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}"></span>
    {% endfor %}
  </div>
</div>

<script>
(function() {
  const sectionId = '{{ section.id }}';
  const container = document.getElementById('features-row-' + sectionId);
  const dotsContainer = document.getElementById('features-dots-' + sectionId);

  if (!container || !dotsContainer) return;

  const items = container.querySelectorAll('.features-row-item');
  const dots = dotsContainer.querySelectorAll('.features-row-dot');
  let currentIndex = 0;

  function showItem(index) {
    items.forEach((item, i) => {
      item.classList.toggle('active', i === index);
    });
    dots.forEach((dot, i) => {
      dot.classList.toggle('active', i === index);
    });
    currentIndex = index;
  }

  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      showItem(index);
    });
  });

  let touchStartX = 0;
  let touchEndX = 0;

  container.addEventListener('touchstart', (e) => {
    touchStartX = e.changedTouches[0].screenX;
  });

  container.addEventListener('touchend', (e) => {
    touchEndX = e.changedTouches[0].screenX;
    handleSwipe();
  });

  function handleSwipe() {
    if (touchEndX < touchStartX - 50) {
      const nextIndex = (currentIndex + 1) % items.length;
      showItem(nextIndex);
    }
    if (touchEndX > touchStartX + 50) {
      const prevIndex = (currentIndex - 1 + items.length) % items.length;
      showItem(prevIndex);
    }
  }
})();
</script>

