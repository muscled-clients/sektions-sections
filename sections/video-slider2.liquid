<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sectionId = '{{ section.id }}';
    const section = document.querySelector(`[data-section-id="${sectionId}"]`);
    if (!section) return;

    // Initialize Swiper
    const swiper = new Swiper(section.querySelector('.video-slider-2__swiper'), {
      slidesPerView: 1.15,
      spaceBetween: 10,
      speed: 300,
      pagination: {
        el: section.querySelector('.video-slider-2__pagination'),
        clickable: true
      },
      navigation: {
        prevEl: section.querySelector('.video-slider-2__nav-prev'),
        nextEl: section.querySelector('.video-slider-2__nav-next')
      },
      breakpoints: {
        400: {
          slidesPerView: 1.3,
          spaceBetween: 12
        },
        550: {
          slidesPerView: 1.8,
          spaceBetween: 14
        },
        768: {
          slidesPerView: 2.3,
          spaceBetween: 16
        },
        1024: {
          slidesPerView: 3,
          spaceBetween: 20
        },
        1400: {
          slidesPerView: 3.5,
          spaceBetween: 24
        }
      }
    });

    // Video Controls
    section.querySelectorAll('.video-slider-2__slide').forEach(slide => {
      const video = slide.querySelector('video');
      if (!video) return;

      const muteBtn = slide.querySelector('.video-slider-2__mute-btn');
      const playBtn = slide.querySelector('.video-slider-2__play-btn');

      // Mute/Unmute
      if (muteBtn) {
        muteBtn.addEventListener('click', () => {
          video.muted = !video.muted;
          muteBtn.classList.toggle('is-muted', video.muted);
        });
      }

      // Play/Pause
      if (playBtn) {
        playBtn.addEventListener('click', () => {
          if (video.paused) {
            video.play();
            playBtn.classList.remove('is-paused');
          } else {
            video.pause();
            playBtn.classList.add('is-paused');
          }
        });

        video.addEventListener('play', () => playBtn.classList.remove('is-paused'));
        video.addEventListener('pause', () => playBtn.classList.add('is-paused'));
      }

      // Auto-play when in view
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            video.play().catch(() => {});
          } else {
            video.pause();
          }
        });
      }, { threshold: 0.5 });

      observer.observe(slide);
    });
  });
</script>

