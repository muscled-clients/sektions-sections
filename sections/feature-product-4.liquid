{% style %}
  #shopify-section-{{ section.id }} {
    --fp4-bg: {{ section.settings.background_color }};
    --fp4-heading: {{ section.settings.heading_color }};
    --fp4-accent: {{ section.settings.accent_color }};
    --fp4-text: {{ section.settings.text_color }};
    --fp4-btn-bg: {{ section.settings.button_background }};
    --fp4-btn-text: {{ section.settings.button_text_color }};
    --fp4-icon: {{ section.settings.icon_color }};
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }
{% endstyle %}

<style>
  @import url('https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Inter:wght@400;500;600&display=swap');

  .featured-product-4 {
    background: var(--fp4-bg, #ffffff);
    padding: 40px 0;
    font-family: 'Inter', sans-serif;
  }

  .featured-product-4__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .featured-product-4__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 32px;
  }

  /* Content */
  .featured-product-4__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .featured-product-4__title {
    font-family: 'DM Serif Display', serif;
    font-size: 32px;
    font-weight: 400;
    line-height: 1.2;
    color: var(--fp4-heading, #181414);
    margin: 0 0 24px;
  }

  .featured-product-4__title em,
  .featured-product-4__title i {
    font-style: italic;
    color: var(--fp4-accent, #953133);
  }

  /* Testimonial */
  .featured-product-4__testimonial {
    display: flex;
    align-items: flex-start;
    gap: 16px;
    margin-bottom: 24px;
  }

  .featured-product-4__testimonial-avatar {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
  }

  .featured-product-4__testimonial-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-product-4__testimonial-avatar-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 20px;
    font-weight: 600;
  }

  .featured-product-4__testimonial-quote {
    font-family: 'DM Serif Display', serif;
    font-style: italic;
    font-size: 15px;
    line-height: 1.6;
    color: var(--fp4-text, #5c5c5c);
    margin: 0;
  }

  /* Button */
  .featured-product-4__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 32px;
    background: var(--fp4-btn-bg, #181414);
    color: var(--fp4-btn-text, #ffffff);
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    border-radius: 30px;
    border: none;
    cursor: pointer;
    transition: all 0.25s ease;
    margin-bottom: 16px;
    width: fit-content;
  }

  .featured-product-4__btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
  }

  /* Delivery Text */
  .featured-product-4__delivery {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    color: var(--fp4-text, #5c5c5c);
    margin-bottom: 24px;
  }

  .featured-product-4__delivery-icon {
    width: 16px;
    height: 16px;
    color: var(--fp4-icon, #953133);
  }

  .featured-product-4__delivery-icon svg {
    width: 100%;
    height: 100%;
  }

  /* Features Grid */
  .featured-product-4__features {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px 24px;
  }

  .featured-product-4__feature {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .featured-product-4__feature-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    color: var(--fp4-icon, #953133);
  }

  .featured-product-4__feature-icon svg {
    width: 100%;
    height: 100%;
  }

  .featured-product-4__feature-text {
    font-size: 14px;
    font-weight: 500;
    color: var(--fp4-heading, #181414);
  }

  /* Media */
  .featured-product-4__media {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .featured-product-4__main-media {
    position: relative;
    width: 100%;
    aspect-ratio: 1 / 1;
    border-radius: 16px;
    overflow: hidden;
    background: #f3f3f3;
  }

  .featured-product-4__main-media img,
  .featured-product-4__main-media video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-product-4__video-controls {
    position: absolute;
    top: 16px;
    left: 16px;
    display: flex;
    gap: 8px;
    z-index: 10;
  }

  .featured-product-4__video-btn {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(0, 0, 0, 0.6);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s ease;
  }

  .featured-product-4__video-btn:hover {
    background: rgba(0, 0, 0, 0.8);
  }

  .featured-product-4__video-btn svg {
    width: 18px;
    height: 18px;
    color: #ffffff;
  }

  .featured-product-4__video-btn .icon-pause,
  .featured-product-4__video-btn .icon-unmute {
    display: none;
  }

  .featured-product-4__video-btn.playing .icon-play {
    display: none;
  }

  .featured-product-4__video-btn.playing .icon-pause {
    display: block;
  }

  .featured-product-4__video-btn.unmuted .icon-mute {
    display: none;
  }

  .featured-product-4__video-btn.unmuted .icon-unmute {
    display: block;
  }

  /* Thumbnails */
  .featured-product-4__thumbnails {
    display: flex;
    gap: 12px;
  }

  .featured-product-4__thumbnail {
    flex: 1;
    aspect-ratio: 1 / 1;
    border-radius: 12px;
    overflow: hidden;
    background: #f3f3f3;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .featured-product-4__thumbnail:hover {
    transform: scale(1.02);
  }

  .featured-product-4__thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-product-4__thumbnail-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #e0e0e0 0%, #f5f5f5 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
    font-size: 12px;
  }

  /* Responsive */
  @media (min-width: 768px) {
    .featured-product-4 {
      padding: 60px 0;
    }

    .featured-product-4__title {
      font-size: 40px;
    }

    .featured-product-4__testimonial-avatar {
      width: 64px;
      height: 64px;
    }

    .featured-product-4__testimonial-quote {
      font-size: 16px;
    }

    .featured-product-4__features {
      gap: 20px 32px;
    }

    .featured-product-4__feature-text {
      font-size: 15px;
    }
  }

  @media (min-width: 1024px) {
    .featured-product-4 {
      padding: 80px 0;
    }

    .featured-product-4__container {
      padding: 0 40px;
    }

    .featured-product-4__grid {
      grid-template-columns: 1fr 1.2fr;
      gap: 60px;
      align-items: center;
    }

    .featured-product-4__title {
      font-size: 48px;
      margin-bottom: 32px;
    }

    .featured-product-4__testimonial {
      margin-bottom: 28px;
    }

    .featured-product-4__testimonial-avatar {
      width: 72px;
      height: 72px;
    }

    .featured-product-4__testimonial-quote {
      font-size: 17px;
    }

    .featured-product-4__btn {
      padding: 18px 40px;
      font-size: 15px;
    }

    .featured-product-4__delivery {
      font-size: 14px;
      margin-bottom: 32px;
    }

    .featured-product-4__features {
      gap: 24px 40px;
    }

    .featured-product-4__feature-text {
      font-size: 16px;
    }

    .featured-product-4__main-media {
      border-radius: 20px;
    }

    .featured-product-4__thumbnail {
      border-radius: 16px;
    }
  }

  @media (min-width: 1400px) {
    .featured-product-4__title {
      font-size: 56px;
    }

    .featured-product-4__grid {
      gap: 80px;
    }
  }
</style>

<section class="featured-product-4" data-section-id="{{ section.id }}">
  <div class="featured-product-4__container">
    <div class="featured-product-4__grid">
      <!-- Content -->
      <div class="featured-product-4__content">
        {%- if section.settings.title != blank -%}
          <h2 class="featured-product-4__title">{{ section.settings.title }}</h2>
        {%- endif -%}

        {%- if section.settings.testimonial_text != blank -%}
          <div class="featured-product-4__testimonial">
            <div class="featured-product-4__testimonial-avatar">
              {%- if section.settings.testimonial_avatar != blank -%}
                {{ section.settings.testimonial_avatar | image_url: width: 160 | image_tag: loading: 'lazy' }}
              {%- else -%}
                <div class="featured-product-4__testimonial-avatar-placeholder">
                  {{ section.settings.testimonial_text | slice: 1, 1 | upcase }}
                </div>
              {%- endif -%}
            </div>
            <p class="featured-product-4__testimonial-quote">"{{ section.settings.testimonial_text }}"</p>
          </div>
        {%- endif -%}

        {%- if section.settings.button_text != blank -%}
          <a href="{{ section.settings.button_link }}" class="featured-product-4__btn">
            {{ section.settings.button_text }}
          </a>
        {%- endif -%}

        {%- if section.settings.delivery_text != blank -%}
          <div class="featured-product-4__delivery">
            <span class="featured-product-4__delivery-icon">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
              </svg>
            </span>
            <span>{{ section.settings.delivery_text }}</span>
          </div>
        {%- endif -%}

        {%- assign features = section.blocks | where: "type", "feature" -%}
        {%- if features.size > 0 -%}
          <div class="featured-product-4__features">
            {%- for block in features -%}
              <div class="featured-product-4__feature" {{ block.shopify_attributes }}>
                <span class="featured-product-4__feature-icon">
                  {%- case block.settings.icon -%}
                    {%- when 'cold' -%}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 2v20M2 12h20M12 6l-4-4M12 6l4-4M12 18l-4 4M12 18l4 4M6 12l-4-4M6 12l-4 4M18 12l4-4M18 12l4 4"/>
                      </svg>
                    {%- when 'hot' -%}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 2v2M12 20v2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M2 12h2M20 12h2M4.93 19.07l1.41-1.41M17.66 6.34l1.41-1.41"/>
                        <circle cx="12" cy="12" r="4"/>
                      </svg>
                    {%- when 'shield' -%}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                      </svg>
                    {%- when 'sparkle' -%}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 3l1.5 5.5L19 10l-5.5 1.5L12 17l-1.5-5.5L5 10l5.5-1.5L12 3z"/>
                        <path d="M5 19l1 3 1-3M18 5l1 3 1-3"/>
                      </svg>
                    {%- when 'leaf' -%}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M6 3v18M18 9a6 6 0 00-12 0c0 7 6 12 12 12V9z"/>
                      </svg>
                    {%- when 'check' -%}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="20 6 9 17 4 12"/>
                      </svg>
                    {%- else -%}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="20 6 9 17 4 12"/>
                      </svg>
                  {%- endcase -%}
                </span>
                <span class="featured-product-4__feature-text">{{ block.settings.text }}</span>
              </div>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>

      <!-- Media -->
      <div class="featured-product-4__media">
        <div class="featured-product-4__main-media">
          {%- if section.settings.video != blank -%}
            <video id="fp4-video-{{ section.id }}" playsinline loop muted>
              <source src="{{ section.settings.video.sources[1].url }}" type="video/mp4">
            </video>
            <div class="featured-product-4__video-controls">
              <button class="featured-product-4__video-btn fp4-play-btn playing" type="button" aria-label="Play/Pause">
                <svg class="icon-play" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M8 5v14l11-7z"/>
                </svg>
                <svg class="icon-pause" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
                </svg>
              </button>
              <button class="featured-product-4__video-btn fp4-mute-btn" type="button" aria-label="Mute/Unmute">
                <svg class="icon-mute" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M16.5 12c0-1.77-1.02-3.29-2.5-4.03v2.21l2.45 2.45c.03-.2.05-.41.05-.63zm2.5 0c0 .94-.2 1.82-.54 2.64l1.51 1.51C20.63 14.91 21 13.5 21 12c0-4.28-2.99-7.86-7-8.77v2.06c2.89.86 5 3.54 5 6.71zM4.27 3L3 4.27 7.73 9H3v6h4l5 5v-6.73l4.25 4.25c-.67.52-1.42.93-2.25 1.18v2.06c1.38-.31 2.63-.95 3.69-1.81L19.73 21 21 19.73l-9-9L4.27 3zM12 4L9.91 6.09 12 8.18V4z"/>
                </svg>
                <svg class="icon-unmute" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z"/>
                </svg>
              </button>
            </div>
          {%- elsif section.settings.main_image != blank -%}
            {{ section.settings.main_image | image_url: width: 1200 | image_tag: loading: 'lazy' }}
          {%- else -%}
            <div class="featured-product-4__thumbnail-placeholder">
              <span>Add video or image</span>
            </div>
          {%- endif -%}
        </div>

        {%- assign thumbnails = section.blocks | where: "type", "thumbnail" -%}
        {%- if thumbnails.size > 0 -%}
          <div class="featured-product-4__thumbnails">
            {%- for block in thumbnails -%}
              <div class="featured-product-4__thumbnail" {{ block.shopify_attributes }}>
                {%- if block.settings.image != blank -%}
                  {{ block.settings.image | image_url: width: 400 | image_tag: loading: 'lazy' }}
                {%- else -%}
                  <div class="featured-product-4__thumbnail-placeholder">
                    <span>Image</span>
                  </div>
                {%- endif -%}
              </div>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sectionId = '{{ section.id }}';
    const section = document.querySelector(`[data-section-id="${sectionId}"]`);
    if (!section) return;

    const video = section.querySelector('video');
    const playBtn = section.querySelector('.fp4-play-btn');
    const muteBtn = section.querySelector('.fp4-mute-btn');

    if (video && playBtn) {
      // Auto-play video
      video.play().catch(() => {});

      playBtn.addEventListener('click', function() {
        if (video.paused) {
          video.play();
          this.classList.add('playing');
        } else {
          video.pause();
          this.classList.remove('playing');
        }
      });
    }

    if (video && muteBtn) {
      muteBtn.addEventListener('click', function() {
        video.muted = !video.muted;
        this.classList.toggle('unmuted', !video.muted);
      });
    }
  });
</script>

