<style>
  #cyber-monday-sale-{{ section.id }} {
    position: relative;
    width: 100%;
    min-height: {{ section.settings.section_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 20px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    {% if section.settings.background_image %}
      background-image: url('{{ section.settings.background_image | img_url: "2000x" }}');
    {% else %}
      background-color: #cccccc;
    {% endif %}
  }

  #cyber-monday-sale-{{ section.id }} .sale-overlay {
    background: rgba({{ section.settings.overlay_bg_r }}, {{ section.settings.overlay_bg_g }}, {{ section.settings.overlay_bg_b }}, {{ section.settings.overlay_bg_opacity | divided_by: 100.0 }});
    border-radius: 30px;
    padding: 0;
    max-width: {{ section.settings.overlay_max_width }}px;
    width: 100%;
    text-align: center;
    overflow: hidden;
  }

  #cyber-monday-sale-{{ section.id }} .sale-header {
    padding: 40px 30px 25px;
  }

  #cyber-monday-sale-{{ section.id }} .sale-footer {
    padding: 25px 40px 40px;
  }

  #cyber-monday-sale-{{ section.id }} .sale-title {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: {{ section.settings.title_font_size }}px;
    color: {{ section.settings.title_color }};
    margin: 0 0 8px 0;
    font-weight: 400;
    letter-spacing: 1px;
  }

  #cyber-monday-sale-{{ section.id }} .sale-subheading {
    font-size: {{ section.settings.subheading_font_size }}px;
    color: {{ section.settings.subheading_color }};
    margin: 0 0 25px 0;
    font-weight: 300;
  }

  #cyber-monday-sale-{{ section.id }} .countdown-timer {
    background: {{ section.settings.timer_background }};
    padding: {{ section.settings.timer_padding_vertical }}px {{ section.settings.timer_padding_horizontal }}px;
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 15px;
    width: 100%;
    position: relative;
  }

  #cyber-monday-sale-{{ section.id }} .time-unit {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  #cyber-monday-sale-{{ section.id }} .time-number {
    font-family: 'Playfair Display', 'Georgia', serif;
    font-size: {{ section.settings.timer_number_size }}px;
    font-weight: 700;
    color: {{ section.settings.timer_number_color }};
    line-height: 1;
    margin-bottom: 8px;
    letter-spacing: 2px;
  }

  #cyber-monday-sale-{{ section.id }} .time-label {
    font-size: {{ section.settings.timer_label_size }}px;
    color: {{ section.settings.timer_label_color }};
    text-transform: capitalize;
    font-weight: 400;
  }

  #cyber-monday-sale-{{ section.id }} .time-separator {
    font-family: 'Playfair Display', 'Georgia', serif;
    font-size: {{ section.settings.timer_number_size }}px;
    font-weight: 700;
    color: {{ section.settings.timer_number_color }};
    line-height: 1;
    margin-bottom: 28px;
    letter-spacing: 2px;
  }

  #cyber-monday-sale-{{ section.id }} .sale-description {
    font-size: {{ section.settings.description_font_size }}px;
    color: {{ section.settings.description_color }};
    line-height: 1.6;
    margin: 0 0 25px 0;
  }

  #cyber-monday-sale-{{ section.id }} .shop-now-btn {
    display: inline-block;
    padding: 12px 40px;
    background: transparent;
    border: 2px solid {{ section.settings.button_border_color }};
    color: {{ section.settings.button_text_color }};
    font-size: {{ section.settings.button_font_size }}px;
    text-decoration: none;
    border-radius: 5px;
    transition: all 0.3s ease;
    cursor: pointer;
    font-weight: 500;
    text-transform: capitalize;
  }

  #cyber-monday-sale-{{ section.id }} .shop-now-btn:hover {
    background: {{ section.settings.button_hover_bg }};
    border-color: {{ section.settings.button_hover_bg }};
    color: {{ section.settings.button_hover_text }};
  }

  @media (max-width: 768px) {
    #cyber-monday-sale-{{ section.id }} {
      min-height: auto;
      padding: 30px 15px;
    }

    #cyber-monday-sale-{{ section.id }} .sale-overlay {
      border-radius: 20px;
    }

    #cyber-monday-sale-{{ section.id }} .sale-header {
      padding: 30px 20px 20px;
    }

    #cyber-monday-sale-{{ section.id }} .sale-footer {
      padding: 20px 25px 30px;
    }

    #cyber-monday-sale-{{ section.id }} .sale-title {
      font-size: {{ section.settings.title_font_size | minus: 8 }}px;
    }

    #cyber-monday-sale-{{ section.id }} .sale-subheading {
      font-size: {{ section.settings.subheading_font_size | minus: 2 }}px;
      margin-bottom: 20px;
    }

    #cyber-monday-sale-{{ section.id }} .countdown-timer {
      padding: 20px 10px;
      gap: 4px;
      flex-wrap: nowrap;
      justify-content: center;
    }

    #cyber-monday-sale-{{ section.id }} .time-unit {
      min-width: 50px;
    }

    #cyber-monday-sale-{{ section.id }} .time-number {
      font-size: 28px;
      margin-bottom: 4px;
      letter-spacing: 0;
    }

    #cyber-monday-sale-{{ section.id }} .time-label {
      font-size: 10px;
    }

    #cyber-monday-sale-{{ section.id }} .time-separator {
      font-size: 24px;
      margin-bottom: 16px;
      letter-spacing: 0;
    }

    #cyber-monday-sale-{{ section.id }} .sale-description {
      font-size: {{ section.settings.description_font_size | minus: 2 }}px;
      margin-bottom: 20px;
    }

    #cyber-monday-sale-{{ section.id }} .shop-now-btn {
      padding: 10px 30px;
      font-size: {{ section.settings.button_font_size | minus: 2 }}px;
    }
  }

  /* Small Mobile */
  @media (max-width: 380px) {
    #cyber-monday-sale-{{ section.id }} .countdown-timer {
      gap: 2px;
      padding: 15px 5px;
    }

    #cyber-monday-sale-{{ section.id }} .time-unit {
      min-width: 40px;
    }

    #cyber-monday-sale-{{ section.id }} .time-number {
      font-size: 22px;
    }

    #cyber-monday-sale-{{ section.id }} .time-label {
      font-size: 9px;
    }

    #cyber-monday-sale-{{ section.id }} .time-separator {
      font-size: 18px;
      margin-bottom: 12px;
    }
  }
</style>

<section id="cyber-monday-sale-{{ section.id }}">
  <div class="sale-overlay">
    <div class="sale-header">
      <h2 class="sale-title">{{ section.settings.sale_title }}</h2>
      <p class="sale-subheading">{{ section.settings.sale_subheading }}</p>
    </div>

    <div class="countdown-timer" id="countdown-{{ section.id }}">
      <div class="time-unit">
        <div class="time-number" id="days-{{ section.id }}">00</div>
        <div class="time-label">Days</div>
      </div>
      <div class="time-separator">:</div>
      <div class="time-unit">
        <div class="time-number" id="hours-{{ section.id }}">00</div>
        <div class="time-label">Hours</div>
      </div>
      <div class="time-separator">:</div>
      <div class="time-unit">
        <div class="time-number" id="minutes-{{ section.id }}">00</div>
        <div class="time-label">Minutes</div>
      </div>
      <div class="time-separator">:</div>
      <div class="time-unit">
        <div class="time-number" id="seconds-{{ section.id }}">00</div>
        <div class="time-label">Seconds</div>
      </div>
    </div>

    <div class="sale-footer">
      <p class="sale-description">{{ section.settings.sale_description }}</p>
      <a href="{{ section.settings.button_link }}" class="shop-now-btn">{{ section.settings.button_text }}</a>
    </div>
  </div>
</section>

<script>
  (function() {
    const endDate = new Date('{{ section.settings.end_date }}').getTime();
    const sectionId = '{{ section.id }}';

    function updateCountdown() {
      const now = new Date().getTime();
      const distance = endDate - now;

      if (distance < 0) {
        document.getElementById('days-' + sectionId).textContent = '00';
        document.getElementById('hours-' + sectionId).textContent = '00';
        document.getElementById('minutes-' + sectionId).textContent = '00';
        document.getElementById('seconds-' + sectionId).textContent = '00';
        return;
      }

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      document.getElementById('days-' + sectionId).textContent = String(days).padStart(2, '0');
      document.getElementById('hours-' + sectionId).textContent = String(hours).padStart(2, '0');
      document.getElementById('minutes-' + sectionId).textContent = String(minutes).padStart(2, '0');
      document.getElementById('seconds-' + sectionId).textContent = String(seconds).padStart(2, '0');
    }

    updateCountdown();
    setInterval(updateCountdown, 1000);
  })();
</script>

