{% comment %}
  Category Circles Section
  A responsive grid of circular category tiles with hover effects
{% endcomment %}

<style>
  #shopify-section-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  #shopify-section-{{ section.id }} .category-circles-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  #shopify-section-{{ section.id }} .section-header {
    text-align: center;
    margin-bottom: 40px;
  }

  #shopify-section-{{ section.id }} .section-title {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 600;
    color: {{ section.settings.heading_color }};
    margin: 0;
  }

  #shopify-section-{{ section.id }} .categories-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
    gap: 30px;
    margin: 0 auto;
  }

  #shopify-section-{{ section.id }} .category-item {
    text-align: center;
    text-decoration: none;
    display: block;
  }

  #shopify-section-{{ section.id }} .category-circle {
    width: calc({{ section.settings.circle_size }}px + 20px);
    height: calc({{ section.settings.circle_size }}px + 20px);
    border-radius: 50%;
    overflow: hidden;
    margin: 0 auto;
    background-color: {{ section.settings.background_color }};
    position: relative;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    padding: 25px;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #shopify-section-{{ section.id }} .category-item:hover .category-circle {
    transform: scale(1.05);
    box-shadow: 0 4px 16px rgba(0,0,0,0.15);
  }

  #shopify-section-{{ section.id }} .category-circle img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  #shopify-section-{{ section.id }} .category-circle-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    font-size: 48px;
  }

  #shopify-section-{{ section.id }} .category-title {
    font-size: {{ section.settings.text_size }}px;
    color: {{ section.settings.text_color }};
    margin: 15px 0 0 0;
    font-weight: 500;
  }

  @media screen and (max-width: 990px) {
    #shopify-section-{{ section.id }} .categories-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 25px;
    }
  }

  @media screen and (max-width: 750px) {
    #shopify-section-{{ section.id }} .categories-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }

    #shopify-section-{{ section.id }} .category-circle {
      width: calc((100vw - 56px) / 2);
      height: calc((100vw - 56px) / 2);
      max-width: 160px;
      max-height: 160px;
      padding: 15px;
    }

    #shopify-section-{{ section.id }} .category-title {
      font-size: calc({{ section.settings.text_size }}px * 0.875);
      margin-top: 10px;
    }

    #shopify-section-{{ section.id }} .section-title {
      font-size: calc({{ section.settings.heading_size }}px * 0.75);
    }

    #shopify-section-{{ section.id }} .section-header {
      margin-bottom: 25px;
    }
  }
</style>

<div class="category-circles-container">
  {% if section.settings.heading != blank %}
    <div class="section-header">
      <h2 class="section-title">{{ section.settings.heading }}</h2>
    </div>
  {% endif %}

  <div class="categories-grid">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'category' %}
          <a href="{{ block.settings.url }}" class="category-item" {{ block.shopify_attributes }}>
            <div class="category-circle">
              {% if block.settings.image != blank %}
                {{ block.settings.image | image_url: width: section.settings.circle_size | image_tag: loading: 'lazy', alt: block.settings.title }}
              {% else %}
                <div class="category-circle-placeholder">
                  <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="9" y1="9" x2="15" y2="15"></line>
                    <line x1="15" y1="9" x2="9" y2="15"></line>
                  </svg>
                </div>
              {% endif %}
            </div>
            {% if block.settings.title != blank %}
              <h3 class="category-title">{{ block.settings.title }}</h3>
            {% endif %}
          </a>
      {% endcase %}
    {% endfor %}
  </div>
</div>

