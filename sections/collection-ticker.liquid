{% style %}
  #shopify-section-{{ section.id }} {
    width: 100%;
    max-width: 100%;
    margin-left: 0;
    margin-right: 0;
    padding-left: 0;
    padding-right: 0;
  }

  .fct-section-{{ section.id }} {
    --fct-bg: {{ section.settings.background_color }};
    --fct-text: {{ section.settings.text_color }};
    --fct-heading: {{ section.settings.heading_color }};
    --fct-timer-bg: {{ section.settings.timer_background }};
    --fct-timer-text: {{ section.settings.timer_text_color }};
    --fct-btn-bg: {{ section.settings.button_background }};
    --fct-btn-text: {{ section.settings.button_text_color }};
    --fct-btn-hover-bg: {{ section.settings.button_hover_background }};
    --fct-card-bg: {{ section.settings.card_background }};
    --fct-card-border: {{ section.settings.card_border_color }};
    --fct-sale: {{ section.settings.sale_color }};
    background: var(--fct-bg);
    color: var(--fct-text);
    min-height: {{ section.settings.section_height_mobile }}vh;
    border-radius: {{ section.settings.border_radius_mobile }}px;
    overflow: hidden;
    position: relative;
    margin: {{ section.settings.section_margin }}px;
  }

  .fct-section-{{ section.id }} * {
    box-sizing: border-box;
  }

  .fct-wrapper-{{ section.id }} {
    display: flex;
    flex-direction: column;
    min-height: {{ section.settings.section_height_mobile }}vh;
    padding: 40px 20px;
  }

  /* Content Area */
  .fct-content-{{ section.id }} {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-bottom: 30px;
  }

  /* Countdown Timer - Above heading */
  .fct-timer-{{ section.id }} {
    display: flex;
    gap: 8px;
    margin-bottom: 20px;
    flex-wrap: wrap;
  }

  .fct-timer-block-{{ section.id }} {
    background: var(--fct-timer-bg);
    color: var(--fct-timer-text);
    padding: 10px 14px;
    border-radius: {{ section.settings.timer_border_radius }}px;
    text-align: center;
    min-width: 60px;
  }

  .fct-timer-block-{{ section.id }}.hidden {
    display: none;
  }

  .fct-timer-number-{{ section.id }} {
    font-size: 26px;
    font-weight: 700;
    line-height: 1;
    display: block;
  }

  .fct-timer-label-{{ section.id }} {
    font-size: 10px;
    text-transform: uppercase;
    margin-top: 4px;
    display: block;
    opacity: 0.8;
    letter-spacing: 0.5px;
  }

  .fct-timer-expired-{{ section.id }} {
    color: var(--fct-sale);
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 16px;
    display: none;
  }

  .fct-timer-expired-{{ section.id }}.show {
    display: block;
  }

  /* Heading with italic support */
  .fct-heading-{{ section.id }} {
    font-size: {{ section.settings.heading_size_mobile }}px;
    font-weight: 400;
    color: var(--fct-heading);
    margin: 0 0 24px 0;
    line-height: 1.1;
  }

  .fct-heading-{{ section.id }} em,
  .fct-heading-{{ section.id }} i {
    font-style: italic;
    font-weight: 400;
  }

  .fct-heading-{{ section.id }} strong,
  .fct-heading-{{ section.id }} b {
    font-weight: 700;
  }

  /* Description */
  .fct-description-{{ section.id }} {
    font-size: 14px;
    line-height: 1.6;
    margin-bottom: 24px;
    opacity: 0.9;
  }

  /* Button */
  .fct-button-{{ section.id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 36px;
    background: var(--fct-btn-bg);
    color: var(--fct-btn-text);
    text-decoration: none;
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    border-radius: {{ section.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    align-self: flex-start;
  }

  .fct-button-{{ section.id }}:hover {
    background: var(--fct-btn-hover-bg);
  }

  /* Products Carousel Area */
  .fct-carousel-{{ section.id }} {
    position: relative;
    overflow: hidden;
    flex: 1;
    min-height: 350px;
  }

  /* Mobile: Horizontal ticker */
  .fct-mobile-track-{{ section.id }} {
    display: flex;
    gap: 12px;
    animation: fctTickerMobile-{{ section.id }} {{ section.settings.animation_speed }}s linear infinite;
    width: max-content;
  }

  .fct-carousel-{{ section.id }}:hover .fct-mobile-track-{{ section.id }} {
    animation-play-state: paused;
  }

  @keyframes fctTickerMobile-{{ section.id }} {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  /* Desktop: Vertical columns */
  .fct-desktop-track-{{ section.id }} {
    display: none;
  }

  /* Product Card */
  .fct-card-{{ section.id }} {
    flex: 0 0 {{ section.settings.card_width_mobile }}px;
    width: {{ section.settings.card_width_mobile }}px;
    background: var(--fct-card-bg);
    border-radius: {{ section.settings.card_border_radius }}px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .fct-card-link-{{ section.id }} {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .fct-card-image-wrapper-{{ section.id }} {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1;
    background: #f5f5f5;
  }

  .fct-card-image-{{ section.id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .fct-card-{{ section.id }}:hover .fct-card-image-{{ section.id }} {
    transform: scale(1.08);
  }

  .fct-card-info-{{ section.id }} {
    padding: 12px 14px 14px;
    background: var(--fct-card-bg);
  }

  .fct-card-title-{{ section.id }} {
    font-size: 13px;
    font-weight: 500;
    color: #1a1a1a;
    margin: 0 0 6px 0;
    line-height: 1.3;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .fct-card-price-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
  }

  .fct-price-compare-{{ section.id }} {
    text-decoration: line-through;
    color: var(--fct-sale);
    font-size: 12px;
  }

  .fct-price-current-{{ section.id }} {
    font-weight: 600;
    color: #1a1a1a;
  }

  .fct-card-placeholder-{{ section.id }} {
    width: 100%;
    height: 100%;
    background: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .fct-card-placeholder-{{ section.id }} svg {
    width: 100%;
    height: 100%;
  }

  /* Desktop Layout */
  @media (min-width: 750px) {
    .fct-section-{{ section.id }} {
      min-height: {{ section.settings.section_height_desktop }}vh;
      border-radius: {{ section.settings.border_radius_desktop }}px;
    }

    .fct-wrapper-{{ section.id }} {
      flex-direction: row;
      min-height: {{ section.settings.section_height_desktop }}vh;
      padding: 60px;
      gap: 40px;
    }

    .fct-content-{{ section.id }} {
      flex: 0 0 38%;
      max-width: 420px;
      padding-bottom: 0;
      padding-right: 20px;
    }

    .fct-timer-{{ section.id }} {
      gap: 10px;
      margin-bottom: 24px;
    }

    .fct-timer-block-{{ section.id }} {
      padding: 12px 16px;
      min-width: 65px;
    }

    .fct-timer-number-{{ section.id }} {
      font-size: 28px;
    }

    .fct-timer-label-{{ section.id }} {
      font-size: 10px;
    }

    .fct-heading-{{ section.id }} {
      font-size: {{ section.settings.heading_size_desktop }}px;
      margin-bottom: 30px;
    }

    .fct-description-{{ section.id }} {
      font-size: 14px;
      margin-bottom: 30px;
    }

    .fct-button-{{ section.id }} {
      padding: 18px 44px;
      font-size: 12px;
    }

    /* Desktop carousel */
    .fct-carousel-{{ section.id }} {
      flex: 1;
      min-height: auto;
      overflow: hidden;
      position: relative;
    }

    .fct-mobile-track-{{ section.id }} {
      display: none;
    }

    .fct-desktop-track-{{ section.id }} {
      display: flex;
      gap: 20px;
      height: 100%;
      position: absolute;
      right: 0;
      top: 0;
      bottom: 0;
    }

    .fct-column-{{ section.id }} {
      display: flex;
      flex-direction: column;
      width: {{ section.settings.card_width_desktop }}px;
      flex-shrink: 0;
      overflow: hidden;
      height: 100%;
    }

    .fct-column-inner-{{ section.id }} {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    /* Column 1: Scroll Up */
    .fct-column-{{ section.id }}:nth-child(1) .fct-column-inner-{{ section.id }} {
      animation: fctScrollUp-{{ section.id }} {{ section.settings.animation_speed }}s linear infinite;
    }

    /* Column 2: Scroll Down */
    .fct-column-{{ section.id }}:nth-child(2) .fct-column-inner-{{ section.id }} {
      animation: fctScrollDown-{{ section.id }} {{ section.settings.animation_speed | plus: 8 }}s linear infinite;
    }

    .fct-carousel-{{ section.id }}:hover .fct-column-inner-{{ section.id }} {
      animation-play-state: paused;
    }

    @keyframes fctScrollUp-{{ section.id }} {
      0% { transform: translateY(0); }
      100% { transform: translateY(-50%); }
    }

    @keyframes fctScrollDown-{{ section.id }} {
      0% { transform: translateY(-50%); }
      100% { transform: translateY(0); }
    }

    .fct-card-{{ section.id }} {
      flex: 0 0 auto;
      width: {{ section.settings.card_width_desktop }}px;
      margin-bottom: 20px;
    }

    .fct-card-{{ section.id }}:last-child {
      margin-bottom: 0;
    }

    .fct-card-info-{{ section.id }} {
      padding: 14px 16px 16px;
    }

    .fct-card-title-{{ section.id }} {
      font-size: 14px;
    }

    .fct-card-price-{{ section.id }} {
      font-size: 14px;
    }
  }

  @media (min-width: 1200px) {
    .fct-wrapper-{{ section.id }} {
      padding: 70px 80px;
      gap: 60px;
    }

    .fct-content-{{ section.id }} {
      flex: 0 0 35%;
      max-width: 450px;
    }

    .fct-timer-block-{{ section.id }} {
      padding: 14px 18px;
      min-width: 70px;
    }

    .fct-timer-number-{{ section.id }} {
      font-size: 32px;
    }

    .fct-timer-label-{{ section.id }} {
      font-size: 11px;
    }
  }
