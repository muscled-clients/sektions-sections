<section class="fct-section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="fct-wrapper-{{ section.id }}">
    <!-- Content Area -->
    <div class="fct-content-{{ section.id }}">
      {%- if section.settings.show_timer -%}
        <div class="fct-timer-{{ section.id }}" data-timer data-end-date="{{ section.settings.timer_end_date }}">
          <div class="fct-timer-block-{{ section.id }}" data-days>
            <span class="fct-timer-number-{{ section.id }}" data-number>00</span>
            <span class="fct-timer-label-{{ section.id }}">Days</span>
          </div>
          <div class="fct-timer-block-{{ section.id }}" data-hours>
            <span class="fct-timer-number-{{ section.id }}" data-number>00</span>
            <span class="fct-timer-label-{{ section.id }}">Hours</span>
          </div>
          <div class="fct-timer-block-{{ section.id }}" data-minutes>
            <span class="fct-timer-number-{{ section.id }}" data-number>00</span>
            <span class="fct-timer-label-{{ section.id }}">Minutes</span>
          </div>
          <div class="fct-timer-block-{{ section.id }}" data-seconds>
            <span class="fct-timer-number-{{ section.id }}" data-number>00</span>
            <span class="fct-timer-label-{{ section.id }}">Seconds</span>
          </div>
        </div>
        <div class="fct-timer-expired-{{ section.id }}" data-expired>
          {{ section.settings.expired_message | default: 'This offer has ended' }}
        </div>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h2 class="fct-heading-{{ section.id }}">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <div class="fct-description-{{ section.id }}">{{ section.settings.description }}</div>
      {%- endif -%}

      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_link }}" class="fct-button-{{ section.id }}">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
    </div>

    <!-- Products Carousel -->
    <div class="fct-carousel-{{ section.id }}">
      {%- assign collection = section.settings.collection -%}
      {%- assign products_to_show = section.settings.products_to_show -%}

      <!-- Mobile: Horizontal ticker -->
      <div class="fct-mobile-track-{{ section.id }}" data-mobile-track>
        {%- if collection != blank and collection.products.size > 0 -%}
          {%- for i in (1..2) -%}
            {%- for product in collection.products limit: products_to_show -%}
              <div class="fct-card-{{ section.id }}">
                <a href="{{ product.url }}" class="fct-card-link-{{ section.id }}">
                  <div class="fct-card-image-wrapper-{{ section.id }}">
                    {%- if product.featured_image != blank -%}
                      <img
                        class="fct-card-image-{{ section.id }}"
                        src="{{ product.featured_image | image_url: width: 400 }}"
                        alt="{{ product.title | escape }}"
                        loading="lazy"
                      >
                    {%- else -%}
                      <div class="fct-card-placeholder-{{ section.id }}">
                        {{ 'product-1' | placeholder_svg_tag }}
                      </div>
                    {%- endif -%}
                  </div>
                  <div class="fct-card-info-{{ section.id }}">
                    <h3 class="fct-card-title-{{ section.id }}">{{ product.title }}</h3>
                    <div class="fct-card-price-{{ section.id }}">
                      {%- if product.compare_at_price > product.price -%}
                        <span class="fct-price-compare-{{ section.id }}">{{ product.compare_at_price | money }}</span>
                      {%- endif -%}
                      <span class="fct-price-current-{{ section.id }}">{{ product.price | money }}</span>
                    </div>
                  </div>
                </a>
              </div>
            {%- endfor -%}
          {%- endfor -%}
        {%- else -%}
          {%- for i in (1..8) -%}
            <div class="fct-card-{{ section.id }}">
              <div class="fct-card-link-{{ section.id }}">
                <div class="fct-card-image-wrapper-{{ section.id }}">
                  <div class="fct-card-placeholder-{{ section.id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                </div>
                <div class="fct-card-info-{{ section.id }}">
                  <h3 class="fct-card-title-{{ section.id }}">Product Title</h3>
                  <div class="fct-card-price-{{ section.id }}">
                    <span class="fct-price-current-{{ section.id }}">$99.00</span>
                  </div>
                </div>
              </div>
            </div>
          {%- endfor -%}
        {%- endif -%}
      </div>

      <!-- Desktop: 2 Vertical columns -->
      <div class="fct-desktop-track-{{ section.id }}" data-desktop-track>
        {%- if collection != blank and collection.products.size > 0 -%}
          <!-- Column 1: Scrolls Up - odd indexed products (1,3,5,7...) -->
          <div class="fct-column-{{ section.id }}">
            <div class="fct-column-inner-{{ section.id }}">
              {%- for repeat in (1..2) -%}
                {%- for product in collection.products limit: products_to_show -%}
                  {%- assign mod_check = forloop.index | modulo: 2 -%}
                  {%- if mod_check == 1 -%}
                    <div class="fct-card-{{ section.id }}">
                      <a href="{{ product.url }}" class="fct-card-link-{{ section.id }}">
                        <div class="fct-card-image-wrapper-{{ section.id }}">
                          {%- if product.featured_image != blank -%}
                            <img
                              class="fct-card-image-{{ section.id }}"
                              src="{{ product.featured_image | image_url: width: 400 }}"
                              alt="{{ product.title | escape }}"
                              loading="lazy"
                            >
                          {%- else -%}
                            <div class="fct-card-placeholder-{{ section.id }}">
                              {{ 'product-1' | placeholder_svg_tag }}
                            </div>
                          {%- endif -%}
                        </div>
                        <div class="fct-card-info-{{ section.id }}">
                          <h3 class="fct-card-title-{{ section.id }}">{{ product.title }}</h3>
                          <div class="fct-card-price-{{ section.id }}">
                            {%- if product.compare_at_price > product.price -%}
                              <span class="fct-price-compare-{{ section.id }}">{{ product.compare_at_price | money }}</span>
                            {%- endif -%}
                            <span class="fct-price-current-{{ section.id }}">{{ product.price | money }}</span>
                          </div>
                        </div>
                      </a>
                    </div>
                  {%- endif -%}
                {%- endfor -%}
              {%- endfor -%}
            </div>
          </div>

          <!-- Column 2: Scrolls Down - even indexed products (2,4,6,8...) -->
          <div class="fct-column-{{ section.id }}">
            <div class="fct-column-inner-{{ section.id }}">
              {%- for repeat in (1..2) -%}
                {%- for product in collection.products limit: products_to_show -%}
                  {%- assign mod_check = forloop.index | modulo: 2 -%}
                  {%- if mod_check == 0 -%}
                    <div class="fct-card-{{ section.id }}">
                      <a href="{{ product.url }}" class="fct-card-link-{{ section.id }}">
                        <div class="fct-card-image-wrapper-{{ section.id }}">
                          {%- if product.featured_image != blank -%}
                            <img
                              class="fct-card-image-{{ section.id }}"
                              src="{{ product.featured_image | image_url: width: 400 }}"
                              alt="{{ product.title | escape }}"
                              loading="lazy"
                            >
                          {%- else -%}
                            <div class="fct-card-placeholder-{{ section.id }}">
                              {{ 'product-1' | placeholder_svg_tag }}
                            </div>
                          {%- endif -%}
                        </div>
                        <div class="fct-card-info-{{ section.id }}">
                          <h3 class="fct-card-title-{{ section.id }}">{{ product.title }}</h3>
                          <div class="fct-card-price-{{ section.id }}">
                            {%- if product.compare_at_price > product.price -%}
                              <span class="fct-price-compare-{{ section.id }}">{{ product.compare_at_price | money }}</span>
                            {%- endif -%}
                            <span class="fct-price-current-{{ section.id }}">{{ product.price | money }}</span>
                          </div>
                        </div>
                      </a>
                    </div>
                  {%- endif -%}
                {%- endfor -%}
              {%- endfor -%}
            </div>
          </div>
        {%- else -%}
          <!-- Placeholder columns -->
          {%- for col in (1..2) -%}
            <div class="fct-column-{{ section.id }}">
              <div class="fct-column-inner-{{ section.id }}">
                {%- for i in (1..6) -%}
                  <div class="fct-card-{{ section.id }}">
                    <div class="fct-card-link-{{ section.id }}">
                      <div class="fct-card-image-wrapper-{{ section.id }}">
                        <div class="fct-card-placeholder-{{ section.id }}">
                          {{ 'product-1' | placeholder_svg_tag }}
                        </div>
                      </div>
                      <div class="fct-card-info-{{ section.id }}">
                        <h3 class="fct-card-title-{{ section.id }}">Product Title</h3>
                        <div class="fct-card-price-{{ section.id }}">
                          <span class="fct-price-current-{{ section.id }}">$99.00</span>
                        </div>
                      </div>
                    </div>
                  </div>
                {%- endfor -%}
              </div>
            </div>
          {%- endfor -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<script>
  (function() {
    function initFeaturedCollectionTicker() {
      const section = document.querySelector('[data-section-id="{{ section.id }}"]');
      if (!section || section.dataset.initialized) return;
      section.dataset.initialized = 'true';

      // Timer functionality
      const timer = section.querySelector('[data-timer]');
      if (timer) {
        const endDateStr = timer.dataset.endDate;
        if (endDateStr) {
          const endDate = new Date(endDateStr).getTime();
          const daysBlock = timer.querySelector('[data-days]');
          const hoursBlock = timer.querySelector('[data-hours]');
          const minutesBlock = timer.querySelector('[data-minutes]');
          const secondsBlock = timer.querySelector('[data-seconds]');
          const expiredEl = section.querySelector('[data-expired]');

          function updateTimer() {
            const now = new Date().getTime();
            const distance = endDate - now;

            if (distance < 0) {
              timer.style.display = 'none';
              if (expiredEl) expiredEl.classList.add('show');
              return;
            }

            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            if (daysBlock) {
              daysBlock.querySelector('[data-number]').textContent = String(days).padStart(2, '0');
              if (days === 0) daysBlock.classList.add('hidden');
            }
            if (hoursBlock) hoursBlock.querySelector('[data-number]').textContent = String(hours).padStart(2, '0');
            if (minutesBlock) minutesBlock.querySelector('[data-number]').textContent = String(minutes).padStart(2, '0');
            if (secondsBlock) secondsBlock.querySelector('[data-number]').textContent = String(seconds).padStart(2, '0');
          }

          updateTimer();
          setInterval(updateTimer, 1000);
        }
      }
    }

    // Initialize
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initFeaturedCollectionTicker);
    } else {
      initFeaturedCollectionTicker();
    }

    // Shopify theme editor support
    document.addEventListener('shopify:section:load', function(e) {
      if (e.target.querySelector('[data-section-id="{{ section.id }}"]')) {
        const el = e.target.querySelector('[data-section-id="{{ section.id }}"]');
        if (el) el.removeAttribute('data-initialized');
        initFeaturedCollectionTicker();
      }
    });
  })();
</script>

