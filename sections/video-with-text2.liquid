{% style %}
  #shopify-section-{{ section.id }} {
    --vwt2-bg: {{ section.settings.background_color }};
    --vwt2-subheading-color: {{ section.settings.subheading_color }};
    --vwt2-heading-color: {{ section.settings.heading_color }};
    --vwt2-text-color: {{ section.settings.text_color }};
    --vwt2-btn-bg: {{ section.settings.button_background }};
    --vwt2-btn-text: {{ section.settings.button_text_color }};
    --vwt2-btn-hover-bg: {{ section.settings.button_hover_background }};
    --vwt2-video-radius: {{ section.settings.video_border_radius }}px;
    display: block;
    width: 100%;
    max-width: 100%;
    overflow: hidden;
    margin-top: {{ section.settings.margin_top | times: 0.7 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.7 }}px;
  }

  @media (min-width: 550px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top | times: 0.8 }}px;
      margin-bottom: {{ section.settings.margin_bottom | times: 0.8 }}px;
    }
  }

  @media (min-width: 768px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top | times: 0.9 }}px;
      margin-bottom: {{ section.settings.margin_bottom | times: 0.9 }}px;
    }
  }

  @media (min-width: 1024px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{% endstyle %}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Josefin+Sans:wght@400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap');

  .video-with-text-2 *,
  .video-with-text-2 *::before,
  .video-with-text-2 *::after {
    box-sizing: border-box;
  }

  .video-with-text-2 {
    display: block;
    width: 100%;
    background: var(--vwt2-bg, #fff);
    padding: 28px 12px;
    font-family: 'Montserrat', sans-serif;
  }

  .video-with-text-2__container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  /* Content Side - Mobile First */
  .video-with-text-2__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .video-with-text-2__subheading {
    font-size: 9px;
    font-weight: 500;
    color: var(--vwt2-subheading-color, #666);
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin: 0 0 10px;
  }

  .video-with-text-2__heading {
    font-size: 22px;
    font-weight: 700;
    color: var(--vwt2-heading-color, #000);
    margin: 0 0 14px;
    line-height: 1.2;
  }

  .video-with-text-2__heading--serif {
    font-family: 'Playfair Display', serif;
  }

  .video-with-text-2__heading--sans {
    font-family: 'Josefin Sans', sans-serif;
  }

  .video-with-text-2__text {
    font-size: 13px;
    font-weight: 400;
    color: var(--vwt2-text-color, #5c5c5c);
    line-height: 1.6;
    margin: 0 0 20px;
    max-width: 450px;
  }

  .video-with-text-2__text p {
    margin: 0 0 10px;
  }

  .video-with-text-2__text p:last-child {
    margin-bottom: 0;
  }

  .video-with-text-2__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    background: var(--vwt2-btn-bg, #3b5998);
    color: var(--vwt2-btn-text, #fff);
    padding: 10px 18px;
    font-size: 12px;
    font-weight: 500;
    text-decoration: none;
    border-radius: 5px;
    transition: all 0.25s ease;
  }

  .video-with-text-2__button:hover {
    background: var(--vwt2-btn-hover-bg, #2d4373);
    transform: translateY(-1px);
  }

  .video-with-text-2__button svg {
    width: 14px;
    height: 14px;
    transition: transform 0.25s ease;
  }

  .video-with-text-2__button:hover svg {
    transform: translateX(3px);
  }

  /* Video Side - Mobile First */
  .video-with-text-2__video {
    position: relative;
    width: 100%;
    border-radius: var(--vwt2-video-radius, 0);
    overflow: hidden;
  }

  .video-with-text-2__video-inner {
    position: relative;
    width: 100%;
    padding-bottom: 75%; /* 4:3 default */
    background: #f0f0f0;
  }

  .video-with-text-2__video--16-9 .video-with-text-2__video-inner {
    padding-bottom: 56.25%;
  }

  .video-with-text-2__video--4-3 .video-with-text-2__video-inner {
    padding-bottom: 75%;
  }

  .video-with-text-2__video--1-1 .video-with-text-2__video-inner {
    padding-bottom: 100%;
  }

  .video-with-text-2__video-element,
  .video-with-text-2__video-iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border: none;
  }

  .video-with-text-2__video-placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .video-with-text-2__video-placeholder svg {
    width: 48px;
    height: 48px;
    color: #fff;
    opacity: 0.8;
  }

  /* ============================================
     RESPONSIVE BREAKPOINTS
     ============================================ */

  /* 400px - Small mobile */
  @media (min-width: 400px) {
    .video-with-text-2 {
      padding: 32px 14px;
    }

    .video-with-text-2__container {
      gap: 26px;
    }

    .video-with-text-2__subheading {
      font-size: 10px;
      margin-bottom: 12px;
    }

    .video-with-text-2__heading {
      font-size: 24px;
      margin-bottom: 16px;
    }

    .video-with-text-2__text {
      font-size: 13px;
      margin-bottom: 22px;
    }

    .video-with-text-2__button {
      padding: 11px 20px;
      font-size: 12px;
    }

    .video-with-text-2__video-placeholder svg {
      width: 52px;
      height: 52px;
    }
  }

  /* 550px - Large mobile */
  @media (min-width: 550px) {
    .video-with-text-2 {
      padding: 36px 18px;
    }

    .video-with-text-2__container {
      gap: 28px;
    }

    .video-with-text-2__subheading {
      font-size: 10px;
      letter-spacing: 1.8px;
      margin-bottom: 14px;
    }

    .video-with-text-2__heading {
      font-size: 26px;
      margin-bottom: 18px;
    }

    .video-with-text-2__text {
      font-size: 14px;
      line-height: 1.65;
      margin-bottom: 24px;
    }

    .video-with-text-2__button {
      padding: 12px 22px;
      font-size: 13px;
      gap: 7px;
    }

    .video-with-text-2__button svg {
      width: 15px;
      height: 15px;
    }

    .video-with-text-2__video-placeholder svg {
      width: 56px;
      height: 56px;
    }
  }

  /* 768px - Tablet */
  @media (min-width: 768px) {
    .video-with-text-2 {
      padding: 44px 28px;
    }

    .video-with-text-2__container {
      gap: 32px;
    }

    .video-with-text-2__subheading {
      font-size: 11px;
      letter-spacing: 2px;
      margin-bottom: 16px;
    }

    .video-with-text-2__heading {
      font-size: 30px;
      margin-bottom: 20px;
    }

    .video-with-text-2__text {
      font-size: 15px;
      line-height: 1.7;
      margin-bottom: 26px;
    }

    .video-with-text-2__button {
      padding: 13px 24px;
      font-size: 13px;
      gap: 8px;
      border-radius: 6px;
    }

    .video-with-text-2__button svg {
      width: 16px;
      height: 16px;
    }

    .video-with-text-2__video-placeholder svg {
      width: 60px;
      height: 60px;
    }
  }

  /* 1024px - Desktop - Switch to grid layout */
  @media (min-width: 1024px) {
    .video-with-text-2 {
      padding: 56px 40px;
    }

    .video-with-text-2__container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 50px;
      align-items: center;
    }

    .video-with-text-2--reverse .video-with-text-2__container {
      direction: rtl;
    }

    .video-with-text-2--reverse .video-with-text-2__container > * {
      direction: ltr;
    }

    .video-with-text-2__content {
      text-align: center;
      align-items: center;
    }

    .video-with-text-2__subheading {
      font-size: 12px;
    }

    .video-with-text-2__heading {
      font-size: 36px;
    }

    .video-with-text-2__text {
      font-size: 15px;
      margin-bottom: 28px;
    }

    .video-with-text-2__button {
      padding: 14px 26px;
      font-size: 14px;
    }
  }

  /* 1400px - Large desktop */
  @media (min-width: 1400px) {
    .video-with-text-2 {
      padding: 70px 60px;
    }

    .video-with-text-2__container {
      gap: 80px;
    }

    .video-with-text-2__subheading {
      font-size: 12px;
      letter-spacing: 2.5px;
    }

    .video-with-text-2__heading {
      font-size: 42px;
    }

    .video-with-text-2__text {
      font-size: 16px;
      max-width: 500px;
    }

    .video-with-text-2__button {
      padding: 15px 30px;
      font-size: 14px;
    }

    .video-with-text-2__video-placeholder svg {
      width: 70px;
      height: 70px;
    }
  }
</style>

<section
  class="video-with-text-2 {% if section.settings.layout == 'video_first' %}video-with-text-2--reverse{% endif %}"
  data-section-id="{{ section.id }}"
>
  <div class="video-with-text-2__container">
    <!-- Content -->
    <div class="video-with-text-2__content">
      {%- if section.settings.subheading != blank -%}
        <p class="video-with-text-2__subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h2 class="video-with-text-2__heading video-with-text-2__heading--{{ section.settings.heading_font }}">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <div class="video-with-text-2__text">{{ section.settings.text }}</div>
      {%- endif -%}

      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_link }}" class="video-with-text-2__button">
          {{ section.settings.button_text }}
          {%- if section.settings.show_button_arrow -%}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
          {%- endif -%}
        </a>
      {%- endif -%}
    </div>

    <!-- Video -->
    <div class="video-with-text-2__video video-with-text-2__video--{{ section.settings.video_aspect_ratio }}">
      <div class="video-with-text-2__video-inner">
        {%- if section.settings.video != blank -%}
          <video
            class="video-with-text-2__video-element"
            {% if section.settings.video_autoplay %}autoplay muted{% endif %}
            {% if section.settings.video_loop %}loop{% endif %}
            {% if section.settings.video_controls %}controls{% endif %}
            playsinline
            preload="metadata"
          >
            {%- for source in section.settings.video.sources -%}
              <source src="{{ source.url }}" type="{{ source.mime_type }}">
            {%- endfor -%}
          </video>
        {%- elsif section.settings.video_url != blank -%}
          <iframe
            class="video-with-text-2__video-iframe"
            src="{{ section.settings.video_url }}"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
            loading="lazy"
          ></iframe>
        {%- else -%}
          <div class="video-with-text-2__video-placeholder">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><polygon points="5 3 19 12 5 21 5 3"/></svg>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const section = document.querySelector('.video-with-text-2[data-section-id="{{ section.id }}"]');
  if (!section) return;

  // Parse YouTube/Vimeo URLs for iframes
  const iframe = section.querySelector('.video-with-text-2__video-iframe');
  if (iframe && iframe.src) {
    let src = iframe.src;

    // YouTube watch URL to embed
    const ytMatch = src.match(/youtube\.com\/watch\?v=([a-zA-Z0-9_-]+)/);
    if (ytMatch) {
      iframe.src = 'https://www.youtube.com/embed/' + ytMatch[1];
    }

    // YouTube short URL to embed
    const ytShortMatch = src.match(/youtu\.be\/([a-zA-Z0-9_-]+)/);
    if (ytShortMatch) {
      iframe.src = 'https://www.youtube.com/embed/' + ytShortMatch[1];
    }

    // Vimeo URL to embed
    const vimeoMatch = src.match(/vimeo\.com\/(\d+)/);
    if (vimeoMatch) {
      iframe.src = 'https://player.vimeo.com/video/' + vimeoMatch[1];
    }
  }
});
</script>

