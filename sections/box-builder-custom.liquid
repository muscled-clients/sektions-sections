<style>
  #box-builder-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  #box-builder-{{ section.id }} .container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  #box-builder-{{ section.id }} .box-builder-wrapper {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 30px;
    align-items: start;
  }

  /* Product Grid Styles */
  #box-builder-{{ section.id }} .products-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  #box-builder-{{ section.id }} .product-card {
    background: #fde4e4;
    border-radius: 16px;
    padding: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    position: relative;
  }

  #box-builder-{{ section.id }} .product-image {
    width: 100%;
    aspect-ratio: 1;
    object-fit: contain;
    margin-bottom: 15px;
  }

  #box-builder-{{ section.id }} .product-title {
    font-size: 16px;
    font-weight: 600;
    color: #5968d1;
    margin-bottom: 8px;
    min-height: 48px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 1.4;
  }

  #box-builder-{{ section.id }} .product-description {
    font-size: 14px;
    color: #5968d1;
    margin-bottom: 15px;
    line-height: 1.4;
    opacity: 0.8;
  }

  #box-builder-{{ section.id }} .add-to-box-btn {
    width: 100%;
    padding: 12px 20px;
    background: #5968d1;
    color: white;
    border: 2px solid #5968d1;
    border-radius: 25px;
    font-weight: 600;
    font-size: 14px;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  #box-builder-{{ section.id }} .add-to-box-btn:hover {
    background: transparent;
    color: #5968d1;
  }

  #box-builder-{{ section.id }} .quantity-selector {
    display: none;
    align-items: center;
    justify-content: center;
    gap: 0;
    width: 100%;
  }

  #box-builder-{{ section.id }} .quantity-selector.active {
    display: flex;
  }

  #box-builder-{{ section.id }} .quantity-btn {
    width: 48px;
    height: 48px;
    background: #5968d1;
    color: white;
    border: none;
    font-size: 24px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.3s ease;
  }

  #box-builder-{{ section.id }} .quantity-btn:first-child {
    border-radius: 25px 0 0 25px;
  }

  #box-builder-{{ section.id }} .quantity-btn:last-child {
    border-radius: 0 25px 25px 0;
  }

  #box-builder-{{ section.id }} .quantity-btn:hover {
    background: #4958c1;
  }

  #box-builder-{{ section.id }} .quantity-input {
    width: 60px;
    height: 48px;
    text-align: center;
    border: none;
    border-top: 2px solid #5968d1;
    border-bottom: 2px solid #5968d1;
    font-size: 18px;
    font-weight: 600;
    background: transparent;
    color: #5968d1;
  }

