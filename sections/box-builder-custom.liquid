    width: 100%;
    padding: 16px;
    background: #8b95e6;
    color: white;
    border: none;
    border-radius: 25px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  #box-builder-{{ section.id }} .add-to-cart-btn:hover:not(:disabled) {
