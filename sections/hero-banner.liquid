{% style %}
  #shopify-section-{{ section.id }} {
    width: 100%;
    max-width: 100%;
    margin-left: 0;
    margin-right: 0;
    padding-left: 0;
    padding-right: 0;
    overflow: hidden;
  }

  .hero-banner-section-{{ section.id }} {
    --hero-text-color: {{ section.settings.text_color }};
    --hero-heading-color: {{ section.settings.heading_color }};
    --hero-overlay-color: {{ section.settings.overlay_color }};
    --hero-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    --hero-btn-primary-bg: {{ section.settings.button_primary_bg }};
    --hero-btn-primary-text: {{ section.settings.button_primary_text }};
    --hero-btn-secondary-bg: {{ section.settings.button_secondary_bg }};
    --hero-btn-secondary-text: {{ section.settings.button_secondary_text }};
    --hero-btn-secondary-border: {{ section.settings.button_secondary_border }};
    position: relative;
    width: 100%;
    height: {{ section.settings.height_mobile }}vh;
    overflow: hidden;
    box-sizing: border-box;
  }

  .hero-banner-section-{{ section.id }} *,
  .hero-banner-section-{{ section.id }} *::before,
  .hero-banner-section-{{ section.id }} *::after {
    box-sizing: border-box;
  }

  /* Slides Container */
  .hero-slides-{{ section.id }} {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .hero-slide-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity {{ section.settings.transition_duration }}ms ease;
    z-index: 1;
  }

  .hero-slide-{{ section.id }}.active {
    opacity: 1;
    z-index: 2;
  }

  /* Background Image */
  .hero-bg-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ section.settings.image_position }};
  }

  .hero-bg-{{ section.id }}.desktop {
    display: none;
  }

  .hero-bg-{{ section.id }}.mobile {
    display: block;
  }

  /* Overlay */
  .hero-overlay-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--hero-overlay-color);
    opacity: var(--hero-overlay-opacity);
    z-index: 3;
  }

  /* Content */
  .hero-content-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: {{ section.settings.content_vertical_align }};
    align-items: {{ section.settings.content_horizontal_align }};
    text-align: {{ section.settings.text_align }};
    padding: 20px 15px;
    z-index: 4;
  }

  .hero-content-inner-{{ section.id }} {
    max-width: 100%;
    width: 100%;
  }

  .hero-subheading-{{ section.id }} {
    font-size: 10px;
    font-weight: 300;
    color: var(--hero-text-color);
    margin: 0 0 8px 0;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    opacity: 0.9;
  }

  .hero-heading-{{ section.id }} {
    font-size: 26px;
    font-weight: {{ section.settings.heading_weight }};
    font-style: {{ section.settings.heading_style }};
    color: var(--hero-heading-color);
    margin: 0 0 12px 0;
    line-height: 1.15;
    letter-spacing: -0.02em;
  }

  .hero-description-{{ section.id }} {
    font-size: 13px;
    font-weight: 300;
    color: var(--hero-text-color);
    margin: 0 0 18px 0;
    line-height: 1.5;
    opacity: 0.9;
  }

  /* Buttons */
  .hero-buttons-{{ section.id }} {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: {{ section.settings.text_align }};
  }

  .hero-btn-{{ section.id }} {
    display: inline-block;
    padding: 10px 20px;
    font-size: 12px;
    font-weight: 400;
    text-decoration: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .hero-btn-{{ section.id }}.primary {
    background: var(--hero-btn-primary-bg);
    color: var(--hero-btn-primary-text);
    border: 2px solid var(--hero-btn-primary-bg);
  }

  .hero-btn-{{ section.id }}.primary:hover {
    background: transparent;
    color: var(--hero-btn-primary-bg);
  }

  .hero-btn-{{ section.id }}.secondary {
    background: var(--hero-btn-secondary-bg);
    color: var(--hero-btn-secondary-text);
    border: 2px solid var(--hero-btn-secondary-border);
  }

  .hero-btn-{{ section.id }}.secondary:hover {
    background: var(--hero-btn-secondary-border);
    color: var(--hero-btn-primary-text);
  }

  /* Navigation Dots */
  .hero-dots-{{ section.id }} {
    position: absolute;
    bottom: 15px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
    z-index: 5;
  }

  .hero-dot-{{ section.id }} {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.4);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .hero-dot-{{ section.id }}.active,
  .hero-dot-{{ section.id }}:hover {
    background: var(--hero-heading-color);
    transform: scale(1.2);
  }

  /* Navigation Arrows */
  .hero-arrows-{{ section.id }} {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    padding: 0 10px;
    z-index: 5;
    pointer-events: none;
  }

  .hero-arrow-{{ section.id }} {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    pointer-events: auto;
    backdrop-filter: blur(5px);
  }

  .hero-arrow-{{ section.id }}:hover {
    background: rgba(255, 255, 255, 0.4);
  }

  .hero-arrow-{{ section.id }} svg {
    width: 16px;
    height: 16px;
    stroke: white;
  }

  /* Medium Mobile - 400px */
  @media (min-width: 400px) {
    .hero-content-{{ section.id }} {
      padding: 25px 18px;
    }

    .hero-subheading-{{ section.id }} {
      font-size: 11px;
      letter-spacing: 1.8px;
      margin-bottom: 10px;
    }

    .hero-heading-{{ section.id }} {
      font-size: 30px;
      margin-bottom: 14px;
    }

    .hero-description-{{ section.id }} {
      font-size: 14px;
      margin-bottom: 20px;
    }

    .hero-buttons-{{ section.id }} {
      gap: 12px;
    }

    .hero-btn-{{ section.id }} {
      padding: 11px 24px;
      font-size: 13px;
    }

    .hero-dots-{{ section.id }} {
      bottom: 18px;
      gap: 9px;
    }

    .hero-dot-{{ section.id }} {
      width: 9px;
      height: 9px;
    }

    .hero-arrows-{{ section.id }} {
      padding: 0 12px;
    }

    .hero-arrow-{{ section.id }} {
      width: 38px;
      height: 38px;
    }

    .hero-arrow-{{ section.id }} svg {
      width: 17px;
      height: 17px;
    }
  }

  /* Large Mobile - 550px */
  @media (min-width: 550px) {
    .hero-content-{{ section.id }} {
      padding: 28px 25px;
    }

    .hero-content-inner-{{ section.id }} {
      max-width: 450px;
    }

    .hero-subheading-{{ section.id }} {
      font-size: 12px;
      margin-bottom: 12px;
    }

    .hero-heading-{{ section.id }} {
      font-size: {{ section.settings.heading_size_mobile }}px;
      margin-bottom: 16px;
    }

    .hero-description-{{ section.id }} {
      font-size: 15px;
      margin-bottom: 24px;
    }

    .hero-btn-{{ section.id }} {
      padding: 12px 28px;
      font-size: 14px;
    }

    .hero-dots-{{ section.id }} {
      bottom: 20px;
    }

    .hero-dot-{{ section.id }} {
      width: 10px;
      height: 10px;
    }

    .hero-arrows-{{ section.id }} {
      padding: 0 15px;
    }

    .hero-arrow-{{ section.id }} {
      width: 42px;
      height: 42px;
    }

    .hero-arrow-{{ section.id }} svg {
      width: 18px;
      height: 18px;
    }
  }

  /* Tablet - 768px */
  @media (min-width: 768px) {
    .hero-banner-section-{{ section.id }} {
      height: {{ section.settings.height_desktop }}vh;
    }

    .hero-bg-{{ section.id }}.desktop {
      display: block;
    }

    .hero-bg-{{ section.id }}.mobile {
      display: none;
    }

    .hero-content-{{ section.id }} {
      padding: 35px 40px;
    }

    .hero-content-inner-{{ section.id }} {
      max-width: 550px;
    }

    .hero-subheading-{{ section.id }} {
      font-size: 14px;
      letter-spacing: 2px;
      margin-bottom: 14px;
    }

    .hero-heading-{{ section.id }} {
      font-size: 48px;
      margin-bottom: 18px;
    }

    .hero-description-{{ section.id }} {
      font-size: 17px;
      line-height: 1.6;
      margin-bottom: 28px;
    }

    .hero-buttons-{{ section.id }} {
      gap: 16px;
    }

    .hero-btn-{{ section.id }} {
      padding: 14px 34px;
      font-size: 15px;
    }

    .hero-dots-{{ section.id }} {
      bottom: 25px;
      gap: 10px;
    }

    .hero-arrows-{{ section.id }} {
      padding: 0 25px;
    }

    .hero-arrow-{{ section.id }} {
      width: 46px;
      height: 46px;
    }

    .hero-arrow-{{ section.id }} svg {
      width: 20px;
      height: 20px;
    }
  }

  /* Small Desktop - 1024px */
  @media (min-width: 1024px) {
    .hero-content-{{ section.id }} {
      padding: 40px 60px;
    }

    .hero-content-inner-{{ section.id }} {
      max-width: 650px;
    }

    .hero-subheading-{{ section.id }} {
      font-size: 15px;
      margin-bottom: 15px;
    }

    .hero-heading-{{ section.id }} {
      font-size: 60px;
      margin-bottom: 20px;
    }

    .hero-description-{{ section.id }} {
      font-size: 18px;
      margin-bottom: 30px;
    }

    .hero-buttons-{{ section.id }} {
      gap: 18px;
    }

    .hero-btn-{{ section.id }} {
      padding: 15px 38px;
      font-size: 16px;
    }

    .hero-arrows-{{ section.id }} {
      padding: 0 30px;
    }

    .hero-arrow-{{ section.id }} {
      width: 50px;
      height: 50px;
    }
  }

  /* Large Desktop - 1400px */
  @media (min-width: 1400px) {
    .hero-content-{{ section.id }} {
      padding: 50px 100px;
    }

    .hero-content-inner-{{ section.id }} {
      max-width: {{ section.settings.content_max_width }}px;
    }

    .hero-subheading-{{ section.id }} {
      font-size: 16px;
    }

    .hero-heading-{{ section.id }} {
      font-size: {{ section.settings.heading_size_desktop }}px;
    }

    .hero-description-{{ section.id }} {
      font-size: 20px;
    }

    .hero-buttons-{{ section.id }} {
      gap: 20px;
    }

    .hero-btn-{{ section.id }} {
      padding: 16px 40px;
    }

    .hero-dots-{{ section.id }} {
      bottom: 30px;
    }

    .hero-arrows-{{ section.id }} {
      padding: 0 40px;
    }

    .hero-arrow-{{ section.id }} {
      width: 54px;
      height: 54px;
    }

    .hero-arrow-{{ section.id }} svg {
      width: 22px;
      height: 22px;
    }
  }

  /* Hide arrows/dots based on settings */
  {%- unless section.settings.show_arrows -%}
    .hero-arrows-{{ section.id }} {
      display: none;
    }
  {%- endunless -%}

  {%- unless section.settings.show_dots -%}
    .hero-dots-{{ section.id }} {
      display: none;
    }
  {%- endunless -%}
{% endstyle %}

<div class="hero-banner-section-{{ section.id }}" data-section-id="{{ section.id }}" data-hero-banner>
  <div class="hero-slides-{{ section.id }}" data-slides>
    {%- for block in section.blocks -%}
      <div class="hero-slide-{{ section.id }}{% if forloop.first %} active{% endif %}" data-slide="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
        <!-- Background Images -->
        {%- if block.settings.image_desktop != blank -%}
          <img
            class="hero-bg-{{ section.id }} desktop"
            src="{{ block.settings.image_desktop | image_url: width: 1920 }}"
            alt="{{ block.settings.heading | escape }}"
            loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
          >
        {%- else -%}
          {{ 'collection-1' | placeholder_svg_tag: 'hero-bg-' | append: section.id | append: ' desktop' }}
        {%- endif -%}

        {%- if block.settings.image_mobile != blank -%}
          <img
            class="hero-bg-{{ section.id }} mobile"
            src="{{ block.settings.image_mobile | image_url: width: 800 }}"
            alt="{{ block.settings.heading | escape }}"
            loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
          >
        {%- elsif block.settings.image_desktop != blank -%}
          <img
            class="hero-bg-{{ section.id }} mobile"
            src="{{ block.settings.image_desktop | image_url: width: 800 }}"
            alt="{{ block.settings.heading | escape }}"
            loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
          >
        {%- else -%}
          {{ 'collection-1' | placeholder_svg_tag: 'hero-bg-' | append: section.id | append: ' mobile' }}
        {%- endif -%}

        <!-- Overlay -->
        <div class="hero-overlay-{{ section.id }}"></div>

        <!-- Content -->
        <div class="hero-content-{{ section.id }}">
          <div class="hero-content-inner-{{ section.id }}">
            {%- if block.settings.subheading != blank -%}
              <p class="hero-subheading-{{ section.id }}">{{ block.settings.subheading }}</p>
            {%- endif -%}

            {%- if block.settings.heading != blank -%}
              <h2 class="hero-heading-{{ section.id }}">{{ block.settings.heading }}</h2>
            {%- endif -%}

            {%- if block.settings.description != blank -%}
              <p class="hero-description-{{ section.id }}">{{ block.settings.description }}</p>
            {%- endif -%}

            {%- if block.settings.button_1_text != blank or block.settings.button_2_text != blank -%}
              <div class="hero-buttons-{{ section.id }}">
                {%- if block.settings.button_1_text != blank -%}
                  <a class="hero-btn-{{ section.id }} primary" href="{{ block.settings.button_1_link }}">
                    {{ block.settings.button_1_text }}
                  </a>
                {%- endif -%}

                {%- if block.settings.button_2_text != blank -%}
                  <a class="hero-btn-{{ section.id }} secondary" href="{{ block.settings.button_2_link }}">
                    {{ block.settings.button_2_text }}
                  </a>
                {%- endif -%}
              </div>
            {%- endif -%}
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>

  {%- if section.blocks.size > 1 -%}
    <!-- Navigation Arrows -->
    <div class="hero-arrows-{{ section.id }}">
      <button class="hero-arrow-{{ section.id }}" data-prev aria-label="Previous slide">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>
      <button class="hero-arrow-{{ section.id }}" data-next aria-label="Next slide">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9,6 15,12 9,18"></polyline>
        </svg>
      </button>
    </div>

    <!-- Navigation Dots -->
    <div class="hero-dots-{{ section.id }}" data-dots>
      {%- for block in section.blocks -%}
        <button class="hero-dot-{{ section.id }}{% if forloop.first %} active{% endif %}" data-dot="{{ forloop.index0 }}" aria-label="Go to slide {{ forloop.index }}"></button>
      {%- endfor -%}
    </div>
  {%- endif -%}
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const section = document.querySelector('[data-section-id="{{ section.id }}"]');
    if (!section) return;

    const slides = section.querySelectorAll('[data-slide]');
    const dots = section.querySelectorAll('[data-dot]');
    const prevBtn = section.querySelector('[data-prev]');
    const nextBtn = section.querySelector('[data-next]');

    if (slides.length <= 1) return;

    let currentIndex = 0;
    let autoplayInterval = null;
    const autoplay = {{ section.settings.autoplay | json }};
    const autoplaySpeed = {{ section.settings.autoplay_speed }};

    function goToSlide(index) {
      if (index < 0) index = slides.length - 1;
      if (index >= slides.length) index = 0;

      slides.forEach((slide, i) => {
        slide.classList.toggle('active', i === index);
      });

      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === index);
      });

      currentIndex = index;
    }

    function nextSlide() {
      goToSlide(currentIndex + 1);
    }

    function prevSlide() {
      goToSlide(currentIndex - 1);
    }

    function startAutoplay() {
      if (autoplay && !autoplayInterval) {
        autoplayInterval = setInterval(nextSlide, autoplaySpeed);
      }
    }

    function stopAutoplay() {
      if (autoplayInterval) {
        clearInterval(autoplayInterval);
        autoplayInterval = null;
      }
    }

    function resetAutoplay() {
      stopAutoplay();
      startAutoplay();
    }

    // Event listeners
    if (prevBtn) {
      prevBtn.addEventListener('click', () => {
        prevSlide();
        resetAutoplay();
      });
    }

    if (nextBtn) {
      nextBtn.addEventListener('click', () => {
        nextSlide();
        resetAutoplay();
      });
    }

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        goToSlide(index);
        resetAutoplay();
      });
    });

    // Pause on hover
    section.addEventListener('mouseenter', stopAutoplay);
    section.addEventListener('mouseleave', startAutoplay);

    // Touch/swipe support
    let touchStartX = 0;
    let touchEndX = 0;

    section.addEventListener('touchstart', (e) => {
      touchStartX = e.changedTouches[0].screenX;
      stopAutoplay();
    }, { passive: true });

    section.addEventListener('touchend', (e) => {
      touchEndX = e.changedTouches[0].screenX;
      const diff = touchStartX - touchEndX;

      if (Math.abs(diff) > 50) {
        if (diff > 0) {
          nextSlide();
        } else {
          prevSlide();
        }
      }
      startAutoplay();
    }, { passive: true });

    // Start autoplay
    startAutoplay();
  });
</script>

