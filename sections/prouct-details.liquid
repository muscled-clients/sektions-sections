{% style %}
  .product-details-{{ section.id }} {
    --pd-bg: {{ section.settings.background_color }};
    --pd-text-color: {{ section.settings.text_color }};
    --pd-heading-color: {{ section.settings.heading_color }};
    --pd-accent-color: {{ section.settings.accent_color }};
    --pd-price-color: {{ section.settings.price_color }};
    --pd-compare-color: {{ section.settings.compare_price_color }};
    --pd-button-bg: {{ section.settings.button_bg_color }};
    --pd-button-text: {{ section.settings.button_text_color }};
    --pd-badge-bg: {{ section.settings.badge_bg_color }};
    --pd-badge-text: {{ section.settings.badge_text_color }};
    --pd-border-color: {{ section.settings.border_color }};
  }
{% endstyle %}

<section class="product-details product-details-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="pd__container">
    <div class="pd__grid">
      <!-- Left Column - Images & FAQ -->
      <div class="pd__left">
        <!-- Main Product Image -->
        {% assign main_product = section.settings.product %}
        <div class="pd__gallery">
          <div class="pd__main-image">
            {% if main_product != blank and main_product.featured_image != blank %}
              <img
                src="{{ main_product.featured_image | image_url: width: 800 }}"
                alt="{{ main_product.title }}"
                class="pd__image"
                loading="lazy"
              >
            {% elsif section.settings.product_image != blank %}
              <img
                src="{{ section.settings.product_image | image_url: width: 800 }}"
                alt="{{ section.settings.product_title | default: 'Product' }}"
                class="pd__image"
                loading="lazy"
              >
            {% else %}
              <div class="pd__image-placeholder">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>

          <!-- Lifestyle Images -->
          <div class="pd__lifestyle-images">
            {% for block in section.blocks %}
              {% if block.type == 'lifestyle_image' %}
                <div class="pd__lifestyle-card" {{ block.shopify_attributes }}>
                  {% if block.settings.image != blank %}
                    <img
                      src="{{ block.settings.image | image_url: width: 400 }}"
                      alt="{{ block.settings.heading }}"
                      class="pd__lifestyle-img"
                      loading="lazy"
                    >
                  {% else %}
                    <div class="pd__lifestyle-placeholder">
                      {{ 'lifestyle-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                  <div class="pd__lifestyle-content">
                    {% if block.settings.heading != blank %}
                      <h4 class="pd__lifestyle-heading">{{ block.settings.heading }}</h4>
                    {% endif %}
                    {% if block.settings.tags != blank %}
                      <div class="pd__lifestyle-tags">
                        {% assign tag_list = block.settings.tags | split: ',' %}
                        {% for tag in tag_list %}
                          <span class="pd__lifestyle-tag">{{ tag | strip }}</span>
                        {% endfor %}
                      </div>
                    {% endif %}
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>

        <!-- FAQ Section -->
        <div class="pd__faq">
          {% for block in section.blocks %}
            {% if block.type == 'faq_item' %}
              <div class="pd__faq-item" data-faq-item {{ block.shopify_attributes }}>
                <button class="pd__faq-question" type="button" aria-expanded="false">
                  <span class="pd__faq-question-text">{{ block.settings.question }}</span>
                  <span class="pd__faq-icon">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="6 9 12 15 18 9"></polyline>
                    </svg>
                  </span>
                </button>
                <div class="pd__faq-answer">
                  <div class="pd__faq-answer-inner">
                    {{ block.settings.answer }}
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <!-- Right Column - Product Info -->
      <div class="pd__right">
        <!-- Social Proof -->
        {% if section.settings.social_proof_text != blank %}
          <div class="pd__social-proof">
            <span class="pd__social-avatars">
              <span class="pd__avatar">D</span>
              <span class="pd__avatar">M</span>
              <span class="pd__avatar">+</span>
            </span>
            <span class="pd__social-text">{{ section.settings.social_proof_text }}</span>
          </div>
        {% endif %}

        <!-- Product Title -->
        {% assign display_title = section.settings.product_title %}
        {% if main_product != blank %}
          {% assign display_title = main_product.title %}
        {% endif %}
        {% if display_title != blank %}
          <h1 class="pd__title">{{ display_title }}</h1>
        {% endif %}

        <!-- Reviews -->
        {% if section.settings.show_reviews %}
          <div class="pd__reviews">
            <span class="pd__reviews-label">Excellent</span>
            <span class="pd__reviews-stars">
              {% for i in (1..5) %}
                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                </svg>
              {% endfor %}
            </span>
            <span class="pd__reviews-count">{{ section.settings.reviews_count | default: '20,921' }} reviews</span>
          </div>
        {% endif %}

        <!-- Pricing -->
        <div class="pd__pricing">
          {% if main_product != blank %}
            {% if main_product.compare_at_price > main_product.price %}
              <span class="pd__compare-price">{{ main_product.compare_at_price | money }}</span>
            {% endif %}
            <span class="pd__price">{{ main_product.price | money }}</span>
          {% else %}
            {% if section.settings.compare_price != blank %}
              <span class="pd__compare-price">{{ section.settings.compare_price }}</span>
            {% endif %}
            {% if section.settings.price != blank %}
              <span class="pd__price">{{ section.settings.price }}</span>
            {% endif %}
          {% endif %}
        </div>

        <!-- Stock Indicator -->
        {% if section.settings.show_stock_indicator %}
          <div class="pd__stock">
            <span class="pd__stock-dot"></span>
            <span class="pd__stock-text">only <strong>{{ section.settings.stock_count | default: 13 }}</strong> left in stock - order soon</span>
          </div>
          <div class="pd__stock-bar">
            <div class="pd__stock-bar-fill" style="width: {{ section.settings.stock_percentage | default: 25 }}%;"></div>
          </div>
        {% endif %}

        <!-- Description -->
        {% assign display_description = section.settings.description %}
        {% if main_product != blank and main_product.description != blank %}
          {% assign display_description = main_product.description | strip_html | truncate: 200 %}
        {% endif %}
        {% if display_description != blank %}
          <div class="pd__description">
            {{ display_description }}
          </div>
        {% endif %}

        <!-- Benefits -->
        <ul class="pd__benefits">
          {% for block in section.blocks %}
            {% if block.type == 'benefit' %}
              <li class="pd__benefit" {{ block.shopify_attributes }}>
                <span class="pd__benefit-icon">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                </span>
                <span class="pd__benefit-text">{{ block.settings.text }}</span>
              </li>
            {% endif %}
          {% endfor %}
        </ul>

        <!-- Shipping Info -->
        {% if section.settings.shipping_text != blank %}
          <div class="pd__shipping">
            <span class="pd__shipping-dot"></span>
            <span class="pd__shipping-text">{{ section.settings.shipping_text }}</span>
            {% if section.settings.shipping_badge != blank %}
              <span class="pd__shipping-badge">{{ section.settings.shipping_badge }}</span>
            {% endif %}
          </div>
        {% endif %}

        <!-- Popular Addons -->
        {% assign has_addons = false %}
        {% for block in section.blocks %}
          {% if block.type == 'addon' %}
            {% assign has_addons = true %}
            {% break %}
          {% endif %}
        {% endfor %}
        {% if has_addons %}
          <div class="pd__addons">
            <h4 class="pd__addons-title">POPULAR ADDONS</h4>
            {% for block in section.blocks %}
              {% if block.type == 'addon' %}
                {% assign addon_product = block.settings.product %}
                {% assign addon_title = block.settings.title %}
                {% assign addon_price = block.settings.price %}
                {% assign addon_image = block.settings.image %}
                {% assign addon_sold_out = block.settings.sold_out %}

                {% if addon_product != blank %}
                  {% assign addon_title = addon_product.title %}
                  {% assign addon_price = addon_product.price | money %}
                  {% assign addon_image = addon_product.featured_image %}
                  {% assign addon_sold_out = false %}
                  {% unless addon_product.available %}
                    {% assign addon_sold_out = true %}
                  {% endunless %}
                {% endif %}

                <div class="pd__addon" {{ block.shopify_attributes }}>
                  <div class="pd__addon-image">
                    {% if addon_image != blank %}
                      <img
                        src="{{ addon_image | image_url: width: 100 }}"
                        alt="{{ addon_title }}"
                        loading="lazy"
                      >
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag }}
                    {% endif %}
                  </div>
                  <div class="pd__addon-info">
                    <span class="pd__addon-title">{{ addon_title }}</span>
                    <span class="pd__addon-price">
                      {{ addon_price }}
                      {% if block.settings.badge != blank %}
                        <span class="pd__addon-badge">{{ block.settings.badge }}</span>
                      {% endif %}
                    </span>
                  </div>
                  <div class="pd__addon-toggle">
                    {% if addon_sold_out %}
                      <span class="pd__addon-soldout">Sold out</span>
                    {% else %}
                      <label class="pd__toggle">
                        <input type="checkbox" class="pd__toggle-input">
                        <span class="pd__toggle-slider"></span>
                      </label>
                    {% endif %}
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}

        <!-- Add to Cart Button -->
        <button type="button" class="pd__add-to-cart">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
          </svg>
          <span>{{ section.settings.button_text | default: 'Add to cart' }}</span>
        </button>

        <!-- Feature Icons -->
        <div class="pd__feature-icons">
          {% for block in section.blocks %}
            {% if block.type == 'feature_icon' %}
              <div class="pd__feature-icon-item" {{ block.shopify_attributes }}>
                <span class="pd__feature-icon">
                  {% case block.settings.icon %}
                    {% when 'headphones' %}
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M3 18v-6a9 9 0 0 1 18 0v6"></path>
                        <path d="M21 19a2 2 0 0 1-2 2h-1a2 2 0 0 1-2-2v-3a2 2 0 0 1 2-2h3zM3 19a2 2 0 0 0 2 2h1a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H3z"></path>
                      </svg>
                    {% when 'shield' %}
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                      </svg>
                    {% when 'music' %}
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M9 18V5l12-2v13"></path>
                        <circle cx="6" cy="18" r="3"></circle>
                        <circle cx="18" cy="16" r="3"></circle>
                      </svg>
                    {% when 'heart' %}
                      <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                      </svg>
                    {% when 'check' %}
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                        <polyline points="22 4 12 14.01 9 11.01"></polyline>
                      </svg>
                    {% else %}
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <circle cx="12" cy="12" r="10"></circle>
                      </svg>
                    {% endcase %}
                </span>
                <span class="pd__feature-icon-label">{{ block.settings.label }}</span>
              </div>
            {% endif %}
          {% endfor %}
        </div>

        <!-- Product Features Badges -->
        <div class="pd__features-section">
          <h4 class="pd__features-title">Product features</h4>
          <div class="pd__features-badges">
            {% for block in section.blocks %}
              {% if block.type == 'feature_badge' %}
                <span class="pd__feature-badge" {{ block.shopify_attributes }}>
                  {% case block.settings.icon %}
                    {% when 'headphones' %}
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 18v-6a9 9 0 0 1 18 0v6"></path>
                        <path d="M21 19a2 2 0 0 1-2 2h-1a2 2 0 0 1-2-2v-3a2 2 0 0 1 2-2h3zM3 19a2 2 0 0 0 2 2h1a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H3z"></path>
                      </svg>
                    {% when 'check' %}
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12"></polyline>
                      </svg>
                    {% when 'heart' %}
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                      </svg>
                    {% endcase %}
                  <span>{{ block.settings.text }}</span>
                </span>
              {% endif %}
            {% endfor %}
          </div>
        </div>

        <!-- Similar Products -->
        {% assign has_similar = false %}
        {% for block in section.blocks %}
          {% if block.type == 'similar_product' %}
            {% assign has_similar = true %}
            {% break %}
          {% endif %}
        {% endfor %}
        {% if has_similar %}
          <div class="pd__similar">
            <h4 class="pd__similar-title">Similar products</h4>
            {% for block in section.blocks %}
              {% if block.type == 'similar_product' %}
                {% assign similar_product = block.settings.product %}
                {% assign similar_title = block.settings.title %}
                {% assign similar_price = block.settings.price %}
                {% assign similar_compare = block.settings.compare_price %}
                {% assign similar_image = block.settings.image %}
                {% assign similar_url = '#' %}

                {% if similar_product != blank %}
                  {% assign similar_title = similar_product.title %}
                  {% assign similar_price = similar_product.price | money %}
                  {% assign similar_image = similar_product.featured_image %}
                  {% assign similar_url = similar_product.url %}
                  {% if similar_product.compare_at_price > similar_product.price %}
                    {% assign similar_compare = similar_product.compare_at_price | money %}
                  {% else %}
                    {% assign similar_compare = blank %}
                  {% endif %}
                {% endif %}

                <div class="pd__similar-product" {{ block.shopify_attributes }}>
                  <a href="{{ similar_url }}" class="pd__similar-image">
                    {% if similar_image != blank %}
                      <img
                        src="{{ similar_image | image_url: width: 150 }}"
                        alt="{{ similar_title }}"
                        loading="lazy"
                      >
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag }}
                    {% endif %}
                  </a>
                  <div class="pd__similar-info">
                    <a href="{{ similar_url }}" class="pd__similar-name">{{ similar_title }}</a>
                    <span class="pd__similar-pricing">
                      {% if similar_compare != blank %}
                        <span class="pd__similar-compare">{{ similar_compare }}</span>
                      {% endif %}
                      <span class="pd__similar-price">{{ similar_price }}</span>
                    </span>
                  </div>
                  <button class="pd__similar-add" type="button" aria-label="Add {{ similar_title }}">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <line x1="12" y1="5" x2="12" y2="19"></line>
                      <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                  </button>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  /* Base Section */
  .product-details {
    display: block;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    background-color: var(--pd-bg);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    padding: 32px 16px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    overflow: hidden;
    position: relative;
  }

  .product-details *,
  .product-details *::before,
  .product-details *::after {
    box-sizing: border-box;
  }

  .product-details img {
    max-width: 100%;
    height: auto;
    border: 0;
    vertical-align: middle;
  }

  .product-details h1,
  .product-details h4,
  .product-details p,
  .product-details ul {
    margin: 0;
    padding: 0;
  }

  .product-details ul {
    list-style: none;
  }

  .product-details button {
    font-family: inherit;
    cursor: pointer;
  }

  /* Container */
  .pd__container {
    display: block;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Grid - Mobile First */
  .pd__grid {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  /* Left Column */
  .pd__left {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  /* Gallery */
  .pd__gallery {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .pd__main-image {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f5f5f5;
    border-radius: 8px;
    overflow: hidden;
  }

  .pd__image {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .pd__image-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    background-color: #f0f0f0;
  }

  .pd__image-placeholder svg {
    width: 50%;
    height: auto;
    opacity: 0.4;
  }

  /* Lifestyle Images */
  .pd__lifestyle-images {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }

  .pd__lifestyle-card {
    position: relative;
    aspect-ratio: 1;
    border-radius: 8px;
    overflow: hidden;
  }

  .pd__lifestyle-img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .pd__lifestyle-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    background-color: #e0e0e0;
  }

  .pd__lifestyle-placeholder svg {
    width: 50%;
    height: auto;
    opacity: 0.4;
  }

  .pd__lifestyle-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 16px;
    background: linear-gradient(transparent, rgba(0,0,0,0.7));
    color: #ffffff;
  }

  .pd__lifestyle-heading {
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 8px;
    line-height: 1.3;
  }

  .pd__lifestyle-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }

  .pd__lifestyle-tag {
    font-size: 10px;
    opacity: 0.9;
  }

  .pd__lifestyle-tag::before {
    content: '♪ ';
  }

  /* FAQ Section */
  .pd__faq {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .pd__faq-item {
    border: 1px solid var(--pd-border-color);
    border-radius: 8px;
    overflow: hidden;
  }

  .pd__faq-question {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 16px;
    background: transparent;
    border: none;
    text-align: left;
    font-size: 14px;
    font-weight: 500;
    color: var(--pd-heading-color);
    cursor: pointer;
    transition: color 0.2s ease;
  }

  .pd__faq-item.active .pd__faq-question {
    color: var(--pd-accent-color);
  }

  .pd__faq-question-text {
    flex: 1;
    padding-right: 12px;
  }

  .pd__faq-icon {
    display: flex;
    flex-shrink: 0;
    transition: transform 0.2s ease;
  }

  .pd__faq-item.active .pd__faq-icon {
    transform: rotate(180deg);
  }

  .pd__faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease, padding 0.3s ease;
  }

  .pd__faq-item.active .pd__faq-answer {
    max-height: 500px;
  }

  .pd__faq-answer-inner {
    padding: 0 16px 16px;
    font-size: 13px;
    color: var(--pd-text-color);
    line-height: 1.6;
  }

  /* Right Column */
  .pd__right {
    display: flex;
    flex-direction: column;
  }

  /* Social Proof */
  .pd__social-proof {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 16px;
  }

  .pd__social-avatars {
    display: flex;
  }

  .pd__avatar {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background-color: var(--pd-accent-color);
    color: #ffffff;
    font-size: 10px;
    font-weight: 600;
    margin-right: -6px;
    border: 2px solid var(--pd-bg);
  }

  .pd__avatar:last-child {
    margin-right: 0;
  }

  .pd__social-text {
    font-size: 12px;
    color: var(--pd-text-color);
  }

  /* Title */
  .pd__title {
    font-size: 28px;
    font-weight: 700;
    color: var(--pd-heading-color);
    margin-bottom: 12px;
    line-height: 1.2;
  }

  /* Reviews */
  .pd__reviews {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 16px;
    flex-wrap: wrap;
  }

  .pd__reviews-label {
    font-size: 13px;
    font-weight: 600;
    color: var(--pd-heading-color);
  }

  .pd__reviews-stars {
    display: flex;
    color: #22c55e;
    gap: 2px;
  }

  .pd__reviews-count {
    font-size: 13px;
    color: var(--pd-text-color);
    text-decoration: underline;
  }

  /* Pricing */
  .pd__pricing {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 16px;
  }

  .pd__compare-price {
    font-size: 16px;
    color: var(--pd-compare-color);
    text-decoration: line-through;
  }

  .pd__price {
    font-size: 20px;
    font-weight: 700;
    color: var(--pd-price-color);
  }

