{% style %}
  #shopify-section-{{ section.id }} {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }

  .sek-countdown-{{ section.id }} {
    --sek-ct-bg: {{ section.settings.background_color }};
    --sek-ct-text: {{ section.settings.text_color }};
    --sek-ct-timer: {{ section.settings.timer_color }};
    --sek-ct-separator: {{ section.settings.separator_color }};
    --sek-ct-btn-bg: {{ section.settings.button_bg }};
    --sek-ct-btn-text: {{ section.settings.button_text_color }};
    --sek-ct-btn-hover-bg: {{ section.settings.button_hover_bg }};
    --sek-ct-btn-hover-text: {{ section.settings.button_hover_text_color }};

    position: relative;
    background: var(--sek-ct-bg);
    padding: {{ section.settings.padding_top }}px 20px {{ section.settings.padding_bottom }}px;
  }

  .sek-countdown-{{ section.id }} .sek-ct__background {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .sek-countdown-{{ section.id }} .sek-ct__bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .sek-countdown-{{ section.id }} .sek-ct__overlay {
    position: absolute;
    inset: 0;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .sek-countdown-{{ section.id }} .sek-ct__container {
    position: relative;
    z-index: 2;
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    text-align: {{ section.settings.text_align }};
    color: var(--sek-ct-text);
  }

  {% if section.settings.enable_content_bg %}
    .sek-countdown-{{ section.id }} .sek-ct__container {
      background: {{ section.settings.content_bg }};
      padding: 40px 30px;
      border-radius: {{ section.settings.content_radius }}px;
    }
  {% endif %}

  .sek-countdown-{{ section.id }} .sek-ct__badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: {{ section.settings.badge_bg }};
    color: {{ section.settings.badge_text_color }};
    padding: 8px 16px;
    border-radius: 100px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 20px;
  }

  .sek-countdown-{{ section.id }} .sek-ct__badge-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: {{ section.settings.badge_dot_color }};
    animation: sek-ct-pulse-{{ section.id }} 2s ease-in-out infinite;
  }

  @keyframes sek-ct-pulse-{{ section.id }} {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .sek-countdown-{{ section.id }} .sek-ct__heading {
    font-size: clamp(32px, 6vw, {{ section.settings.heading_size }}px);
    font-weight: 700;
    line-height: 1.1;
    margin: 0 0 15px;
    color: var(--sek-ct-text);
  }

  .sek-countdown-{{ section.id }} .sek-ct__description {
    font-size: clamp(14px, 2vw, 18px);
    line-height: 1.6;
    margin-bottom: 40px;
    color: var(--sek-ct-text);
    opacity: 0.95;
  }

  /* Countdown Timer */
  .sek-countdown-{{ section.id }} .sek-ct__timer {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
    margin-bottom: 40px;
    flex-wrap: wrap;
  }

  .sek-countdown-{{ section.id }} .sek-ct__time-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 70px;
  }

  .sek-countdown-{{ section.id }} .sek-ct__number {
    font-size: clamp(36px, 8vw, {{ section.settings.timer_size }}px);
    font-weight: 700;
    line-height: 1;
    color: var(--sek-ct-timer);
    font-family: 'Archivo Narrow', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .sek-countdown-{{ section.id }} .sek-ct__label {
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: 8px;
    color: var(--sek-ct-separator);
    font-weight: 600;
  }

  .sek-countdown-{{ section.id }} .sek-ct__separator {
    width: {{ section.settings.separator_width }}px;
    height: 40px;
    background: var(--sek-ct-separator);
  }

  /* Completed State */
  .sek-countdown-{{ section.id }} .sek-ct__completed {
    display: none;
    font-size: 24px;
    font-weight: 700;
    color: var(--sek-ct-timer);
    margin-bottom: 30px;
  }

  .sek-countdown-{{ section.id }}.is-completed .sek-ct__timer {
    display: none;
  }

  .sek-countdown-{{ section.id }}.is-completed .sek-ct__completed {
    display: block;
  }

  /* Button */
  .sek-countdown-{{ section.id }} .sek-ct__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 16px 40px;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    border-radius: {{ section.settings.button_radius }}px;
    background: var(--sek-ct-btn-bg);
    color: var(--sek-ct-btn-text);
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .sek-countdown-{{ section.id }} .sek-ct__button:hover {
    background: var(--sek-ct-btn-hover-bg);
    color: var(--sek-ct-btn-hover-text);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.2);
  }

  .sek-countdown-{{ section.id }} .sek-ct__button svg {
    width: 18px;
    height: 18px;
  }

  /* Desktop */
  @media (min-width: 768px) {
    .sek-countdown-{{ section.id }} {
      padding: {{ section.settings.padding_top }}px 60px {{ section.settings.padding_bottom }}px;
    }

    {% if section.settings.enable_content_bg %}
      .sek-countdown-{{ section.id }} .sek-ct__container {
        padding: 60px 50px;
      }
    {% endif %}

    .sek-countdown-{{ section.id }} .sek-ct__timer {
      gap: 32px;
    }

    .sek-countdown-{{ section.id }} .sek-ct__time-block {
      min-width: 100px;
    }

    .sek-countdown-{{ section.id }} .sek-ct__separator {
      height: 70px;
    }

    .sek-countdown-{{ section.id }} .sek-ct__label {
      font-size: 14px;
    }

    {% if section.settings.enable_content_bg %}
      .sek-countdown-{{ section.id }} .sek-ct__container {
        padding: 80px 60px;
      }
    {% endif %}
  }
{% endstyle %}

<div class="sek-countdown-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="sek-countdown" data-end-date="{{ section.settings.end_date }}">
  <!-- Background -->
  {% if section.settings.background_image != blank %}
    <div class="sek-ct__background">
      <img
        src="{{ section.settings.background_image | image_url: width: 2000 }}"
        srcset="{{ section.settings.background_image | image_url: width: 800 }} 800w,
                {{ section.settings.background_image | image_url: width: 1200 }} 1200w,
                {{ section.settings.background_image | image_url: width: 1600 }} 1600w,
                {{ section.settings.background_image | image_url: width: 2000 }} 2000w"
        sizes="100vw"
        alt="{{ section.settings.background_image.alt | escape }}"
        class="sek-ct__bg-image"
        loading="lazy"
      >
      <div class="sek-ct__overlay"></div>
    </div>
  {% endif %}

  <div class="sek-ct__container">
    <!-- Badge -->
    {% if section.settings.badge_text != blank %}
      <div class="sek-ct__badge">
        {% if section.settings.show_badge_dot %}
          <span class="sek-ct__badge-dot"></span>
        {% endif %}
        {{ section.settings.badge_text }}
      </div>
    {% endif %}

    <!-- Heading -->
    {% if section.settings.heading != blank %}
      <h2 class="sek-ct__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <!-- Description -->
    {% if section.settings.description != blank %}
      <p class="sek-ct__description">{{ section.settings.description }}</p>
    {% endif %}

    <!-- Countdown Timer -->
    <div class="sek-ct__timer" data-timer>
      <div class="sek-ct__time-block">
        <div class="sek-ct__number" data-days>00</div>
        <div class="sek-ct__label">{{ section.settings.label_days }}</div>
      </div>

      <div class="sek-ct__separator"></div>

      <div class="sek-ct__time-block">
        <div class="sek-ct__number" data-hours>00</div>
        <div class="sek-ct__label">{{ section.settings.label_hours }}</div>
      </div>

      <div class="sek-ct__separator"></div>

      <div class="sek-ct__time-block">
        <div class="sek-ct__number" data-minutes>00</div>
        <div class="sek-ct__label">{{ section.settings.label_minutes }}</div>
      </div>

      <div class="sek-ct__separator"></div>

      <div class="sek-ct__time-block">
        <div class="sek-ct__number" data-seconds>00</div>
        <div class="sek-ct__label">{{ section.settings.label_seconds }}</div>
      </div>
    </div>

    <!-- Completed Message -->
    {% if section.settings.completed_text != blank %}
      <div class="sek-ct__completed">{{ section.settings.completed_text }}</div>
    {% endif %}

    <!-- Button -->
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="sek-ct__button">
        {{ section.settings.button_text }}
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    {% endif %}
  </div>
</div>

<script>
  (function() {
    const section = document.querySelector('[data-section-id="{{ section.id }}"]');
    if (!section) return;

    const endDate = section.dataset.endDate;
    if (!endDate) return;

    const daysEl = section.querySelector('[data-days]');
    const hoursEl = section.querySelector('[data-hours]');
    const minutesEl = section.querySelector('[data-minutes]');
    const secondsEl = section.querySelector('[data-seconds]');

    function updateCountdown() {
      const now = new Date().getTime();
      const end = new Date(endDate).getTime();
      const distance = end - now;

      if (distance < 0) {
        section.classList.add('is-completed');
        if (daysEl) daysEl.textContent = '00';
        if (hoursEl) hoursEl.textContent = '00';
        if (minutesEl) minutesEl.textContent = '00';
        if (secondsEl) secondsEl.textContent = '00';
        return;
      }

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      if (daysEl) daysEl.textContent = String(days).padStart(2, '0');
      if (hoursEl) hoursEl.textContent = String(hours).padStart(2, '0');
      if (minutesEl) minutesEl.textContent = String(minutes).padStart(2, '0');
      if (secondsEl) secondsEl.textContent = String(seconds).padStart(2, '0');
    }

    // Update immediately
    updateCountdown();

    // Update every second
    const interval = setInterval(updateCountdown, 1000);

    // Cleanup on unload
    window.addEventListener('beforeunload', () => {
      clearInterval(interval);
    });
  })();
</script>

