<section class="countdown-timer-3 countdown-timer-3--image-{{ section.settings.image_position }}" data-section-id="{{ section.id }}">
  <div class="countdown-timer-3__container">
    <div class="countdown-timer-3__grid">
      <!-- Content Section -->
      <div class="countdown-timer-3__content">
        {%- if section.settings.subtitle != blank -%}
          <p class="countdown-timer-3__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}

        {%- if section.settings.title != blank -%}
          <h2 class="countdown-timer-3__title">{{ section.settings.title }}</h2>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <p class="countdown-timer-3__description">{{ section.settings.description }}</p>
        {%- endif -%}

        <!-- Countdown Timer -->
        <div class="countdown-timer-3__timer" data-end-date="{{ section.settings.end_date }}">
          <div class="countdown-timer-3__timer-box">
            <div class="countdown-timer-3__timer-number js-timer-days">00</div>
            <div class="countdown-timer-3__timer-label">{{ section.settings.days_label }}</div>
          </div>
          <div class="countdown-timer-3__timer-box">
            <div class="countdown-timer-3__timer-number js-timer-hours">00</div>
            <div class="countdown-timer-3__timer-label">{{ section.settings.hours_label }}</div>
          </div>
          <div class="countdown-timer-3__timer-box">
            <div class="countdown-timer-3__timer-number js-timer-minutes">00</div>
            <div class="countdown-timer-3__timer-label">{{ section.settings.minutes_label }}</div>
          </div>
          <div class="countdown-timer-3__timer-box">
            <div class="countdown-timer-3__timer-number js-timer-seconds">00</div>
            <div class="countdown-timer-3__timer-label">{{ section.settings.seconds_label }}</div>
          </div>
        </div>

        <!-- Expired Message -->
        <div class="countdown-timer-3__expired js-timer-expired">
          {{ section.settings.expired_message }}
        </div>

        {%- if section.settings.button_text != blank -%}
          <a href="{{ section.settings.button_link }}" class="countdown-timer-3__button">
            {{ section.settings.button_text }}
          </a>
        {%- endif -%}
      </div>

      <!-- Image Section -->
      <div class="countdown-timer-3__image-wrapper">
        <div class="countdown-timer-3__image">
          {%- if section.settings.image != blank -%}
            {{ section.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy', alt: section.settings.title }}
          {%- else -%}
            <div class="countdown-timer-3__image-placeholder"></div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const section = document.querySelector('.countdown-timer-3[data-section-id="{{ section.id }}"]');
  if (!section) return;

  const timerEl = section.querySelector('.countdown-timer-3__timer');
  const endDate = timerEl.dataset.endDate;

  if (!endDate) return;

  const daysEl = section.querySelector('.js-timer-days');
  const hoursEl = section.querySelector('.js-timer-hours');
  const minutesEl = section.querySelector('.js-timer-minutes');
  const secondsEl = section.querySelector('.js-timer-seconds');
  const expiredEl = section.querySelector('.js-timer-expired');

  function updateCountdown() {
    const now = new Date().getTime();
    const end = new Date(endDate).getTime();
    const distance = end - now;

    if (distance < 0) {
      // Timer expired
      daysEl.textContent = '00';
      hoursEl.textContent = '00';
      minutesEl.textContent = '00';
      secondsEl.textContent = '00';

      if (expiredEl) {
        expiredEl.classList.add('countdown-timer-3__expired--visible');
      }

      timerEl.style.display = 'none';
      clearInterval(countdownInterval);
      return;
    }

    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

    daysEl.textContent = String(days).padStart(2, '0');
    hoursEl.textContent = String(hours).padStart(2, '0');
    minutesEl.textContent = String(minutes).padStart(2, '0');
    secondsEl.textContent = String(seconds).padStart(2, '0');
  }

  // Initial update
  updateCountdown();

  // Update every second
  const countdownInterval = setInterval(updateCountdown, 1000);
});
</script>

