{% style %}
  #shopify-section-{{ section.id }} {
    --ct3-bg: {{ section.settings.background_color }};
    --ct3-text: {{ section.settings.text_color }};
    --ct3-heading: {{ section.settings.heading_color }};
    --ct3-timer-border: {{ section.settings.timer_border_color }};
    --ct3-timer-number: {{ section.settings.timer_number_color }};
    --ct3-timer-label: {{ section.settings.timer_label_color }};
    --ct3-btn-bg: {{ section.settings.button_background }};
    --ct3-btn-text: {{ section.settings.button_text_color }};
    display: block;
    width: 100%;
    max-width: 100%;
    overflow: hidden;
    margin-top: {{ section.settings.margin_top | times: 0.7 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.7 }}px;
  }

  @media (min-width: 550px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top | times: 0.8 }}px;
      margin-bottom: {{ section.settings.margin_bottom | times: 0.8 }}px;
    }
  }

  @media (min-width: 768px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top | times: 0.9 }}px;
      margin-bottom: {{ section.settings.margin_bottom | times: 0.9 }}px;
    }
  }

  @media (min-width: 1024px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{% endstyle %}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;500;600;700&family=Montserrat:wght@400;500;600&display=swap');

  .countdown-timer-3 *,
  .countdown-timer-3 *::before,
  .countdown-timer-3 *::after {
    box-sizing: border-box;
  }

  .countdown-timer-3 {
    display: block;
    width: 100%;
    background: var(--ct3-bg, #fcf8f5);
    padding: 28px 12px;
    font-family: 'Josefin Sans', sans-serif;
  }

  .countdown-timer-3__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .countdown-timer-3__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
    align-items: center;
  }

  /* Content Section - Mobile First */
  .countdown-timer-3__content {
    text-align: center;
  }

  .countdown-timer-3__subtitle {
    font-size: 11px;
    font-weight: 600;
    color: var(--ct3-text, #000000);
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin: 0 0 8px;
  }

  .countdown-timer-3__title {
    font-size: 22px;
    font-weight: 400;
    color: var(--ct3-heading, #000000);
    margin: 0 0 14px;
    line-height: 1.3;
  }

  .countdown-timer-3__description {
    font-size: 13px;
    color: var(--ct3-text, #000000);
    line-height: 1.5;
    margin: 0 0 20px;
  }

  /* Countdown Timer - Mobile First */
  .countdown-timer-3__timer {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0;
    margin-bottom: 20px;
    max-width: 280px;
    margin-left: auto;
    margin-right: auto;
  }

  .countdown-timer-3__timer-box {
    border: 1px solid var(--ct3-timer-border, #cac6c4);
    padding: 6px 8px;
    text-align: center;
    background: transparent;
  }

  .countdown-timer-3__timer-box:not(:last-child) {
    border-right: none;
  }

  .countdown-timer-3__timer-number {
    font-size: 16px;
    font-weight: 400;
    color: var(--ct3-timer-number, #000000);
    line-height: 1;
    margin: 0 0 3px;
    font-family: 'Josefin Sans', sans-serif;
  }

  .countdown-timer-3__timer-label {
    font-size: 9px;
    font-weight: 400;
    color: var(--ct3-timer-label, #000000);
    text-transform: capitalize;
  }

  /* Expired Message */
  .countdown-timer-3__expired {
    display: none;
    text-align: center;
    font-size: 14px;
    font-weight: 600;
    color: var(--ct3-heading, #000000);
    padding: 14px;
    background: rgba(0, 0, 0, 0.05);
    border-radius: 6px;
    margin-bottom: 20px;
  }

  .countdown-timer-3__expired--visible {
    display: block;
  }

  /* Button - Mobile First */
  .countdown-timer-3__button {
    display: inline-block;
    background: var(--ct3-btn-bg, #000000);
    color: var(--ct3-btn-text, #ffffff);
    padding: 12px 28px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    text-decoration: none;
    border-radius: 0;
    letter-spacing: 1px;
    transition: all 0.3s ease;
  }

  .countdown-timer-3__button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  /* Image Section */
  .countdown-timer-3__image-wrapper {
    width: 100%;
  }

  .countdown-timer-3__image {
    width: 100%;
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .countdown-timer-3__image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .countdown-timer-3__image-placeholder {
    width: 100%;
    padding-bottom: 80%;
    background: linear-gradient(135deg, #e0d4cc 0%, #c4b5ab 100%);
    border-radius: {{ section.settings.image_border_radius }}px;
  }

