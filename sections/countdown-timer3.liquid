    }

    .countdown-timer-3--image-left .countdown-timer-3__grid {
      grid-template-areas: "image content";
    }

    .countdown-timer-3--image-left .countdown-timer-3__image-wrapper {
      grid-area: image;
    }

    .countdown-timer-3--image-left .countdown-timer-3__content {
      grid-area: content;
    }
  }

  /* 1024px - Desktop */
