{% style %}
  #shopify-section-{{ section.id }} {
    --hero-pro-text: {{ section.settings.text_color }};
    --hero-pro-text-bold: {{ section.settings.text_bold_color }};
    --hero-pro-text-italic: {{ section.settings.text_italic_color }};
    --hero-pro-badge-bg: {{ section.settings.badge_background }};
    --hero-pro-badge-text: {{ section.settings.badge_text_color }};
    --hero-pro-btn-primary-bg: {{ section.settings.button_primary_bg }};
    --hero-pro-btn-primary-text: {{ section.settings.button_primary_text_color }};
    --hero-pro-btn-secondary-bg: {{ section.settings.button_secondary_bg }};
    --hero-pro-btn-secondary-text: {{ section.settings.button_secondary_text_color }};
    --hero-pro-review-bg: {{ section.settings.review_badge_bg }};
    --hero-pro-overlay: {{ section.settings.overlay_color }};
  }
{% endstyle %}

<style>
  @import url('https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=DM+Serif+Display:ital@0;1&family=Montserrat:wght@400;500;600;700&display=swap');

  .hero-pro,
  .hero-pro * {
    box-sizing: border-box;
  }

  .hero-pro {
    position: relative;
    min-height: 100vh;
    min-height: 100dvh;
    display: flex;
    align-items: center;
    font-family: 'Montserrat', sans-serif;
    overflow: hidden;
    width: 100%;
  }

  .hero-pro__media {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-pro__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  .hero-pro__media-desktop,
  .hero-pro__media-mobile,
  .hero-pro__media-placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* Default: show mobile, hide desktop */
  .hero-pro__media-desktop {
    display: none;
  }

  .hero-pro__media-mobile {
    display: block;
  }

  /* When only desktop image exists (no mobile), show desktop */
  .hero-pro:not(.hero-pro--has-both) .hero-pro__media-desktop {
    display: block;
  }

  .hero-pro__media::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--hero-pro-overlay, rgba(0, 0, 0, 0.3));
    pointer-events: none;
    z-index: 1;
  }

  .hero-pro__container {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 60px 16px;
  }

  .hero-pro__content {
    max-width: 100%;
  }

  /* Badge */
  .hero-pro__badge {
    display: inline-block;
    background: var(--hero-pro-badge-bg, #e67e22);
    color: var(--hero-pro-badge-text, #ffffff);
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 8px 16px;
    border-radius: 20px;
    margin-bottom: 20px;
  }

  /* Title */
  .hero-pro__title {
    font-family: 'DM Sans', sans-serif;
    font-size: 36px;
    font-weight: 700;
    line-height: 1.15;
    color: var(--hero-pro-text, #b7d3ff);
    margin: 0 0 20px;
  }

  .hero-pro__title strong {
    color: var(--hero-pro-text-bold, #ffffff);
  }

  .hero-pro__title em {
    font-family: 'DM Serif Display', serif;
    font-style: italic;
    color: var(--hero-pro-text-italic, #ffffff);
  }

  /* Review Badge */
  .hero-pro__review {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: var(--hero-pro-review-bg, rgba(255, 255, 255, 0.15));
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    padding: 10px 16px;
    border-radius: 30px;
    margin-bottom: 20px;
  }

  .hero-pro__review-stars {
    display: flex;
    gap: 2px;
  }

  .hero-pro__review-stars svg {
    width: 14px;
    height: 14px;
    fill: #fbbf24;
  }

  .hero-pro__review-text {
    font-family: 'DM Serif Display', serif;
    font-style: italic;
    font-size: 13px;
    color: var(--hero-pro-text, #b7d3ff);
  }

  /* Features */
  .hero-pro__features {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-bottom: 24px;
  }

  .hero-pro__feature {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    font-weight: 500;
    color: var(--hero-pro-text, #b7d3ff);
  }

  .hero-pro__feature-icon {
    width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-pro__feature-icon svg {
    width: 16px;
    height: 16px;
    color: currentColor;
  }

  /* Buttons */
  .hero-pro__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-bottom: 20px;
  }

  .hero-pro__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 32px;
    font-family: 'DM Sans', sans-serif;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.25s ease;
    cursor: pointer;
    border: none;
    position: relative;
    overflow: hidden;
  }

  .hero-pro__btn--primary {
    background: var(--hero-pro-btn-primary-bg, #27a0e4);
    color: var(--hero-pro-btn-primary-text, #ffffff);
  }

  .hero-pro__btn--primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s ease;
  }

  .hero-pro__btn--primary:hover::before {
    left: 100%;
  }

  .hero-pro__btn--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(39, 160, 228, 0.4);
  }

  .hero-pro__btn--secondary {
    background: var(--hero-pro-btn-secondary-bg, #0e2b45);
    color: var(--hero-pro-btn-secondary-text, #ffffff);
  }

  .hero-pro__btn--secondary:hover {
    transform: translateY(-2px);
    filter: brightness(1.1);
  }

  /* Guarantee */
  .hero-pro__guarantee {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    font-weight: 500;
    color: var(--hero-pro-text, #b7d3ff);
  }

  .hero-pro__guarantee-icon {
    width: 18px;
    height: 18px;
  }

  .hero-pro__guarantee-icon svg {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }

  /* Responsive - Small Mobile (< 400px) */
  @media (max-width: 399px) {
    .hero-pro {
      min-height: 100vh;
      min-height: 100dvh;
    }

    .hero-pro__container {
      padding: 40px 12px;
    }

    .hero-pro__title {
      font-size: 26px;
      line-height: 1.2;
      -webkit-line-clamp: 5;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .hero-pro__badge {
      font-size: 10px;
      padding: 6px 12px;
      margin-bottom: 14px;
    }

    .hero-pro__review {
      padding: 8px 12px;
      margin-bottom: 14px;
    }

    .hero-pro__review-stars svg {
      width: 12px;
      height: 12px;
    }

    .hero-pro__review-text {
      font-size: 11px;
    }

    .hero-pro__features {
      gap: 8px;
      margin-bottom: 18px;
    }

    .hero-pro__feature {
      font-size: 11px;
      gap: 6px;
    }

    .hero-pro__feature-icon {
      width: 14px;
      height: 14px;
    }

    .hero-pro__feature-icon svg {
      width: 12px;
      height: 12px;
    }

    .hero-pro__buttons {
      gap: 8px;
      margin-bottom: 14px;
    }

    .hero-pro__btn {
      padding: 10px 20px;
      font-size: 12px;
    }

    .hero-pro__guarantee {
      font-size: 11px;
    }

    .hero-pro__guarantee-icon {
      width: 14px;
      height: 14px;
    }
  }

  /* Medium Mobile (400px - 549px) */
  @media (min-width: 400px) and (max-width: 549px) {
    .hero-pro {
      min-height: 100vh;
      min-height: 100dvh;
    }

    .hero-pro__container {
      padding: 50px 16px;
    }

    .hero-pro__title {
      font-size: 30px;
    }

    .hero-pro__badge {
      font-size: 10px;
      padding: 7px 14px;
      margin-bottom: 16px;
    }

    .hero-pro__review {
      padding: 8px 14px;
    }

    .hero-pro__review-stars svg {
      width: 13px;
      height: 13px;
    }

    .hero-pro__review-text {
      font-size: 12px;
    }

    .hero-pro__features {
      gap: 10px;
      margin-bottom: 20px;
    }

    .hero-pro__feature {
      font-size: 12px;
    }

    .hero-pro__feature-icon {
      width: 16px;
      height: 16px;
    }

    .hero-pro__btn {
      padding: 12px 24px;
      font-size: 13px;
    }

    .hero-pro__guarantee {
      font-size: 12px;
    }
  }

  /* Large Mobile (550px - 767px) */
  @media (min-width: 550px) and (max-width: 767px) {
    .hero-pro__container {
      padding: 50px 20px;
    }

    .hero-pro__title {
      font-size: 36px;
    }

    .hero-pro__badge {
      font-size: 11px;
      padding: 8px 16px;
    }

    .hero-pro__review {
      padding: 10px 16px;
    }

    .hero-pro__review-text {
      font-size: 13px;
    }

    .hero-pro__features {
      gap: 14px;
    }

    .hero-pro__feature {
      font-size: 13px;
    }

    .hero-pro__btn {
      padding: 13px 28px;
      font-size: 13px;
    }

    .hero-pro__guarantee {
      font-size: 13px;
    }
  }

  /* Tablet (768px - 1023px) */
  @media (min-width: 768px) and (max-width: 1023px) {
    .hero-pro__container {
      padding: 60px 32px;
    }

    .hero-pro__title {
      font-size: 44px;
    }

    .hero-pro__features {
      gap: 16px;
    }

    .hero-pro__feature {
      font-size: 14px;
    }

    .hero-pro__btn {
      padding: 14px 32px;
      font-size: 14px;
    }
  }

  /* Desktop (1024px+) - Switch to desktop image */
  @media (min-width: 1024px) {
    .hero-pro--has-both .hero-pro__media-mobile {
      display: none !important;
    }

    .hero-pro--has-both .hero-pro__media-desktop {
      display: block !important;
    }

    .hero-pro__container {
      padding: 100px 60px;
    }

    .hero-pro__title {
      font-size: 52px;
    }

    .hero-pro__badge {
      font-size: 12px;
      padding: 10px 20px;
    }

    .hero-pro__review {
      padding: 12px 20px;
    }

    .hero-pro__review-text {
      font-size: 14px;
    }

    .hero-pro__feature {
      font-size: 15px;
    }

    .hero-pro__btn {
      font-size: 15px;
      padding: 16px 36px;
    }

    .hero-pro__guarantee {
      font-size: 14px;
    }

    .hero-pro__content {
      max-width: 600px;
    }
  }

  /* Large Desktop (1400px+) */
  @media (min-width: 1400px) {
    .hero-pro__title {
      font-size: 64px;
    }

    .hero-pro__content {
      max-width: 700px;
    }

    .hero-pro__container {
      padding: 120px 80px;
    }
  }
</style>

{%- liquid
  assign has_desktop = false
  assign has_mobile = false
  assign has_both = false
  if section.settings.image_desktop != blank
    assign has_desktop = true
  endif
  if section.settings.image_mobile != blank
    assign has_mobile = true
  endif
  if has_desktop and has_mobile
    assign has_both = true
  endif
-%}

<section class="hero-pro{% if has_both %} hero-pro--has-both{% endif %}" data-section-id="{{ section.id }}">
  <!-- Background Media -->
  <div class="hero-pro__media">
    {%- if has_mobile -%}
      <div class="hero-pro__media-mobile">
        {{ section.settings.image_mobile | image_url: width: 1200 | image_tag: loading: 'eager' }}
      </div>
    {%- endif -%}
    {%- if has_desktop -%}
      <div class="hero-pro__media-desktop">
        {{ section.settings.image_desktop | image_url: width: 2400 | image_tag: loading: 'eager' }}
      </div>
    {%- endif -%}
    {%- unless has_desktop or has_mobile -%}
      <div class="hero-pro__media-placeholder" style="background: linear-gradient(135deg, #1a365d 0%, #2d3748 100%); width: 100%; height: 100%;"></div>
    {%- endunless -%}
  </div>

  <div class="hero-pro__container">
    <div class="hero-pro__content">
      {%- if section.settings.badge_text != blank -%}
        <span class="hero-pro__badge">{{ section.settings.badge_text }}</span>
      {%- endif -%}

      {%- if section.settings.title != blank -%}
        <h1 class="hero-pro__title">{{ section.settings.title }}</h1>
      {%- endif -%}

      {%- if section.settings.show_reviews -%}
        <div class="hero-pro__review">
          <div class="hero-pro__review-stars">
            {%- for i in (1..5) -%}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            {%- endfor -%}
          </div>
          <span class="hero-pro__review-text">{{ section.settings.review_text }}</span>
        </div>
      {%- endif -%}

      {%- if section.blocks.size > 0 -%}
        <div class="hero-pro__features">
          {%- for block in section.blocks -%}
            {%- if block.type == 'feature' -%}
              <div class="hero-pro__feature" {{ block.shopify_attributes }}>
                <span class="hero-pro__feature-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                    <polyline points="22 4 12 14.01 9 11.01"/>
                  </svg>
                </span>
                <span>{{ block.settings.text }}</span>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      {%- endif -%}

      <div class="hero-pro__buttons">
        {%- if section.settings.button_primary_text != blank -%}
          <a href="{{ section.settings.button_primary_link }}" class="hero-pro__btn hero-pro__btn--primary">
            {{ section.settings.button_primary_text }}
          </a>
        {%- endif -%}
        {%- if section.settings.button_secondary_text != blank -%}
          <a href="{{ section.settings.button_secondary_link }}" class="hero-pro__btn hero-pro__btn--secondary">
            {{ section.settings.button_secondary_text }}
          </a>
        {%- endif -%}
      </div>

      {%- if section.settings.guarantee_text != blank -%}
        <div class="hero-pro__guarantee">
          <span class="hero-pro__guarantee-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </span>
          <span>{{ section.settings.guarantee_text }}</span>
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

