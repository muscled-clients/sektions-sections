      font-size: calc({{ section.settings.title_size }}px * 0.85);
    }
    #shopify-section-{{ section.id }} .reviews-header {
      margin-bottom: 30px;
    }
    #shopify-section-{{ section.id }} .slider-footer {
      margin-top: 30px;
    }
    #shopify-section-{{ section.id }} .subtitle-row {
      font-size: 13px;
