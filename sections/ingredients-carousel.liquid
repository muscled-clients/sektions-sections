<style>
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} .ingredients-container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  #shopify-section-{{ section.id }} .section-heading {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    color: {{ section.settings.heading_color }};
    text-align: {{ section.settings.text_alignment }};
    margin: 0 0 {{ section.settings.heading_margin }}px 0;
    line-height: 1.3;
    font-family: {{ section.settings.heading_font }}, serif;
  }

  #shopify-section-{{ section.id }} .carousel-wrapper {
    position: relative;
  }

  #shopify-section-{{ section.id }} .carousel-container {
    overflow: hidden;
    position: relative;
  }

  #shopify-section-{{ section.id }} .carousel-track {
    display: flex;
    transition: transform 0.5s ease;
    gap: {{ section.settings.card_gap }}px;
  }

  #shopify-section-{{ section.id }} .ingredient-card {
    flex: 0 0 calc((100% - {{ section.settings.card_gap | times: section.settings.desktop_cards | minus: 1 }}px) / {{ section.settings.desktop_cards }});
    max-width: 300px;
    background: {{ section.settings.card_background }};
    border-radius: {{ section.settings.card_radius }}px;
    overflow: hidden;
    position: relative;
    box-shadow: {{ section.settings.card_shadow }};
  }

  #shopify-section-{{ section.id }} .card-image {
    width: 100%;
    height: {{ section.settings.image_height }}px;
    overflow: hidden;
    position: relative;
  }

  #shopify-section-{{ section.id }} .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #shopify-section-{{ section.id }} .card-content {
    padding: {{ section.settings.card_padding }}px;
  }

  #shopify-section-{{ section.id }} .ingredient-name {
    font-size: {{ section.settings.name_size }}px;
    font-style: italic;
    color: {{ section.settings.name_color }};
    text-align: center;
    margin: 0 0 15px 0;
    font-family: {% case section.settings.body_font %}{% when 'system' %}-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto{% when 'arial' %}Arial{% when 'helvetica' %}Helvetica{% else %}-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto{% endcase %}, sans-serif;
  }

  #shopify-section-{{ section.id }} .divider {
    height: 1px;
    background-color: {{ section.settings.divider_color }};
    margin: 0 0 15px 0;
    width: 100%;
  }

  #shopify-section-{{ section.id }} .function-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
  }

  #shopify-section-{{ section.id }} .function-label {
    font-size: {{ section.settings.label_size }}px;
    font-weight: 700;
    color: {{ section.settings.label_color }};
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 0;
    font-family: {% case section.settings.body_font %}{% when 'system' %}-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto{% when 'arial' %}Arial{% when 'helvetica' %}Helvetica{% else %}-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto{% endcase %}, sans-serif;
  }

  #shopify-section-{{ section.id }} .expand-button {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background-color: {{ section.settings.button_background }};
    border: 1px solid {{ section.settings.button_border }};
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 16px;
    color: {{ section.settings.button_color }};
    font-weight: bold;
  }

  #shopify-section-{{ section.id }} .expand-button:hover {
    background-color: {{ section.settings.button_hover }};
  }

  #shopify-section-{{ section.id }} .function-description {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
    line-height: 1.4;
    margin: 0;
    font-family: {% case section.settings.body_font %}{% when 'system' %}-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto{% when 'arial' %}Arial{% when 'helvetica' %}Helvetica{% else %}-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto{% endcase %}, sans-serif;
  }

  #shopify-section-{{ section.id }} .expanded-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
    margin-top: 0;
  }

  #shopify-section-{{ section.id }} .expanded-content.open {
    max-height: 200px;
    margin-top: 15px;
  }

  #shopify-section-{{ section.id }} .expanded-text {
    font-size: {{ section.settings.expanded_size }}px;
    color: {{ section.settings.expanded_color }};
    line-height: 1.5;
    margin: 0;
    font-family: {% case section.settings.body_font %}{% when 'system' %}-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto{% when 'arial' %}Arial{% when 'helvetica' %}Helvetica{% else %}-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto{% endcase %}, sans-serif;
  }

  #shopify-section-{{ section.id }} .carousel-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: {{ section.settings.nav_background }};
    border: 1px solid {{ section.settings.nav_border }};
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
  }

  #shopify-section-{{ section.id }} .carousel-nav:hover {
    background-color: {{ section.settings.nav_hover }};
  }

  #shopify-section-{{ section.id }} .carousel-nav.prev {
    left: -20px;
  }

  #shopify-section-{{ section.id }} .carousel-nav.next {
    right: -20px;
  }

  #shopify-section-{{ section.id }} .carousel-nav svg {
    width: 16px;
    height: 16px;
    stroke: {{ section.settings.nav_color }};
    fill: none;
    stroke-width: 2;
  }

  #shopify-section-{{ section.id }} .progress-indicator {
    display: flex;
    justify-content: center;
    margin-top: 30px;
    gap: 8px;
  }

  #shopify-section-{{ section.id }} .progress-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: {{ section.settings.dot_inactive }};
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  #shopify-section-{{ section.id }} .progress-dot.active {
    background-color: {{ section.settings.dot_active }};
  }

  /* Mobile Layout */
  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .ingredient-card {
      flex: 0 0 calc((100% - {{ section.settings.card_gap | times: section.settings.mobile_cards | minus: 1 }}px) / {{ section.settings.mobile_cards }});
    }

    #shopify-section-{{ section.id }} .carousel-nav {
      display: none;
    }

    #shopify-section-{{ section.id }} .section-heading {
      font-size: {{ section.settings.heading_size | times: 0.8 }}px;
    }

    #shopify-section-{{ section.id }} .carousel-container {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    #shopify-section-{{ section.id }} .carousel-container::-webkit-scrollbar {
      display: none;
    }
  }
</style>

<div class="ingredients-container">
  {% if section.settings.heading != blank %}
    <h2 class="section-heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="carousel-wrapper">
    <div class="carousel-container" id="carousel-{{ section.id }}">
      <div class="carousel-track" id="track-{{ section.id }}">
        {% for block in section.blocks %}
          {% if block.type == 'ingredient' %}
            <div class="ingredient-card" {{ block.shopify_attributes }}>
              {% if block.settings.image != blank %}
                <div class="card-image">
                  {{ block.settings.image | image_url: width: 400 | image_tag: alt: block.settings.name }}
                </div>
              {% endif %}

              <div class="card-content">
                {% if block.settings.name != blank %}
                  <h3 class="ingredient-name">{{ block.settings.name }}</h3>
                {% endif %}

                <div class="divider"></div>

                <div class="function-header">
                  {% if block.settings.function_label != blank %}
                    <p class="function-label">{{ block.settings.function_label }}</p>
                  {% endif %}
                  {% if block.settings.expanded_text != blank %}
                    <button class="expand-button" onclick="toggleExpand('{{ block.id }}')">+</button>
                  {% endif %}
                </div>

                {% if block.settings.function_description != blank %}
                  <p class="function-description">{{ block.settings.function_description }}</p>
                {% endif %}

                {% if block.settings.expanded_text != blank %}
                  <div class="expanded-content" id="expanded-{{ block.id }}">
                    <p class="expanded-text">{{ block.settings.expanded_text }}</p>
                  </div>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    {% if section.blocks.size > section.settings.desktop_cards %}
      <button class="carousel-nav prev" onclick="slideCarousel('{{ section.id }}', -1)">
        <svg viewBox="0 0 24 24">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>
      <button class="carousel-nav next" onclick="slideCarousel('{{ section.id }}', 1)">
        <svg viewBox="0 0 24 24">
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </button>
    {% endif %}

    {% if section.settings.show_dots and section.blocks.size > section.settings.desktop_cards %}
      <div class="progress-indicator">
        {% assign total_slides = section.blocks.size | minus: section.settings.desktop_cards | plus: 1 %}
        {% for i in (1..total_slides) %}
          <div class="progress-dot {% if forloop.first %}active{% endif %}" onclick="goToSlide('{{ section.id }}', {{ forloop.index0 }})"></div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

<script>
let currentSlide = {};

function toggleExpand(blockId) {
  const expandedContent = document.getElementById('expanded-' + blockId);
  const button = event.target;

  if (expandedContent.classList.contains('open')) {
    expandedContent.classList.remove('open');
    button.textContent = '+';
  } else {
    expandedContent.classList.add('open');
    button.textContent = 'âˆ’';
  }
}

function slideCarousel(sectionId, direction) {
  const track = document.getElementById('track-' + sectionId);
  const cards = track.children;
  const cardWidth = cards[0].offsetWidth + {{ section.settings.card_gap }};
  const visibleCards = window.innerWidth > 749 ? {{ section.settings.desktop_cards }} : {{ section.settings.mobile_cards }};
  const maxSlides = Math.max(0, cards.length - visibleCards);

  if (!currentSlide[sectionId]) {
    currentSlide[sectionId] = 0;
  }

  currentSlide[sectionId] += direction;

  if (currentSlide[sectionId] < 0) {
    currentSlide[sectionId] = 0;
  } else if (currentSlide[sectionId] > maxSlides) {
    currentSlide[sectionId] = maxSlides;
  }

  const translateX = -(currentSlide[sectionId] * cardWidth);
  track.style.transform = `translateX(${translateX}px)`;

  updateDots(sectionId);
}

function goToSlide(sectionId, slideIndex) {
  const track = document.getElementById('track-' + sectionId);
  const cards = track.children;
  const cardWidth = cards[0].offsetWidth + {{ section.settings.card_gap }};

  currentSlide[sectionId] = slideIndex;
  const translateX = -(slideIndex * cardWidth);
  track.style.transform = `translateX(${translateX}px)`;

  updateDots(sectionId);
}

function updateDots(sectionId) {
  const dots = document.querySelectorAll(`#shopify-section-${sectionId} .progress-dot`);
  dots.forEach((dot, index) => {
    if (index === currentSlide[sectionId]) {
      dot.classList.add('active');
    } else {
      dot.classList.remove('active');
    }
  });
}

// Initialize carousel
document.addEventListener('DOMContentLoaded', function() {
  const sectionId = '{{ section.id }}';
  currentSlide[sectionId] = 0;
});

// Touch/swipe support for mobile
let startX = 0;
let currentX = 0;
let isDragging = false;

document.addEventListener('touchstart', function(e) {
  startX = e.touches[0].clientX;
  isDragging = true;
});

document.addEventListener('touchmove', function(e) {
  if (!isDragging) return;
  currentX = e.touches[0].clientX;
});

document.addEventListener('touchend', function(e) {
  if (!isDragging) return;
  isDragging = false;

  const diffX = startX - currentX;
  const threshold = 50;

  if (Math.abs(diffX) > threshold) {
    const sectionId = '{{ section.id }}';
    if (diffX > 0) {
      slideCarousel(sectionId, 1); // Swipe left, go next
    } else {
      slideCarousel(sectionId, -1); // Swipe right, go prev
    }
  }
});
</script>

