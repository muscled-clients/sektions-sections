{% style %}
  .press-go-steps-{{ section.id }} {
    --pgs-bg: {{ section.settings.background_color }};
    --pgs-heading-color: {{ section.settings.heading_color }};
    --pgs-accent-color: {{ section.settings.accent_color }};
    --pgs-text-color: {{ section.settings.text_color }};
    --pgs-subtitle-color: {{ section.settings.subtitle_color }};
    --pgs-card-bg: {{ section.settings.card_bg_color }};
    --pgs-badge-bg: {{ section.settings.badge_bg_color }};
    --pgs-badge-text: {{ section.settings.badge_text_color }};
  }
{% endstyle %}

<section class="press-go-steps press-go-steps-{{ section.id }}" data-section-id="{{ section.id }}">
  <!-- Decorative Elements -->
  <div class="pgs__decorations">
    <div class="pgs__decor pgs__decor--arc-left"></div>
    <div class="pgs__decor pgs__decor--arc-right"></div>
    <div class="pgs__decor pgs__decor--dot-1"></div>
    <div class="pgs__decor pgs__decor--dot-2"></div>
    <div class="pgs__decor pgs__decor--dot-3"></div>
  </div>

  <div class="pgs__container">
    <!-- Header -->
    <div class="pgs__header">
      {% if section.settings.subtitle != blank %}
        <p class="pgs__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
      <h2 class="pgs__heading">
        <span class="pgs__heading-line1">{{ section.settings.heading_line1 }}</span>
        <span class="pgs__heading-line2">{{ section.settings.heading_line2 }}</span>
      </h2>
    </div>

    <!-- Steps Cards -->
    <div class="pgs__cards">
      {% for block in section.blocks %}
        {% if block.type == 'step_card' %}
          <div class="pgs__card pgs__card--{{ forloop.index }}" {{ block.shopify_attributes }}>
            <div class="pgs__card-inner">
              <div class="pgs__card-badge">{{ forloop.index }}</div>
              <div class="pgs__card-content">
                <h3 class="pgs__card-title">{{ block.settings.title }}</h3>
                <p class="pgs__card-description">{{ block.settings.description }}</p>
              </div>
              <div class="pgs__card-image">
                {% if block.settings.image != blank %}
                  <img
                    src="{{ block.settings.image | image_url: width: 500 }}"
                    srcset="{{ block.settings.image | image_url: width: 300 }} 300w,
                            {{ block.settings.image | image_url: width: 400 }} 400w,
                            {{ block.settings.image | image_url: width: 500 }} 500w"
                    sizes="(max-width: 767px) 90vw, 350px"
                    alt="{{ block.settings.title }}"
                    width="500"
                    height="auto"
                    loading="lazy"
                  >
                {% else %}
                  <div class="pgs__card-image-placeholder">
                    <svg viewBox="0 0 100 80" fill="none" stroke="currentColor" stroke-width="1">
                      <rect x="5" y="5" width="90" height="70" rx="4"/>
                      <circle cx="30" cy="30" r="10"/>
                      <path d="M5 60 L30 35 L50 55 L70 30 L95 50 L95 75 L5 75 Z"/>
                    </svg>
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  /* ========================================
     BASE STYLES (Mobile First)
     ======================================== */
  .press-go-steps {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 100%;
    padding: 60px 20px 80px;
    background-color: var(--pgs-bg);
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    overflow: hidden;
  }

  .press-go-steps *,
  .press-go-steps *::before,
  .press-go-steps *::after {
    box-sizing: border-box;
  }

  .press-go-steps img {
    max-width: 100%;
    height: auto;
    border: 0;
  }

  /* ========================================
     DECORATIVE ELEMENTS
     ======================================== */
  .pgs__decorations {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .pgs__decor {
    position: absolute;
    border: 4px solid var(--pgs-accent-color);
    border-radius: 50%;
  }

  .pgs__decor--arc-left {
    top: 20px;
    left: -40px;
    width: 100px;
    height: 100px;
    border-right-color: transparent;
    border-bottom-color: transparent;
    transform: rotate(-20deg);
  }

  .pgs__decor--arc-right {
    top: 40px;
    right: -30px;
    width: 80px;
    height: 80px;
    border-left-color: transparent;
    border-top-color: transparent;
    transform: rotate(-20deg);
  }

  .pgs__decor--dot-1 {
    top: 140px;
    left: 15%;
    width: 12px;
    height: 12px;
    border: none;
    background-color: var(--pgs-accent-color);
  }

  .pgs__decor--dot-2 {
    top: 180px;
    right: 20%;
    width: 8px;
    height: 8px;
    border: none;
    background-color: var(--pgs-accent-color);
  }

  .pgs__decor--dot-3 {
    bottom: 30%;
    left: 8%;
    width: 10px;
    height: 10px;
    border: none;
    background-color: var(--pgs-accent-color);
  }

  /* ========================================
     CONTAINER
     ======================================== */
  .pgs__container {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 48px;
    width: 100%;
    max-width: 1300px;
    z-index: 1;
  }

  /* ========================================
     HEADER
     ======================================== */
  .pgs__header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 12px;
  }

  .pgs__subtitle {
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--pgs-subtitle-color);
    margin: 0;
  }

  .pgs__heading {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    margin: 0;
  }

  .pgs__heading-line1 {
    font-size: 28px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--pgs-heading-color);
    line-height: 1.2;
  }

  .pgs__heading-line2 {
    font-size: 28px;
    font-weight: 800;
    font-style: italic;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--pgs-heading-color);
    background-color: var(--pgs-accent-color);
    padding: 6px 16px;
    line-height: 1.2;
  }

  /* ========================================
     CARDS GRID
     ======================================== */
  .pgs__cards {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
    width: 100%;
    padding-top: 20px;
  }

  /* ========================================
     INDIVIDUAL CARD
     ======================================== */
  .pgs__card {
    position: relative;
    width: 100%;
    max-width: 350px;
  }

  .pgs__card-inner {
    display: flex;
    flex-direction: column;
    background-color: var(--pgs-card-bg);
    border-radius: 12px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
    overflow: hidden;
  }

  /* Card Badge */
  .pgs__card-badge {
    position: absolute;
    top: -16px;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--pgs-badge-bg);
    color: var(--pgs-badge-text);
    font-size: 18px;
    font-weight: 700;
    border-radius: 6px;
    z-index: 2;
  }

  /* Card Content */
  .pgs__card-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 36px 24px 24px;
    gap: 12px;
  }

  .pgs__card-title {
    font-size: 18px;
    font-weight: 800;
    font-style: italic;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--pgs-heading-color);
    margin: 0;
    line-height: 1.3;
  }

  .pgs__card-description {
    font-size: 14px;
    font-weight: 400;
    color: var(--pgs-text-color);
    line-height: 1.6;
    margin: 0;
  }

  /* Card Image */
  .pgs__card-image {
    width: 100%;
    aspect-ratio: 4/3;
    overflow: hidden;
  }

  .pgs__card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .pgs__card-image-placeholder {
    width: 100%;
    height: 100%;
    background-color: #e5e5e5;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #bbb;
  }

  .pgs__card-image-placeholder svg {
    width: 50%;
    height: auto;
  }

  /* ========================================
     RESPONSIVE - MEDIUM MOBILE (400px+)
     ======================================== */
  @media (min-width: 400px) {
    .press-go-steps {
      padding: 70px 24px 90px;
    }

    .pgs__subtitle {
      font-size: 12px;
    }

    .pgs__heading-line1,
    .pgs__heading-line2 {
      font-size: 32px;
    }

    .pgs__card {
      max-width: 380px;
    }

    .pgs__card-title {
      font-size: 20px;
    }

    .pgs__decor--arc-left {
      width: 120px;
      height: 120px;
      left: -50px;
    }

    .pgs__decor--arc-right {
      width: 100px;
      height: 100px;
    }
  }

  /* ========================================
     RESPONSIVE - LARGE MOBILE (550px+)
     ======================================== */
  @media (min-width: 550px) {
    .press-go-steps {
      padding: 80px 32px 100px;
    }

    .pgs__container {
      gap: 56px;
    }

    .pgs__heading-line1,
    .pgs__heading-line2 {
      font-size: 36px;
    }

    .pgs__card-content {
      padding: 40px 28px 28px;
    }

    .pgs__card-title {
      font-size: 22px;
    }

    .pgs__card-description {
      font-size: 15px;
    }
  }

  /* ========================================
     RESPONSIVE - TABLET (768px+)
     ======================================== */
  @media (min-width: 768px) {
    .press-go-steps {
      padding: 90px 40px 120px;
    }

    .pgs__container {
      gap: 64px;
    }

    .pgs__heading-line1,
    .pgs__heading-line2 {
      font-size: 40px;
    }

    .pgs__heading-line2 {
      padding: 8px 20px;
    }

    .pgs__cards {
      flex-direction: row;
      justify-content: center;
      align-items: flex-start;
      gap: 24px;
      padding-top: 30px;
    }

    .pgs__card {
      flex: 0 0 calc(33.333% - 16px);
      max-width: 340px;
    }

    /* Card rotations */
    .pgs__card--1 {
      transform: rotate(-3deg);
    }

    .pgs__card--2 {
      transform: rotate(0deg);
    }

    .pgs__card--3 {
      transform: rotate(3deg);
    }

    .pgs__card-badge {
      width: 44px;
      height: 44px;
      font-size: 20px;
    }

    .pgs__decor--arc-left {
      width: 150px;
      height: 150px;
      top: 30px;
      left: -60px;
    }

    .pgs__decor--arc-right {
      width: 120px;
      height: 120px;
      top: 50px;
      right: -40px;
    }

    .pgs__decor--dot-1 {
      top: 160px;
      left: 12%;
      width: 14px;
      height: 14px;
    }

    .pgs__decor--dot-2 {
      width: 10px;
      height: 10px;
    }
  }

  /* ========================================
     RESPONSIVE - DESKTOP (1024px+)
     ======================================== */
  @media (min-width: 1024px) {
    .press-go-steps {
      padding: 100px 48px 140px;
    }

    .pgs__container {
      gap: 72px;
    }

    .pgs__heading-line1,
    .pgs__heading-line2 {
      font-size: 44px;
    }

    .pgs__cards {
      gap: 32px;
    }

    .pgs__card {
      max-width: 380px;
    }

    /* Enhanced rotations */
    .pgs__card--1 {
      transform: rotate(-4deg);
    }

    .pgs__card--3 {
      transform: rotate(4deg);
    }

    .pgs__card-content {
      padding: 44px 28px 28px;
      gap: 14px;
    }

    .pgs__card-title {
      font-size: 24px;
    }

    .pgs__card-badge {
      width: 48px;
      height: 48px;
      font-size: 22px;
      top: -18px;
    }

    .pgs__decor--arc-left {
      width: 180px;
      height: 180px;
      top: 20px;
      left: -70px;
      border-width: 5px;
    }

    .pgs__decor--arc-right {
      width: 140px;
      height: 140px;
      top: 40px;
      right: -50px;
      border-width: 5px;
    }

    .pgs__decor--dot-1 {
      width: 16px;
      height: 16px;
    }

    .pgs__decor--dot-2 {
      width: 12px;
      height: 12px;
    }

    .pgs__decor--dot-3 {
      width: 14px;
      height: 14px;
    }
  }

  /* ========================================
     RESPONSIVE - LARGE DESKTOP (1400px+)
     ======================================== */
  @media (min-width: 1400px) {
    .press-go-steps {
      padding: 120px 48px 160px;
    }

    .pgs__container {
      gap: 80px;
    }

    .pgs__heading-line1,
    .pgs__heading-line2 {
      font-size: 48px;
    }

    .pgs__cards {
      gap: 40px;
    }

    .pgs__card {
      max-width: 400px;
    }

    .pgs__card-content {
      padding: 48px 32px 32px;
    }

    .pgs__decor--arc-left {
      width: 200px;
      height: 200px;
      left: -80px;
    }

    .pgs__decor--arc-right {
      width: 160px;
      height: 160px;
      right: -60px;
    }
  }
</style>

{% schema %}
