  "name": "Press & Go Steps",
  "tag": "section",
  "class": "press-go-steps-section",
  "settings": [
    {
      "type": "header",
      "content": "Header"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
