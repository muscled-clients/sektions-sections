    },
    {
      "type": "text",
      "id": "heading_line1",
      "label": "Heading Line 1",
      "default": "HOW IT WORKS"
    },
    {
      "type": "text",
      "id": "heading_line2",
      "label": "Heading Line 2 (Highlighted)",
      "default": "JUST PRESS & GO"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
