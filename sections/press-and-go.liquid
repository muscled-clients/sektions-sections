{% style %}
  .press-go-steps-{{ section.id }} {
    --pgs-bg: {{ section.settings.background_color }};
    --pgs-heading-color: {{ section.settings.heading_color }};
    --pgs-accent-color: {{ section.settings.accent_color }};
    --pgs-text-color: {{ section.settings.text_color }};
    --pgs-subtitle-color: {{ section.settings.subtitle_color }};
    --pgs-card-bg: {{ section.settings.card_bg_color }};
    --pgs-badge-bg: {{ section.settings.badge_bg_color }};
    --pgs-badge-text: {{ section.settings.badge_text_color }};
  }
{% endstyle %}

<section class="press-go-steps press-go-steps-{{ section.id }}" data-section-id="{{ section.id }}" style="background-color: {{ section.settings.background_color }};">
  <!-- Decorative Corner Shapes -->
  <div class="pgs__corner-shape pgs__corner-shape--left"></div>
  <div class="pgs__corner-shape pgs__corner-shape--right"></div>

  <!-- Decorative Elements (Icons) -->
  <div class="pgs__decorations">
    {% if section.settings.decor_arc_left != blank %}
      <div class="pgs__decor pgs__decor--arc-left">
        <img src="{{ section.settings.decor_arc_left | image_url: width: 120 }}" alt="" loading="lazy">
      </div>
    {% endif %}
    {% if section.settings.decor_arc_right != blank %}
      <div class="pgs__decor pgs__decor--arc-right">
        <img src="{{ section.settings.decor_arc_right | image_url: width: 120 }}" alt="" loading="lazy">
      </div>
    {% endif %}
    {% if section.settings.decor_dot_1 != blank %}
      <div class="pgs__decor pgs__decor--dot-1">
        <img src="{{ section.settings.decor_dot_1 | image_url: width: 60 }}" alt="" loading="lazy">
      </div>
    {% endif %}
    {% if section.settings.decor_dot_2 != blank %}
      <div class="pgs__decor pgs__decor--dot-2">
        <img src="{{ section.settings.decor_dot_2 | image_url: width: 60 }}" alt="" loading="lazy">
      </div>
    {% endif %}
  </div>

  <div class="pgs__container">
    <!-- Header -->
    <div class="pgs__header">
      {% if section.settings.subtitle != blank %}
        <p class="pgs__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
      <h2 class="pgs__heading">
        <span class="pgs__heading-line1">{{ section.settings.heading_line1 }}</span>
        <span class="pgs__heading-line2">{{ section.settings.heading_line2 }}</span>
      </h2>
    </div>

    <!-- Steps Cards -->
    <div class="pgs__cards">
      {% for block in section.blocks %}
        {% if block.type == 'step_card' %}
          <div class="pgs__card pgs__card--{{ forloop.index }}" {{ block.shopify_attributes }}>
            <!-- Content Area (White Box) -->
            <div class="pgs__card-content">
              <div class="pgs__card-badge">{{ forloop.index }}</div>
              <h3 class="pgs__card-title">{{ block.settings.title }}</h3>
              <p class="pgs__card-description">{{ block.settings.description }}</p>
            </div>
            <!-- Image (Extends Beyond) -->
            <div class="pgs__card-image">
              {% if block.settings.image != blank %}
                <img
                  src="{{ block.settings.image | image_url: width: 500 }}"
                  srcset="{{ block.settings.image | image_url: width: 300 }} 300w,
                          {{ block.settings.image | image_url: width: 400 }} 400w,
                          {{ block.settings.image | image_url: width: 500 }} 500w"
                  sizes="(max-width: 767px) 90vw, 350px"
                  alt="{{ block.settings.title }}"
                  width="500"
                  height="auto"
                  loading="lazy"
                >
              {% else %}
                <div class="pgs__card-image-placeholder">
                  <svg viewBox="0 0 100 80" fill="none" stroke="currentColor" stroke-width="1">
                    <rect x="5" y="5" width="90" height="70" rx="4"/>
                    <circle cx="30" cy="30" r="10"/>
                    <path d="M5 60 L30 35 L50 55 L70 30 L95 50 L95 75 L5 75 Z"/>
                  </svg>
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  /* ========================================
     BASE STYLES (Mobile First)
     ======================================== */
  .press-go-steps {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 100%;
    padding: 60px 20px 120px;
    background-color: var(--pgs-bg, #ffffff) !important;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    overflow: hidden;
  }

  .press-go-steps *,
  .press-go-steps *::before,
  .press-go-steps *::after {
    box-sizing: border-box;
  }

  .press-go-steps img {
    max-width: 100%;
    height: auto;
    border: 0;
  }

  /* ========================================
     DECORATIVE CORNER SHAPES
     ======================================== */
  .pgs__corner-shape {
    position: absolute;
    width: 200px;
    height: 250px;
    background-color: var(--pgs-card-bg, #f0f0f0);
    border-radius: 16px;
    z-index: 1;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  }

  .pgs__corner-shape--left {
    top: -80px;
    left: -100px;
    transform: rotate(-12deg);
  }

  .pgs__corner-shape--right {
    top: -80px;
    right: -100px;
    transform: rotate(12deg);
  }

  /* ========================================
     DECORATIVE ELEMENTS (Icons)
     ======================================== */
  .pgs__decorations {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 6;
    overflow: visible;
  }

  .pgs__decor {
    position: absolute;
    z-index: 6;
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
  }

  .pgs__decor img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* Arc Left - positioned on corner shape */
  .pgs__decor--arc-left {
    top: 30px;
    left: 50px;
    width: 50px;
    height: 50px;
  }

  /* Arc Right - positioned on corner shape */
  .pgs__decor--arc-right {
    top: 30px;
    right: 50px;
    width: 50px;
    height: 50px;
  }

  /* Dot 1 */
  .pgs__decor--dot-1 {
    top: 120px;
    left: 15%;
    width: 14px;
    height: 14px;
  }

  /* Dot 2 */
  .pgs__decor--dot-2 {
    top: 90px;
    left: 40%;
    width: 28px;
    height: 28px;
  }

  /* ========================================
     CONTAINER
     ======================================== */
  .pgs__container {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 50px;
    width: 100%;
    max-width: 1300px;
    z-index: 10;
  }

  /* ========================================
     HEADER
     ======================================== */
  .pgs__header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 8px;
  }

  .pgs__subtitle {
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--pgs-subtitle-color, #888888);
    margin: 0;
  }

  .pgs__heading {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    margin: 0;
  }

  .pgs__heading-line1 {
    font-size: 32px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--pgs-heading-color, #1a1a1a);
    line-height: 1.2;
  }

  .pgs__heading-line2 {
    font-size: 32px;
    font-weight: 800;
    font-style: italic;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--pgs-heading-color, #1a1a1a);
    background-color: var(--pgs-accent-color, #00D4D4);
    padding: 8px 24px;
    line-height: 1.2;
  }

  /* ========================================
     CARDS GRID
     ======================================== */
  .pgs__cards {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 60px;
    width: 100%;
    padding-top: 20px;
  }

  /* ========================================
     INDIVIDUAL CARD
     ======================================== */
  .pgs__card {
    position: relative;
    width: 100%;
    max-width: 350px;
  }

  /* Card Content (White Box) */
  .pgs__card-content {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    background-color: var(--pgs-card-bg, #ffffff);
    border-radius: 12px 12px 0 0;
    padding: 48px 24px 24px;
    gap: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    z-index: 2;
  }

  /* Card Badge */
  .pgs__card-badge {
    position: absolute;
    top: -20px;
    left: 50%;
    transform: translateX(-50%);
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--pgs-badge-bg, #1a1a1a);
    color: var(--pgs-badge-text, #ffffff);
    font-size: 20px;
    font-weight: 700;
    border-radius: 8px;
    z-index: 3;
  }

  /* Badge positions per card */
  .pgs__card--1 .pgs__card-badge {
    left: 24px;
    transform: none;
  }

  .pgs__card--2 .pgs__card-badge {
    left: 50%;
    transform: translateX(-50%);
  }

  .pgs__card--3 .pgs__card-badge {
    left: auto;
    right: 24px;
    transform: none;
  }

  .pgs__card-title {
    font-size: 20px;
    font-weight: 700;
    font-style: italic;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--pgs-heading-color, #1a1a1a);
    margin: 0;
    line-height: 1.3;
  }

  .pgs__card-description {
    font-size: 14px;
    font-weight: 400;
    color: var(--pgs-text-color, #666666);
    line-height: 1.6;
    margin: 0;
  }

  /* Card Image (Extends Beyond) */
  .pgs__card-image {
    position: relative;
    width: 100%;
    margin-top: -1px;
    z-index: 1;
  }

  .pgs__card-image img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 0 0 12px 12px;
  }

  .pgs__card-image-placeholder {
    width: 100%;
    aspect-ratio: 4/3;
    background-color: #e5e5e5;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #bbb;
    border-radius: 0 0 12px 12px;
  }

  .pgs__card-image-placeholder svg {
    width: 50%;
    height: auto;
  }

  /* ========================================
     RESPONSIVE - MEDIUM MOBILE (400px+)
     ======================================== */
  @media (min-width: 400px) {
    .press-go-steps {
      padding: 70px 24px 140px;
    }

    .pgs__subtitle {
      font-size: 12px;
    }

    .pgs__heading-line1,
    .pgs__heading-line2 {
      font-size: 36px;
    }

    .pgs__card {
      max-width: 380px;
    }

    .pgs__card-title {
      font-size: 22px;
    }

    .pgs__corner-shape {
      width: 180px;
      height: 220px;
    }

    .pgs__corner-shape--left {
      top: -70px;
      left: -90px;
    }

    .pgs__corner-shape--right {
      top: -70px;
      right: -90px;
    }

    .pgs__decor--arc-left {
      width: 50px;
      height: 50px;
      top: 25px;
      left: 40px;
    }

    .pgs__decor--arc-right {
      width: 50px;
      height: 50px;
      top: 25px;
      right: 40px;
    }

    .pgs__decor--dot-1 {
      top: 130px;
      left: 18%;
    }

    .pgs__decor--dot-2 {
      top: 100px;
      left: 42%;
    }
  }

  /* ========================================
     RESPONSIVE - LARGE MOBILE (550px+)
     ======================================== */
  @media (min-width: 550px) {
    .press-go-steps {
      padding: 80px 32px 160px;
    }

    .pgs__container {
      gap: 60px;
    }

    .pgs__heading-line1,
    .pgs__heading-line2 {
      font-size: 40px;
    }

    .pgs__card-content {
      padding: 52px 28px 28px;
    }

    .pgs__card-title {
      font-size: 24px;
    }

    .pgs__card-description {
      font-size: 15px;
    }

    .pgs__corner-shape {
      width: 200px;
      height: 250px;
    }

    .pgs__corner-shape--left {
      top: -80px;
      left: -90px;
    }

    .pgs__corner-shape--right {
      top: -80px;
      right: -90px;
    }
  }

  /* ========================================
     RESPONSIVE - TABLET (768px+)
     ======================================== */
  @media (min-width: 768px) {
    .press-go-steps {
      padding: 80px 40px 180px;
    }

    .pgs__container {
      gap: 60px;
    }

    .pgs__heading-line1,
    .pgs__heading-line2 {
      font-size: 44px;
    }

    .pgs__heading-line2 {
      padding: 10px 28px;
    }

    .pgs__cards {
      flex-direction: row;
      justify-content: center;
      align-items: flex-start;
      gap: 30px;
      padding-top: 30px;
    }

    .pgs__card {
      flex: 0 0 calc(33.333% - 20px);
      max-width: 360px;
    }

    /* Card rotations */
    .pgs__card--1 {
      transform: rotate(-4deg);
      margin-top: 20px;
    }

    .pgs__card--2 {
      transform: rotate(0deg);
    }

    .pgs__card--3 {
      transform: rotate(4deg);
      margin-top: 20px;
    }

    .pgs__card-badge {
      width: 48px;
      height: 48px;
      font-size: 22px;
      top: -22px;
    }

    .pgs__corner-shape {
      width: 220px;
      height: 280px;
    }

    .pgs__corner-shape--left {
      top: -100px;
      left: -80px;
    }

    .pgs__corner-shape--right {
      top: -100px;
      right: -80px;
    }

    .pgs__decor--arc-left {
      width: 60px;
      height: 60px;
      top: 20px;
      left: 80px;
    }

    .pgs__decor--arc-right {
      width: 60px;
      height: 60px;
      top: 20px;
      right: 80px;
    }

    .pgs__decor--dot-1 {
      top: 150px;
      left: 12%;
      width: 14px;
      height: 14px;
    }

    .pgs__decor--dot-2 {
      top: 110px;
      left: 40%;
      width: 28px;
      height: 28px;
    }
  }

  /* ========================================
     RESPONSIVE - DESKTOP (1024px+)
     ======================================== */
  @media (min-width: 1024px) {
    .press-go-steps {
      padding: 100px 48px 200px;
    }

    .pgs__container {
      gap: 70px;
    }

    .pgs__heading-line1,
    .pgs__heading-line2 {
      font-size: 50px;
    }

    .pgs__cards {
      gap: 40px;
    }

    .pgs__card {
      max-width: 400px;
    }

    /* Enhanced rotations */
    .pgs__card--1 {
      transform: rotate(-5deg);
      margin-top: 30px;
    }

    .pgs__card--3 {
      transform: rotate(5deg);
      margin-top: 30px;
    }

    .pgs__card-content {
      padding: 56px 32px 32px;
      gap: 14px;
    }

    .pgs__card-title {
      font-size: 26px;
    }

    .pgs__card-badge {
      width: 52px;
      height: 52px;
      font-size: 24px;
      top: -24px;
      border-radius: 10px;
    }

    .pgs__corner-shape {
      width: 260px;
      height: 320px;
    }

    .pgs__corner-shape--left {
      top: -120px;
      left: -60px;
    }

    .pgs__corner-shape--right {
      top: -120px;
      right: -60px;
    }

    .pgs__decor--arc-left {
      width: 60px;
      height: 60px;
      top: 25px;
      left: 120px;
    }

    .pgs__decor--arc-right {
      width: 60px;
      height: 60px;
      top: 25px;
      right: 120px;
    }

    .pgs__decor--dot-1 {
      top: 160px;
      left: 15%;
      width: 14px;
      height: 14px;
    }

    .pgs__decor--dot-2 {
      top: 120px;
      left: 42%;
      width: 28px;
      height: 28px;
    }
  }

  /* ========================================
     RESPONSIVE - LARGE DESKTOP (1400px+)
     ======================================== */
  @media (min-width: 1400px) {
    .press-go-steps {
      padding: 120px 48px 240px;
    }

    .pgs__container {
      gap: 80px;
    }

    .pgs__heading-line1,
    .pgs__heading-line2 {
      font-size: 56px;
    }

    .pgs__cards {
      gap: 50px;
    }

    .pgs__card {
      max-width: 420px;
    }

    .pgs__card-content {
      padding: 60px 36px 36px;
    }

    .pgs__card-title {
      font-size: 28px;
    }

    .pgs__card-description {
      font-size: 16px;
    }

    .pgs__corner-shape {
      width: 300px;
      height: 360px;
    }

    .pgs__corner-shape--left {
      top: -140px;
      left: -40px;
    }

    .pgs__corner-shape--right {
      top: -140px;
      right: -40px;
    }

    .pgs__decor--arc-left {
      width: 60px;
      height: 60px;
      top: 30px;
      left: 160px;
    }

    .pgs__decor--arc-right {
      width: 60px;
      height: 60px;
      top: 30px;
      right: 160px;
    }

    .pgs__decor--dot-1 {
      top: 180px;
      left: 18%;
      width: 14px;
      height: 14px;
    }

    .pgs__decor--dot-2 {
      top: 130px;
      left: 44%;
      width: 28px;
      height: 28px;
    }
  }
</style>

