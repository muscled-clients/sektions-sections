<style>
  .category-badges-row {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_horizontal }}px {{ section.settings.section_padding_bottom }}px;
  }

  .category-badges-row__container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
  }

  .category-badges-row__grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: {{ section.settings.card_gap }}px;
    justify-items: center;
  }

  .category-badges-row__card {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    width: 100%;
    max-width: {{ section.settings.card_size }}px;
  }

  .category-badges-row__image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    border-radius: 50%;
    border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    overflow: hidden;
    background-color: #ffffff;
    transition: transform 0.3s ease;
  }

  .category-badges-row__card:hover .category-badges-row__image-wrapper {
    transform: scale(1.05);
  }

  .category-badges-row__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  .category-badges-row__badge {
    position: absolute;
    top: {{ section.settings.badge_offset }}px;
    left: 50%;
    transform: translateX(-50%);
    background-color: {{ section.settings.badge_bg_color }};
    border: {{ section.settings.badge_border_width }}px solid {{ section.settings.badge_border_color }};
    border-radius: 20px;
    padding: {{ section.settings.badge_padding_vertical }}px {{ section.settings.badge_padding_horizontal }}px;
    font-family: {{ section.settings.body_font }}, sans-serif;
    font-size: {{ section.settings.badge_font_size }}px;
    font-weight: {{ section.settings.badge_font_weight }};
    color: {{ section.settings.badge_text_color }};
    white-space: nowrap;
    z-index: 10;
  }

  .category-badges-row__title {
    margin-top: {{ section.settings.title_margin_top }}px;
    font-family: {{ section.settings.body_font }}, sans-serif;
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: {{ section.settings.title_font_weight }};
    color: {{ section.settings.title_color }};
    text-align: center;
    line-height: 1.3;
  }

  @media (max-width: 1024px) {
    .category-badges-row__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: {{ section.settings.card_gap | minus: 10 }}px;
    }
  }

  @media (max-width: 768px) {
    .category-badges-row__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: {{ section.settings.card_gap | minus: 15 }}px;
    }

    .category-badges-row__card {
      max-width: 100%;
    }

    .category-badges-row__title {
      font-size: {{ section.settings.title_font_size | minus: 2 }}px;
      margin-top: {{ section.settings.title_margin_top | minus: 4 }}px;
    }

    .category-badges-row__badge {
      font-size: {{ section.settings.badge_font_size | minus: 1 }}px;
      padding: {{ section.settings.badge_padding_vertical | minus: 1 }}px {{ section.settings.badge_padding_horizontal | minus: 2 }}px;
    }
  }

  @media (max-width: 640px) {
    .category-badges-row {
      padding: {{ section.settings.section_padding_top | divided_by: 1.5 }}px {{ section.settings.mobile_padding }}px {{ section.settings.section_padding_bottom | divided_by: 1.5 }}px;
    }

    .category-badges-row__grid {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      gap: {{ section.settings.card_gap | minus: 10 }}px;
      padding-bottom: 10px;
      -webkit-overflow-scrolling: touch;
    }

    .category-badges-row__card {
      flex: 0 0 auto;
      width: {{ section.settings.mobile_card_size }}px;
      max-width: none;
      scroll-snap-align: center;
    }

    .category-badges-row__grid::-webkit-scrollbar {
      height: 4px;
    }

    .category-badges-row__grid::-webkit-scrollbar-track {
      background: #f1f1f1;
      border-radius: 10px;
    }

    .category-badges-row__grid::-webkit-scrollbar-thumb {
      background: {{ section.settings.border_color }};
      border-radius: 10px;
    }
  }
</style>

<div class="category-badges-row">
  <div class="category-badges-row__container">
    <div class="category-badges-row__grid">
      {% for block in section.blocks %}
        <a
          href="{{ block.settings.link }}"
          class="category-badges-row__card"
          {{ block.shopify_attributes }}
        >
          <div class="category-badges-row__image-wrapper">
            {% if block.settings.badge_text != blank %}
              <div class="category-badges-row__badge">{{ block.settings.badge_text }}</div>
            {% endif %}
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | image_url: width: 400 }}"
                srcset="{{ block.settings.image | image_url: width: 200 }} 200w,
                        {{ block.settings.image | image_url: width: 300 }} 300w,
                        {{ block.settings.image | image_url: width: 400 }} 400w"
                sizes="(max-width: 640px) 150px, (max-width: 768px) 25vw, 16vw"
                alt="{{ block.settings.title }}"
                class="category-badges-row__image"
                loading="lazy"
              />
            {% else %}
              <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: #f5f5f5; display: flex; align-items: center; justify-content: center; border-radius: 50%; color: #999; font-size: 14px;">
                Add Image
              </div>
            {% endif %}
          </div>
          {% if block.settings.title != blank %}
            <h3 class="category-badges-row__title">{{ block.settings.title }}</h3>
          {% endif %}
        </a>
      {% endfor %}
    </div>
  </div>
</div>

