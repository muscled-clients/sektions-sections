  /* Large Desktop - 1400px */
  @media (min-width: 1400px) {
    #sek-f25-{{ section_id }} {
      padding: {{ section.settings.section_padding_top_desktop }}px 5rem {{ section.settings.section_padding_bottom_desktop }}px;
    }

    #sek-f25-{{ section_id }} .sek-f25__grid {
