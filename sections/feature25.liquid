{% comment %}
  SEK Feature 25 - Two-column feature with image and text content
  Features: Reversible layout, scrollable gallery, colored backgrounds, outline buttons
{% endcomment %}

{%- assign section_id = section.id -%}

{% style %}
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap');

  /* Shopify Section Wrapper */
  #shopify-section-{{ section_id }} {
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 0;
    overflow: hidden;
  }

  /* Section Container */
  #sek-f25-{{ section_id }} {
    padding: {{ section.settings.section_padding_top_mobile | times: 0.7 }}px 15px {{ section.settings.section_padding_bottom_mobile | times: 0.7 }}px;
    background-color: {{ section.settings.section_bg }};
    box-sizing: border-box;
  }

  #sek-f25-{{ section_id }} *,
  #sek-f25-{{ section_id }} *::before,
  #sek-f25-{{ section_id }} *::after {
    box-sizing: border-box;
  }

  /* Main Grid */
  #sek-f25-{{ section_id }} .sek-f25__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ section.settings.gap_mobile | times: 0.7 }}px;
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
  }

  /* Image Column */
  #sek-f25-{{ section_id }} .sek-f25__image-col {
    position: relative;
    order: 1;
  }

  #sek-f25-{{ section_id }} .sek-f25__image-wrapper {
    position: relative;
    border-radius: {{ section.settings.image_radius | times: 0.7 }}px;
    overflow: hidden;
    aspect-ratio: {{ section.settings.image_aspect_ratio }};
  }

  #sek-f25-{{ section_id }} .sek-f25__image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Image Overlay */
  {%- if section.settings.show_image_overlay -%}
  #sek-f25-{{ section_id }} .sek-f25__image-wrapper::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
    pointer-events: none;
  }
  {%- endif -%}

  /* Image Text Overlay - Top Label */
  #sek-f25-{{ section_id }} .sek-f25__image-label {
    position: absolute;
    top: 12px;
    left: 12px;
    z-index: 2;
    font-family: 'Montserrat', sans-serif;
    font-size: 11px;
    font-weight: 600;
    color: {{ section.settings.image_text_color }};
    margin: 0;
  }

  /* Image Text Overlay - Bottom Title */
  #sek-f25-{{ section_id }} .sek-f25__image-title {
    position: absolute;
    bottom: 12px;
    left: 12px;
    right: 12px;
    z-index: 2;
    font-family: 'Montserrat', sans-serif;
    font-size: 18px;
    font-weight: 700;
    line-height: 1.3;
    color: {{ section.settings.image_text_color }};
    margin: 0;
  }

  /* Content Column */
  #sek-f25-{{ section_id }} .sek-f25__content-col {
    order: 2;
  }

  #sek-f25-{{ section_id }} .sek-f25__content {
    background-color: {{ section.settings.content_bg }};
    border-radius: {{ section.settings.content_radius | times: 0.7 }}px;
    padding: {{ section.settings.content_padding_mobile | times: 0.7 }}px;
  }

  /* Subheading */
  #sek-f25-{{ section_id }} .sek-f25__subheading {
    font-family: 'Montserrat', sans-serif;
    font-size: 10px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: {{ section.settings.subheading_color }};
    margin: 0 0 8px;
  }

  /* Heading */
  #sek-f25-{{ section_id }} .sek-f25__heading {
    font-family: 'Montserrat', sans-serif;
    font-size: 18px;
    font-weight: 700;
    line-height: 1.4;
    color: {{ section.settings.heading_color }};
    margin: 0 0 12px;
  }

  /* Description */
  #sek-f25-{{ section_id }} .sek-f25__text {
    font-family: 'Montserrat', sans-serif;
    font-size: 13px;
    font-weight: 400;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    margin: 0 0 16px;
  }

  /* Button */
  #sek-f25-{{ section_id }} .sek-f25__btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    font-family: 'Montserrat', sans-serif;
    font-size: 12px;
    font-weight: 600;
    text-decoration: none;
    border: 2px solid {{ section.settings.button_border_color }};
    border-radius: {{ section.settings.button_radius }}px;
    background-color: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text_color }};
    transition: all 0.25s ease;
    cursor: pointer;
  }

  #sek-f25-{{ section_id }} .sek-f25__btn:hover {
    background-color: {{ section.settings.button_hover_bg }};
    color: {{ section.settings.button_hover_text }};
    border-color: {{ section.settings.button_hover_bg }};
  }

  #sek-f25-{{ section_id }} .sek-f25__btn svg {
    width: 14px;
    height: 14px;
    stroke: currentColor;
    fill: none;
    stroke-width: 2;
    transition: transform 0.25s ease;
  }

  #sek-f25-{{ section_id }} .sek-f25__btn:hover svg {
    transform: translateX(4px);
  }

  /* Media Gallery */
  #sek-f25-{{ section_id }} .sek-f25__gallery {
    margin-bottom: 16px;
    position: relative;
  }

  #sek-f25-{{ section_id }} .sek-f25__gallery-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.gallery_columns_mobile }}, 1fr);
    gap: 10px;
  }

  #sek-f25-{{ section_id }} .sek-f25__gallery-item {
    aspect-ratio: {{ section.settings.gallery_aspect_ratio }};
    border-radius: {{ section.settings.gallery_radius | times: 0.7 }}px;
    overflow: hidden;
  }

  #sek-f25-{{ section_id }} .sek-f25__gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  #sek-f25-{{ section_id }} .sek-f25__gallery-item:hover img {
    transform: scale(1.05);
  }

  /* Gallery Video */
  #sek-f25-{{ section_id }} .sek-f25__gallery-item--video {
    position: relative;
  }

  #sek-f25-{{ section_id }} .sek-f25__gallery-item--video video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Scroll Indicator */
  #sek-f25-{{ section_id }} .sek-f25__scroll-indicator {
    display: none;
    justify-content: center;
    margin-top: 12px;
  }

  #sek-f25-{{ section_id }} .sek-f25__scroll-arrow {
    width: 20px;
    height: 20px;
    stroke: {{ section.settings.heading_color }};
    fill: none;
    stroke-width: 2;
    animation: sek-f25-pulse-{{ section_id }} 1.5s ease-in-out infinite;
  }

  @keyframes sek-f25-pulse-{{ section_id }} {
    0%, 100% { transform: translateY(0); opacity: 1; }
    50% { transform: translateY(5px); opacity: 0.6; }
  }

