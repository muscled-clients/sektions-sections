<section id="sek-f25-{{ section_id }}" class="sek-f25">
  <div class="sek-f25__grid">
    <!-- Image Column -->
    <div class="sek-f25__image-col">
      <div class="sek-f25__image-wrapper">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy' }}
        {%- else -%}
          <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
        {%- endif -%}

        {%- if section.settings.image_label != blank -%}
          <p class="sek-f25__image-label">{{ section.settings.image_label }}</p>
        {%- endif -%}

        {%- if section.settings.image_title != blank -%}
          <h3 class="sek-f25__image-title">{{ section.settings.image_title }}</h3>
        {%- endif -%}
      </div>
    </div>

    <!-- Content Column -->
    <div class="sek-f25__content-col">
      <div class="sek-f25__content">
        {%- comment -%} Media Gallery - At Top {%- endcomment -%}
        {%- assign gallery_count = 0 -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'gallery_image' or block.type == 'gallery_video' -%}
            {%- assign gallery_count = gallery_count | plus: 1 -%}
          {%- endif -%}
        {%- endfor -%}

        {%- if gallery_count > 0 -%}
          <div class="sek-f25__gallery{% if gallery_count > 6 %} sek-f25__gallery--scrollable{% endif %}">
            <div class="sek-f25__gallery-grid">
              {%- for block in section.blocks -%}
                {%- if block.type == 'gallery_image' -%}
                  <div class="sek-f25__gallery-item" {{ block.shopify_attributes }}>
                    {%- if block.settings.image != blank -%}
                      {{ block.settings.image | image_url: width: 400 | image_tag: loading: 'lazy' }}
                    {%- else -%}
                      <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);"></div>
                    {%- endif -%}
                  </div>
                {%- elsif block.type == 'gallery_video' -%}
                  <div class="sek-f25__gallery-item sek-f25__gallery-item--video" {{ block.shopify_attributes }}>
                    {%- if block.settings.video != blank -%}
                      {{ block.settings.video | video_tag: autoplay: false, loop: true, muted: true, controls: true, playsinline: true }}
                    {%- elsif block.settings.video_url != blank -%}
                      <video controls playsinline muted preload="metadata" webkit-playsinline>
                        <source src="{{ block.settings.video_url }}" type="video/mp4">
                      </video>
                    {%- else -%}
                      <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
                    {%- endif -%}
                  </div>
                {%- endif -%}
              {%- endfor -%}
            </div>

            {%- if gallery_count > 6 -%}
              <div class="sek-f25__scroll-indicator">
                <svg class="sek-f25__scroll-arrow" viewBox="0 0 24 24">
                  <path d="M12 5v14M5 12l7 7 7-7"/>
                </svg>
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- comment -%} Text Content - Below Gallery {%- endcomment -%}
        {%- if section.settings.heading != blank -%}
          <h2 class="sek-f25__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}

        {%- if section.settings.text != blank -%}
          <div class="sek-f25__text">{{ section.settings.text }}</div>
        {%- endif -%}

        {%- if section.settings.button_text != blank -%}
          <a href="{{ section.settings.button_link }}" class="sek-f25__btn">
            {{ section.settings.button_text }}
            {%- if section.settings.show_button_arrow -%}
              <svg viewBox="0 0 24 24"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
            {%- endif -%}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SEK Feature 25",
  "tag": "div",
  "class": "sek-f25-section",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position (desktop)",
      "options": [
        { "value": "1", "label": "Left" },
        { "value": "2", "label": "Right" }
      ],
      "default": "1"
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Max width",
      "min": 1000,
      "max": 1600,
      "step": 50,
      "default": 1400,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "gap_mobile",
      "label": "Gap between columns (mobile)",
      "min": 16,
      "max": 48,
      "step": 4,
      "default": 24,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "gap_desktop",
      "label": "Gap between columns (desktop)",
      "min": 20,
      "max": 60,
      "step": 4,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_aspect_ratio",
      "label": "Image aspect ratio",
      "options": [
        { "value": "1 / 1", "label": "Square (1:1)" },
        { "value": "4 / 3", "label": "Landscape (4:3)" },
        { "value": "3 / 4", "label": "Portrait (3:4)" },
        { "value": "16 / 9", "label": "Wide (16:9)" },
