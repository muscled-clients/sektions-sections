{% comment %}
  Section: Why Trusted by Healthcare Professionals

  Two-column layout:
  - Left: Label, heading, text blocks, and CTA button
  - Right: Masonry-style image grid with 6 configurable images
{% endcomment %}

<section class="why-trusted-section">
  <div class="why-trusted-container">

    {%- comment -%} Left Column - Content {%- endcomment -%}
    <div class="why-trusted-content">

      {%- if section.settings.label != blank -%}
        <p class="why-trusted-label">{{ section.settings.label }}</p>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h2 class="why-trusted-heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.text_block_1 != blank -%}
        <div class="why-trusted-text">
          {{ section.settings.text_block_1 }}
        </div>
      {%- endif -%}

      {%- if section.settings.text_block_2 != blank -%}
        <div class="why-trusted-text">
          {{ section.settings.text_block_2 }}
        </div>
      {%- endif -%}

      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_url }}" class="why-trusted-button">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}

    </div>

    {%- comment -%} Right Column - Image Grid {%- endcomment -%}
    <div class="why-trusted-images">

      {%- comment -%} Image 1: Large (top left, spans 2 rows) {%- endcomment -%}
      {%- if section.settings.image_1 != blank -%}
        <div class="grid-image grid-image-1">
          <img
            src="{{ section.settings.image_1 | image_url: width: 800 }}"
            srcset="{{ section.settings.image_1 | image_url: width: 400 }} 400w,
                    {{ section.settings.image_1 | image_url: width: 600 }} 600w,
                    {{ section.settings.image_1 | image_url: width: 800 }} 800w"
            sizes="(min-width: 990px) 550px, (min-width: 750px) 60vw, 100vw"
            alt="{{ section.settings.image_1.alt | escape }}"
            loading="lazy"
          >
        </div>
      {%- else -%}
        <div class="grid-image grid-image-1 placeholder">
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {%- endif -%}

      {%- comment -%} Image 2: Small portrait (top right) {%- endcomment -%}
      {%- if section.settings.image_2 != blank -%}
        <div class="grid-image grid-image-2">
          <img
            src="{{ section.settings.image_2 | image_url: width: 300 }}"
            srcset="{{ section.settings.image_2 | image_url: width: 200 }} 200w,
                    {{ section.settings.image_2 | image_url: width: 300 }} 300w"
            sizes="(min-width: 990px) 200px, (min-width: 750px) 25vw, 50vw"
            alt="{{ section.settings.image_2.alt | escape }}"
            loading="lazy"
          >
        </div>
      {%- else -%}
        <div class="grid-image grid-image-2 placeholder">
          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {%- endif -%}

      {%- comment -%} Image 3: Small portrait (middle right) {%- endcomment -%}
      {%- if section.settings.image_3 != blank -%}
        <div class="grid-image grid-image-3">
          <img
            src="{{ section.settings.image_3 | image_url: width: 300 }}"
            srcset="{{ section.settings.image_3 | image_url: width: 200 }} 200w,
                    {{ section.settings.image_3 | image_url: width: 300 }} 300w"
            sizes="(min-width: 990px) 200px, (min-width: 750px) 25vw, 50vw"
            alt="{{ section.settings.image_3.alt | escape }}"
            loading="lazy"
          >
        </div>
      {%- else -%}
        <div class="grid-image grid-image-3 placeholder">
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {%- endif -%}

      {%- comment -%} Image 4: Portrait (bottom left, spans 2 rows) {%- endcomment -%}
      {%- if section.settings.image_4 != blank -%}
        <div class="grid-image grid-image-4">
          <img
            src="{{ section.settings.image_4 | image_url: width: 300 }}"
            srcset="{{ section.settings.image_4 | image_url: width: 200 }} 200w,
                    {{ section.settings.image_4 | image_url: width: 300 }} 300w"
            sizes="(min-width: 990px) 200px, (min-width: 750px) 25vw, 50vw"
            alt="{{ section.settings.image_4.alt | escape }}"
            loading="lazy"
          >
        </div>
      {%- else -%}
        <div class="grid-image grid-image-4 placeholder">
          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {%- endif -%}

      {%- comment -%} Image 5: Large landscape (bottom right, spans 2 rows) {%- endcomment -%}
      {%- if section.settings.image_5 != blank -%}
        <div class="grid-image grid-image-5">
          <img
            src="{{ section.settings.image_5 | image_url: width: 800 }}"
            srcset="{{ section.settings.image_5 | image_url: width: 400 }} 400w,
                    {{ section.settings.image_5 | image_url: width: 600 }} 600w,
                    {{ section.settings.image_5 | image_url: width: 800 }} 800w"
            sizes="(min-width: 990px) 550px, (min-width: 750px) 60vw, 100vw"
            alt="{{ section.settings.image_5.alt | escape }}"
            loading="lazy"
          >
        </div>
      {%- else -%}
        <div class="grid-image grid-image-5 placeholder">
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {%- endif -%}

    </div>

  </div>
</section>

<style>
  /* ========================================
     Main Section Container
     ======================================== */
  .why-trusted-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .why-trusted-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    display: grid;
    grid-template-columns: 40% 60%;
    gap: 60px;
    align-items: center;
  }

  /* ========================================
     Left Column - Content Area
     ======================================== */
  .why-trusted-content {
    padding-left: 48px;
    padding-right: 48px;
  }

  .why-trusted-label {
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: {{ section.settings.label_color }};
    margin: 0 0 16px 0;
  }

  .why-trusted-heading {
    font-size: 36px;
    font-weight: 700;
    line-height: 1.2;
    color: {{ section.settings.heading_color }};
    margin: 0 0 24px 0;
    letter-spacing: -0.5px;
  }

  .why-trusted-text {
    font-size: 14px;
    line-height: 1.7;
    color: {{ section.settings.text_color }};
    margin-bottom: 16px;
  }

  .why-trusted-button {
    display: inline-block;
    margin-top: 12px;
    padding: 14px 32px;
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    text-decoration: none;
    color: {{ section.settings.button_text_color }};
    background-color: {{ section.settings.button_background_color }};
    border: 2px solid {{ section.settings.button_border_color }};
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .why-trusted-button:hover {
    background-color: {{ section.settings.button_hover_background }};
    color: {{ section.settings.button_hover_text }};
    border-color: {{ section.settings.button_hover_border }};
  }

  /* ========================================
     Right Column - Masonry Image Grid
     Using CSS Grid with specific positioning
     3-column grid for flexible layout
     ======================================== */
  .why-trusted-images {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(4, 120px);
    gap: 12px;
  }

  .grid-image {
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .grid-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Placeholder styling */
  .grid-image.placeholder {
    background-color: #e0e0e0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  /* ========================================
     Grid Image Positioning (5 Images Total)
     Using grid-column and grid-row

     Layout:
     Row 1-2: [Image 1 - 2 cols wide] [Img 2]
                                       [Img 3]
     Row 3-4: [Img 4] [Image 5 - 2 cols wide]
     ======================================== */

  /* Image 1: Large (top left) - 548px, spans 2 columns & 2 rows */
  .grid-image-1 {
    grid-column: 1 / 3;
    grid-row: 1 / 3;
  }

  /* Image 2: Small portrait (top right) - 207px */
  .grid-image-2 {
    grid-column: 3 / 4;
    grid-row: 1 / 2;
  }

  /* Image 3: Small portrait (middle right) - 207px */
  .grid-image-3 {
    grid-column: 3 / 4;
    grid-row: 2 / 3;
  }

  /* Image 4: Portrait (bottom left) - 207px, spans 2 rows */
  .grid-image-4 {
    grid-column: 1 / 2;
    grid-row: 3 / 5;
  }

  /* Image 5: Large (bottom right) - 548px, spans 2 columns & 2 rows */
  .grid-image-5 {
    grid-column: 2 / 4;
    grid-row: 3 / 5;
  }

  /* ========================================
     Responsive Design - Tablet
     ======================================== */
  @media screen and (max-width: 989px) {
    .why-trusted-container {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .why-trusted-content {
      padding-right: 0;
      text-align: center;
    }

    .why-trusted-heading {
      font-size: 30px;
    }

    .why-trusted-images {
      grid-template-rows: repeat(4, 100px);
    }
  }

  /* ========================================
     Responsive Design - Mobile
     ======================================== */
  @media screen and (max-width: 749px) {
    .why-trusted-section {
      padding: {{ section.settings.padding_top | divided_by: 2 }}px 0 {{ section.settings.padding_bottom | divided_by: 2 }}px;
    }

    .why-trusted-container {
      padding: 0 16px;
      gap: 32px;
    }

    .why-trusted-heading {
      font-size: 24px;
      margin-bottom: 20px;
    }

    .why-trusted-text {
      font-size: 13px;
      margin-bottom: 14px;
    }

    .why-trusted-button {
      padding: 12px 24px;
      font-size: 12px;
      width: 100%;
      text-align: center;
    }

    /* Mobile: 2-column grid layout */
    .why-trusted-images {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(5, 90px);
      gap: 8px;
    }

    /* Mobile grid positioning - stack vertically in 2 columns */
    .grid-image-1 {
      grid-column: 1 / 3;
      grid-row: 1 / 3;
    }

    .grid-image-2 {
      grid-column: 1 / 2;
      grid-row: 3 / 4;
    }

    .grid-image-3 {
      grid-column: 2 / 3;
      grid-row: 3 / 4;
    }

    .grid-image-4 {
      grid-column: 1 / 2;
      grid-row: 4 / 6;
    }

    .grid-image-5 {
      grid-column: 2 / 3;
      grid-row: 4 / 6;
    }
  }
</style>

