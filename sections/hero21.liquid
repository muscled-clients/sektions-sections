{% comment %}
  SEK Hero 21 - Full-width hero with scrolling ticker rows
  Features: Background video/image, dark overlay, 3 marquee rows, alternating directions, pill cards
{% endcomment %}

{%- assign section_id = section.id -%}

{% style %}
  /* Hero Container */
  #sek-hero21-{{ section_id }} {
    position: relative;
    width: 100%;
    min-height: {{ section.settings.min_height_mobile }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow: hidden;
  }

  @media (min-width: 750px) {
    #sek-hero21-{{ section_id }} {
      min-height: {{ section.settings.min_height_desktop }}px;
    }
  }

  /* Background Video/Image */
  #sek-hero21-{{ section_id }} .sek-h21__bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  #sek-hero21-{{ section_id }} .sek-h21__bg img,
  #sek-hero21-{{ section_id }} .sek-h21__bg video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Overlay */
  #sek-hero21-{{ section_id }} .sek-h21__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  /* Content */
  #sek-hero21-{{ section_id }} .sek-h21__content {
    position: relative;
    z-index: 3;
    padding: {{ section.settings.padding_top_mobile }}px 20px {{ section.settings.padding_bottom_mobile }}px;
  }

  @media (min-width: 750px) {
    #sek-hero21-{{ section_id }} .sek-h21__content {
      padding: {{ section.settings.padding_top_desktop }}px 5rem {{ section.settings.padding_bottom_desktop }}px;
    }
  }

  /* Header Section */
  #sek-hero21-{{ section_id }} .sek-h21__header {
    text-align: {{ section.settings.text_alignment }};
    max-width: {{ section.settings.content_max_width }}px;
    margin: 0 auto 40px;
    padding: 0 15px;
  }

  @media (min-width: 750px) {
    #sek-hero21-{{ section_id }} .sek-h21__header {
      margin-bottom: 60px;
    }
  }

  #sek-hero21-{{ section_id }} .sek-h21__heading {
    font-size: {{ section.settings.heading_size_mobile }}px;
    line-height: 1.3;
    font-weight: {{ section.settings.heading_weight }};
    color: {{ section.settings.heading_color }};
    margin: 0 0 20px;
    {%- if section.settings.heading_font == 'serif' -%}
    font-family: 'Petrona', 'Georgia', 'Times New Roman', serif;
    {%- else -%}
    font-family: inherit;
    {%- endif -%}
  }

  @media (min-width: 750px) {
    #sek-hero21-{{ section_id }} .sek-h21__heading {
      font-size: {{ section.settings.heading_size_desktop }}px;
      margin-bottom: 25px;
    }
  }

  #sek-hero21-{{ section_id }} .sek-h21__text {
    font-size: {{ section.settings.text_size_mobile }}px;
    line-height: 1.8;
    color: {{ section.settings.text_color }};
    margin: 0 0 30px;
    opacity: 0.9;
  }

  @media (min-width: 750px) {
    #sek-hero21-{{ section_id }} .sek-h21__text {
      font-size: {{ section.settings.text_size_desktop }}px;
    }
  }

  /* CTA Button */
  #sek-hero21-{{ section_id }} .sek-h21__btn {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 32px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 100px;
    background-color: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text_color }};
    transition: all 0.25s ease;
    border: none;
    cursor: pointer;
  }

  #sek-hero21-{{ section_id }} .sek-h21__btn:hover {
    background-color: {{ section.settings.button_hover_bg }};
    transform: translateY(-2px);
  }

  #sek-hero21-{{ section_id }} .sek-h21__btn svg {
    width: 16px;
    height: 16px;
    fill: currentColor;
  }

  /* Button Wrapper (Below Tickers) */
  #sek-hero21-{{ section_id }} .sek-h21__btn-wrapper {
    text-align: center;
    margin-top: 40px;
  }

  @media (min-width: 750px) {
    #sek-hero21-{{ section_id }} .sek-h21__btn-wrapper {
      margin-top: 50px;
    }
  }

  /* Ticker/Marquee Rows */
  #sek-hero21-{{ section_id }} .sek-h21__tickers {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.ticker_gap_mobile }}px;
  }

  @media (min-width: 750px) {
    #sek-hero21-{{ section_id }} .sek-h21__tickers {
      gap: {{ section.settings.ticker_gap_desktop }}px;
    }
  }

  #sek-hero21-{{ section_id }} .sek-h21__ticker {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  #sek-hero21-{{ section_id }} .sek-h21__ticker-track {
    display: flex;
    gap: {{ section.settings.item_gap_mobile }}px;
    width: fit-content;
    animation: sek-h21-scroll-{{ section_id }} {{ section.settings.ticker_speed_mobile }}s linear infinite;
  }

  @media (min-width: 750px) {
    #sek-hero21-{{ section_id }} .sek-h21__ticker-track {
      gap: {{ section.settings.item_gap_desktop }}px;
      animation-duration: {{ section.settings.ticker_speed_desktop }}s;
    }
  }

  /* Reverse direction for middle row */
  #sek-hero21-{{ section_id }} .sek-h21__ticker--reverse .sek-h21__ticker-track {
    animation-name: sek-h21-scroll-reverse-{{ section_id }};
  }

  /* Pause on hover */
  {%- if section.settings.pause_on_hover -%}
  #sek-hero21-{{ section_id }} .sek-h21__ticker:hover .sek-h21__ticker-track {
    animation-play-state: paused;
  }
  {%- endif -%}

  @keyframes sek-h21-scroll-{{ section_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @keyframes sek-h21-scroll-reverse-{{ section_id }} {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0);
    }
  }

  /* Ticker Items */
  #sek-hero21-{{ section_id }} .sek-h21__ticker-item {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 12px 18px;
    background: {{ section.settings.card_bg }};
    border: 1px solid {{ section.settings.card_border }};
    border-radius: {{ section.settings.card_radius }}px;
    color: {{ section.settings.card_text }};
    font-size: {{ section.settings.card_font_size_mobile }}px;
    font-weight: 500;
    white-space: nowrap;
    transition: all 0.25s ease;
  }

  @media (min-width: 750px) {
    #sek-hero21-{{ section_id }} .sek-h21__ticker-item {
      padding: 14px 24px;
      font-size: {{ section.settings.card_font_size_desktop }}px;
    }
  }

  #sek-hero21-{{ section_id }} .sek-h21__ticker-item:hover {
    background: {{ section.settings.card_hover_bg }};
  }

  #sek-hero21-{{ section_id }} .sek-h21__ticker-icon {
    width: 12px;
    height: 12px;
    stroke: currentColor;
    fill: none;
    stroke-width: 2;
    flex-shrink: 0;
  }

  /* Import Petrona font if needed */
  {%- if section.settings.heading_font == 'serif' -%}
  @import url('https://fonts.googleapis.com/css2?family=Petrona:wght@400;500;600;700&display=swap');
  {%- endif -%}
{% endstyle %}

<section id="sek-hero21-{{ section_id }}" class="sek-hero21">
  <!-- Background Video/Image -->
  <div class="sek-h21__bg">
    {%- if section.settings.video_url != blank -%}
      <video autoplay muted loop playsinline>
        <source src="{{ section.settings.video_url }}" type="video/mp4">
      </video>
    {%- elsif section.settings.background_video != blank -%}
      {{ section.settings.background_video | video_tag: autoplay: true, loop: true, muted: true, playsinline: true }}
    {%- elsif section.settings.background_image != blank -%}
      {{ section.settings.background_image | image_url: width: 2000 | image_tag: loading: 'eager' }}
    {%- else -%}
      <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);"></div>
    {%- endif -%}
  </div>

  <!-- Overlay -->
  <div class="sek-h21__overlay"></div>

  <!-- Content -->
  <div class="sek-h21__content">
    <!-- Header (Heading & Text only) -->
    {%- if section.settings.heading != blank or section.settings.text != blank -%}
      <div class="sek-h21__header">
        {%- if section.settings.heading != blank -%}
          <h2 class="sek-h21__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}

        {%- if section.settings.text != blank -%}
          <p class="sek-h21__text">{{ section.settings.text }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <!-- Ticker Rows -->
    <div class="sek-h21__tickers">
      <!-- Row 1 -->
      <div class="sek-h21__ticker">
        <div class="sek-h21__ticker-track">
          {%- for i in (1..2) -%}
            {%- for block in section.blocks -%}
              {%- if block.type == 'ticker_row_1' -%}
                <div class="sek-h21__ticker-item" {{ block.shopify_attributes }}>
                  {{ block.settings.text }}
                  {%- if section.settings.show_arrows -%}
                    <svg class="sek-h21__ticker-icon" viewBox="0 0 24 24"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
                  {%- endif -%}
                </div>
              {%- endif -%}
            {%- endfor -%}

            {%- if section.blocks.size == 0 -%}
              <div class="sek-h21__ticker-item">Coffee beans <svg class="sek-h21__ticker-icon" viewBox="0 0 24 24"><path d="M5 12h14M12 5l7 7-7 7"/></svg></div>
              <div class="sek-h21__ticker-item">Espresso coffee <svg class="sek-h21__ticker-icon" viewBox="0 0 24 24"><path d="M5 12h14M12 5l7 7-7 7"/></svg></div>
              <div class="sek-h21__ticker-item">Ground coffee <svg class="sek-h21__ticker-icon" viewBox="0 0 24 24"><path d="M5 12h14M12 5l7 7-7 7"/></svg></div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>

      <!-- Row 2 (Reverse) -->
      <div class="sek-h21__ticker sek-h21__ticker--reverse">
        <div class="sek-h21__ticker-track">
          {%- for i in (1..2) -%}
            {%- for block in section.blocks -%}
              {%- if block.type == 'ticker_row_2' -%}
                <div class="sek-h21__ticker-item" {{ block.shopify_attributes }}>
                  {{ block.settings.text }}
                  {%- if section.settings.show_arrows -%}
                    <svg class="sek-h21__ticker-icon" viewBox="0 0 24 24"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
                  {%- endif -%}
                </div>
              {%- endif -%}
            {%- endfor -%}

            {%- if section.blocks.size == 0 -%}
              <div class="sek-h21__ticker-item">Decaffeinated <svg class="sek-h21__ticker-icon" viewBox="0 0 24 24"><path d="M5 12h14M12 5l7 7-7 7"/></svg></div>
              <div class="sek-h21__ticker-item">Instant coffee <svg class="sek-h21__ticker-icon" viewBox="0 0 24 24"><path d="M5 12h14M12 5l7 7-7 7"/></svg></div>
              <div class="sek-h21__ticker-item">Coffee capsules <svg class="sek-h21__ticker-icon" viewBox="0 0 24 24"><path d="M5 12h14M12 5l7 7-7 7"/></svg></div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>

      <!-- Row 3 -->
      <div class="sek-h21__ticker">
        <div class="sek-h21__ticker-track">
          {%- for i in (1..2) -%}
            {%- for block in section.blocks -%}
              {%- if block.type == 'ticker_row_3' -%}
                <div class="sek-h21__ticker-item" {{ block.shopify_attributes }}>
                  {{ block.settings.text }}
                  {%- if section.settings.show_arrows -%}
                    <svg class="sek-h21__ticker-icon" viewBox="0 0 24 24"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
                  {%- endif -%}
                </div>
              {%- endif -%}
            {%- endfor -%}

            {%- if section.blocks.size == 0 -%}
              <div class="sek-h21__ticker-item">ESE coffee tablets <svg class="sek-h21__ticker-icon" viewBox="0 0 24 24"><path d="M5 12h14M12 5l7 7-7 7"/></svg></div>
              <div class="sek-h21__ticker-item">Advent calendars <svg class="sek-h21__ticker-icon" viewBox="0 0 24 24"><path d="M5 12h14M12 5l7 7-7 7"/></svg></div>
              <div class="sek-h21__ticker-item">Coffee sets <svg class="sek-h21__ticker-icon" viewBox="0 0 24 24"><path d="M5 12h14M12 5l7 7-7 7"/></svg></div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    </div>

    <!-- Button (Below Tickers) -->
    {%- if section.settings.button_text != blank -%}
      <div class="sek-h21__btn-wrapper">
        <a href="{{ section.settings.button_link }}" class="sek-h21__btn">
          {{ section.settings.button_text }}
          {%- if section.settings.show_button_arrow -%}
            <svg viewBox="0 0 24 24"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
          {%- endif -%}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

