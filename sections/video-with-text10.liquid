      const video = card.querySelector('video');
      const poster = card.querySelector('.video-with-text-10__poster');

      if (!playBtn) return;

      playBtn.addEventListener('click', function(e) {
        e.stopPropagation();

        if (!video) return;

        // Pause any currently playing video
        if (currentlyPlaying && currentlyPlaying !== card) {
          const prevVideo = currentlyPlaying.querySelector('video');
          if (prevVideo) {
            prevVideo.pause();
            prevVideo.currentTime = 0;
            prevVideo.muted = true;
          }
          currentlyPlaying.classList.remove('is-playing');
        }

        // Toggle current video
        if (card.classList.contains('is-playing')) {
          video.pause();
          card.classList.remove('is-playing');
          currentlyPlaying = null;
        } else {
          video.muted = false;
          video.play().catch(err => {
            console.log('Video play failed:', err);
            // Try muted autoplay as fallback
            video.muted = true;
            video.play();
          });
          card.classList.add('is-playing');
          currentlyPlaying = card;
        }
      });

      // When video ends, reset state
      if (video) {
        video.addEventListener('ended', function() {
          card.classList.remove('is-playing');
          video.currentTime = 0;
          video.muted = true;
          currentlyPlaying = null;
        });
      }

      // Click on card to pause
      card.addEventListener('click', function(e) {
        if (e.target === playBtn || playBtn.contains(e.target)) return;

        if (card.classList.contains('is-playing') && video) {
          video.pause();
          card.classList.remove('is-playing');
          currentlyPlaying = null;
        }
      });
    });

    // Pause video when slide changes
    swiper.on('slideChange', function() {
      if (currentlyPlaying) {
        const video = currentlyPlaying.querySelector('video');
        if (video) {
          video.pause();
          video.currentTime = 0;
          video.muted = true;
        }
