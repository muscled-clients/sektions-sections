</style>

<section class="video-with-text-10" data-section-id="{{ section.id }}">
  <div class="video-with-text-10__container">
    <!-- Header -->
    <div class="video-with-text-10__header">
      {%- if section.settings.label != blank -%}
        <p class="video-with-text-10__label">{{ section.settings.label }}</p>
      {%- endif -%}
      {%- if section.settings.heading != blank -%}
        <h2 class="video-with-text-10__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.description != blank -%}
        <p class="video-with-text-10__description">{{ section.settings.description }}</p>
      {%- endif -%}
    </div>

    <!-- Slider Area -->
    <div class="video-with-text-10__slider-area">
      <div class="video-with-text-10__swiper swiper">
        <div class="swiper-wrapper">
          {%- for block in section.blocks -%}
            <div class="video-with-text-10__slide swiper-slide" {{ block.shopify_attributes }} data-index="{{ forloop.index0 }}">
              <div class="video-with-text-10__card" data-card-index="{{ forloop.index0 }}">
                <!-- Video -->
                {%- if block.settings.video != blank -%}
                  {{ block.settings.video | video_tag: autoplay: false, loop: true, muted: true, controls: false, class: 'video-with-text-10__media', playsinline: true, preload: 'metadata' }}
                {%- endif -%}

                <!-- Poster/Thumbnail -->
                {%- if block.settings.image != blank -%}
                  {{ block.settings.image | image_url: width: 1200 | image_tag: class: 'video-with-text-10__poster', loading: 'lazy' }}
                {%- else -%}
                  <div class="video-with-text-10__poster" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
                {%- endif -%}

                <!-- Overlay Text -->
                <div class="video-with-text-10__overlay">
                  {%- if block.settings.overlay_text != blank -%}
                    <span class="video-with-text-10__overlay-text">{{ block.settings.overlay_text }}</span>
                  {%- endif -%}
                </div>

                <!-- Play Button -->
                <button class="video-with-text-10__play-btn" aria-label="Play video">
                  <svg class="play-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                  <svg class="pause-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M6 4h4v16H6zM14 4h4v16h-4z"/>
                  </svg>
                </button>
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    </div>

    <!-- Content Area -->
    <div class="video-with-text-10__content-area">
      <div class="video-with-text-10__content">
        <h3 class="video-with-text-10__title">
          {%- if section.blocks.size > 0 -%}
            {{ section.blocks[0].settings.title }}
          {%- endif -%}
        </h3>
        <p class="video-with-text-10__text">
          {%- if section.blocks.size > 0 -%}
            {{ section.blocks[0].settings.text }}
          {%- endif -%}
        </p>
        <a href="{%- if section.blocks.size > 0 -%}{{ section.blocks[0].settings.button_link }}{%- else -%}#{%- endif -%}" class="video-with-text-10__btn">
          {%- if section.blocks.size > 0 -%}
            {{ section.blocks[0].settings.button_text }}
          {%- else -%}
            Shop Now
          {%- endif -%}
        </a>
      </div>

      <!-- Navigation -->
      <div class="video-with-text-10__nav-wrapper">
        <button class="video-with-text-10__nav video-with-text-10__nav--prev" aria-label="Previous slide">
          <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <polyline points="15 18 9 12 15 6"/>
          </svg>
        </button>
        <button class="video-with-text-10__nav video-with-text-10__nav--next" aria-label="Next slide">
          <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <polyline points="9 18 15 12 9 6"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Hidden Content Data for JS -->
    <div class="video-with-text-10__content-slides">
      {%- for block in section.blocks -%}
        <div data-slide-content="{{ forloop.index0 }}"
             data-title="{{ block.settings.title | escape }}"
             data-text="{{ block.settings.text | escape }}"
             data-button-text="{{ block.settings.button_text | escape }}"
             data-button-link="{{ block.settings.button_link }}">
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sectionId = '{{ section.id }}';
    const section = document.querySelector(`[data-section-id="${sectionId}"]`);
    if (!section) return;

    const swiperEl = section.querySelector('.video-with-text-10__swiper');
    const prevBtn = section.querySelector('.video-with-text-10__nav--prev');
    const nextBtn = section.querySelector('.video-with-text-10__nav--next');
    const titleEl = section.querySelector('.video-with-text-10__title');
    const textEl = section.querySelector('.video-with-text-10__text');
    const btnEl = section.querySelector('.video-with-text-10__btn');
    const contentSlides = section.querySelectorAll('[data-slide-content]');

    // Initialize Swiper
    const swiper = new Swiper(swiperEl, {
      slidesPerView: 'auto',
      spaceBetween: 16,
      centeredSlides: false,
      speed: 400,
      breakpoints: {
        400: {
          spaceBetween: 18,
        },
        550: {
          spaceBetween: 20,
        },
        768: {
          spaceBetween: 24,
        },
        1024: {
          spaceBetween: 28,
        },
        1400: {
          spaceBetween: 32,
        }
      }
    });

    // Navigation buttons
    prevBtn.addEventListener('click', () => swiper.slidePrev());
    nextBtn.addEventListener('click', () => swiper.slideNext());

    // Update navigation button states
    function updateNavButtons() {
      prevBtn.disabled = swiper.isBeginning;
      nextBtn.disabled = swiper.isEnd;
    }

    // Update content on slide change
    function updateContent(index) {
      const contentData = contentSlides[index];
      if (!contentData) return;

      const title = contentData.dataset.title;
      const text = contentData.dataset.text;
      const buttonText = contentData.dataset.buttonText;
      const buttonLink = contentData.dataset.buttonLink;

      // Animate content change
      titleEl.style.opacity = '0';
      textEl.style.opacity = '0';
      btnEl.style.opacity = '0';

      setTimeout(() => {
        titleEl.textContent = title;
        textEl.textContent = text;
        btnEl.textContent = buttonText;
        btnEl.href = buttonLink || '#';

        titleEl.style.opacity = '1';
        textEl.style.opacity = '1';
        btnEl.style.opacity = '1';
      }, 150);
    }

    // Add transition styles for content
    titleEl.style.transition = 'opacity 0.15s ease';
    textEl.style.transition = 'opacity 0.15s ease';
    btnEl.style.transition = 'opacity 0.15s ease';

    // Swiper events
