  /* Large Mobile (550px+) */
  @media (min-width: 550px) {
    .video-with-text-10 {
      padding: 60px 24px;
    }

    .video-with-text-10__header {
      margin-bottom: 32px;
    }

    .video-with-text-10__heading {
      font-size: 36px;
    }

    .video-with-text-10__slide {
      width: 75% !important;
    }

    .video-with-text-10__card {
      aspect-ratio: 16 / 10;
      border-radius: 16px;
    }

    .video-with-text-10__overlay-text {
      font-size: 38px;
    }

    .video-with-text-10__play-btn {
      width: 48px;
      height: 48px;
      bottom: 16px;
      right: 16px;
    }

    .video-with-text-10__play-btn svg {
      width: 18px;
      height: 18px;
    }

    .video-with-text-10__slider-area {
      margin-bottom: 24px;
    }

    .video-with-text-10__title {
      font-size: 22px;
      margin-bottom: 10px;
    }

    .video-with-text-10__text {
      font-size: 15px;
      margin-bottom: 18px;
    }

    .video-with-text-10__btn {
      padding: 14px 28px;
      font-size: 14px;
    }

    .video-with-text-10__nav {
      width: 44px;
      height: 44px;
    }

    .video-with-text-10__nav svg {
      width: 16px;
      height: 16px;
    }
  }

  /* Tablet (768px+) */
  @media (min-width: 768px) {
    .video-with-text-10 {
      padding: 70px 40px;
    }

    .video-with-text-10__header {
      margin-bottom: 36px;
    }

    .video-with-text-10__label {
      font-size: 12px;
      letter-spacing: 2.5px;
    }

    .video-with-text-10__heading {
      font-size: 40px;
      margin-bottom: 14px;
    }

    .video-with-text-10__description {
      font-size: 16px;
    }

    .video-with-text-10__slide {
      width: 70% !important;
    }

    .video-with-text-10__card {
      aspect-ratio: 16 / 9;
      border-radius: 18px;
    }

    .video-with-text-10__overlay-text {
      font-size: 44px;
    }

    .video-with-text-10__play-btn {
      width: 50px;
      height: 50px;
      bottom: 18px;
      right: 18px;
    }

    .video-with-text-10__play-btn svg {
      width: 20px;
      height: 20px;
    }

    .video-with-text-10__slider-area {
      margin-bottom: 28px;
    }

    .video-with-text-10__title {
      font-size: 24px;
    }

    .video-with-text-10__text {
      font-size: 15px;
      margin-bottom: 20px;
      max-width: 450px;
    }

    .video-with-text-10__nav {
      width: 46px;
      height: 46px;
    }

    .video-with-text-10__nav-wrapper {
      gap: 10px;
    }
  }

  /* Desktop (1024px+) */
  @media (min-width: 1024px) {
    .video-with-text-10 {
      padding: 80px 50px;
    }

    .video-with-text-10__header {
      margin-bottom: 40px;
    }

    .video-with-text-10__label {
      font-size: 13px;
      letter-spacing: 3px;
    }

    .video-with-text-10__heading {
      font-size: 46px;
      margin-bottom: 16px;
    }

    .video-with-text-10__description {
      font-size: 17px;
      max-width: 550px;
    }

    .video-with-text-10__slide {
      width: 68% !important;
    }

    .video-with-text-10__card {
      border-radius: 20px;
    }

    .video-with-text-10__overlay-text {
      font-size: 52px;
    }

    .video-with-text-10__play-btn {
      width: 54px;
      height: 54px;
      bottom: 20px;
      right: 20px;
    }

    .video-with-text-10__play-btn svg {
      width: 22px;
      height: 22px;
    }

    .video-with-text-10__slider-area {
      margin-bottom: 32px;
    }

    .video-with-text-10__title {
      font-size: 26px;
      margin-bottom: 12px;
    }

    .video-with-text-10__text {
      font-size: 16px;
      max-width: 480px;
    }

    .video-with-text-10__btn {
      padding: 15px 32px;
      font-size: 14px;
    }

    .video-with-text-10__nav {
      width: 48px;
      height: 48px;
    }

    .video-with-text-10__nav svg {
