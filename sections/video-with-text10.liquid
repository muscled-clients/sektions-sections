{% style %}
  #shopify-section-{{ section.id }} {
    --vwt10-bg: {{ section.settings.background_color }};
    --vwt10-text: {{ section.settings.text_color }};
    --vwt10-label: {{ section.settings.label_color }};
    --vwt10-heading: {{ section.settings.heading_color }};
    --vwt10-overlay: {{ section.settings.overlay_text_color }};
    --vwt10-btn-bg: {{ section.settings.button_bg }};
    --vwt10-btn-text: {{ section.settings.button_text }};
    --vwt10-nav-border: {{ section.settings.nav_border_color }};
    --vwt10-nav-icon: {{ section.settings.nav_icon_color }};
    display: block;
    width: 100%;
    max-width: 100%;
    margin-top: {{ section.settings.margin_top | times: 0.7 | round }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.7 | round }}px;
  }
  @media (min-width: 550px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top | times: 0.8 | round }}px;
      margin-bottom: {{ section.settings.margin_bottom | times: 0.8 | round }}px;
    }
  }
  @media (min-width: 768px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top | times: 0.9 | round }}px;
      margin-bottom: {{ section.settings.margin_bottom | times: 0.9 | round }}px;
    }
  }
  @media (min-width: 1024px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{% endstyle %}

<!-- Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

<!-- Swiper CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<style>
  /* Box-sizing */
  .video-with-text-10,
  .video-with-text-10 *,
  .video-with-text-10 *::before,
  .video-with-text-10 *::after {
    box-sizing: border-box;
  }

  /* Base - Small Mobile (< 400px) */
  .video-with-text-10 {
    background: var(--vwt10-bg, #ffffff);
    padding: 40px 16px;
    font-family: 'Inter', sans-serif;
    position: relative;
    overflow: hidden;
  }

  .video-with-text-10__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Header */
  .video-with-text-10__header {
    margin-bottom: 24px;
  }

  .video-with-text-10__label {
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: var(--vwt10-label, #666666);
    margin: 0 0 10px;
  }

  .video-with-text-10__heading {
    font-family: 'Cormorant Garamond', serif;
    font-size: 28px;
    font-weight: 700;
    line-height: 1.15;
    color: var(--vwt10-heading, #000000);
    margin: 0 0 12px;
  }

  .video-with-text-10__description {
    font-size: 14px;
    font-weight: 400;
    line-height: 1.6;
    color: var(--vwt10-text, #666666);
    margin: 0;
    max-width: 500px;
  }

  /* Slider Wrapper */
  .video-with-text-10__slider-area {
    position: relative;
    margin-bottom: 20px;
  }

  .video-with-text-10__swiper {
    overflow: visible !important;
    width: 100%;
  }

  .video-with-text-10__swiper .swiper-wrapper {
    align-items: stretch;
  }

  .video-with-text-10__slide {
    width: 85% !important;
    flex-shrink: 0;
  }

  /* Video Card */
  .video-with-text-10__card {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    aspect-ratio: 4 / 3;
    background: #f0f0f0;
    cursor: pointer;
  }

  .video-with-text-10__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-with-text-10__poster {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
    transition: opacity 0.3s ease;
  }

  .video-with-text-10__card.is-playing .video-with-text-10__poster {
    opacity: 0;
    pointer-events: none;
  }

  /* Overlay Text */
  .video-with-text-10__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    pointer-events: none;
  }

  .video-with-text-10__overlay-text {
    font-family: 'Cormorant Garamond', serif;
    font-size: 28px;
    font-weight: 500;
    font-style: italic;
    color: var(--vwt10-overlay, #ffffff);
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.4);
    text-align: center;
    padding: 0 20px;
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.4s ease, transform 0.4s ease;
  }

  .swiper-slide-active .video-with-text-10__overlay-text {
    opacity: 1;
    transform: translateY(0);
  }

  /* Play Button */
  .video-with-text-10__play-btn {
    position: absolute;
    bottom: 12px;
    right: 12px;
    width: 40px;
    height: 40px;
    background: rgba(0, 0, 0, 0.5);
    border: none;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 5;
    transition: all 0.3s ease;
    pointer-events: auto;
  }

  .video-with-text-10__play-btn:hover {
    background: rgba(0, 0, 0, 0.7);
    transform: scale(1.05);
  }

  .video-with-text-10__play-btn svg {
    width: 14px;
    height: 14px;
    fill: #ffffff;
    margin-left: 2px;
  }

  .video-with-text-10__card.is-playing .video-with-text-10__play-btn svg.play-icon {
    display: none;
  }

  .video-with-text-10__card.is-playing .video-with-text-10__play-btn svg.pause-icon {
    display: block;
  }

  .video-with-text-10__play-btn svg.pause-icon {
    display: none;
    margin-left: 0;
  }

  /* Content Area */
  .video-with-text-10__content-area {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    gap: 20px;
  }

  .video-with-text-10__content {
    flex: 1;
    min-width: 0;
  }

  .video-with-text-10__title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 18px;
    font-weight: 600;
    line-height: 1.3;
    color: var(--vwt10-heading, #000000);
    margin: 0 0 8px;
  }

  .video-with-text-10__text {
    font-size: 13px;
    font-weight: 400;
    line-height: 1.6;
    color: var(--vwt10-text, #666666);
    margin: 0 0 16px;
  }

  .video-with-text-10__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    background: var(--vwt10-btn-bg, #000000);
    color: var(--vwt10-btn-text, #ffffff);
    font-family: 'Inter', sans-serif;
    font-size: 13px;
    font-weight: 500;
    text-decoration: none;
    border-radius: 30px;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .video-with-text-10__btn:hover {
    opacity: 0.85;
    transform: translateY(-1px);
  }

  /* Navigation */
  .video-with-text-10__nav-wrapper {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-shrink: 0;
  }

  .video-with-text-10__nav {
    width: 40px;
    height: 40px;
    background: transparent;
    border: 1.5px solid var(--vwt10-nav-border, #e0e0e0);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .video-with-text-10__nav:hover {
    background: var(--vwt10-nav-border, #e0e0e0);
  }

  .video-with-text-10__nav:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  .video-with-text-10__nav svg {
    width: 14px;
    height: 14px;
    stroke: var(--vwt10-nav-icon, #000000);
    stroke-width: 2;
    fill: none;
  }

  /* Content Slides (hidden, used for data) */
  .video-with-text-10__content-slides {
    display: none;
  }

  /* Medium Mobile (400px+) */
  @media (min-width: 400px) {
    .video-with-text-10 {
      padding: 50px 20px;
    }

    .video-with-text-10__header {
      margin-bottom: 28px;
    }

    .video-with-text-10__label {
      font-size: 12px;
      margin-bottom: 12px;
    }

    .video-with-text-10__heading {
      font-size: 32px;
    }

    .video-with-text-10__description {
      font-size: 15px;
    }

    .video-with-text-10__slide {
