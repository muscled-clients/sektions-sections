{% comment %}
  SEK Split Screen Video - Slider with multiple layout options per slide
  Features: 3-col layout with images on top, content below
{% endcomment %}

{%- assign section_id = section.id -%}

{% style %}
  #sek-ssv-{{ section_id }},
  #sek-ssv-{{ section_id }} * {
    box-sizing: border-box;
  }

  #sek-ssv-{{ section_id }} {
    width: 100%;
    padding: 0 12px;
    overflow-x: hidden;
  }

  #sek-ssv-{{ section_id }} .sek-ssv__title {
    text-align: center;
    font-size: 20px;
    font-weight: 700;
    margin: 0 0 12px 0;
    color: {{ section.settings.title_color }};
  }

  #sek-ssv-{{ section_id }} .sek-ssv__wrapper {
    position: relative;
    max-width: 1400px;
    margin: 0 auto;
    overflow: hidden;
  }

  #sek-ssv-{{ section_id }} .sek-ssv__slides {
    display: flex;
    transition: transform 0.5s ease;
  }

  #sek-ssv-{{ section_id }} .sek-ssv__slide {
    flex: 0 0 100%;
    width: 100%;
  }

  /* ========================================
     THREE COLUMN LAYOUT (Images Top, Content Below)
     ======================================== */
  #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
  }

  #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col .sek-ssv__media {
    flex: 0 0 calc(50% - 2px);
    width: calc(50% - 2px);
    position: relative;
    overflow: hidden;
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col .sek-ssv__media::before {
    content: '';
    display: block;
    padding-top: 120%;
  }

  #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col .sek-ssv__media img,
  #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col .sek-ssv__media video,
  #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col .sek-ssv__media svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col .sek-ssv__content {
    flex: 0 0 100%;
    width: 100%;
    order: 3;
    background: {{ section.settings.content_bg }};
    border: 2px solid {{ section.settings.border_color }};
    border-radius: {{ section.settings.content_border_radius }}px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 24px 16px;
    margin-top: 4px;
  }

  /* ========================================
     TWO COLUMN LAYOUT (Side by Side)
     ======================================== */
  #sek-ssv-{{ section_id }} .sek-ssv__slide-inner {
    display: flex;
    flex-direction: column;
    gap: 4px;
    height: 100%;
  }

  #sek-ssv-{{ section_id }} .sek-ssv__slide-inner .sek-ssv__media {
    flex: 1 1 auto;
    position: relative;
    min-height: 200px;
    overflow: hidden;
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  #sek-ssv-{{ section_id }} .sek-ssv__slide-inner .sek-ssv__media img,
  #sek-ssv-{{ section_id }} .sek-ssv__slide-inner .sek-ssv__media video,
  #sek-ssv-{{ section_id }} .sek-ssv__slide-inner .sek-ssv__media iframe,
  #sek-ssv-{{ section_id }} .sek-ssv__slide-inner .sek-ssv__media svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #sek-ssv-{{ section_id }} .sek-ssv__slide-inner .sek-ssv__content {
    flex: 0 0 auto;
    background: {{ section.settings.content_bg }};
    border: 2px solid {{ section.settings.border_color }};
    border-radius: {{ section.settings.content_border_radius }}px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 24px 16px;
  }

  /* Content Styles */
  #sek-ssv-{{ section_id }} .sek-ssv__heading {
    font-size: 22px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 6px 0;
    color: {{ section.settings.heading_color }};
  }

  #sek-ssv-{{ section_id }} .sek-ssv__subheading {
    font-size: 14px;
    font-weight: 500;
    line-height: 1.4;
    margin: 0 0 12px 0;
    color: {{ section.settings.text_color }};
  }

  #sek-ssv-{{ section_id }} .sek-ssv__text {
    font-size: 13px;
    line-height: 1.5;
    margin: 0 0 12px 0;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
  }

  #sek-ssv-{{ section_id }} .sek-ssv__button {
    display: inline-block;
    background: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text_color }};
    padding: 10px 24px;
    font-size: 13px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 0;
    border: 2px solid {{ section.settings.button_bg }};
    transition: all 0.2s ease;
  }

  #sek-ssv-{{ section_id }} .sek-ssv__button:hover {
    background: transparent;
    color: {{ section.settings.button_bg }};
  }

  /* Pagination Dots */
  #sek-ssv-{{ section_id }} .sek-ssv__pagination {
    display: flex;
    justify-content: center;
    gap: 6px;
    margin-top: 12px;
    background: #000000;
    padding: 5px 10px;
    border-radius: 30px;
    width: fit-content;
    margin-left: auto;
    margin-right: auto;
  }

  #sek-ssv-{{ section_id }} .sek-ssv__dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.4);
    border: none;
    padding: 0;
    cursor: pointer;
    transition: background 0.2s ease;
  }

  #sek-ssv-{{ section_id }} .sek-ssv__dot.is-active,
  #sek-ssv-{{ section_id }} .sek-ssv__dot:hover {
    background: #ffffff;
  }

  /* ==========================================
     RESPONSIVE BREAKPOINTS
     ========================================== */

  /* Medium Mobile (400px+) */
  @media (min-width: 400px) {
    #sek-ssv-{{ section_id }} {
      padding: 0 14px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__title {
      font-size: 22px;
      margin-bottom: 14px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col {
      gap: 6px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col .sek-ssv__media {
      flex: 0 0 calc(50% - 3px);
      width: calc(50% - 3px);
    }

    #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col .sek-ssv__content {
      margin-top: 6px;
      padding: 28px 20px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__heading {
      font-size: 26px;
      margin-bottom: 8px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__subheading {
      font-size: 15px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__button {
      padding: 11px 28px;
      font-size: 14px;
    }
  }

  /* Large Mobile (550px+) */
  @media (min-width: 550px) {
    #sek-ssv-{{ section_id }} {
      padding: 0 18px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__title {
      font-size: 26px;
      margin-bottom: 16px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col {
      gap: 8px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col .sek-ssv__media {
      flex: 0 0 calc(50% - 4px);
      width: calc(50% - 4px);
    }

    #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col .sek-ssv__media::before {
      padding-top: 110%;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col .sek-ssv__content {
      margin-top: 8px;
      padding: 32px 24px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__heading {
      font-size: 30px;
      margin-bottom: 10px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__subheading {
      font-size: 16px;
      margin-bottom: 14px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__text {
      font-size: 14px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__button {
      padding: 12px 32px;
      font-size: 14px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__dot {
      width: 9px;
      height: 9px;
    }
  }

  /* Tablet (768px+) */
  @media (min-width: 768px) {
    #sek-ssv-{{ section_id }} {
      padding: 0 24px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__title {
      font-size: 30px;
      margin-bottom: 20px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col {
