{% comment %}
  SEK Split Screen Video - Slider with multiple layout options per slide
{% endcomment %}

{%- assign section_id = section.id -%}

{% style %}
  #sek-ssv-{{ section_id }} {
    width: 100%;
    padding: 0 16px;
  }

  #sek-ssv-{{ section_id }} .sek-ssv__title {
    text-align: center;
    font-size: 28px;
    font-weight: 700;
    margin: 0 0 24px 0;
    color: {{ section.settings.title_color }};
  }

  @media (min-width: 750px) {
    #sek-ssv-{{ section_id }} .sek-ssv__title {
      font-size: 36px;
      margin-bottom: 32px;
    }
  }

  #sek-ssv-{{ section_id }} .sek-ssv__wrapper {
    position: relative;
    max-width: 1400px;
    margin: 0 auto;
    overflow: hidden;
  }

  #sek-ssv-{{ section_id }} .sek-ssv__slides {
    display: flex;
    transition: transform 0.5s ease;
  }

  #sek-ssv-{{ section_id }} .sek-ssv__slide {
    flex: 0 0 100%;
    width: 100%;
    min-height: 400px;
  }

  @media (min-width: 750px) {
    #sek-ssv-{{ section_id }} .sek-ssv__slide {
      min-height: 460px;
    }
  }

  /* Slide layouts */
  #sek-ssv-{{ section_id }} .sek-ssv__slide-inner {
    display: flex;
    flex-direction: column;
    gap: 12px;
    height: 100%;
  }

  @media (min-width: 750px) {
    #sek-ssv-{{ section_id }} .sek-ssv__slide-inner {
      flex-direction: row;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--reversed {
      flex-direction: row-reverse;
    }
  }

  /* Media column */
  #sek-ssv-{{ section_id }} .sek-ssv__media {
    flex: 1 1 100%;
    position: relative;
    min-height: 250px;
    overflow: hidden;
  }

  @media (min-width: 750px) {
    #sek-ssv-{{ section_id }} .sek-ssv__media {
      flex: 1 1 50%;
      min-height: 460px;
    }

    /* For 3-column layout */
    #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col .sek-ssv__media {
      flex: 1 1 33.333%;
    }
  }

  #sek-ssv-{{ section_id }} .sek-ssv__media img,
  #sek-ssv-{{ section_id }} .sek-ssv__media video,
  #sek-ssv-{{ section_id }} .sek-ssv__media iframe,
  #sek-ssv-{{ section_id }} .sek-ssv__media svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Content column */
  #sek-ssv-{{ section_id }} .sek-ssv__content {
    flex: 1 1 100%;
    background: {{ section.settings.content_bg }};
    border: 2px solid {{ section.settings.border_color }};
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 40px 20px;
    min-height: 250px;
  }

  @media (min-width: 750px) {
    #sek-ssv-{{ section_id }} .sek-ssv__content {
      flex: 1 1 50%;
      padding: 40px;
      min-height: 460px;
    }

    /* For 3-column layout */
    #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col .sek-ssv__content {
      flex: 1 1 33.333%;
    }
  }

  #sek-ssv-{{ section_id }} .sek-ssv__heading {
    font-size: 28px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 8px 0;
    color: {{ section.settings.heading_color }};
  }

  @media (min-width: 750px) {
    #sek-ssv-{{ section_id }} .sek-ssv__heading {
      font-size: 36px;
    }
  }

  #sek-ssv-{{ section_id }} .sek-ssv__subheading {
    font-size: 16px;
    font-weight: 600;
    line-height: 1.4;
    margin: 0 0 4px 0;
    color: {{ section.settings.text_color }};
  }

  @media (min-width: 750px) {
    #sek-ssv-{{ section_id }} .sek-ssv__subheading {
      font-size: 18px;
    }
  }

  #sek-ssv-{{ section_id }} .sek-ssv__text {
    font-size: 14px;
    line-height: 1.5;
    margin: 0 0 16px 0;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
  }

  @media (min-width: 750px) {
    #sek-ssv-{{ section_id }} .sek-ssv__text {
      font-size: 16px;
    }
  }

  #sek-ssv-{{ section_id }} .sek-ssv__button {
    display: inline-block;
    background: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text_color }};
    padding: 10px 28px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 0;
    border: 2px solid {{ section.settings.button_bg }};
    transition: all 0.2s ease;
  }

  #sek-ssv-{{ section_id }} .sek-ssv__button:hover {
    background: transparent;
    color: {{ section.settings.button_bg }};
  }

  /* Pagination Dots */
  #sek-ssv-{{ section_id }} .sek-ssv__pagination {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 16px;
    background: #000000;
    padding: 6px 12px;
    border-radius: 30px;
    width: fit-content;
    margin-left: auto;
    margin-right: auto;
  }

  #sek-ssv-{{ section_id }} .sek-ssv__dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.4);
    border: none;
    padding: 0;
    cursor: pointer;
    transition: background 0.2s ease;
  }

  @media (min-width: 750px) {
    #sek-ssv-{{ section_id }} .sek-ssv__dot {
      width: 12px;
      height: 12px;
    }
  }

  #sek-ssv-{{ section_id }} .sek-ssv__dot.is-active,
  #sek-ssv-{{ section_id }} .sek-ssv__dot:hover {
    background: #ffffff;
  }
{% endstyle %}

<div id="sek-ssv-{{ section_id }}" class="sek-ssv">
  {%- if section.settings.section_title != blank -%}
    <h2 class="sek-ssv__title">{{ section.settings.section_title }}</h2>
  {%- endif -%}

  <div class="sek-ssv__wrapper">
    <div class="sek-ssv__slides" data-slides>
      {%- for block in section.blocks -%}
        {%- assign layout = block.settings.layout -%}
        <div class="sek-ssv__slide" {{ block.shopify_attributes }}>
          <div class="sek-ssv__slide-inner{% if layout == 'three_col' %} sek-ssv__slide-inner--three-col{% elsif layout == 'content_left' %} sek-ssv__slide-inner--reversed{% endif %}">

            {%- if layout == 'three_col' -%}
              <!-- 3-column: Image | Content | Image -->
              <div class="sek-ssv__media">
                {%- if block.settings.image_left != blank -%}
                  <img
                    src="{{ block.settings.image_left | image_url: width: 800 }}"
                    srcset="{{ block.settings.image_left | image_url: width: 400 }} 400w,
                            {{ block.settings.image_left | image_url: width: 600 }} 600w,
                            {{ block.settings.image_left | image_url: width: 800 }} 800w"
                    sizes="(max-width: 749px) 100vw, 33vw"
                    alt="{{ block.settings.image_left.alt | default: block.settings.heading }}"
                    loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                  >
                {%- else -%}
                  {%- assign placeholder_num = forloop.index0 | modulo: 6 | plus: 1 -%}
                  {{ 'collection-' | append: placeholder_num | placeholder_svg_tag }}
                {%- endif -%}
              </div>

              <div class="sek-ssv__content">
                {%- if block.settings.heading != blank -%}
                  <h3 class="sek-ssv__heading">{{ block.settings.heading }}</h3>
                {%- endif -%}
                {%- if block.settings.subheading != blank -%}
                  <p class="sek-ssv__subheading">{{ block.settings.subheading }}</p>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <p class="sek-ssv__text">{{ block.settings.text }}</p>
                {%- endif -%}
                {%- if block.settings.button_text != blank and block.settings.button_link != blank -%}
                  <a href="{{ block.settings.button_link }}" class="sek-ssv__button">
                    {{ block.settings.button_text }}
                  </a>
                {%- endif -%}
              </div>

              <div class="sek-ssv__media">
                {%- if block.settings.image_right != blank -%}
                  <img
                    src="{{ block.settings.image_right | image_url: width: 800 }}"
                    srcset="{{ block.settings.image_right | image_url: width: 400 }} 400w,
                            {{ block.settings.image_right | image_url: width: 600 }} 600w,
                            {{ block.settings.image_right | image_url: width: 800 }} 800w"
                    sizes="(max-width: 749px) 100vw, 33vw"
                    alt="{{ block.settings.image_right.alt | default: block.settings.heading }}"
                    loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                  >
                {%- else -%}
                  {%- assign placeholder_num = forloop.index0 | plus: 1 | modulo: 6 | plus: 1 -%}
                  {{ 'collection-' | append: placeholder_num | placeholder_svg_tag }}
                {%- endif -%}
              </div>

            {%- else -%}
              <!-- 2-column: Media | Content or Content | Media -->
              <div class="sek-ssv__media">
                {%- if block.settings.video_url != blank -%}
                  {%- assign video_url = block.settings.video_url -%}
                  {%- if video_url contains 'youtube.com' or video_url contains 'youtu.be' -%}
                    {%- assign youtube_id = video_url | split: 'v=' | last | split: '&' | first -%}
                    {%- if video_url contains 'youtu.be' -%}
                      {%- assign youtube_id = video_url | split: 'youtu.be/' | last | split: '?' | first -%}
                    {%- endif -%}
                    <iframe
                      src="https://www.youtube.com/embed/{{ youtube_id }}?autoplay=0&rel=0"
                      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                      allowfullscreen
                    ></iframe>
                  {%- elsif video_url contains 'vimeo.com' -%}
                    {%- assign vimeo_id = video_url | split: 'vimeo.com/' | last | split: '?' | first -%}
                    <iframe
                      src="https://player.vimeo.com/video/{{ vimeo_id }}"
                      allow="autoplay; fullscreen; picture-in-picture"
                      allowfullscreen
                    ></iframe>
                  {%- endif -%}
                {%- elsif block.settings.video != blank -%}
                  {{ block.settings.video | video_tag: autoplay: true, loop: true, muted: true, playsinline: true }}
                {%- elsif block.settings.image != blank -%}
                  <img
                    src="{{ block.settings.image | image_url: width: 1000 }}"
                    srcset="{{ block.settings.image | image_url: width: 600 }} 600w,
                            {{ block.settings.image | image_url: width: 800 }} 800w,
                            {{ block.settings.image | image_url: width: 1000 }} 1000w"
                    sizes="(max-width: 749px) 100vw, 50vw"
                    alt="{{ block.settings.image.alt | default: block.settings.heading }}"
                    loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                  >
                {%- else -%}
                  {%- assign placeholder_num = forloop.index0 | modulo: 6 | plus: 1 -%}
                  {{ 'collection-' | append: placeholder_num | placeholder_svg_tag }}
                {%- endif -%}
              </div>

              <div class="sek-ssv__content">
                {%- if block.settings.heading != blank -%}
                  <h3 class="sek-ssv__heading">{{ block.settings.heading }}</h3>
                {%- endif -%}
                {%- if block.settings.subheading != blank -%}
                  <p class="sek-ssv__subheading">{{ block.settings.subheading }}</p>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <p class="sek-ssv__text">{{ block.settings.text }}</p>
                {%- endif -%}
                {%- if block.settings.button_text != blank and block.settings.button_link != blank -%}
                  <a href="{{ block.settings.button_link }}" class="sek-ssv__button">
                    {{ block.settings.button_text }}
                  </a>
                {%- endif -%}
              </div>
            {%- endif -%}

          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>

  <!-- Pagination Dots -->
  {%- if section.blocks.size > 1 -%}
    <div class="sek-ssv__pagination">
      {%- for block in section.blocks -%}
        <button type="button" class="sek-ssv__dot{% if forloop.first %} is-active{% endif %}" data-dot="{{ forloop.index0 }}" aria-label="Go to slide {{ forloop.index }}"></button>
      {%- endfor -%}
    </div>
  {%- endif -%}
</div>

<script>
  (function() {
    const section = document.getElementById('sek-ssv-{{ section_id }}');
    if (!section) return;

    const slides = section.querySelector('[data-slides]');
    const dots = section.querySelectorAll('[data-dot]');
    const totalSlides = {{ section.blocks.size }};
    const autoplayDelay = {{ section.settings.autoplay_speed }};

    if (totalSlides <= 1) return;

    let currentIndex = 0;
    let autoplayInterval = null;

    function goToSlide(index) {
      if (index < 0) index = totalSlides - 1;
      if (index >= totalSlides) index = 0;
      currentIndex = index;

      slides.style.transform = `translateX(-${currentIndex * 100}%)`;

      dots.forEach(function(dot, i) {
        dot.classList.toggle('is-active', i === currentIndex);
      });
    }

    function nextSlide() {
      goToSlide(currentIndex + 1);
    }

    function startAutoplay() {
      if (autoplayDelay > 0) {
        autoplayInterval = setInterval(nextSlide, autoplayDelay);
      }
    }

    function stopAutoplay() {
      if (autoplayInterval) {
        clearInterval(autoplayInterval);
        autoplayInterval = null;
      }
    }

    function resetAutoplay() {
      stopAutoplay();
      startAutoplay();
    }

    dots.forEach(function(dot) {
      dot.addEventListener('click', function() {
        const index = parseInt(dot.getAttribute('data-dot'), 10);
        goToSlide(index);
        resetAutoplay();
      });
    });

    // Pause on hover
    const wrapper = section.querySelector('.sek-ssv__wrapper');
    wrapper.addEventListener('mouseenter', stopAutoplay);
    wrapper.addEventListener('mouseleave', startAutoplay);

    // Start autoplay
    startAutoplay();
  })();
</script>

