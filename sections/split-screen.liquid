<div id="sek-ssv-{{ section_id }}" class="sek-ssv">
  {%- if section.settings.section_title != blank -%}
    <h2 class="sek-ssv__title">{{ section.settings.section_title }}</h2>
  {%- endif -%}

  <div class="sek-ssv__wrapper">
    <div class="sek-ssv__slides" data-slides>
      {%- for block in section.blocks -%}
        {%- assign layout = block.settings.layout -%}
        <div class="sek-ssv__slide" {{ block.shopify_attributes }}>
          <div class="sek-ssv__slide-inner{% if layout == 'three_col' %} sek-ssv__slide-inner--three-col{% elsif layout == 'content_left' %} sek-ssv__slide-inner--reversed{% endif %}">

            {%- if layout == 'three_col' -%}
              <!-- 3-column: Two images side by side on top, content below -->
              <div class="sek-ssv__media">
                {%- if block.settings.image_left != blank -%}
                  <img
                    src="{{ block.settings.image_left | image_url: width: 800 }}"
                    srcset="{{ block.settings.image_left | image_url: width: 400 }} 400w,
                            {{ block.settings.image_left | image_url: width: 600 }} 600w,
                            {{ block.settings.image_left | image_url: width: 800 }} 800w"
                    sizes="50vw"
                    alt="{{ block.settings.image_left.alt | default: block.settings.heading }}"
                    loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                  >
                {%- else -%}
                  {%- assign placeholder_num = forloop.index0 | modulo: 6 | plus: 1 -%}
                  {{ 'collection-' | append: placeholder_num | placeholder_svg_tag }}
                {%- endif -%}
              </div>

              <div class="sek-ssv__media">
                {%- if block.settings.image_right != blank -%}
                  <img
                    src="{{ block.settings.image_right | image_url: width: 800 }}"
                    srcset="{{ block.settings.image_right | image_url: width: 400 }} 400w,
                            {{ block.settings.image_right | image_url: width: 600 }} 600w,
                            {{ block.settings.image_right | image_url: width: 800 }} 800w"
                    sizes="50vw"
                    alt="{{ block.settings.image_right.alt | default: block.settings.heading }}"
                    loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                  >
                {%- else -%}
                  {%- assign placeholder_num = forloop.index0 | plus: 1 | modulo: 6 | plus: 1 -%}
                  {{ 'collection-' | append: placeholder_num | placeholder_svg_tag }}
                {%- endif -%}
              </div>

              <div class="sek-ssv__content">
                {%- if block.settings.heading != blank -%}
                  <h3 class="sek-ssv__heading">{{ block.settings.heading }}</h3>
                {%- endif -%}
                {%- if block.settings.subheading != blank -%}
                  <p class="sek-ssv__subheading">{{ block.settings.subheading }}</p>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <p class="sek-ssv__text">{{ block.settings.text }}</p>
                {%- endif -%}
                {%- if block.settings.button_text != blank -%}
                  <a href="{{ block.settings.button_link | default: '#' }}" class="sek-ssv__button">
                    {{ block.settings.button_text }}
                  </a>
                {%- endif -%}
              </div>

            {%- else -%}
              <!-- 2-column: Media | Content or Content | Media -->
              <div class="sek-ssv__media">
                {%- if block.settings.video_url != blank -%}
                  {%- assign video_url = block.settings.video_url -%}
                  {%- if video_url contains 'youtube.com' or video_url contains 'youtu.be' -%}
                    {%- assign youtube_id = video_url | split: 'v=' | last | split: '&' | first -%}
                    {%- if video_url contains 'youtu.be' -%}
                      {%- assign youtube_id = video_url | split: 'youtu.be/' | last | split: '?' | first -%}
                    {%- endif -%}
                    <iframe
                      src="https://www.youtube.com/embed/{{ youtube_id }}?autoplay=0&rel=0"
                      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                      allowfullscreen
                    ></iframe>
                  {%- elsif video_url contains 'vimeo.com' -%}
                    {%- assign vimeo_id = video_url | split: 'vimeo.com/' | last | split: '?' | first -%}
                    <iframe
                      src="https://player.vimeo.com/video/{{ vimeo_id }}"
                      allow="autoplay; fullscreen; picture-in-picture"
                      allowfullscreen
                    ></iframe>
                  {%- endif -%}
                {%- elsif block.settings.video != blank -%}
                  {{ block.settings.video | video_tag: autoplay: true, loop: true, muted: true, playsinline: true }}
                {%- elsif block.settings.image != blank -%}
                  <img
                    src="{{ block.settings.image | image_url: width: 1000 }}"
                    srcset="{{ block.settings.image | image_url: width: 600 }} 600w,
                            {{ block.settings.image | image_url: width: 800 }} 800w,
                            {{ block.settings.image | image_url: width: 1000 }} 1000w"
                    sizes="(max-width: 767px) 100vw, 50vw"
                    alt="{{ block.settings.image.alt | default: block.settings.heading }}"
                    loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                  >
                {%- else -%}
                  {%- assign placeholder_num = forloop.index0 | modulo: 6 | plus: 1 -%}
                  {{ 'collection-' | append: placeholder_num | placeholder_svg_tag }}
                {%- endif -%}
              </div>

              <div class="sek-ssv__content">
                {%- if block.settings.heading != blank -%}
                  <h3 class="sek-ssv__heading">{{ block.settings.heading }}</h3>
                {%- endif -%}
                {%- if block.settings.subheading != blank -%}
                  <p class="sek-ssv__subheading">{{ block.settings.subheading }}</p>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <p class="sek-ssv__text">{{ block.settings.text }}</p>
                {%- endif -%}
                {%- if block.settings.button_text != blank -%}
                  <a href="{{ block.settings.button_link | default: '#' }}" class="sek-ssv__button">
                    {{ block.settings.button_text }}
                  </a>
                {%- endif -%}
              </div>
            {%- endif -%}

          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>

  <!-- Pagination Dots -->
  {%- if section.blocks.size > 1 -%}
    <div class="sek-ssv__pagination">
      {%- for block in section.blocks -%}
        <button type="button" class="sek-ssv__dot{% if forloop.first %} is-active{% endif %}" data-dot="{{ forloop.index0 }}" aria-label="Go to slide {{ forloop.index }}"></button>
      {%- endfor -%}
    </div>
  {%- endif -%}
</div>

<script>
  (function() {
    const section = document.getElementById('sek-ssv-{{ section_id }}');
    if (!section) return;

    const slides = section.querySelector('[data-slides]');
    const dots = section.querySelectorAll('[data-dot]');
    const totalSlides = {{ section.blocks.size }};
    const autoplayDelay = {{ section.settings.autoplay_speed }};

    if (totalSlides <= 1) return;

    let currentIndex = 0;
    let autoplayInterval = null;

    function goToSlide(index) {
      if (index < 0) index = totalSlides - 1;
      if (index >= totalSlides) index = 0;
      currentIndex = index;

      slides.style.transform = `translateX(-${currentIndex * 100}%)`;

      dots.forEach(function(dot, i) {
        dot.classList.toggle('is-active', i === currentIndex);
      });
    }

    function nextSlide() {
      goToSlide(currentIndex + 1);
    }

    function startAutoplay() {
      if (autoplayDelay > 0) {
        autoplayInterval = setInterval(nextSlide, autoplayDelay);
      }
    }

    function stopAutoplay() {
      if (autoplayInterval) {
        clearInterval(autoplayInterval);
        autoplayInterval = null;
      }
    }

    function resetAutoplay() {
      stopAutoplay();
      startAutoplay();
    }

    dots.forEach(function(dot) {
      dot.addEventListener('click', function() {
        const index = parseInt(dot.getAttribute('data-dot'), 10);
        goToSlide(index);
        resetAutoplay();
      });
    });

    // Pause on hover
    const wrapper = section.querySelector('.sek-ssv__wrapper');
    wrapper.addEventListener('mouseenter', stopAutoplay);
    wrapper.addEventListener('mouseleave', startAutoplay);

    // Start autoplay
    startAutoplay();
  })();
</script>

{% schema %}
{
  "name": "SEK Split Screen Video",
  "tag": "section",
  "class": "sek-split-screen-video",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section title",
      "default": "Split screen video"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "label": "Image border radius",
      "min": 0,
      "max": 30,
      "step": 2,
      "default": 8,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "content_border_radius",
      "label": "Content border radius",
      "min": 0,
      "max": 30,
      "step": 2,
      "default": 8,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "content_bg",
      "label": "Content background",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Slider"
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Autoplay speed",
      "min": 0,
      "max": 9000,
      "step": 500,
      "default": 6000,
      "unit": "ms",
      "info": "Set to 0 to disable autoplay"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "select",
          "id": "layout",
          "label": "Layout",
          "options": [
            { "value": "media_left", "label": "Media left, Content right" },
            { "value": "content_left", "label": "Content left, Media right" },
            { "value": "three_col", "label": "Two images + Content below" }
          ],
          "default": "three_col"
        },
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Women sale"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Sub-Heading",
          "default": "30% off summer items"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Shop now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "header",
          "content": "Media (2-column layouts)"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "video",
          "id": "video",
          "label": "Video (uploaded)"
        },
        {
          "type": "url",
          "id": "video_url",
          "label": "Video URL (YouTube/Vimeo)"
        },
        {
          "type": "header",
          "content": "Media (Two images layout)"
        },
        {
          "type": "image_picker",
          "id": "image_left",
          "label": "Left image"
        },
        {
          "type": "image_picker",
          "id": "image_right",
          "label": "Right image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SEK Split Screen Video",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "layout": "three_col",
            "heading": "Women sale",
            "subheading": "30% off summer items",
            "button_text": "Shop now"
          }
        }
      ]
    }
  ]
}
{% endschema %}
