    }

    #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col .sek-ssv__media {
      flex: 0 0 calc(50% - 5px);
      width: calc(50% - 5px);
    }

    #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col .sek-ssv__media::before {
      padding-top: 100%;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--three-col .sek-ssv__content {
      margin-top: 10px;
      padding: 40px 32px;
    }

    /* 2-column layouts become side-by-side on tablet */
    #sek-ssv-{{ section_id }} .sek-ssv__slide-inner:not(.sek-ssv__slide-inner--three-col) {
      flex-direction: row;
      gap: 0;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__slide-inner--reversed {
      flex-direction: row-reverse;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__slide-inner:not(.sek-ssv__slide-inner--three-col) .sek-ssv__media {
      flex: 1 1 50%;
      min-height: 400px;
      border-radius: 0;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__slide-inner:not(.sek-ssv__slide-inner--three-col) .sek-ssv__content {
      flex: 1 1 50%;
      min-height: 400px;
      border-radius: 0;
      padding: 36px 28px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__heading {
      font-size: 34px;
      margin-bottom: 12px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__subheading {
      font-size: 17px;
      margin-bottom: 16px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__text {
      font-size: 15px;
      margin-bottom: 18px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__button {
      padding: 12px 36px;
      font-size: 15px;
    }

    #sek-ssv-{{ section_id }} .sek-ssv__pagination {
      gap: 8px;
      padding: 6px 12px;
      margin-top: 16px;
    }

