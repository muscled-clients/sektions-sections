{% comment %}
  Hero 38-1 Section - Coffee Machines Style
  Content left, Image right with customer ratings and feature bullets
{% endcomment %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 990px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .hero-38-1-{{ section.id }} {
    --hero38-1-bg: {{ section.settings.background_color }};
    --hero38-1-heading-color: {{ section.settings.heading_color }};
    --hero38-1-text-color: {{ section.settings.text_color }};
    --hero38-1-button-bg: {{ section.settings.button_background }};
    --hero38-1-button-text: {{ section.settings.button_text_color }};
    --hero38-1-icon-bg: {{ section.settings.icon_background }};
    --hero38-1-heading-size: {{ section.settings.heading_font_size }}px;
    --hero38-1-desc-size: {{ section.settings.description_font_size }}px;
    --hero38-1-feature-title-size: {{ section.settings.feature_title_font_size }}px;
    --hero38-1-feature-desc-size: {{ section.settings.feature_desc_font_size }}px;
    --hero38-1-badge-size: {{ section.settings.badge_font_size }}px;
    --hero38-1-heading-spacing: {{ section.settings.heading_letter_spacing }}em;
    --hero38-1-heading-line-height: {{ section.settings.heading_line_height }};
    --hero38-1-desc-line-height: {{ section.settings.description_line_height }};
    --hero38-1-content-gap: {{ section.settings.content_spacing }}px;
    --hero38-1-alignment: {{ section.settings.content_alignment }};
  }
{%- endstyle -%}

<div class="hero-38-1 hero-38-1-{{ section.id }} section-{{ section.id }}-padding">
  <div class="hero-38-1__container {% if section.settings.full_width %}hero-38-1__container--full{% else %}page-width{% endif %}">
    <div class="hero-38-1__grid">
      <!-- Content Side -->
      <div class="hero-38-1__content">
        {%- if section.settings.heading != blank -%}
          <h1 class="hero-38-1__heading">{{ section.settings.heading }}</h1>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <p class="hero-38-1__description">{{ section.settings.description }}</p>
        {%- endif -%}

        {%- if section.settings.button_text != blank -%}
          <a href="{{ section.settings.button_link }}" class="hero-38-1__button">
            {{ section.settings.button_text }}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" width="16" height="16">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        {%- endif -%}

        <!-- Customer Rating -->
        <div class="hero-38-1__rating">
          <div class="hero-38-1__avatars">
            {%- for block in section.blocks -%}
              {%- if block.type == 'avatar' -%}
                {%- if block.settings.avatar_image != blank -%}
                  <div class="hero-38-1__avatar" {{ block.shopify_attributes }}>
                    <img src="{{ block.settings.avatar_image | image_url: width: 80 }}" alt="Customer" loading="lazy">
                  </div>
                {%- else -%}
                  <div class="hero-38-1__avatar hero-38-1__avatar--placeholder" {{ block.shopify_attributes }}>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 12c2.7 0 5-2.3 5-5s-2.3-5-5-5-5 2.3-5 5 2.3 5 5 5zm0 2c-3.3 0-10 1.7-10 5v3h20v-3c0-3.3-6.7-5-10-5z"/>
                    </svg>
                  </div>
                {%- endif -%}
              {%- endif -%}
            {%- endfor -%}
          </div>

          <!-- Trustpilot Stars -->
          <div class="hero-38-1__stars">
            <svg width="88" height="17" viewBox="0 0 88 17">
              <rect x="0" y="0" width="17" height="17" fill="#00b67a"/>
              <rect x="18" y="0" width="17" height="17" fill="#00b67a"/>
              <rect x="36" y="0" width="17" height="17" fill="#00b67a"/>
              <rect x="54" y="0" width="17" height="17" fill="#00b67a"/>
              <rect x="72" y="0" width="16" height="17" fill="#00b67a"/>
              <polygon points="8.5,2.5 10,6.5 14.5,6.5 11,9.5 12.5,13.5 8.5,11 4.5,13.5 6,9.5 2.5,6.5 7,6.5" fill="#fff"/>
              <polygon points="26.5,2.5 28,6.5 32.5,6.5 29,9.5 30.5,13.5 26.5,11 22.5,13.5 24,9.5 20.5,6.5 25,6.5" fill="#fff"/>
              <polygon points="44.5,2.5 46,6.5 50.5,6.5 47,9.5 48.5,13.5 44.5,11 40.5,13.5 42,9.5 38.5,6.5 43,6.5" fill="#fff"/>
              <polygon points="62.5,2.5 64,6.5 68.5,6.5 65,9.5 66.5,13.5 62.5,11 58.5,13.5 60,9.5 56.5,6.5 61,6.5" fill="#fff"/>
              <polygon points="80,2.5 81.5,6.5 86,6.5 82.5,9.5 84,13.5 80,11 76,13.5 77.5,9.5 74,6.5 78.5,6.5" fill="#fff"/>
            </svg>
          </div>

          <div class="hero-38-1__rating-info">
            <span class="hero-38-1__rating-text">{{ section.settings.rating_label }} {{ section.settings.rating_value }}</span>
          </div>
        </div>

        <!-- Feature Bullets with Title + Description -->
        <div class="hero-38-1__features">
          {%- for block in section.blocks -%}
            {%- if block.type == 'feature' -%}
              <div class="hero-38-1__feature" {{ block.shopify_attributes }}>
                <div class="hero-38-1__feature-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                </div>
                <div class="hero-38-1__feature-content">
                  {%- if block.settings.feature_title != blank -%}
                    <span class="hero-38-1__feature-title">{{ block.settings.feature_title }}:</span>
                  {%- endif -%}
                  {%- if block.settings.feature_description != blank -%}
                    <span class="hero-38-1__feature-desc">{{ block.settings.feature_description }}</span>
                  {%- endif -%}
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>

        <!-- Trust Badges -->
        <div class="hero-38-1__badges">
          {%- for block in section.blocks -%}
            {%- if block.type == 'badge' -%}
              <div class="hero-38-1__badge" {{ block.shopify_attributes }}>
                <div class="hero-38-1__badge-icon">
                  {%- if block.settings.badge_svg != blank -%}
                    {{ block.settings.badge_svg }}
                  {%- else -%}
                    {%- case block.settings.badge_icon -%}
                      {%- when 'delivery' -%}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                          <rect x="1" y="3" width="15" height="13" rx="2"/>
                          <path d="M16 8h4l3 3v5h-7V8z"/>
                          <circle cx="5.5" cy="18.5" r="2.5"/>
                          <circle cx="18.5" cy="18.5" r="2.5"/>
                        </svg>
                      {%- when 'leaf' -%}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 4.18 2 8 0 5.5-4.78 10-10 10Z"/>
                          <path d="M2 21c0-3 1.85-5.36 5.08-6C9.5 14.52 12 13 13 12"/>
                        </svg>
                      {%- when 'calendar' -%}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                          <line x1="16" y1="2" x2="16" y2="6"/>
                          <line x1="8" y1="2" x2="8" y2="6"/>
                          <line x1="3" y1="10" x2="21" y2="10"/>
                        </svg>
                      {%- else -%}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                          <circle cx="12" cy="12" r="10"/>
                          <polyline points="12 6 12 12 16 14"/>
                        </svg>
                    {%- endcase -%}
                  {%- endif -%}
                </div>
                <span class="hero-38-1__badge-text">{{ block.settings.badge_text }}</span>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>

      <!-- Image Side -->
      <div class="hero-38-1__media">
        {%- if section.settings.image != blank -%}
          <img
            src="{{ section.settings.image | image_url: width: 1200 }}"
            srcset="{{ section.settings.image | image_url: width: 600 }} 600w,
                    {{ section.settings.image | image_url: width: 900 }} 900w,
                    {{ section.settings.image | image_url: width: 1200 }} 1200w"
            sizes="(max-width: 989px) 100vw, 50vw"
            alt="{{ section.settings.image.alt | default: section.settings.heading }}"
            loading="lazy"
            class="hero-38-1__image"
          >
        {%- else -%}
          <div class="hero-38-1__placeholder">
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

<style>
  .hero-38-1 {
    background-color: var(--hero38-1-bg);
    width: 100%;
  }

  .hero-38-1__container {
    width: 100%;
  }

  .hero-38-1__container--full {
    max-width: 1500px;
    margin: 0 auto;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  @media screen and (min-width: 750px) {
    .hero-38-1__container--full {
      padding-left: 3rem;
      padding-right: 3rem;
    }
  }

  @media screen and (min-width: 990px) {
    .hero-38-1__container--full {
      padding-left: 5rem;
      padding-right: 5rem;
    }
  }

  .hero-38-1__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
    align-items: center;
  }

  @media screen and (min-width: 990px) {
    .hero-38-1__grid {
      grid-template-columns: 1fr 1fr;
      gap: 60px;
    }
  }

  /* Content */
  .hero-38-1__content {
    order: 2;
    text-align: var(--hero38-1-alignment, center);
  }

  @media screen and (min-width: 990px) {
    .hero-38-1__content {
      order: 1;
    }
  }

  .hero-38-1__heading {
    font-family: 'Bricolage Grotesque', sans-serif;
    font-size: calc(var(--hero38-1-heading-size) * 0.7);
    font-weight: 700;
    line-height: var(--hero38-1-heading-line-height, 1.15);
    letter-spacing: var(--hero38-1-heading-spacing, 0);
    color: var(--hero38-1-heading-color);
    margin: 0 0 var(--hero38-1-content-gap, 16px);
  }

  @media screen and (min-width: 750px) {
    .hero-38-1__heading {
      font-size: calc(var(--hero38-1-heading-size) * 0.85);
    }
  }

  @media screen and (min-width: 990px) {
    .hero-38-1__heading {
      font-size: var(--hero38-1-heading-size);
    }
  }

  .hero-38-1__description {
    font-size: calc(var(--hero38-1-desc-size) * 0.95);
    line-height: var(--hero38-1-desc-line-height, 1.6);
    color: var(--hero38-1-text-color);
    margin: 0 auto var(--hero38-1-content-gap, 24px);
    max-width: 420px;
  }

  @media screen and (min-width: 990px) {
    .hero-38-1__description {
      font-size: var(--hero38-1-desc-size);
    }
  }

  /* Button */
  .hero-38-1__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 14px 28px;
    background-color: var(--hero38-1-button-bg);
    color: var(--hero38-1-button-text);
    font-size: 15px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 50px;
    transition: all 0.3s ease;
    margin-bottom: var(--hero38-1-content-gap, 24px);
  }

  .hero-38-1__button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  .hero-38-1__button svg {
    transition: transform 0.3s ease;
  }

  .hero-38-1__button:hover svg {
    transform: translateX(3px);
  }

  /* Rating */
  .hero-38-1__rating {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 12px;
    margin-bottom: var(--hero38-1-content-gap, 28px);
    flex-wrap: wrap;
  }

  .hero-38-1__avatars {
    display: flex;
    align-items: center;
  }

  .hero-38-1__avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid var(--hero38-1-bg);
    margin-left: -10px;
    background-color: #e5e5e5;
  }

  .hero-38-1__avatar:first-child {
    margin-left: 0;
  }

  .hero-38-1__avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-38-1__avatar--placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
  }

  .hero-38-1__avatar--placeholder svg {
    width: 20px;
    height: 20px;
  }

  .hero-38-1__stars {
    display: flex;
    align-items: center;
  }

  .hero-38-1__rating-info {
    display: flex;
    align-items: center;
  }

  .hero-38-1__rating-text {
    font-size: 14px;
    font-weight: 500;
    color: var(--hero38-1-heading-color);
  }

  /* Features */
  .hero-38-1__features {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-bottom: var(--hero38-1-content-gap, 28px);
    padding-bottom: var(--hero38-1-content-gap, 28px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    text-align: left;
  }

  .hero-38-1__feature {
    display: flex;
    align-items: flex-start;
    gap: 12px;
  }

  .hero-38-1__feature-icon {
    width: 22px;
    height: 22px;
    min-width: 22px;
    border-radius: 50%;
    background-color: var(--hero38-1-icon-bg);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    margin-top: 2px;
  }

  .hero-38-1__feature-icon svg {
    width: 12px;
    height: 12px;
    color: #121212;
  }

  .hero-38-1__feature-content {
    display: block;
    line-height: 1.5;
    color: var(--hero38-1-text-color);
  }

  .hero-38-1__feature-title {
    font-size: var(--hero38-1-feature-title-size, 14px);
    font-weight: 700;
    color: var(--hero38-1-heading-color);
  }

  .hero-38-1__feature-desc {
    font-size: var(--hero38-1-feature-desc-size, 14px);
    color: var(--hero38-1-text-color);
  }

  /* Badges */
  .hero-38-1__badges {
    display: flex;
    flex-wrap: wrap;
    justify-content: var(--hero38-1-alignment, center);
    gap: 20px;
  }

  @media screen and (min-width: 750px) {
    .hero-38-1__badges {
      gap: 28px;
    }
  }

  .hero-38-1__badge {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .hero-38-1__badge-icon {
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--hero38-1-text-color);
  }

  .hero-38-1__badge-icon svg {
    width: 100%;
    height: 100%;
  }

  .hero-38-1__badge-text {
    font-size: var(--hero38-1-badge-size, 13px);
    color: var(--hero38-1-text-color);
  }

  /* Media */
  .hero-38-1__media {
    order: 1;
    position: relative;
    aspect-ratio: 4 / 3;
    border-radius: 16px;
    overflow: hidden;
  }

  @media screen and (min-width: 990px) {
    .hero-38-1__media {
      order: 2;
      aspect-ratio: 1 / 1;
      border-radius: 20px;
    }
  }

  .hero-38-1__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-38-1__placeholder {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-38-1__placeholder .placeholder-svg {
    width: 100%;
    height: 100%;
  }
</style>

{% schema %}
{
  "name": "Hero 38-1",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Elevate Your Coffee Ritual"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "We offer a curated selection of coffee machines designed to bring barista-quality beverages directly into your home."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Rating"
    },
    {
      "type": "text",
      "id": "rating_label",
      "label": "Rating label",
      "default": "Excellent"
    },
    {
      "type": "text",
      "id": "rating_value",
      "label": "Rating value",
      "default": "4.9"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "button_background",
      "label": "Button background",
      "default": "#ffeb54"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "icon_background",
      "label": "Feature icon background",
      "default": "#ffeb54"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "min": 24,
      "max": 72,
      "step": 2,
      "unit": "px",
      "label": "Heading font size",
      "default": 42
    },
    {
      "type": "range",
      "id": "heading_letter_spacing",
      "min": -0.1,
      "max": 0.2,
      "step": 0.1,
      "unit": "em",
      "label": "Heading letter spacing",
      "default": 0
    },
    {
      "type": "range",
      "id": "heading_line_height",
      "min": 1,
      "max": 2,
      "step": 0.1,
      "label": "Heading line height",
      "default": 1.2
    },
    {
      "type": "range",
      "id": "description_font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Description font size",
      "default": 16
    },
    {
      "type": "range",
      "id": "description_line_height",
      "min": 1,
      "max": 2.5,
      "step": 0.1,
      "label": "Description line height",
      "default": 1.6
    },
    {
      "type": "range",
      "id": "feature_title_font_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Feature title font size",
      "default": 14
    },
    {
      "type": "range",
      "id": "feature_desc_font_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Feature description font size",
      "default": 14
    },
    {
      "type": "range",
      "id": "badge_font_size",
      "min": 10,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Badge font size",
      "default": 13
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width layout",
      "default": true,
      "info": "Use wider container (max 1500px) instead of page width"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "content_spacing",
      "min": 8,
      "max": 48,
      "step": 4,
      "unit": "px",
      "label": "Content spacing",
      "default": 24,
      "info": "Space between heading, description, button, etc."
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
