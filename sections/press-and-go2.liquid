{% style %}
  .pgs2-{{ section.id }} {
    --pgs2-bg: {{ section.settings.background_color }};
    --pgs2-corner-bg: {{ section.settings.corner_shape_color }};
    --pgs2-heading-color: {{ section.settings.heading_color }};
    --pgs2-accent-color: {{ section.settings.accent_color }};
    --pgs2-text-color: {{ section.settings.text_color }};
    --pgs2-subtitle-color: {{ section.settings.subtitle_color }};
    --pgs2-card-bg: {{ section.settings.card_bg_color }};
    --pgs2-badge-bg: {{ section.settings.badge_bg_color }};
    --pgs2-badge-text: {{ section.settings.badge_text_color }};
  }
{% endstyle %}

<section class="pgs2 pgs2-{{ section.id }}" style="background-color: {{ section.settings.background_color }};">
  <!-- Decorative Corner Shapes (Gray tilted cards) -->
  <div class="pgs2__corner pgs2__corner--left"></div>
  <div class="pgs2__corner pgs2__corner--right"></div>

  <!-- Decorative Icons -->
  <div class="pgs2__decor-icons">
    {% if section.settings.decor_arc_left != blank %}
      <div class="pgs2__icon pgs2__icon--arc-left">
        <img src="{{ section.settings.decor_arc_left | image_url: width: 120 }}" alt="" loading="lazy">
      </div>
    {% endif %}
    {% if section.settings.decor_arc_right != blank %}
      <div class="pgs2__icon pgs2__icon--arc-right">
        <img src="{{ section.settings.decor_arc_right | image_url: width: 120 }}" alt="" loading="lazy">
      </div>
    {% endif %}
    {% if section.settings.decor_dot != blank %}
      <div class="pgs2__icon pgs2__icon--dot">
        <img src="{{ section.settings.decor_dot | image_url: width: 30 }}" alt="" loading="lazy">
      </div>
    {% endif %}
    {% if section.settings.decor_ring != blank %}
      <div class="pgs2__icon pgs2__icon--ring">
        <img src="{{ section.settings.decor_ring | image_url: width: 40 }}" alt="" loading="lazy">
      </div>
    {% endif %}
  </div>

  <!-- Main Content -->
  <div class="pgs2__content">
    <!-- Header -->
    <div class="pgs2__header">
      {% if section.settings.subtitle != blank %}
        <p class="pgs2__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
      <h2 class="pgs2__heading">
        <span class="pgs2__heading-line1">{{ section.settings.heading_line1 }}</span>
        <span class="pgs2__heading-line2">{{ section.settings.heading_line2 }}</span>
      </h2>
    </div>

    <!-- Cards Container (with negative gap for overlap) -->
    <div class="pgs2__cards-wrapper">
      <div class="pgs2__cards">
        {% for block in section.blocks %}
          {% if block.type == 'step_card' %}
            <div class="pgs2__card pgs2__card--{{ forloop.index }}" {{ block.shopify_attributes }}>
              <div class="pgs2__card-inner">
                <!-- Badge -->
                <div class="pgs2__badge">{{ forloop.index }}</div>

                <!-- Content -->
                <div class="pgs2__card-content">
                  <h3 class="pgs2__card-title">{{ block.settings.title }}</h3>
                  <p class="pgs2__card-desc">{{ block.settings.description }}</p>
                </div>

                <!-- Image (extends beyond card) -->
                <div class="pgs2__card-image">
                  {% if block.settings.image != blank %}
                    <img
                      src="{{ block.settings.image | image_url: width: 600 }}"
                      srcset="{{ block.settings.image | image_url: width: 400 }} 400w,
                              {{ block.settings.image | image_url: width: 500 }} 500w,
                              {{ block.settings.image | image_url: width: 600 }} 600w"
                      sizes="(max-width: 767px) 90vw, 400px"
                      alt="{{ block.settings.title }}"
                      width="600"
                      height="auto"
                      loading="lazy"
                    >
                  {% else %}
                    <div class="pgs2__card-placeholder">
                      <svg viewBox="0 0 100 80" fill="none" stroke="currentColor" stroke-width="1">
                        <rect x="5" y="5" width="90" height="70" rx="4"/>
                        <circle cx="30" cy="30" r="10"/>
                        <path d="M5 60 L30 35 L50 55 L70 30 L95 50 L95 75 L5 75 Z"/>
                      </svg>
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  /* ========================================
     BASE STYLES
     ======================================== */
  .pgs2 {
    position: relative;
    width: 100%;
    padding: 96px 24px;
    background-color: var(--pgs2-bg, #F7F7F7);
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    overflow: hidden;
  }

  .pgs2 *,
  .pgs2 *::before,
  .pgs2 *::after {
    box-sizing: border-box;
  }

  .pgs2 img {
    max-width: 100%;
    height: auto;
    border: 0;
  }

  /* ========================================
     DECORATIVE CORNER SHAPES
     ======================================== */
  .pgs2__corner {
    position: absolute;
    width: 280px;
    height: 350px;
    background-color: var(--pgs2-corner-bg, #EDEDED);
    border-radius: 20px;
    z-index: 1;
  }

  .pgs2__corner--left {
    top: -120px;
    left: -80px;
    transform: rotate(-15deg);
  }

  .pgs2__corner--right {
    top: -120px;
    right: -80px;
    transform: rotate(15deg);
  }

  /* ========================================
     DECORATIVE ICONS
     ======================================== */
  .pgs2__decor-icons {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 2;
  }

  .pgs2__icon {
    position: absolute;
  }

  .pgs2__icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .pgs2__icon--arc-left {
    top: 40px;
    left: 100px;
    width: 60px;
    height: 60px;
  }

  .pgs2__icon--arc-right {
    top: 40px;
    right: 100px;
    width: 60px;
    height: 60px;
  }

  .pgs2__icon--dot {
    top: 180px;
    left: 200px;
    width: 14px;
    height: 14px;
  }

  .pgs2__icon--ring {
    top: 140px;
    left: 50%;
    transform: translateX(-50%);
    width: 28px;
    height: 28px;
  }

  /* ========================================
     MAIN CONTENT
     ======================================== */
  .pgs2__content {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 64px;
    max-width: 1400px;
    margin: 0 auto;
    z-index: 10;
  }

  /* ========================================
     HEADER
     ======================================== */
  .pgs2__header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    text-align: center;
  }

  .pgs2__subtitle {
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--pgs2-subtitle-color, #888888);
    margin: 0;
  }

  .pgs2__heading {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    margin: 0;
  }

  .pgs2__heading-line1 {
    font-size: 36px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--pgs2-heading-color, #1a1a1a);
    line-height: 1.1;
  }

  .pgs2__heading-line2 {
    font-size: 36px;
    font-weight: 800;
    font-style: italic;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--pgs2-heading-color, #1a1a1a);
    background-color: var(--pgs2-accent-color, #00D4D4);
    padding: 10px 28px;
    line-height: 1.1;
  }

  /* ========================================
     CARDS WRAPPER & CONTAINER
     ======================================== */
  .pgs2__cards-wrapper {
    width: 100%;
    padding: 64px 0;
  }

  .pgs2__cards {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
    padding: 0 20px;
  }

  /* ========================================
     INDIVIDUAL CARD
     ======================================== */
  .pgs2__card {
    position: relative;
    width: 100%;
    max-width: 380px;
  }

  .pgs2__card-inner {
    position: relative;
    display: flex;
    flex-direction: column;
    background-color: var(--pgs2-card-bg, #ffffff);
    border-radius: 16px;
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.08);
    overflow: visible;
  }

  /* Badge */
  .pgs2__badge {
    position: absolute;
    top: -18px;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--pgs2-badge-bg, #1a1a1a);
    color: var(--pgs2-badge-text, #ffffff);
    font-size: 20px;
    font-weight: 700;
    border-radius: 10px;
    z-index: 5;
  }

  /* Badge positions per card */
  .pgs2__card--1 .pgs2__badge {
    left: 20px;
  }

  .pgs2__card--2 .pgs2__badge {
    left: 50%;
    transform: translateX(-50%);
  }

  .pgs2__card--3 .pgs2__badge {
    right: 20px;
    left: auto;
  }

  /* Card Content */
  .pgs2__card-content {
    padding: 48px 24px 24px;
    text-align: center;
  }

  .pgs2__card-title {
    font-size: 22px;
    font-weight: 700;
    font-style: italic;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--pgs2-heading-color, #1a1a1a);
    margin: 0 0 12px 0;
    line-height: 1.2;
  }

  .pgs2__card-desc {
    font-size: 14px;
    font-weight: 400;
    color: var(--pgs2-text-color, #666666);
    line-height: 1.6;
    margin: 0;
  }

  /* Card Image */
  .pgs2__card-image {
    position: relative;
    width: 100%;
    margin-top: -1px;
  }

  .pgs2__card-image img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 0 0 16px 16px;
  }

  .pgs2__card-placeholder {
    width: 100%;
    aspect-ratio: 4/3;
    background-color: #e5e5e5;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #bbb;
    border-radius: 0 0 16px 16px;
  }

  .pgs2__card-placeholder svg {
    width: 50%;
    height: auto;
  }

  /* ========================================
     RESPONSIVE - TABLET (768px+)
     ======================================== */
  @media (min-width: 768px) {
    .pgs2 {
      padding: 96px 48px;
    }

    .pgs2__corner {
      width: 300px;
      height: 380px;
    }

    .pgs2__corner--left {
      top: -140px;
      left: -60px;
    }

    .pgs2__corner--right {
      top: -140px;
      right: -60px;
    }

    .pgs2__icon--arc-left {
      top: 30px;
      left: 120px;
    }

    .pgs2__icon--arc-right {
      top: 30px;
      right: 120px;
    }

    .pgs2__heading-line1,
    .pgs2__heading-line2 {
      font-size: 44px;
    }

    .pgs2__cards-wrapper {
      padding: 64px 48px;
    }

    .pgs2__cards {
      flex-direction: row;
      justify-content: center;
      align-items: flex-start;
      gap: -48px; /* NEGATIVE GAP for overlap */
      padding: 0;
    }

    .pgs2__card {
      flex: 0 0 340px;
      max-width: 340px;
    }

    /* Card rotations */
    .pgs2__card--1 {
      transform: rotate(-6deg);
      margin-top: 30px;
      z-index: 1;
    }

    .pgs2__card--2 {
      transform: rotate(0deg);
      z-index: 3;
    }

    .pgs2__card--3 {
      transform: rotate(6deg);
      margin-top: 30px;
      z-index: 2;
    }

    .pgs2__badge {
      width: 48px;
      height: 48px;
      font-size: 22px;
      top: -20px;
    }

    .pgs2__card-title {
      font-size: 24px;
    }
  }

  /* ========================================
     RESPONSIVE - DESKTOP (1024px+)
     ======================================== */
  @media (min-width: 1024px) {
    .pgs2__corner {
      width: 340px;
      height: 420px;
    }

    .pgs2__corner--left {
      top: -160px;
      left: -40px;
    }

    .pgs2__corner--right {
      top: -160px;
      right: -40px;
    }

    .pgs2__icon--arc-left {
      top: 25px;
      left: 180px;
      width: 60px;
      height: 60px;
    }

    .pgs2__icon--arc-right {
      top: 25px;
      right: 180px;
      width: 60px;
      height: 60px;
    }

    .pgs2__icon--dot {
      top: 200px;
      left: 280px;
    }

    .pgs2__icon--ring {
      top: 160px;
    }

    .pgs2__heading-line1,
    .pgs2__heading-line2 {
      font-size: 52px;
    }

    .pgs2__cards {
      gap: -48px;
    }

    .pgs2__card {
      flex: 0 0 380px;
      max-width: 380px;
    }

    .pgs2__card--1 {
      transform: rotate(-8deg);
      margin-top: 40px;
    }

    .pgs2__card--3 {
      transform: rotate(8deg);
      margin-top: 40px;
    }

    .pgs2__badge {
      width: 52px;
      height: 52px;
      font-size: 24px;
      top: -22px;
      border-radius: 12px;
    }

    .pgs2__card-content {
      padding: 56px 28px 28px;
    }

    .pgs2__card-title {
      font-size: 26px;
    }

    .pgs2__card-desc {
      font-size: 15px;
    }
  }

  /* ========================================
     RESPONSIVE - LARGE DESKTOP (1400px+)
     ======================================== */
  @media (min-width: 1400px) {
    .pgs2 {
      padding: 120px 64px;
    }

    .pgs2__corner {
      width: 380px;
      height: 460px;
    }

    .pgs2__corner--left {
      top: -180px;
      left: -20px;
    }

    .pgs2__corner--right {
      top: -180px;
      right: -20px;
    }

    .pgs2__icon--arc-left {
      top: 20px;
      left: 220px;
    }

    .pgs2__icon--arc-right {
      top: 20px;
      right: 220px;
    }

    .pgs2__content {
      gap: 80px;
    }

    .pgs2__heading-line1,
    .pgs2__heading-line2 {
      font-size: 58px;
    }

    .pgs2__cards {
      gap: -60px;
    }

    .pgs2__card {
      flex: 0 0 420px;
      max-width: 420px;
    }

    .pgs2__card-content {
      padding: 64px 32px 32px;
    }

    .pgs2__card-title {
      font-size: 28px;
    }

    .pgs2__card-desc {
      font-size: 16px;
    }
  }
</style>

{% schema %}
