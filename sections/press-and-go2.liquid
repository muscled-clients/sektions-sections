{% style %}
  .pgs2-{{ section.id }} {
    --pgs2-bg: {{ section.settings.background_color }};
    --pgs2-corner-bg: {{ section.settings.corner_shape_color }};
    --pgs2-heading-color: {{ section.settings.heading_color }};
    --pgs2-accent-color: {{ section.settings.accent_color }};
    --pgs2-text-color: {{ section.settings.text_color }};
    --pgs2-subtitle-color: {{ section.settings.subtitle_color }};
    --pgs2-card-bg: {{ section.settings.card_bg_color }};
    --pgs2-badge-bg: {{ section.settings.badge_bg_color }};
    --pgs2-badge-text: {{ section.settings.badge_text_color }};
    --pgs2-card-radius: {{ section.settings.card_border_radius }}px;
    --pgs2-badge-radius: {{ section.settings.badge_border_radius }}px;
    {% case section.settings.card_shadow %}
      {% when 'none' %}
        --pgs2-card-shadow: none;
      {% when 'small' %}
        --pgs2-card-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
      {% when 'medium' %}
        --pgs2-card-shadow: 0 6px 30px rgba(0, 0, 0, 0.08);
      {% when 'large' %}
        --pgs2-card-shadow: 0 10px 50px rgba(0, 0, 0, 0.12);
    {% endcase %}
  }
{% endstyle %}

<section class="pgs2 pgs2-{{ section.id }}" style="background-color: {{ section.settings.background_color }};">
  <!-- Decorative Corner Shapes (Gray tilted cards) -->
  <div class="pgs2__corner pgs2__corner--left"></div>
  <div class="pgs2__corner pgs2__corner--right"></div>

  <!-- Decorative Icons -->
  <div class="pgs2__decor-icons">
    {% if section.settings.decor_arc_left != blank %}
      <div class="pgs2__icon pgs2__icon--arc-left">
        <img src="{{ section.settings.decor_arc_left | image_url: width: 120 }}" alt="" loading="lazy">
      </div>
    {% endif %}
    {% if section.settings.decor_arc_right != blank %}
      <div class="pgs2__icon pgs2__icon--arc-right">
        <img src="{{ section.settings.decor_arc_right | image_url: width: 120 }}" alt="" loading="lazy">
      </div>
    {% endif %}
    {% if section.settings.decor_dot != blank %}
      <div class="pgs2__icon pgs2__icon--dot">
        <img src="{{ section.settings.decor_dot | image_url: width: 30 }}" alt="" loading="lazy">
      </div>
    {% endif %}
    {% if section.settings.decor_ring != blank %}
      <div class="pgs2__icon pgs2__icon--ring">
        <img src="{{ section.settings.decor_ring | image_url: width: 40 }}" alt="" loading="lazy">
      </div>
    {% endif %}
  </div>

  <!-- Main Content -->
  <div class="pgs2__content">
    <!-- Header -->
    <div class="pgs2__header">
      {% if section.settings.subtitle != blank %}
        <p class="pgs2__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
      <h2 class="pgs2__heading">
        <span class="pgs2__heading-line1">{{ section.settings.heading_line1 }}</span>
        <span class="pgs2__heading-line2">{{ section.settings.heading_line2 }}</span>
      </h2>
    </div>

    <!-- Cards Container -->
    <div class="pgs2__cards-wrapper">
      <div class="pgs2__cards">
        {% for block in section.blocks %}
          {% if block.type == 'step_card' %}
            <div class="pgs2__card pgs2__card--{{ forloop.index }}" {{ block.shopify_attributes }}>
              <div class="pgs2__card-inner">
                <!-- Badge -->
                <div class="pgs2__badge">{{ forloop.index }}</div>

                <!-- Content (TOP) -->
                <div class="pgs2__card-content">
                  <h3 class="pgs2__card-title">{{ block.settings.title }}</h3>
                  <p class="pgs2__card-desc">{{ block.settings.description }}</p>
                </div>

                <!-- Image (BOTTOM) -->
                <div class="pgs2__card-image">
                  {% if block.settings.image != blank %}
                    <img
                      src="{{ block.settings.image | image_url: width: 600 }}"
                      srcset="{{ block.settings.image | image_url: width: 300 }} 300w,
                              {{ block.settings.image | image_url: width: 400 }} 400w,
                              {{ block.settings.image | image_url: width: 500 }} 500w,
                              {{ block.settings.image | image_url: width: 600 }} 600w"
                      sizes="(max-width: 400px) 280px, (max-width: 550px) 320px, (max-width: 767px) 360px, (max-width: 1023px) 300px, 380px"
                      alt="{{ block.settings.title }}"
                      width="600"
                      height="auto"
                      loading="lazy"
                    >
                  {% else %}
                    <div class="pgs2__card-placeholder">
                      <svg viewBox="0 0 100 80" fill="none" stroke="currentColor" stroke-width="1">
                        <rect x="5" y="5" width="90" height="70" rx="4"/>
                        <circle cx="30" cy="30" r="10"/>
                        <path d="M5 60 L30 35 L50 55 L70 30 L95 50 L95 75 L5 75 Z"/>
                      </svg>
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  /* ========================================
     BASE STYLES (Mobile First - 320px+)
     ======================================== */
  .pgs2 {
    position: relative;
    width: 100%;
    padding: 48px 16px 60px;
    background-color: var(--pgs2-bg, #F7F7F7);
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    overflow: hidden;
    overflow-x: clip;
  }

  .pgs2 *,
  .pgs2 *::before,
  .pgs2 *::after {
    box-sizing: border-box;
  }

  .pgs2 img {
    max-width: 100%;
    height: auto;
    border: 0;
  }

  /* ========================================
     DECORATIVE CORNER SHAPES
     ======================================== */
  .pgs2__corner {
    position: absolute;
    width: 140px;
    height: 180px;
    background-color: var(--pgs2-corner-bg, #EDEDED);
    border-radius: 12px;
    z-index: 1;
  }

  .pgs2__corner--left {
    top: -60px;
    left: -70px;
    transform: rotate(-15deg);
  }

  .pgs2__corner--right {
    top: -60px;
    right: -70px;
    transform: rotate(15deg);
  }

  /* ========================================
     DECORATIVE ICONS
     ======================================== */
  .pgs2__decor-icons {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 2;
  }

  .pgs2__icon {
    position: absolute;
  }

  .pgs2__icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .pgs2__icon--arc-left {
    top: 15px;
    left: 30px;
    width: 35px;
    height: 35px;
  }

  .pgs2__icon--arc-right {
    top: 15px;
    right: 30px;
    width: 35px;
    height: 35px;
  }

  .pgs2__icon--dot {
    top: 100px;
    left: 10%;
    width: 10px;
    height: 10px;
  }

  .pgs2__icon--ring {
    top: 80px;
    left: 50%;
    transform: translateX(-50%);
    width: 18px;
    height: 18px;
  }

  /* ========================================
     MAIN CONTENT
     ======================================== */
  .pgs2__content {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
    max-width: 1400px;
    margin: 0 auto;
    z-index: 10;
  }

  /* ========================================
     HEADER
     ======================================== */
  .pgs2__header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    text-align: center;
    padding: 0 10px;
  }

  .pgs2__subtitle {
    font-size: 10px;
    font-weight: 600;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--pgs2-subtitle-color, #888888);
    margin: 0;
  }

  .pgs2__heading {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6px;
    margin: 0;
  }

  .pgs2__heading-line1 {
    font-size: 24px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--pgs2-heading-color, #1a1a1a);
    line-height: 1.1;
  }

  .pgs2__heading-line2 {
    font-size: 24px;
    font-weight: 800;
    font-style: italic;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--pgs2-heading-color, #1a1a1a);
    background-color: var(--pgs2-accent-color, #00D4D4);
    padding: 6px 16px;
    line-height: 1.1;
  }

  /* ========================================
     CARDS WRAPPER & CONTAINER
     ======================================== */
  .pgs2__cards-wrapper {
    width: 100%;
  }

  .pgs2__cards {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 30px;
  }

  /* ========================================
     INDIVIDUAL CARD
     ======================================== */
  .pgs2__card {
    position: relative;
    width: 100%;
    max-width: 300px;
    padding-top: 18px;
  }

  .pgs2__card-inner {
    position: relative;
    display: flex;
    flex-direction: column;
    background-color: var(--pgs2-card-bg, #ffffff);
    border-radius: var(--pgs2-card-radius, 16px);
    box-shadow: var(--pgs2-card-shadow, 0 6px 30px rgba(0, 0, 0, 0.08));
    overflow: hidden;
    height: 100%;
  }

  /* Badge - All centered at top */
  .pgs2__badge {
    position: absolute;
    top: -18px;
    left: 50%;
    transform: translateX(-50%);
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--pgs2-badge-bg, #1a1a1a);
    color: var(--pgs2-badge-text, #ffffff);
    font-size: 16px;
    font-weight: 700;
    border-radius: var(--pgs2-badge-radius, 8px);
    z-index: 5;
  }

  /* Card Content (TOP) */
  .pgs2__card-content {
    padding: 36px 16px 16px;
    text-align: center;
    flex: 0 0 auto;
  }

  /* Card Image (BOTTOM) */
  .pgs2__card-image {
    position: relative;
    width: 100%;
    flex: 1 1 auto;
    min-height: 180px;
    overflow: hidden;
  }

  .pgs2__card-image img {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }

  .pgs2__card-placeholder {
    width: 100%;
    height: 100%;
    min-height: 180px;
    background-color: #e5e5e5;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #bbb;
  }

  .pgs2__card-placeholder svg {
    width: 50%;
    height: auto;
  }

  .pgs2__card-title {
    font-size: 16px;
    font-weight: 700;
    font-style: italic;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--pgs2-heading-color, #1a1a1a);
    margin: 0 0 8px 0;
    line-height: 1.2;
  }

  .pgs2__card-desc {
    font-size: 12px;
    font-weight: 400;
    color: var(--pgs2-text-color, #666666);
    line-height: 1.5;
    margin: 0;
  }

  /* ========================================
     RESPONSIVE - 400px+
     ======================================== */
  @media (min-width: 400px) {
    .pgs2 {
      padding: 56px 20px 70px;
    }

    .pgs2__corner {
      width: 160px;
      height: 200px;
    }

    .pgs2__corner--left {
      top: -70px;
      left: -70px;
    }

    .pgs2__corner--right {
      top: -70px;
      right: -70px;
    }

    .pgs2__icon--arc-left {
      top: 18px;
      left: 40px;
      width: 40px;
      height: 40px;
    }

    .pgs2__icon--arc-right {
      top: 18px;
      right: 40px;
      width: 40px;
      height: 40px;
    }

    .pgs2__subtitle {
      font-size: 11px;
    }

    .pgs2__heading-line1,
    .pgs2__heading-line2 {
      font-size: 28px;
    }

    .pgs2__card {
      max-width: 340px;
    }

    .pgs2__badge {
      width: 40px;
      height: 40px;
      font-size: 18px;
      top: -16px;
    }

    .pgs2__card-content {
      padding: 40px 20px 20px;
    }

    .pgs2__card-title {
      font-size: 18px;
    }

    .pgs2__card-desc {
      font-size: 13px;
    }
  }

  /* ========================================
     RESPONSIVE - 550px+
     ======================================== */
  @media (min-width: 550px) {
    .pgs2 {
      padding: 64px 24px 80px;
    }

    .pgs2__corner {
      width: 180px;
      height: 230px;
      border-radius: 14px;
    }

    .pgs2__corner--left {
      top: -80px;
      left: -60px;
    }

    .pgs2__corner--right {
      top: -80px;
      right: -60px;
    }

    .pgs2__icon--arc-left {
      top: 20px;
      left: 60px;
      width: 45px;
      height: 45px;
    }

    .pgs2__icon--arc-right {
      top: 20px;
      right: 60px;
      width: 45px;
      height: 45px;
    }

    .pgs2__icon--dot {
      top: 120px;
      left: 12%;
      width: 12px;
      height: 12px;
    }

    .pgs2__icon--ring {
      top: 100px;
      width: 22px;
      height: 22px;
    }

    .pgs2__content {
      gap: 50px;
    }

    .pgs2__subtitle {
      font-size: 12px;
      letter-spacing: 0.15em;
    }

    .pgs2__heading-line1,
    .pgs2__heading-line2 {
      font-size: 32px;
    }

    .pgs2__heading-line2 {
      padding: 8px 20px;
    }

    .pgs2__cards {
      gap: 35px;
    }

    .pgs2__card {
      max-width: 380px;
    }

    .pgs2__badge {
      width: 44px;
      height: 44px;
      font-size: 20px;
      top: -18px;
      border-radius: 10px;
    }

    .pgs2__card-content {
      padding: 44px 24px 24px;
    }

    .pgs2__card-title {
      font-size: 20px;
      margin-bottom: 10px;
    }

    .pgs2__card-desc {
      font-size: 14px;
      line-height: 1.6;
    }

    .pgs2__card-inner {
      border-radius: 14px;
    }

    .pgs2__card-image img,
    .pgs2__card-placeholder {
      border-radius: 0 0 14px 14px;
    }
  }

  /* ========================================
     RESPONSIVE - TABLET (768px+)
     ======================================== */
  @media (min-width: 768px) {
    .pgs2 {
      padding: 80px 32px 100px;
    }

    .pgs2__corner {
      width: 240px;
      height: 300px;
      border-radius: 16px;
    }

    .pgs2__corner--left {
      top: -100px;
      left: -50px;
    }

    .pgs2__corner--right {
      top: -100px;
      right: -50px;
    }

    .pgs2__icon--arc-left {
      top: 25px;
      left: 100px;
      width: 50px;
      height: 50px;
    }

    .pgs2__icon--arc-right {
      top: 25px;
      right: 100px;
      width: 50px;
      height: 50px;
    }

    .pgs2__icon--dot {
      top: 150px;
      left: 15%;
      width: 14px;
      height: 14px;
    }

    .pgs2__icon--ring {
      top: 120px;
      width: 26px;
      height: 26px;
    }

    .pgs2__content {
      gap: 60px;
    }

    .pgs2__heading-line1,
    .pgs2__heading-line2 {
      font-size: 40px;
    }

    .pgs2__heading-line2 {
      padding: 10px 24px;
    }

    .pgs2__cards-wrapper {
      padding: 30px 0;
    }

    .pgs2__cards {
      flex-direction: row;
      justify-content: center;
      align-items: flex-start;
      gap: 0;
    }

    .pgs2__card {
      flex: 0 0 260px;
      max-width: 260px;
      padding-top: 20px;
    }

    .pgs2__card-inner {
      height: 380px;
    }

    .pgs2__card-image {
      min-height: 220px;
    }

    /* Card rotations and overlap using negative margins */
    .pgs2__card--1 {
      transform: rotate(-5deg);
      margin-right: -30px;
      margin-top: 30px;
      z-index: 1;
    }

