{% style %}
  #shopify-section-{{ section.id }} {
    --fp-bg: {{ section.settings.background_color }};
    --fp-card-bg: {{ section.settings.card_background }};
    --fp-heading-color: {{ section.settings.heading_color }};
    --fp-title-color: {{ section.settings.title_color }};
    --fp-text-color: {{ section.settings.text_color }};
    --fp-price-color: {{ section.settings.price_color }};
    --fp-btn-bg: {{ section.settings.button_background }};
    --fp-btn-text: {{ section.settings.button_text_color }};
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }
{% endstyle %}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Josefin+Sans:wght@600;700&display=swap');

  .featured-product,
  .featured-product * {
    box-sizing: border-box;
  }

  .featured-product {
    position: relative;
    width: 100%;
    min-height: 400px;
    background: var(--fp-bg, #f5f5f5);
    font-family: 'Montserrat', sans-serif;
    overflow: hidden;
  }

  /* Background Image */
  .featured-product__background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .featured-product__bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  /* Content Container */
  .featured-product__content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    min-height: 400px;
    padding: 20px 16px;
  }

  /* Section Heading */
  .featured-product__heading {
    font-family: 'Josefin Sans', sans-serif;
    font-size: 16px;
    font-weight: 700;
    color: var(--fp-heading-color, #000);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 0 0 20px;
  }

  /* Product Card */
  .featured-product__card {
    display: flex;
    flex-direction: row;
    gap: 16px;
    background: var(--fp-card-bg, #fff8ec);
    border-radius: 4px;
    padding: 14px;
    max-width: 380px;
    text-decoration: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .featured-product__card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  /* Card Image */
  .featured-product__card-image-wrapper {
    flex-shrink: 0;
    width: 100px;
    height: 100px;
    background: var(--fp-card-bg, #fff8ec);
    border-radius: 4px;
    overflow: hidden;
  }

  .featured-product__card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Card Info */
  .featured-product__card-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 1;
    min-width: 0;
  }

  .featured-product__card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 12px;
    margin-bottom: 4px;
  }

  .featured-product__card-title {
    font-size: 14px;
    font-weight: 700;
    color: var(--fp-title-color, #000);
    margin: 0;
    line-height: 1.3;
  }

  .featured-product__card-price {
    font-size: 14px;
    font-weight: 400;
    color: var(--fp-price-color, #000);
    white-space: nowrap;
  }

  .featured-product__card-vendor {
    font-size: 12px;
    font-weight: 400;
    color: var(--fp-text-color, #666);
    margin: 0;
  }

  /* Button (hidden on mobile, shown on desktop hover) */
  .featured-product__card-button {
    display: none;
    margin-top: 12px;
    padding: 10px 16px;
    background: var(--fp-btn-bg, #000);
    color: var(--fp-btn-text, #fff);
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background 0.25s ease;
  }

  .featured-product__card-button:hover {
    opacity: 0.9;
  }

  /* Card Position Options */
  .featured-product--card-left .featured-product__card {
    align-self: flex-start;
  }

  .featured-product--card-right .featured-product__card {
    align-self: flex-end;
  }

  .featured-product--card-bottom .featured-product__content {
    justify-content: flex-end;
  }

  .featured-product--card-center .featured-product__content {
    justify-content: center;
  }

  /* Responsive - Small Mobile (< 400px) */
  @media (max-width: 399px) {
    .featured-product {
      min-height: 350px;
    }

    .featured-product__content {
      min-height: 350px;
      padding: 16px 12px;
    }

    .featured-product__heading {
      font-size: 13px;
      margin-bottom: 14px;
    }

    .featured-product__card {
      max-width: 260px;
      gap: 10px;
      padding: 10px;
    }

    .featured-product__card-image-wrapper {
      width: 65px;
      height: 65px;
    }

    .featured-product__card-title {
      font-size: 12px;
    }

    .featured-product__card-price {
      font-size: 12px;
    }

    .featured-product__card-vendor {
      font-size: 10px;
    }
  }

  /* Medium Mobile (400px - 549px) */
  @media (min-width: 400px) and (max-width: 549px) {
    .featured-product {
      min-height: 380px;
    }

    .featured-product__content {
      min-height: 380px;
      padding: 18px 14px;
    }

    .featured-product__heading {
      font-size: 14px;
      margin-bottom: 16px;
    }

    .featured-product__card {
      max-width: 290px;
      gap: 12px;
      padding: 12px;
    }

    .featured-product__card-image-wrapper {
      width: 75px;
      height: 75px;
    }

    .featured-product__card-title {
      font-size: 13px;
    }

    .featured-product__card-price {
      font-size: 13px;
    }

    .featured-product__card-vendor {
      font-size: 11px;
    }
  }

  /* Large Mobile (550px - 767px) */
  @media (min-width: 550px) and (max-width: 767px) {
    .featured-product {
      min-height: 420px;
    }

    .featured-product__content {
      min-height: 420px;
      padding: 20px 18px;
    }

    .featured-product__heading {
      font-size: 15px;
      margin-bottom: 18px;
    }

    .featured-product__card {
      max-width: 320px;
      gap: 14px;
      padding: 12px;
    }

    .featured-product__card-image-wrapper {
      width: 85px;
      height: 85px;
    }

    .featured-product__card-title {
      font-size: 14px;
    }

    .featured-product__card-price {
      font-size: 14px;
    }

    .featured-product__card-vendor {
      font-size: 12px;
    }
  }

  /* Tablet (768px - 1023px) */
  @media (min-width: 768px) and (max-width: 1023px) {
    .featured-product {
      min-height: 520px;
    }

    .featured-product__content {
      min-height: 520px;
      padding: 28px 32px;
    }

    .featured-product__heading {
      font-size: 17px;
      margin-bottom: 20px;
    }

    .featured-product__card {
      max-width: 350px;
      gap: 16px;
      padding: 14px;
    }

    .featured-product__card-image-wrapper {
      width: 95px;
      height: 95px;
    }

    .featured-product__card-title {
      font-size: 15px;
    }

    .featured-product__card-price {
      font-size: 15px;
    }

    .featured-product__card-vendor {
      font-size: 12px;
    }
  }

  /* Desktop (1024px+) */
  @media (min-width: 1024px) {
    .featured-product {
      min-height: 600px;
    }

    .featured-product__content {
      min-height: 600px;
      padding: 36px 60px;
    }

    .featured-product__heading {
      font-size: 18px;
      margin-bottom: 22px;
    }

    /* Vertical card layout on desktop */
    .featured-product__card {
      flex-direction: column;
      max-width: 300px;
      padding: 16px;
    }

    .featured-product__card-image-wrapper {
      width: 100%;
      height: auto;
      aspect-ratio: 1 / 1;
      order: 2;
      margin-top: 12px;
    }

    .featured-product__card-info {
      order: 1;
    }

    .featured-product__card-title {
      font-size: 17px;
    }

    .featured-product__card-price {
      font-size: 15px;
    }

    .featured-product__card-vendor {
      font-size: 13px;
    }

    .featured-product__card-button {
      display: inline-block;
      opacity: 0;
      transform: translateY(10px);
      transition: all 0.3s ease;
    }

    .featured-product__card:hover .featured-product__card-button {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Large Desktop (1400px+) */
  @media (min-width: 1400px) {
    .featured-product {
      min-height: 700px;
    }

    .featured-product__content {
      min-height: 700px;
      padding: 48px 80px;
    }

    .featured-product__heading {
      font-size: 20px;
      margin-bottom: 24px;
    }

    .featured-product__card {
      max-width: 340px;
      padding: 18px;
    }

    .featured-product__card-title {
      font-size: 18px;
    }

    .featured-product__card-price {
      font-size: 16px;
    }

    .featured-product__card-vendor {
      font-size: 14px;
    }

    .featured-product__card-button {
      font-size: 13px;
      padding: 12px 20px;
    }
  }
</style>

<section
  class="featured-product featured-product--card-{{ section.settings.card_position_horizontal }} featured-product--card-{{ section.settings.card_position_vertical }}"
  data-section-id="{{ section.id }}"
>
  <!-- Background Image -->
  <div class="featured-product__background">
    {%- if section.settings.background_image != blank -%}
      <img
        src="{{ section.settings.background_image | image_url: width: 2000 }}"
        alt="{{ section.settings.heading | default: 'Featured product' }}"
        class="featured-product__bg-image"
        loading="lazy"
      >
    {%- endif -%}
  </div>

  <!-- Content -->
  <div class="featured-product__content">
    {%- if section.settings.heading != blank -%}
      <h2 class="featured-product__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    {%- assign product = section.settings.product -%}
    {%- if product != blank -%}
      <a href="{{ product.url }}" class="featured-product__card">
        <div class="featured-product__card-image-wrapper">
          {%- if product.featured_image != blank -%}
            <img
              src="{{ product.featured_image | image_url: width: 400 }}"
              alt="{{ product.title }}"
              class="featured-product__card-image"
              loading="lazy"
            >
          {%- else -%}
            {{ 'product-1' | placeholder_svg_tag: 'featured-product__card-image' }}
          {%- endif -%}
        </div>
        <div class="featured-product__card-info">
          <div class="featured-product__card-header">
            <h3 class="featured-product__card-title">{{ product.title }}</h3>
            <span class="featured-product__card-price">{{ product.price | money }}</span>
          </div>
          <p class="featured-product__card-vendor">{{ product.vendor }}</p>
          {%- if section.settings.show_button -%}
            <span class="featured-product__card-button">{{ section.settings.button_text }}</span>
          {%- endif -%}
        </div>
      </a>
    {%- else -%}
      <!-- Placeholder card when no product selected -->
      <div class="featured-product__card">
        <div class="featured-product__card-image-wrapper">
          {{ 'product-1' | placeholder_svg_tag: 'featured-product__card-image' }}
        </div>
        <div class="featured-product__card-info">
          <div class="featured-product__card-header">
            <h3 class="featured-product__card-title">{{ section.settings.placeholder_title | default: 'Product Title' }}</h3>
            <span class="featured-product__card-price">{{ section.settings.placeholder_price | default: '$199.00' }}</span>
          </div>
          <p class="featured-product__card-vendor">{{ section.settings.placeholder_vendor | default: 'Brand Name' }}</p>
          {%- if section.settings.show_button -%}
            <span class="featured-product__card-button">{{ section.settings.button_text }}</span>
          {%- endif -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

