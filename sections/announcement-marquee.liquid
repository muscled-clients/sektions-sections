    {
      "type": "range",
      "id": "content_gap",
      "label": "Gap between content sets",
      "min": 50,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 100,
      "info": "Space between each complete set of announcements"
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "label": "Scroll speed",
