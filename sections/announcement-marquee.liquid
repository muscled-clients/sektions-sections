{% comment %}
  Announcement Marquee Section
  Scrolling announcement bar with customizable messages
{% endcomment %}

<style>
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    overflow: hidden;
    position: relative;
  }

  #shopify-section-{{ section.id }} .marquee-container {
    height: {{ section.settings.bar_height }}px;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} .marquee-track {
    display: flex;
    animation: scroll-{{ section.id }} {{ section.settings.scroll_speed }}s linear infinite;
    white-space: nowrap;
    width: fit-content;
  }

  #shopify-section-{{ section.id }} .marquee-content {
    display: flex;
    align-items: center;
    flex-shrink: 0;
    padding-right: {{ section.settings.content_gap }}px;
  }

  #shopify-section-{{ section.id }} .marquee-item {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
    font-weight: {{ section.settings.font_weight }};
    text-transform: {{ section.settings.text_transform }};
    letter-spacing: {{ section.settings.letter_spacing }}px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    white-space: nowrap;
    margin: 0 {{ section.settings.item_spacing }}px;
  }

  #shopify-section-{{ section.id }} .marquee-separator {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
    margin: 0 5px;
  }


  @keyframes scroll-{{ section.id }} {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0);
    }
  }

  #shopify-section-{{ section.id }} .marquee-track:hover {
    {% if section.settings.pause_on_hover %}
      animation-play-state: paused;
    {% endif %}
  }

  @media screen and (max-width: 750px) {
    #shopify-section-{{ section.id }} .marquee-container {
      height: {{ section.settings.mobile_bar_height }}px;
    }

    #shopify-section-{{ section.id }} .marquee-item {
      font-size: {{ section.settings.mobile_text_size }}px;
    }

    #shopify-section-{{ section.id }} .marquee-separator {
      font-size: {{ section.settings.mobile_text_size }}px;
      margin: 0 {{ section.settings.mobile_item_spacing }}px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    #shopify-section-{{ section.id }} .marquee-track {
      animation: none;
      justify-content: center;
    }

    #shopify-section-{{ section.id }} .marquee-content:nth-child(2) {
      display: none;
    }
  }
</style>

<div class="marquee-container">
  <div class="marquee-track">
    {% comment %} Repeat content 8 times to ensure no gaps {% endcomment %}
    {% for i in (1..8) %}
      <div class="marquee-content">
        {% for block in section.blocks %}
          {% if block.type == 'announcement' %}
            <span class="marquee-item" {% if i == 1 %}{{ block.shopify_attributes }}{% endif %}>
              {{ block.settings.text }}
            </span>
            {% unless forloop.last %}
              <span class="marquee-separator">Â·</span>
            {% endunless %}
          {% endif %}
        {% endfor %}
      </div>
    {% endfor %}
  </div>
</div>

