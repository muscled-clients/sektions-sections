<div id="sek-vb3-{{ section_id }}" class="sek-vb3">
  <!-- Background Image -->
  <div class="sek-vb3__background">
    {%- comment -%} Mobile Image - Falls back to desktop image if mobile not set {%- endcomment -%}
    {%- if section.settings.image_mobile != blank -%}
      <img
        src="{{ section.settings.image_mobile | image_url: width: 800 }}"
        srcset="{{ section.settings.image_mobile | image_url: width: 400 }} 400w,
                {{ section.settings.image_mobile | image_url: width: 600 }} 600w,
                {{ section.settings.image_mobile | image_url: width: 800 }} 800w"
        sizes="100vw"
        alt="{{ section.settings.image_mobile.alt | default: section.settings.heading }}"
        class="sek-vb3__image sek-vb3__image--mobile"
        loading="lazy"
      >
    {%- elsif section.settings.image_desktop != blank -%}
      <img
        src="{{ section.settings.image_desktop | image_url: width: 800 }}"
        srcset="{{ section.settings.image_desktop | image_url: width: 400 }} 400w,
                {{ section.settings.image_desktop | image_url: width: 600 }} 600w,
                {{ section.settings.image_desktop | image_url: width: 800 }} 800w"
        sizes="100vw"
        alt="{{ section.settings.image_desktop.alt | default: section.settings.heading }}"
        class="sek-vb3__image sek-vb3__image--mobile"
        loading="lazy"
      >
    {%- else -%}
      {{ 'collection-1' | placeholder_svg_tag: 'sek-vb3__image sek-vb3__image--mobile' }}
    {%- endif -%}

    {%- comment -%} Desktop Image - Falls back to mobile image if desktop not set {%- endcomment -%}
    {%- if section.settings.image_desktop != blank -%}
      <img
        src="{{ section.settings.image_desktop | image_url: width: 1920 }}"
        srcset="{{ section.settings.image_desktop | image_url: width: 1200 }} 1200w,
                {{ section.settings.image_desktop | image_url: width: 1600 }} 1600w,
                {{ section.settings.image_desktop | image_url: width: 1920 }} 1920w"
        sizes="100vw"
        alt="{{ section.settings.image_desktop.alt | default: section.settings.heading }}"
        class="sek-vb3__image sek-vb3__image--desktop"
        loading="lazy"
      >
    {%- elsif section.settings.image_mobile != blank -%}
      <img
        src="{{ section.settings.image_mobile | image_url: width: 1920 }}"
        srcset="{{ section.settings.image_mobile | image_url: width: 1200 }} 1200w,
                {{ section.settings.image_mobile | image_url: width: 1600 }} 1600w,
                {{ section.settings.image_mobile | image_url: width: 1920 }} 1920w"
        sizes="100vw"
        alt="{{ section.settings.image_mobile.alt | default: section.settings.heading }}"
        class="sek-vb3__image sek-vb3__image--desktop"
        loading="lazy"
      >
    {%- else -%}
      {{ 'collection-1' | placeholder_svg_tag: 'sek-vb3__image sek-vb3__image--desktop' }}
    {%- endif -%}
  </div>

  <!-- Overlay -->
  <div class="sek-vb3__overlay"></div>

  <!-- Content -->
  <div class="sek-vb3__content">
    {%- if section.settings.heading != blank -%}
      <h2 class="sek-vb3__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    {%- if section.settings.description != blank -%}
      <p class="sek-vb3__description">{{ section.settings.description }}</p>
    {%- endif -%}

    {%- if section.settings.video_url != blank -%}
      <button type="button" class="sek-vb3__play-btn" data-video-open>
        <span class="sek-vb3__play-icon">
          <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M8 5v14l11-7z"/>
          </svg>
        </span>
        {%- if section.settings.play_text != blank -%}
          <span class="sek-vb3__play-text">{{ section.settings.play_text }}</span>
        {%- endif -%}
      </button>
    {%- endif -%}
  </div>

  <!-- Video Modal -->
  {%- if section.settings.video_url != blank -%}
    <div class="sek-vb3__modal" data-video-modal>
      <button type="button" class="sek-vb3__modal-close" data-video-close aria-label="Close video">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M18 6L6 18M6 6l12 12" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      <div class="sek-vb3__modal-video" data-video-container>
        <!-- Video will be inserted here -->
      </div>
    </div>
  {%- endif -%}
</div>

<script>
  (function() {
    const section = document.getElementById('sek-vb3-{{ section_id }}');
    if (!section) return;

    const openBtn = section.querySelector('[data-video-open]');
    const modal = section.querySelector('[data-video-modal]');
    const closeBtn = section.querySelector('[data-video-close]');
    const videoContainer = section.querySelector('[data-video-container]');
    const videoUrl = {{ section.settings.video_url | json }};

    if (!openBtn || !modal || !videoContainer || !videoUrl) return;

    function getVideoEmbed(url) {
      // YouTube
      let match = url.match(/(?:youtube\.com\/(?:watch\?v=|embed\/)|youtu\.be\/)([a-zA-Z0-9_-]{11})/);
      if (match) {
        return `<iframe src="https://www.youtube.com/embed/${match[1]}?autoplay=1&rel=0" allow="autoplay; encrypted-media" allowfullscreen></iframe>`;
      }

      // Vimeo
      match = url.match(/vimeo\.com\/(?:video\/)?(\d+)/);
      if (match) {
        return `<iframe src="https://player.vimeo.com/video/${match[1]}?autoplay=1" allow="autoplay; fullscreen" allowfullscreen></iframe>`;
      }

      // Direct video file
      if (url.match(/\.(mp4|webm|ogg)(\?|$)/i)) {
        return `<video src="${url}" autoplay controls playsinline></video>`;
      }

      // Fallback - try as iframe
      return `<iframe src="${url}" allowfullscreen></iframe>`;
    }

    function openModal() {
      videoContainer.innerHTML = getVideoEmbed(videoUrl);
      modal.classList.add('is-active');
      document.body.style.overflow = 'hidden';
    }

    function closeModal() {
      modal.classList.remove('is-active');
      document.body.style.overflow = '';
      // Stop video
      setTimeout(function() {
        videoContainer.innerHTML = '';
      }, 300);
    }

    openBtn.addEventListener('click', openModal);
    closeBtn.addEventListener('click', closeModal);

    // Close on overlay click
    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        closeModal();
      }
    });

    // Close on Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && modal.classList.contains('is-active')) {
        closeModal();
      }
    });
  })();
</script>

