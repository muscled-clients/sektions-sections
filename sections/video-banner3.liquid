{% comment %}
  SEK Video Banner 3 - Full-width video banner with play button modal
{% endcomment %}

{%- assign section_id = section.id -%}

{% style %}
  /* Base styles and box-sizing */
  #sek-vb3-{{ section_id }},
  #sek-vb3-{{ section_id }} * {
    box-sizing: border-box;
  }

  #sek-vb3-{{ section_id }} {
    position: relative;
    width: 100%;
    height: {{ section.settings.height_mobile }}px;
    overflow: hidden;
    margin-top: {{ section.settings.padding_top }}px;
    margin-bottom: {{ section.settings.padding_bottom }}px;
  }

  #sek-vb3-{{ section_id }} .sek-vb3__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  #sek-vb3-{{ section_id }} .sek-vb3__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #sek-vb3-{{ section_id }} .sek-vb3__image--mobile {
    display: block;
  }

  #sek-vb3-{{ section_id }} .sek-vb3__image--desktop {
    display: none;
  }

  #sek-vb3-{{ section_id }} .sek-vb3__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ section.settings.overlay_color }};
    z-index: 2;
  }

  #sek-vb3-{{ section_id }} .sek-vb3__content {
    position: relative;
    z-index: 3;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: 20px 14px;
    max-width: 100%;
  }

  #sek-vb3-{{ section_id }} .sek-vb3__heading {
    font-family: {{ section.settings.heading_font }}, sans-serif;
    font-size: 22px;
    font-weight: 400;
    line-height: 130%;
    color: {{ section.settings.text_color }};
    margin: 0 0 10px 0;
  }

  #sek-vb3-{{ section_id }} .sek-vb3__description {
    font-size: 13px;
    line-height: 150%;
    color: {{ section.settings.text_color }};
    margin: 0 0 16px 0;
    opacity: 0.9;
    max-width: 90%;
  }

  #sek-vb3-{{ section_id }} .sek-vb3__play-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
  }

  #sek-vb3-{{ section_id }} .sek-vb3__play-icon {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: {{ section.settings.play_btn_bg }};
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  #sek-vb3-{{ section_id }} .sek-vb3__play-btn:hover .sek-vb3__play-icon {
    animation: sek-vb3-pulse-{{ section_id }} 1s ease infinite;
  }

  @keyframes sek-vb3-pulse-{{ section_id }} {
    0% { transform: scale(1); }
    50% { transform: scale(1.1); }
    100% { transform: scale(1); }
  }

  #sek-vb3-{{ section_id }} .sek-vb3__play-icon svg {
    width: 12px;
    height: 12px;
    fill: {{ section.settings.play_icon_color }};
    margin-left: 2px;
  }

  #sek-vb3-{{ section_id }} .sek-vb3__play-text {
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: {{ section.settings.text_color }};
  }

  /* Modal Styles - Backdrop Blur */
  #sek-vb3-{{ section_id }} .sek-vb3__modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(245, 245, 245, 0.9);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 12px;
    opacity: 0;
    visibility: hidden;
    transition: all 300ms ease;
  }

  #sek-vb3-{{ section_id }} .sek-vb3__modal.is-active {
    opacity: 1;
    visibility: visible;
  }

  #sek-vb3-{{ section_id }} .sek-vb3__modal-close {
    position: fixed;
    top: 12px;
    right: 12px;
    width: 32px;
    height: 32px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 10001;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease;
  }

  #sek-vb3-{{ section_id }} .sek-vb3__modal-close:hover {
    transform: scale(1.1);
  }

  #sek-vb3-{{ section_id }} .sek-vb3__modal-close svg {
    width: 24px;
    height: 24px;
    stroke: #000000;
    stroke-width: 2;
  }

  #sek-vb3-{{ section_id }} .sek-vb3__modal-video {
    width: 100%;
    max-width: 900px;
    aspect-ratio: 16 / 9;
    border-radius: 6px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }

  #sek-vb3-{{ section_id }} .sek-vb3__modal-video iframe,
  #sek-vb3-{{ section_id }} .sek-vb3__modal-video video {
    width: 100%;
    height: 100%;
    border: none;
    display: block;
  }

  /* ==========================================
     RESPONSIVE BREAKPOINTS
     ========================================== */

  /* Medium Mobile (400px+) */
  @media (min-width: 400px) {
    #sek-vb3-{{ section_id }} {
      height: {{ section.settings.height_mobile | plus: 30 }}px;
