<style>
  .nutrition-hero-section {
    width: 100%;
    padding: {{ section.settings.section_padding_top }}px 20px {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .nutrition-hero-container {
    max-width: {{ section.settings.container_max_width }}px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .nutrition-hero-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: {{ section.settings.left_padding_top }}px {{ section.settings.left_padding_right }}px {{ section.settings.left_padding_bottom }}px {{ section.settings.left_padding_left }}px;
    min-height: {{ section.settings.left_section_height }}px;
    justify-content: center;
  }

  .nutrition-hero-heading {
    font-size: 64px;
    font-weight: 700;
    line-height: 1.1;
    color: {{ section.settings.heading_color }};
    margin: 0 0 24px 0;
  }

  .nutrition-hero-subheading {
    font-size: 20px;
    line-height: 1.5;
    color: {{ section.settings.text_color }};
    margin: 0 0 28px 0;
    max-width: 500px;
  }

  .nutrition-hero-rating {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 32px;
  }

  .nutrition-hero-stars {
    display: flex;
    gap: 4px;
    font-size: 20px;
    color: {{ section.settings.star_color }};
  }

  .nutrition-hero-rating-text {
    font-size: 16px;
    font-weight: 500;
    color: {{ section.settings.text_color }};
  }

  .nutrition-hero-features {
    display: flex;
    gap: 32px;
    margin-bottom: 36px;
  }

  .nutrition-hero-feature {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 12px;
  }

  .nutrition-hero-feature-icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .nutrition-hero-feature-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .nutrition-hero-feature-text {
    font-size: 14px;
    font-weight: 500;
    color: {{ section.settings.text_color }};
    white-space: nowrap;
  }

  .nutrition-hero-button {
    display: inline-block;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    background-color: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    font-size: 17px;
    font-weight: 600;
    border-radius: {{ section.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
  }

  .nutrition-hero-button:hover {
    opacity: 0.9;
  }

  .nutrition-hero-image-wrapper {
    width: 100%;
    position: relative;
    padding: {{ section.settings.right_padding_top }}px {{ section.settings.right_padding_right }}px {{ section.settings.right_padding_bottom }}px {{ section.settings.right_padding_left }}px;
    min-height: {{ section.settings.right_section_height }}px;
    display: flex;
    align-items: center;
  }

  .nutrition-hero-image-wrapper img {
    width: 100%;
    height: auto;
    {% if section.settings.image_max_height > 0 %}
      max-height: {{ section.settings.image_max_height }}px;
    {% endif %}
    display: block;
    object-fit: cover;
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  @media (max-width: 768px) {
    .nutrition-hero-container {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .nutrition-hero-content {
      align-items: center;
      text-align: center;
      padding: 20px;
      min-height: auto;
    }

    .nutrition-hero-image-wrapper {
      padding: 0;
      min-height: auto;
    }

    .nutrition-hero-image-wrapper img {
      height: auto;
      max-height: none;
    }

    .nutrition-hero-heading {
      font-size: 42px;
    }

    .nutrition-hero-subheading {
      font-size: 18px;
      max-width: 100%;
    }

    .nutrition-hero-rating {
      justify-content: center;
    }

    .nutrition-hero-features {
      gap: 24px;
      justify-content: center;
    }

    .nutrition-hero-feature-text {
      font-size: 13px;
    }

    .nutrition-hero-feature-icon {
      width: 48px;
      height: 48px;
    }

    .nutrition-hero-button {
      padding: 14px 42px;
    }

    .nutrition-hero-image-wrapper {
      order: 2;
    }
  }

  @media (max-width: 480px) {
    .nutrition-hero-heading {
      font-size: 36px;
    }

    .nutrition-hero-subheading {
      font-size: 16px;
    }

    .nutrition-hero-features {
      gap: 16px;
    }

    .nutrition-hero-feature-icon {
      width: 40px;
      height: 40px;
    }

    .nutrition-hero-feature-text {
      font-size: 12px;
    }
  }
</style>

<div class="nutrition-hero-section">
  <div class="nutrition-hero-container">
    <div class="nutrition-hero-content">
      {% if section.settings.heading != blank %}
        <h1 class="nutrition-hero-heading">{{ section.settings.heading }}</h1>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="nutrition-hero-subheading">{{ section.settings.subheading }}</p>
      {% endif %}

      <div class="nutrition-hero-rating">
        <div class="nutrition-hero-stars">
          ★★★★<span style="opacity: 0.5;">★</span>
        </div>
        {% if section.settings.rating_text != blank %}
          <span class="nutrition-hero-rating-text">{{ section.settings.rating_text }}</span>
        {% endif %}
      </div>

      <div class="nutrition-hero-features">
        {% if section.settings.feature_1_icon != blank %}
          <div class="nutrition-hero-feature">
            <div class="nutrition-hero-feature-icon">
              <img src="{{ section.settings.feature_1_icon | img_url: 'master' }}" alt="{{ section.settings.feature_1_text }}">
            </div>
            {% if section.settings.feature_1_text != blank %}
              <span class="nutrition-hero-feature-text">{{ section.settings.feature_1_text }}</span>
            {% endif %}
          </div>
        {% endif %}

        {% if section.settings.feature_2_icon != blank %}
          <div class="nutrition-hero-feature">
            <div class="nutrition-hero-feature-icon">
              <img src="{{ section.settings.feature_2_icon | img_url: 'master' }}" alt="{{ section.settings.feature_2_text }}">
            </div>
            {% if section.settings.feature_2_text != blank %}
              <span class="nutrition-hero-feature-text">{{ section.settings.feature_2_text }}</span>
            {% endif %}
          </div>
        {% endif %}

        {% if section.settings.feature_3_icon != blank %}
          <div class="nutrition-hero-feature">
            <div class="nutrition-hero-feature-icon">
              <img src="{{ section.settings.feature_3_icon | img_url: 'master' }}" alt="{{ section.settings.feature_3_text }}">
            </div>
            {% if section.settings.feature_3_text != blank %}
              <span class="nutrition-hero-feature-text">{{ section.settings.feature_3_text }}</span>
            {% endif %}
          </div>
        {% endif %}
      </div>

      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="nutrition-hero-button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>

    <div class="nutrition-hero-image-wrapper">
      {% if section.settings.hero_image != blank %}
        <img src="{{ section.settings.hero_image | img_url: 'master' }}" alt="{{ section.settings.hero_image.alt | escape }}" loading="lazy">
      {% endif %}
    </div>
  </div>
</div>

