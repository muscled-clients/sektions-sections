      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "image_alt",
          "label": "Image alt text"
        },
        {
          "type": "select",
          "id": "aspect_ratio",
          "label": "Image aspect ratio",
          "options": [
            {
              "value": "natural",
              "label": "Natural"
            },
            {
              "value": "4_3",
              "label": "4:3"
            },
            {
              "value": "3_2",
              "label": "3:2"
            },
            {
              "value": "1_1",
              "label": "1:1"
            }
          ],
          "default": "natural"
        },
        {
          "type": "checkbox",
          "id": "show_shadow",
          "label": "Show image shadow",
          "default": false
