{% comment %}
  Featured Collection 17 Section
  Product carousel/slider with badges and shop now buttons
{% endcomment %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 990px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .fc17-{{ section.id }} {
    --fc17-bg: {{ section.settings.background_color }};
    --fc17-heading-color: {{ section.settings.heading_color }};
    --fc17-text-color: {{ section.settings.text_color }};
    --fc17-card-bg: {{ section.settings.card_background }};
    --fc17-card-border: {{ section.settings.card_border_color }};
    --fc17-button-bg: {{ section.settings.button_color }};
    --fc17-button-text: {{ section.settings.button_text_color }};
    --fc17-price-color: {{ section.settings.price_color }};
  }
{%- endstyle -%}

<div class="fc17 fc17-{{ section.id }} section-{{ section.id }}-padding" style="background-color: var(--fc17-bg, #ffffff);">
  <div class="fc17__container page-width">
    <!-- Header -->
    <div class="fc17__header">
      <h2 class="fc17__heading {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
      <div class="fc17__nav">
        <button type="button" class="fc17__nav-btn fc17__nav-btn--prev" aria-label="Previous slide">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="24" height="24">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button type="button" class="fc17__nav-btn fc17__nav-btn--next" aria-label="Next slide">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="24" height="24">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    </div>

    <!-- Swiper Slider -->
    <div class="fc17__slider swiper" data-section-id="{{ section.id }}">
      <div class="swiper-wrapper">
        {%- liquid
          if section.settings.collection != blank
            assign products = section.settings.collection.products
          else
            assign products = (1..8)
          endif
        -%}

        {%- for product in products limit: section.settings.products_to_show -%}
          <div class="swiper-slide">
            <div class="fc17__card">
              <!-- Product Image -->
              <div class="fc17__card-media">
                {%- if product.featured_image != blank -%}
                  <a href="{{ product.url }}">
                    {{
                      product.featured_image
                      | image_url: width: 600
                      | image_tag:
                        loading: 'lazy',
                        sizes: '(min-width: 990px) 280px, 100vw',
                        widths: '280, 400, 600',
                        class: 'fc17__card-image'
                    }}
                  </a>
                {%- else -%}
                  <a href="#" class="fc17__card-placeholder">
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </a>
                {%- endif -%}

                {%- comment %} Badge {% endcomment -%}
                {%- if section.settings.show_badges -%}
                  {%- if product.available == false -%}
                    <span class="fc17__badge fc17__badge--soldout">Sold out</span>
                  {%- elsif product.tags contains 'bestseller' or product.tags contains 'best-seller' -%}
                    <span class="fc17__badge fc17__badge--bestseller">Best seller</span>
                  {%- elsif product.tags contains 'new' -%}
                    <span class="fc17__badge fc17__badge--new">New</span>
                  {%- elsif product.compare_at_price > product.price -%}
                    <span class="fc17__badge fc17__badge--sale">Sale</span>
                  {%- elsif forloop.index <= 3 -%}
                    <span class="fc17__badge fc17__badge--selling">Selling fast</span>
                  {%- endif -%}
                {%- endif -%}
              </div>

              <!-- Product Info -->
              <div class="fc17__card-content">
                <h3 class="fc17__card-title">
                  {%- if product.title != blank -%}
                    <a href="{{ product.url }}">{{ product.title }}</a>
                  {%- else -%}
                    <a href="#">Product Title {{ forloop.index }}</a>
                  {%- endif -%}
                </h3>

                <div class="fc17__card-price">
                  {%- if product.price != blank -%}
                    {%- if product.compare_at_price > product.price -%}
                      <span class="fc17__price fc17__price--sale">{{ product.price | money }}</span>
                      <span class="fc17__price fc17__price--compare">{{ product.compare_at_price | money }}</span>
                    {%- else -%}
                      <span class="fc17__price">{{ product.price | money }}</span>
                    {%- endif -%}
                  {%- else -%}
                    <span class="fc17__price">$49.00</span>
                  {%- endif -%}
                </div>

                {%- if section.settings.show_description -%}
                  <p class="fc17__card-desc">
                    {%- if product.description != blank -%}
                      {{ product.description | strip_html | truncate: 60 }}
                    {%- else -%}
                      100% recycled bag made from recycled materials
                    {%- endif -%}
                  </p>
                {%- endif -%}

                <a
                  href="{{ product.url | default: '#' }}"
                  class="fc17__card-btn"
                >
                  {{ section.settings.button_label }}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="16" height="16">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>

    <!-- View All Button -->
    {%- if section.settings.show_view_all and section.settings.collection != blank -%}
      <div class="fc17__footer">
        <a href="{{ section.settings.collection.url }}" class="fc17__view-all">
          {{ section.settings.view_all_label }}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="18" height="18">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

<!-- Swiper CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<style>
  .fc17 {
    width: 100%;
    overflow: hidden;
  }

  .fc17__container {
    position: relative;
  }

  /* Header */
  .fc17__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 24px;
  }

  @media screen and (min-width: 990px) {
    .fc17__header {
      margin-bottom: 32px;
    }
  }

  .fc17__heading {
    margin: 0;
    color: var(--fc17-heading-color, #121212);
    font-weight: 700;
    line-height: 1.3;
  }

  /* Navigation */
  .fc17__nav {
    display: flex;
    gap: 8px;
  }

  .fc17__nav-btn {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    border: 1px solid var(--fc17-heading-color, #121212);
    background: transparent;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    color: var(--fc17-heading-color, #121212);
  }

  .fc17__nav-btn:hover {
    background: var(--fc17-heading-color, #121212);
    color: #fff;
  }

  .fc17__nav-btn.swiper-button-disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  .fc17__nav-btn.swiper-button-disabled:hover {
    background: transparent;
    color: var(--fc17-heading-color, #121212);
  }

  /* Slider */
  .fc17__slider {
    overflow: visible;
    padding: 60px 0 40px;
  }

  .fc17__slider .swiper-wrapper {
    align-items: flex-end;
  }

  .fc17__slider .swiper-slide {
    height: auto;
    transition: transform 0.4s ease, opacity 0.4s ease;
    transform: scale(0.75) translateY(30px);
    opacity: 0.6;
  }

  .fc17__slider .swiper-slide-prev,
  .fc17__slider .swiper-slide-next {
    transform: scale(0.85) translateY(15px);
    opacity: 0.8;
  }

  .fc17__slider .swiper-slide-active {
    transform: scale(1) translateY(0);
    opacity: 1;
    z-index: 10;
  }

  .fc17__slider .swiper-slide-active .fc17__card {
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
  }

  /* Product Card */
  .fc17__card {
    background: var(--fc17-card-bg, #ffffff);
    border: 1px solid var(--fc17-card-border, #121212);
    border-radius: 16px;
    overflow: hidden;
    height: 100%;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  @media screen and (min-width: 990px) {
    .fc17__card {
      border-radius: 24px;
    }
  }

  .fc17__card-media {
    position: relative;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    background: #f5f5f5;
  }

  .fc17__card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.4s ease;
  }

  .fc17__card:hover .fc17__card-image {
    transform: scale(1.05);
  }

  .fc17__card-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    background: #f0f0f0;
  }

  .fc17__card-placeholder .placeholder-svg {
    width: 60%;
    height: 60%;
  }

  /* Badge */
  .fc17__badge {
    position: absolute;
    top: 12px;
    right: 12px;
    padding: 6px 12px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    border-radius: 100px;
    z-index: 1;
  }

  .fc17__badge--selling {
    background: #ccfa57;
    color: #121212;
  }

  .fc17__badge--bestseller {
    background: #ff6b6b;
    color: #fff;
  }

  .fc17__badge--new {
    background: #4ecdc4;
    color: #fff;
  }

  .fc17__badge--sale {
    background: #ff4757;
    color: #fff;
  }

  .fc17__badge--soldout {
    background: #636e72;
    color: #fff;
  }

  /* Card Content */
  .fc17__card-content {
    padding: 16px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  @media screen and (min-width: 990px) {
    .fc17__card-content {
      padding: 20px;
    }
  }

  .fc17__card-title {
    margin: 0 0 8px;
    font-size: 14px;
    font-weight: 600;
    line-height: 1.4;
  }

  @media screen and (min-width: 990px) {
    .fc17__card-title {
      font-size: 16px;
    }
  }

  .fc17__card-title a {
    color: var(--fc17-text-color, #121212);
    text-decoration: none;
  }

  .fc17__card-title a:hover {
    text-decoration: underline;
  }

  .fc17__card-price {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 8px;
  }

  .fc17__price {
    font-size: 14px;
    font-weight: 600;
    color: var(--fc17-price-color, #121212);
  }

  @media screen and (min-width: 990px) {
    .fc17__price {
      font-size: 16px;
    }
  }

  .fc17__price--sale {
    color: #e74c3c;
  }

  .fc17__price--compare {
    text-decoration: line-through;
    opacity: 0.5;
    font-weight: 400;
  }

  .fc17__card-desc {
    font-size: 12px;
    color: var(--fc17-text-color, #121212);
    opacity: 0.7;
    margin: 0 0 12px;
    line-height: 1.5;
    flex-grow: 1;
  }

  @media screen and (min-width: 990px) {
    .fc17__card-desc {
      font-size: 13px;
    }
  }

  .fc17__card-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px 20px;
    background: var(--fc17-button-bg, #ccfa57);
    color: var(--fc17-button-text, #121212);
    border: none;
    border-radius: 100px;
    font-size: 13px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    margin-top: auto;
  }

  .fc17__card-btn:hover {
    background: var(--fc17-button-text, #121212);
    color: var(--fc17-button-bg, #ccfa57);
  }

  .fc17__card-btn svg {
    transition: transform 0.3s ease;
  }

  .fc17__card-btn:hover svg {
    transform: translateX(4px);
  }

  /* Footer / View All */
  .fc17__footer {
    display: flex;
    justify-content: center;
    margin-top: 32px;
  }

  @media screen and (min-width: 990px) {
    .fc17__footer {
      margin-top: 48px;
    }
  }

  .fc17__view-all {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    background: transparent;
    color: var(--fc17-heading-color, #121212);
    border: 1px solid var(--fc17-heading-color, #121212);
    border-radius: 100px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .fc17__view-all:hover {
    background: var(--fc17-heading-color, #121212);
    color: #fff;
  }

  .fc17__view-all svg {
    transition: transform 0.3s ease;
  }

  .fc17__view-all:hover svg {
    transform: translateX(4px);
  }
</style>

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    initFC17Slider('{{ section.id }}');
  });

  if (Shopify.designMode) {
    document.addEventListener('shopify:section:load', function(event) {
      if (event.detail.sectionId === '{{ section.id }}') {
        initFC17Slider('{{ section.id }}');
      }
    });
  }

  function initFC17Slider(sectionId) {
    const section = document.querySelector('.fc17-' + sectionId);
    if (!section) return;

    const swiperEl = section.querySelector('.fc17__slider');
    const prevBtn = section.querySelector('.fc17__nav-btn--prev');
    const nextBtn = section.querySelector('.fc17__nav-btn--next');

    if (!swiperEl) return;

    const swiper = new Swiper(swiperEl, {
      slidesPerView: 1.5,
      centeredSlides: true,
      spaceBetween: 20,
      grabCursor: true,
      loop: true,
      navigation: {
        prevEl: prevBtn,
        nextEl: nextBtn,
      },
      breakpoints: {
        480: {
          slidesPerView: 2.5,
          spaceBetween: 20,
        },
        750: {
          slidesPerView: 4,
          spaceBetween: 24,
        },
        990: {
          slidesPerView: 5,
          spaceBetween: 24,
        },
        1200: {
          slidesPerView: 7,
          spaceBetween: 20,
        },
      },
    });
  }
</script>

