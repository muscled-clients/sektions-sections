{% style %}
  #shopify-section-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  #shopify-section-{{ section.id }} .expert-faq-wrapper {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 50px;
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 80px;
    align-items: start;
  }

  #shopify-section-{{ section.id }} .expert-faq-left {
    padding-top: 20px;
  }

  #shopify-section-{{ section.id }} .expert-faq-heading {
    font-size: {{ section.settings.left_heading_size }}px;
    font-weight: 500;
    color: {{ section.settings.heading_color }};
    line-height: 1.2;
    margin: 0 0 40px 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    letter-spacing: -0.5px;
    max-width: 420px;
  }

  #shopify-section-{{ section.id }} .expert-avatars {
    display: flex;
    align-items: center;
    margin-bottom: 16px;
  }

  #shopify-section-{{ section.id }} .expert-avatar {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    border: 3px solid {{ section.settings.background_color }};
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.12);
    margin-left: -14px;
    position: relative;
  }

  #shopify-section-{{ section.id }} .expert-avatar:nth-child(1) {
    z-index: 1;
    margin-left: 0;
  }

  #shopify-section-{{ section.id }} .expert-avatar:nth-child(2) {
    z-index: 2;
  }

  #shopify-section-{{ section.id }} .expert-avatar:nth-child(3) {
    z-index: 3;
  }

  #shopify-section-{{ section.id }} .expert-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  #shopify-section-{{ section.id }} .expert-caption {
    font-size: 14px;
    color: {{ section.settings.caption_color }};
    line-height: 1.5;
    margin: 0;
    max-width: 340px;
  }

  #shopify-section-{{ section.id }} .expert-faq-right {
    width: 100%;
  }

  #shopify-section-{{ section.id }} .faq-title {
    font-size: {{ section.settings.faq_heading_size }}px;
    font-weight: 500;
    color: {{ section.settings.heading_color }};
    margin: 0 0 30px 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    letter-spacing: -0.3px;
  }

  #shopify-section-{{ section.id }} .faq-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  #shopify-section-{{ section.id }} .faq-item {
    border-bottom: 1px solid #e5e5e5;
  }

  #shopify-section-{{ section.id }} .faq-question {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 20px 0;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    font-size: {{ section.settings.question_size }}px;
    font-weight: 400;
    color: {{ section.settings.question_color }};
    font-family: inherit;
    gap: 20px;
  }

  #shopify-section-{{ section.id }} .faq-question:hover {
    opacity: 0.7;
  }

  #shopify-section-{{ section.id }} .faq-icon {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    position: relative;
    transition: transform 0.3s ease;
  }

  #shopify-section-{{ section.id }} .faq-icon::before,
  #shopify-section-{{ section.id }} .faq-icon::after {
    content: '';
    position: absolute;
    background-color: {{ section.settings.question_color }};
    transition: transform 0.3s ease;
  }

  #shopify-section-{{ section.id }} .faq-icon::before {
    width: 14px;
    height: 1.5px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  #shopify-section-{{ section.id }} .faq-icon::after {
    width: 1.5px;
    height: 14px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  #shopify-section-{{ section.id }} .faq-item.active .faq-icon::after {
    transform: translate(-50%, -50%) rotate(90deg);
    opacity: 0;
  }

  #shopify-section-{{ section.id }} .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease, padding 0.3s ease;
  }

  #shopify-section-{{ section.id }} .faq-answer-inner {
    padding: 0 0 20px 0;
    font-size: {{ section.settings.answer_size }}px;
    line-height: 1.7;
    color: {{ section.settings.answer_color }};
  }

  #shopify-section-{{ section.id }} .faq-answer-inner p {
    margin: 0;
  }

  #shopify-section-{{ section.id }} .faq-answer-inner p + p {
    margin-top: 12px;
  }

  #shopify-section-{{ section.id }} .faq-item.active .faq-answer {
    max-height: 500px;
  }

  @media screen and (max-width: 990px) {
    #shopify-section-{{ section.id }} .expert-faq-wrapper {
      grid-template-columns: 1fr;
      gap: 50px;
      padding: 0 30px;
    }

    #shopify-section-{{ section.id }} .expert-faq-left {
      padding-top: 0;
    }

    #shopify-section-{{ section.id }} .expert-faq-heading {
      font-size: calc({{ section.settings.left_heading_size }}px * 0.8);
      max-width: 100%;
    }
  }

  @media screen and (max-width: 750px) {
    #shopify-section-{{ section.id }} .expert-faq-wrapper {
      padding: 0 20px;
      gap: 40px;
    }

    #shopify-section-{{ section.id }} .expert-faq-heading {
      font-size: calc({{ section.settings.left_heading_size }}px * 0.65);
      margin-bottom: 30px;
    }

    #shopify-section-{{ section.id }} .expert-avatar {
      width: 48px;
      height: 48px;
      margin-left: -12px;
    }

    #shopify-section-{{ section.id }} .expert-avatar:nth-child(1) {
      margin-left: 0;
    }

    #shopify-section-{{ section.id }} .faq-title {
      font-size: calc({{ section.settings.faq_heading_size }}px * 0.85);
    }

    #shopify-section-{{ section.id }} .faq-question {
      font-size: calc({{ section.settings.question_size }}px * 0.95);
      padding: 16px 0;
    }
  }
{% endstyle %}

<div class="expert-faq-section" id="expert-faq-{{ section.id }}">
  <div class="expert-faq-wrapper">
    <div class="expert-faq-left">
      {% if section.settings.left_heading != blank %}
        <h2 class="expert-faq-heading">{{ section.settings.left_heading }}</h2>
      {% endif %}

      <div class="expert-avatars">
        {% if section.settings.expert_1 != blank %}
          <div class="expert-avatar">
            <img src="{{ section.settings.expert_1 | image_url: width: 120 }}" alt="{{ section.settings.expert_1.alt | default: 'Expert' }}">
          </div>
        {% else %}
          <div class="expert-avatar">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}

        {% if section.settings.expert_2 != blank %}
          <div class="expert-avatar">
            <img src="{{ section.settings.expert_2 | image_url: width: 120 }}" alt="{{ section.settings.expert_2.alt | default: 'Expert' }}">
          </div>
        {% else %}
          <div class="expert-avatar">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}

        {% if section.settings.expert_3 != blank %}
          <div class="expert-avatar">
            <img src="{{ section.settings.expert_3 | image_url: width: 120 }}" alt="{{ section.settings.expert_3.alt | default: 'Expert' }}">
          </div>
        {% else %}
          <div class="expert-avatar">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>

      {% if section.settings.caption != blank %}
        <p class="expert-caption">{{ section.settings.caption }}</p>
      {% endif %}
    </div>

    <div class="expert-faq-right">
      {% if section.settings.faq_heading != blank %}
        <h3 class="faq-title">{{ section.settings.faq_heading }}</h3>
      {% endif %}

      <ul class="faq-list">
        {% for block in section.blocks %}
          {% if block.type == 'faq_item' %}
            <li class="faq-item" {{ block.shopify_attributes }}>
              <button class="faq-question" aria-expanded="false">
                <span>{{ block.settings.question }}</span>
                <span class="faq-icon"></span>
              </button>
              <div class="faq-answer">
                <div class="faq-answer-inner">
                  {{ block.settings.answer }}
                </div>
              </div>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
</div>

<script>
  (function() {
    function initExpertFaq() {
      const container = document.getElementById('expert-faq-{{ section.id }}');
      if (!container) return;

      const faqItems = container.querySelectorAll('.faq-item');

      faqItems.forEach(item => {
        const question = item.querySelector('.faq-question');

        question.addEventListener('click', function() {
          const isActive = item.classList.contains('active');
          const answer = item.querySelector('.faq-answer');
          const answerInner = item.querySelector('.faq-answer-inner');

          faqItems.forEach(otherItem => {
            if (otherItem !== item) {
              otherItem.classList.remove('active');
              otherItem.querySelector('.faq-question').setAttribute('aria-expanded', 'false');
            }
          });

          if (isActive) {
            item.classList.remove('active');
            question.setAttribute('aria-expanded', 'false');
          } else {
            item.classList.add('active');
            question.setAttribute('aria-expanded', 'true');
          }
        });
      });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initExpertFaq);
    } else {
      initExpertFaq();
    }

    document.addEventListener('shopify:section:load', function(event) {
      if (event.detail.sectionId === '{{ section.id }}') {
        initExpertFaq();
      }
    });
  })();
</script>

