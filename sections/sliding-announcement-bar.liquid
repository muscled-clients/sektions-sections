<section
  id="announcement-bar-{{ section.id }}"
  class="announcement-bar"
  data-section-id="{{ section.id }}"
  data-total-cards="{{ section.blocks.size }}"
  aria-label="{{ section.settings.accessibility_label }}"
>
  <div class="announcement-slider">
    <!-- Navigation Arrows -->
    {% if section.blocks.size >= 2 %}
      <button
        class="nav-arrow prev"
        aria-label="Previous announcements"
        data-direction="prev"
      >
        {{ section.settings.arrow_prev_icon }}
      </button>
      <button
        class="nav-arrow next"
        aria-label="Next announcements"
        data-direction="next"
      >
        {{ section.settings.arrow_next_icon }}
      </button>
    {% endif %}

    <!-- Cards Wrapper -->
    <div class="cards-wrapper" data-current-pair="0">
      {% for block in section.blocks %}
        <div
          class="announcement-card"
          data-card-index="{{ forloop.index0 }}"
          style="background-color: {{ block.settings.background_color }}; color: {{ block.settings.text_color }};"
          {{ block.shopify_attributes }}
        >
          <div class="card-content">
            <!-- Main Text Content -->
            <span class="announcement-text">{{ block.settings.text }}</span>

            <!-- Icon Before Link -->
            {% if block.settings.icon_before != blank %}
              <span class="inline-icon icon-before">{{ block.settings.icon_before }}</span>
            {% endif %}

            <!-- Link -->
            {% if block.settings.link_text != blank and block.settings.link_url != blank %}
              <a
                href="{{ block.settings.link_url }}"
                class="announcement-link"
                {% if block.settings.link_new_tab %}
                  target="_blank"
                  rel="noopener noreferrer"
                {% endif %}
              >
                {{ block.settings.link_text }}
              </a>
            {% endif %}

            <!-- Icon After Text -->
            {% if block.settings.icon_after != blank %}
              <span class="inline-icon icon-after">{{ block.settings.icon_after }}</span>
            {% endif %}

            <!-- Info Icon with Tooltip -->
            {% if block.settings.tooltip_text != blank %}
              <div class="info-icon-wrapper">
                <span class="info-icon" role="button" tabindex="0" aria-label="More information">
                  {{ section.settings.info_icon_symbol }}
                </span>
                <div class="tooltip" role="tooltip">
                  {{ block.settings.tooltip_text }}
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const section = document.getElementById('announcement-bar-{{ section.id }}');
    if (!section) return;

    const cardsWrapper = section.querySelector('.cards-wrapper');
    const cards = section.querySelectorAll('.announcement-card');
    const prevButton = section.querySelector('.nav-arrow.prev');
    const nextButton = section.querySelector('.nav-arrow.next');

    const totalCards = cards.length;
    console.log('Announcement bar: Found', totalCards, 'cards');

    if (totalCards < 2) {
      console.log('Not enough cards, hiding arrows');
      if (prevButton) prevButton.style.display = 'none';
      if (nextButton) nextButton.style.display = 'none';
      return;
    }

    // Show arrows
    if (prevButton) prevButton.style.display = 'flex';
    if (nextButton) nextButton.style.display = 'flex';

    if (totalCards <= 2) {
      console.log('Only 2 cards, arrows will be disabled');
      // Disable arrows for 2 cards since no sliding needed
      if (prevButton) {
        prevButton.style.opacity = '0.3';
        prevButton.disabled = true;
      }
      if (nextButton) {
        nextButton.style.opacity = '0.3';
        nextButton.disabled = true;
      }
      return;
    }

    let currentPair = 0;
    const totalPairs = Math.ceil(totalCards / 2);
    let isTransitioning = false;
    let isMobile = window.innerWidth <= 768;

    // Function to update card position
    function updateCardPosition() {
      if (isTransitioning) return;

      isTransitioning = true;

      if (isMobile) {
        // Mobile view: slide by card width + gap (calc(100vw - 40px) + 8px gap)
        const cardWidth = window.innerWidth - 40;
        const gap = 8;
        const translateX = -currentPair * (cardWidth + gap);
        cardsWrapper.style.transform = `translateX(${translateX}px)`;
      } else {
        // Desktop view: show two cards at a time (50% width)
        const translateX = -currentPair * 50;
        cardsWrapper.style.transform = `translateX(${translateX}%)`;
      }

      // Update button states (only for desktop, arrows hidden on mobile)
      const maxIndex = isMobile ? totalCards - 1 : totalPairs - 1;

      if (prevButton && !isMobile) {
        if (currentPair === 0) {
          prevButton.style.display = 'none';
        } else {
          prevButton.style.display = 'flex';
          prevButton.style.opacity = '0.8';
          prevButton.disabled = false;
        }
      }
      if (nextButton && !isMobile) {
        if (currentPair >= maxIndex) {
          nextButton.style.display = 'none';
        } else {
          nextButton.style.display = 'flex';
          nextButton.style.opacity = '0.8';
          nextButton.disabled = false;
        }
      }

      // Reset transition flag after animation completes
      setTimeout(() => {
        isTransitioning = false;
      }, {{ section.settings.slide_transition_speed }});
    }

    // Function to go to next pair
    function nextPair() {
      const maxIndex = isMobile ? totalCards - 1 : totalPairs - 1;
      if (isTransitioning || currentPair >= maxIndex) return;
      currentPair++;
      updateCardPosition();
    }

    // Function to go to previous pair
    function prevPair() {
      if (isTransitioning || currentPair <= 0) return;
      currentPair--;
      updateCardPosition();
    }

    // Handle window resize
    window.addEventListener('resize', () => {
      const wasMobile = isMobile;
      isMobile = window.innerWidth <= 768;

      // Reset position when switching between mobile and desktop
      if (wasMobile !== isMobile) {
        currentPair = 0;
        updateCardPosition();
      }
    });

    // Event listeners for navigation arrows
    if (nextButton) {
      nextButton.addEventListener('click', nextPair);
    }

    if (prevButton) {
      prevButton.addEventListener('click', prevPair);
    }

    // Touch/swipe support for mobile
    let touchStartX = 0;
    let touchEndX = 0;
    let isSwiping = false;

    section.addEventListener('touchstart', (e) => {
      touchStartX = e.changedTouches[0].screenX;
      isSwiping = true;
    }, { passive: true });

    section.addEventListener('touchmove', (e) => {
      if (!isSwiping) return;
      touchEndX = e.changedTouches[0].screenX;
    }, { passive: true });

    section.addEventListener('touchend', () => {
      if (!isSwiping) return;

      const swipeThreshold = 50;
      const diff = touchStartX - touchEndX;

      if (Math.abs(diff) > swipeThreshold) {
        if (diff > 0) {
          nextPair();
        } else {
          prevPair();
        }
      }

      isSwiping = false;
    });

    // Keyboard navigation for accessibility
    section.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') {
        prevPair();
      } else if (e.key === 'ArrowRight') {
        nextPair();
      }
    });

    // Info icon keyboard accessibility
    const infoIcons = section.querySelectorAll('.info-icon');
    infoIcons.forEach(icon => {
      icon.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          const tooltip = icon.nextElementSibling;
          const isVisible = tooltip.style.visibility === 'visible';

          // Toggle tooltip
          tooltip.style.visibility = isVisible ? 'hidden' : 'visible';
          tooltip.style.opacity = isVisible ? '0' : '1';

          // Hide tooltip after 3 seconds
          if (!isVisible) {
            setTimeout(() => {
              tooltip.style.visibility = 'hidden';
              tooltip.style.opacity = '0';
            }, 3000);
          }
        }
      });
    });

    // Initialize button states
    updateCardPosition();
  });
</script>

