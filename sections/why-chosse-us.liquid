{% style %}
  .why-choose-us-{{ section.id }} {
    --wcu-bg: {{ section.settings.background_color }};
    --wcu-heading-color: {{ section.settings.heading_color }};
    --wcu-accent-color: {{ section.settings.accent_color }};
    --wcu-text-color: {{ section.settings.text_color }};
    --wcu-description-color: {{ section.settings.description_color }};
    --wcu-subtitle-color: {{ section.settings.subtitle_color }};
    --wcu-card-bg: {{ section.settings.card_bg_color }};
    --wcu-card-border: {{ section.settings.card_border_color }};
    --wcu-gray-card-bg: {{ section.settings.gray_card_bg_color }};
    --wcu-dark-card-bg: {{ section.settings.dark_card_bg_color }};
    --wcu-dark-card-text: {{ section.settings.dark_card_text_color }};
  }
{% endstyle %}

<section class="why-choose-us why-choose-us-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="wcu__container">
    <!-- Header -->
    <div class="wcu__header">
      {% if section.settings.subtitle != blank %}
        <p class="wcu__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
      <h2 class="wcu__heading">
        <span class="wcu__heading-highlight">{{ section.settings.heading_part1 }}</span>
        <span class="wcu__heading-regular">{{ section.settings.heading_part2 }}</span>
      </h2>
    </div>

    <!-- Feature Cards -->
    <div class="wcu__cards">
      {% for block in section.blocks %}
        {% if block.type == 'feature_card' %}
          <div class="wcu__card {% if block.settings.card_style == 'dark' %}wcu__card--dark{% elsif block.settings.card_style == 'gray' %}wcu__card--gray{% endif %}" {{ block.shopify_attributes }}>
            <div class="wcu__card-icon">
              {% if block.settings.icon != blank %}
                <img
                  src="{{ block.settings.icon | image_url: width: 64 }}"
                  alt="{{ block.settings.title }}"
                  width="64"
                  height="64"
                  loading="lazy"
                >
              {% else %}
                <svg viewBox="0 0 64 64" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="32" cy="32" r="24"/>
                </svg>
              {% endif %}
            </div>
            <h3 class="wcu__card-title">{{ block.settings.title }}</h3>
            <p class="wcu__card-description">{{ block.settings.description }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  /* ========================================
     BASE STYLES (Mobile First)
     ======================================== */
  .why-choose-us {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 100%;
    padding: 48px 20px;
    background-color: var(--wcu-bg);
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    overflow-x: hidden;
  }

  .why-choose-us *,
  .why-choose-us *::before,
  .why-choose-us *::after {
    box-sizing: border-box;
  }

  .why-choose-us img {
    max-width: 100%;
    height: auto;
    border: 0;
  }

  /* ========================================
     CONTAINER
     ======================================== */
  .wcu__container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
    width: 100%;
    max-width: 1400px;
  }

  /* ========================================
     HEADER
     ======================================== */
  .wcu__header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 12px;
  }

  .wcu__subtitle {
    font-size: 10px;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--wcu-subtitle-color);
    margin: 0;
  }

  .wcu__heading {
    font-size: 24px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    margin: 0;
    line-height: 1.2;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    flex-wrap: wrap;
  }

  .wcu__heading-highlight {
    color: var(--wcu-heading-color);
    background-color: var(--wcu-accent-color);
    padding: 4px 10px;
  }

  .wcu__heading-regular {
    color: var(--wcu-heading-color);
  }

  /* ========================================
     CARDS GRID (Mobile: 1 column)
     ======================================== */
  .wcu__cards {
    display: grid;
    grid-template-columns: 1fr;
    gap: 12px;
    width: 100%;
    align-items: stretch;
  }

  /* ========================================
     INDIVIDUAL CARD
     ======================================== */
  .wcu__card {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 24px 20px;
    background-color: var(--wcu-card-bg, #ffffff);
    border: 1px solid var(--wcu-card-border, #e8e8e8);
    border-radius: 10px;
  }

  /* Dark card variant */
  .wcu__card.wcu__card--dark {
    background-color: var(--wcu-dark-card-bg, #1a1a1a) !important;
    border-color: var(--wcu-dark-card-bg, #1a1a1a) !important;
  }

  .wcu__card.wcu__card--dark .wcu__card-title,
  .wcu__card.wcu__card--dark .wcu__card-description {
    color: var(--wcu-dark-card-text, #ffffff) !important;
  }

  /* Gray card variant */
  .wcu__card.wcu__card--gray {
    background-color: var(--wcu-gray-card-bg, #f0f0f0) !important;
    border-color: var(--wcu-gray-card-bg, #f0f0f0) !important;
  }

  /* Card Icon */
  .wcu__card-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    margin-bottom: 20px;
    color: var(--wcu-accent-color);
  }

  .wcu__card-icon img,
  .wcu__card-icon svg {
    width: 48px;
    height: 48px;
    object-fit: contain;
  }

  /* Card Title */
  .wcu__card-title {
    font-size: 16px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--wcu-heading-color);
    margin: 0 0 16px 0;
    line-height: 1.3;
  }

  /* Card Description */
  .wcu__card-description {
    font-size: 13px;
    font-weight: 600;
    color: var(--wcu-description-color);
    line-height: 1.6;
    margin: 0;
  }

  .wcu__card.wcu__card--dark .wcu__card-description {
    opacity: 0.9;
  }

  /* ========================================
     RESPONSIVE - MEDIUM MOBILE (400px+)
     ======================================== */
  @media (min-width: 400px) {
    .why-choose-us {
      padding: 56px 24px;
    }

    .wcu__container {
      gap: 48px;
    }

    .wcu__subtitle {
      font-size: 11px;
    }

    .wcu__heading {
      font-size: 28px;
      gap: 10px;
    }

    .wcu__card {
      padding: 28px 24px;
    }

    .wcu__card-icon,
    .wcu__card-icon img,
    .wcu__card-icon svg {
      width: 56px;
      height: 56px;
    }

    .wcu__card-title {
      font-size: 17px;
      margin-bottom: 18px;
    }

    .wcu__card-description {
      font-size: 14px;
    }
  }

  /* ========================================
     RESPONSIVE - LARGE MOBILE (550px+)
     ======================================== */
  @media (min-width: 550px) {
    .why-choose-us {
      padding: 64px 32px;
    }

    .wcu__container {
      gap: 52px;
    }

    .wcu__heading {
      font-size: 30px;
    }

    .wcu__cards {
      grid-template-columns: repeat(2, 1fr);
      gap: 14px;
    }

    .wcu__card {
      padding: 28px 24px;
      border-radius: 12px;
    }

    .wcu__card-title {
      font-size: 18px;
    }
  }

  /* ========================================
     RESPONSIVE - TABLET (768px+)
     ======================================== */
  @media (min-width: 768px) {
    .why-choose-us {
      padding: 72px 40px;
    }

    .wcu__container {
      gap: 56px;
    }

    .wcu__subtitle {
      font-size: 12px;
    }

    .wcu__heading {
      font-size: 32px;
      gap: 12px;
    }

    .wcu__heading-highlight {
      padding: 4px 12px;
    }

    .wcu__cards {
      gap: 16px;
    }

    .wcu__card {
      padding: 32px 28px;
    }

    .wcu__card-icon,
    .wcu__card-icon img,
    .wcu__card-icon svg {
      width: 64px;
      height: 64px;
    }

    .wcu__card-icon {
      margin-bottom: 24px;
    }

    .wcu__card-title {
      font-size: 19px;
      margin-bottom: 20px;
    }

    .wcu__card-description {
      font-size: 15px;
    }
  }

  /* ========================================
     RESPONSIVE - DESKTOP (1024px+)
     ======================================== */
  @media (min-width: 1024px) {
    .why-choose-us {
      padding: 80px 48px;
    }

    .wcu__container {
      gap: 60px;
    }

    .wcu__heading {
      font-size: 34px;
    }

    .wcu__cards {
      grid-template-columns: repeat(4, 1fr);
    }

    .wcu__card-title {
      font-size: 20px;
    }
  }

  /* ========================================
     RESPONSIVE - LARGE DESKTOP (1400px+)
     ======================================== */
  @media (min-width: 1400px) {
    .why-choose-us {
      padding: 96px 48px;
    }

    .wcu__container {
      gap: 64px;
    }

    .wcu__heading {
      font-size: 36px;
    }

    .wcu__card {
      padding: 36px 32px;
    }
  }
</style>

