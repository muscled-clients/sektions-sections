{%- liquid
  assign container_width = section.settings.container_width | append: 'px'
  assign tilt_angle = section.settings.tilt_angle | append: 'deg'
  assign max_height_px = section.settings.max_height | append: 'px'
  assign viewport_multiplier = section.settings.viewport_multiplier | divided_by: 100.0
  assign max_height_vh = viewport_multiplier | times: 100 | append: 'vh'
  assign heading_font_size = section.settings.heading_font_size | append: 'px'
  assign heading_font_size_mobile = section.settings.heading_font_size | times: 0.65 | round | append: 'px'
  assign body_font_size = section.settings.body_font_size | append: 'px'
  assign body_font_size_mobile = section.settings.body_font_size | times: 0.875 | round | append: 'px'
  assign pad_top_desktop = section.settings.padding_top | append: 'px'
  assign pad_bottom_desktop = section.settings.padding_bottom | append: 'px'
  assign pad_top_mobile = section.settings.padding_top_mobile | append: 'px'
  assign pad_bottom_mobile = section.settings.padding_bottom_mobile | append: 'px'
  assign column_gap = section.settings.column_gap | append: 'px'
  
  assign button_styles = ''
  if section.settings.button_style == 'outline'
    assign button_styles = 'background: transparent; border: 2px solid ' | append: section.settings.button_bg_color | append: '; color: ' | append: section.settings.button_bg_color | append: ';'
  else
    assign button_styles = 'background: ' | append: section.settings.button_bg_color | append: '; color: ' | append: section.settings.button_text_color | append: '; border: 2px solid ' | append: section.settings.button_bg_color | append: ';'
  endif
  
  assign animate_class = ''
  if section.settings.enable_animation
    assign animate_class = ' hero-smoothie-split__animate'
  endif
-%}

<style>
  .section-{{ section.id }} {
    --container-width: {{ container_width }};
    --tilt-angle: {{ tilt_angle }};
    --max-height-px: {{ max_height_px }};
    --max-height-vh: {{ max_height_vh }};
    --heading-font-size: {{ heading_font_size }};
    --heading-font-size-mobile: {{ heading_font_size_mobile }};
    --body-font-size: {{ body_font_size }};
    --body-font-size-mobile: {{ body_font_size_mobile }};
    --pad-top-desktop: {{ pad_top_desktop }};
    --pad-bottom-desktop: {{ pad_bottom_desktop }};
    --pad-top-mobile: {{ pad_top_mobile }};
    --pad-bottom-mobile: {{ pad_bottom_mobile }};
    --column-gap: {{ column_gap }};
    --bg-color: {{ section.settings.background_color }};
    --heading-color: {{ section.settings.heading_color }};
    --text-color: {{ section.settings.text_color }};
    --button-bg: {{ section.settings.button_bg_color }};
    --button-text: {{ section.settings.button_text_color }};
    --button-hover-bg: {{ section.settings.button_hover_bg_color }};
    --button-hover-text: {{ section.settings.button_hover_text_color }};
    --content-align: {{ section.settings.content_alignment }};
  }

  .section-{{ section.id }} .hero-smoothie-split {
    position: relative;
    background-color: var(--bg-color);
    padding-top: var(--pad-top-desktop);
    padding-bottom: var(--pad-bottom-desktop);
    overflow-x: hidden;
    overflow-y: visible;
    min-height: min(var(--max-height-vh), var(--max-height-px));
  }

  .section-{{ section.id }} .hero-smoothie-split__background-image {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
  }

  .section-{{ section.id }} .hero-smoothie-split__bg-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: left center;
    transform: rotate(var(--tilt-angle));
    transform-origin: 30% center;
  }

  .section-{{ section.id }} .hero-smoothie-split__container {
    position: relative;
    z-index: 2;
    max-width: 100%;
    margin: 0;
    display: grid;
    grid-template-columns: 65% 35%;
    gap: 0;
    align-items: center;
    height: min(var(--max-height-vh), var(--max-height-px));
  }

  .section-{{ section.id }} .hero-smoothie-split__empty-column {
    height: 100%;
  }

  .section-{{ section.id }} .hero-smoothie-split__content-wrapper {
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: var(--content-align);
    padding: 0 10% 0 0;
    text-align: right;
    max-width: 700px;
    margin-left: auto;
  }

  .section-{{ section.id }} .hero-smoothie-split__content {
    overflow-y: auto;
    overflow-x: hidden;
    max-height: 100%;
    scrollbar-width: thin;
    scrollbar-color: rgba(0, 0, 0, 0.2) transparent;
  }

  .section-{{ section.id }} .hero-smoothie-split__content::-webkit-scrollbar {
    width: 6px;
  }

  .section-{{ section.id }} .hero-smoothie-split__content::-webkit-scrollbar-track {
    background: transparent;
  }

  .section-{{ section.id }} .hero-smoothie-split__content::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 3px;
  }

  .section-{{ section.id }} .hero-smoothie-split__content::-webkit-scrollbar-thumb:hover {
    background: rgba(0, 0, 0, 0.3);
  }

  .section-{{ section.id }} .hero-smoothie-split__heading {
    font-size: var(--heading-font-size);
    font-weight: {{ section.settings.heading_font_weight }};
    color: var(--heading-color);
    line-height: 1.1;
    margin: 0 0 1.5rem;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    white-space: nowrap;
  }

  .section-{{ section.id }} .hero-smoothie-split__body {
    font-size: var(--body-font-size);
    color: var(--text-color);
    line-height: 1.6;
    margin: 0 0 2rem;
  }

  .section-{{ section.id }} .hero-smoothie-split__body p {
    margin: 0 0 1rem;
  }

  .section-{{ section.id }} .hero-smoothie-split__body p:last-child {
    margin-bottom: 0;
  }

  .section-{{ section.id }} .hero-smoothie-split__button {
    display: inline-block;
    padding: 0.875rem 2.5rem;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.3s ease;
    cursor: pointer;
    margin-left: auto;
    {{ button_styles }}
  }

  .section-{{ section.id }} .hero-smoothie-split__button:hover {
    background: var(--button-hover-bg);
    color: var(--button-hover-text);
    border-color: var(--button-hover-bg);
    transform: translateY(-2px);
  }

  .section-{{ section.id }} .hero-smoothie-split__button:focus-visible {
    outline: 2px solid var(--button-bg);
    outline-offset: 2px;
  }

  @media screen and (max-width: 1279px) {
    .section-{{ section.id }} .hero-smoothie-split__container {
      grid-template-columns: 60% 40%;
    }
    
    .section-{{ section.id }} .hero-smoothie-split__content-wrapper {
      padding: 0 8% 0 0;
      max-width: 600px;
    }
  }

  @media screen and (max-width: 1023px) {
    .section-{{ section.id }} .hero-smoothie-split__container {
      grid-template-columns: 55% 45%;
    }

    .section-{{ section.id }} .hero-smoothie-split__image {
      height: 100%;
    }

    .section-{{ section.id }} .hero-smoothie-split__content-wrapper {
      padding: 0 5% 0 0;
      max-width: 500px;
    }
  }

  @media screen and (max-width: 767px) {
    .section-{{ section.id }} .hero-smoothie-split {
      padding-top: var(--pad-top-mobile);
      padding-bottom: var(--pad-bottom-mobile);
    }

    .section-{{ section.id }} .hero-smoothie-split__container {
      grid-template-columns: 1fr;
      gap: 2rem;
      height: auto;
    }

    .section-{{ section.id }} .hero-smoothie-split__image-wrapper {
      height: auto;
      max-height: 60vh;
      justify-content: center;
      margin-left: 0;
      overflow: hidden;
    }

    .section-{{ section.id }} .hero-smoothie-split__image {
      height: auto;
      max-height: 60vh;
      width: 80%;
    }

    .section-{{ section.id }} .hero-smoothie-split__content-wrapper {
      height: auto;
      padding: 0 1rem;
      max-width: none;
      margin-left: 0;
    }

    .section-{{ section.id }} .hero-smoothie-split__content {
      overflow-y: visible;
      padding-right: 0;
      max-height: none;
    }

    .section-{{ section.id }} .hero-smoothie-split__heading {
      font-size: var(--heading-font-size-mobile);
    }

    .section-{{ section.id }} .hero-smoothie-split__body {
      font-size: var(--body-font-size-mobile);
    }

    .section-{{ section.id }} .hero-smoothie-split__button {
      padding: 0.75rem 2rem;
      font-size: 0.875rem;
    }
  }

  @media (prefers-reduced-motion: no-preference) {
    .section-{{ section.id }} .hero-smoothie-split__animate {
      animation: fadeInUp 0.8s ease-out;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<section class="hero-smoothie-split section-{{ section.id }}" role="region" aria-labelledby="hero-heading-{{ section.id }}">
  {%- if section.settings.image != blank -%}
    <div class="hero-smoothie-split__background-image">
      {{
        section.settings.image
        | image_url: width: 1920
        | image_tag:
          loading: 'lazy',
          class: 'hero-smoothie-split__bg-img',
          alt: section.settings.image_alt,
          sizes: '100vw',
          widths: '800, 1200, 1600, 1920'
      }}
    </div>
  {%- endif -%}
  
  <div class="hero-smoothie-split__container">
    <div class="hero-smoothie-split__empty-column">
      <!-- Empty column to show background image -->
    </div>

    <div class="hero-smoothie-split__content-wrapper">
      <div class="hero-smoothie-split__content{{ animate_class }}">
        {%- if section.settings.heading != blank -%}
          <h1 id="hero-heading-{{ section.id }}" class="hero-smoothie-split__heading">
            {{ section.settings.heading }}
          </h1>
        {%- endif -%}

        {%- if section.settings.body != blank -%}
          <div class="hero-smoothie-split__body">
            {{ section.settings.body }}
          </div>
        {%- endif -%}

        {%- if section.settings.button_label != blank and section.settings.button_url != blank -%}
          <a 
            href="{{ section.settings.button_url }}"
            class="hero-smoothie-split__button"
            role="button"
            {% if section.settings.button_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}
          >
            {{ section.settings.button_label }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const content = document.querySelector('.section-{{ section.id }} .hero-smoothie-split__content');
    if (content && window.innerWidth >= 768) {
      content.addEventListener('wheel', function(e) {
        if (content.scrollHeight > content.clientHeight) {
          e.stopPropagation();
        }
      }, { passive: true });
    }
  });
</script>

