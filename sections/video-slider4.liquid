                          <source src="{{ source.url }}" type="{{ source.mime_type }}">
                        {%- endfor -%}
                      </video>
                    {%- elsif block.settings.poster != blank -%}
                      {{ block.settings.poster | image_url: width: 800 | image_tag: loading: 'lazy', alt: block.settings.author_name }}
