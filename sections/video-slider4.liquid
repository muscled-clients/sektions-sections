  .video-slider-4__slider-wrapper {
    position: relative;
    padding: 0;
    width: 100%;
    overflow: visible;
  }

  .video-slider-4__slider {
    overflow: visible !important;
    width: 100%;
    margin: 0;
    padding: 0;
  }

  .video-slider-4__slider .swiper-wrapper {
    align-items: stretch;
  }

  .video-slider-4 .swiper {
    overflow: visible !important;
    margin-left: auto;
    margin-right: auto;
  }

  .video-slider-4 .swiper-slide:first-child {
    margin-left: 0;
  }

  .video-slider-4 .swiper-slide {
    width: 200px !important;
    height: auto !important;
    flex-shrink: 0;
  }

