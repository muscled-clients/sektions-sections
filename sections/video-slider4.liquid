  .video-slider-4__card {
    background: #3d3d3d;
    border-radius: var(--vs4-card-radius, 24px);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    width: 200px;
    max-width: 200px;
    border: 1px solid rgba(0, 0, 0, 0.1);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  }

