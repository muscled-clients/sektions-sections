    {%- if section.settings.label != blank or section.settings.title != blank or section.settings.subtitle != blank -%}
      <div class="video-slider-4__header">
        {%- if section.settings.label != blank -%}
          <div class="video-slider-4__label">{{ section.settings.label }}</div>
        {%- endif -%}
        {%- if section.settings.title != blank -%}
          <h2 class="video-slider-4__title">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.subtitle != blank -%}
          <p class="video-slider-4__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <!-- Slider -->
    <div class="video-slider-4__slider-outer">
      <div class="video-slider-4__slider-wrapper">
        <div class="video-slider-4__slider swiper">
        <div class="swiper-wrapper">
          {%- for block in section.blocks -%}
