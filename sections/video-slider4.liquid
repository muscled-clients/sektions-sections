  .video-slider-4__video-container {
    position: relative;
    width: 100%;
    height: 290px;
    overflow: hidden;
  }

  .video-slider-4__video,
  .video-slider-4__video video,
  .video-slider-4__video img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-slider-4__video-placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
    font-size: 14px;
  }

  /* Video Controls */
