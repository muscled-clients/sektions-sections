                  <!-- Watermark -->
                  {%- if section.settings.watermark != blank -%}
                    <div class="video-slider-4__watermark">{{ section.settings.watermark }}</div>
                  {%- endif -%}
                </div>

                <!-- Info (outside video container) -->
