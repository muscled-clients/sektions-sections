<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sectionId = '{{ section.id }}';
    const section = document.querySelector(`[data-section-id="${sectionId}"]`);
    if (!section) return;

    const swiperEl = section.querySelector('.video-slider-4__slider');
    const prevBtn = section.querySelector('.video-slider-4__prev');
    const nextBtn = section.querySelector('.video-slider-4__next');

    // Initialize Swiper
    const totalSlides = {{ section.blocks.size }};
    const swiper = new Swiper(swiperEl, {
      slidesPerView: 'auto',
      spaceBetween: 16,
      centeredSlides: true,
      loop: true,
      loopedSlides: Math.max(totalSlides, 5),
      grabCursor: true,
      speed: 400,
      navigation: {
        prevEl: prevBtn,
        nextEl: nextBtn
      },
      breakpoints: {
        768: {
          spaceBetween: 20
        },
        1024: {
          spaceBetween: 24
        },
        1400: {
          spaceBetween: 28
        }
      },
      on: {
        init: function() {
          const self = this;
          setTimeout(function() {
            self.update();
            self.slideToLoop(0, 0);
            handleVideoAutoplay();
          }, 50);
        },
        slideChange: function() {
          handleVideoAutoplay();
        }
      }
    });

    // Force update after a short delay
    setTimeout(function() {
      swiper.update();
      swiper.slideToLoop(0, 0);
    }, 100);

    // Video autoplay handling - play center video, pause others
    function handleVideoAutoplay() {
      const allSlides = section.querySelectorAll('.swiper-slide');

      allSlides.forEach((slide) => {
        const video = slide.querySelector('.video-slider-4__video-element');
        const playBtn = slide.querySelector('.video-slider-4__play-btn');

        if (video) {
          // Check if this slide is the active/center one
          if (slide.classList.contains('swiper-slide-active')) {
            video.play().catch(() => {});
            if (playBtn) playBtn.classList.add('playing');
          } else {
            video.pause();
            video.currentTime = 0;
            if (playBtn) playBtn.classList.remove('playing');
          }
        }
      });
    }

    // Play/Pause controls
    const playButtons = section.querySelectorAll('.video-slider-4__play-btn');
    playButtons.forEach(btn => {
      btn.addEventListener('click', function() {
        const card = this.closest('.video-slider-4__card');
        const video = card.querySelector('.video-slider-4__video-element');
        if (video) {
          if (video.paused) {
            video.play().catch(() => {});
            this.classList.add('playing');
          } else {
            video.pause();
            this.classList.remove('playing');
          }
        }
      });
    });

    // Mute controls
    const muteButtons = section.querySelectorAll('.video-slider-4__mute-btn');
    muteButtons.forEach(btn => {
      btn.addEventListener('click', function() {
        const card = this.closest('.video-slider-4__card');
        const video = card.querySelector('.video-slider-4__video-element');
        if (video) {
          video.muted = !video.muted;
          this.classList.toggle('unmuted', !video.muted);
        }
      });
    });
  });
</script>

