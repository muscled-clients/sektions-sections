{% style %}
  .comparison-table-6-{{ section.id }} {
    --ct6-bg: {{ section.settings.background_color }};
    --ct6-heading-color: {{ section.settings.heading_color }};
    --ct6-text-color: {{ section.settings.text_color }};
    --ct6-check-color: {{ section.settings.check_color }};
    --ct6-x-color: {{ section.settings.x_color }};
    --ct6-button-bg: {{ section.settings.button_bg_color }};
    --ct6-button-text: {{ section.settings.button_text_color }};
    --ct6-button-hover-bg: {{ section.settings.button_hover_bg_color }};
    --ct6-table-bg: {{ section.settings.table_bg_color }};
    --ct6-table-row-bg: {{ section.settings.table_row_bg_color }};
    --ct6-table-border: {{ section.settings.table_border_color }};
  }
{% endstyle %}

<section class="comparison-table-6 comparison-table-6-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="ct6__container">
    <div class="ct6__grid">
      <!-- Left Content -->
      <div class="ct6__content">
        {% if section.settings.heading != blank %}
          <h2 class="ct6__heading">
            <em class="ct6__heading-italic">{{ section.settings.heading_italic | default: 'US' }}</em> {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <p class="ct6__description">{{ section.settings.description }}</p>
        {% endif %}

        <!-- Feature List -->
        <ul class="ct6__features">
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              <li class="ct6__feature-item" {{ block.shopify_attributes }}>
                <span class="ct6__feature-icon">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                </span>
                <span class="ct6__feature-text">{{ block.settings.text }}</span>
              </li>
            {% endif %}
          {% endfor %}
        </ul>

        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link | default: '#' }}" class="ct6__button">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>

      <!-- Right Comparison Table -->
      <div class="ct6__table-wrapper">
        <table class="ct6__table">
          <thead>
            <tr class="ct6__table-header">
              <th class="ct6__th ct6__th--feature"></th>
              <th class="ct6__th ct6__th--brand">
                {% if section.settings.brand_logo != blank %}
                  <img
                    src="{{ section.settings.brand_logo | image_url: width: 200 }}"
                    alt="{{ section.settings.brand_name | default: 'Our Brand' }}"
                    class="ct6__brand-logo"
                    loading="lazy"
                  >
                {% else %}
                  <span class="ct6__brand-name">{{ section.settings.brand_name | default: 'Us' }}</span>
                {% endif %}
              </th>
              <th class="ct6__th ct6__th--others">{{ section.settings.others_label | default: 'Other Brands' }}</th>
            </tr>
          </thead>
          <tbody>
            {% for block in section.blocks %}
              {% if block.type == 'comparison_row' %}
                <tr class="ct6__row" {{ block.shopify_attributes }}>
                  <td class="ct6__td ct6__td--feature">{{ block.settings.feature_name }}</td>
                  <td class="ct6__td ct6__td--us">
                    {% if block.settings.us_has_feature %}
                      <span class="ct6__icon ct6__icon--check">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                          <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                      </span>
                    {% else %}
                      <span class="ct6__icon ct6__icon--x">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                          <line x1="18" y1="6" x2="6" y2="18"></line>
                          <line x1="6" y1="6" x2="18" y2="18"></line>
                        </svg>
                      </span>
                    {% endif %}
                  </td>
                  <td class="ct6__td ct6__td--others">
                    {% if block.settings.others_have_feature %}
                      <span class="ct6__icon ct6__icon--check">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                          <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                      </span>
                    {% else %}
                      <span class="ct6__icon ct6__icon--x">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                          <line x1="18" y1="6" x2="6" y2="18"></line>
                          <line x1="6" y1="6" x2="18" y2="18"></line>
                        </svg>
                      </span>
                    {% endif %}
                  </td>
                </tr>
              {% endif %}
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<style>
  /* Base Section */
  .comparison-table-6 {
    display: block;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    background-color: var(--ct6-bg);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    padding: 40px 20px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    overflow: hidden;
    position: relative;
  }

  .comparison-table-6 *,
  .comparison-table-6 *::before,
  .comparison-table-6 *::after {
    box-sizing: border-box;
  }

  .comparison-table-6 a {
    text-decoration: none;
    color: inherit;
  }

  .comparison-table-6 img {
    max-width: 100%;
    height: auto;
    border: 0;
    vertical-align: middle;
  }

  .comparison-table-6 h2,
  .comparison-table-6 p,
  .comparison-table-6 ul {
    margin: 0;
    padding: 0;
  }

  .comparison-table-6 ul {
    list-style: none;
  }

  .comparison-table-6 table {
    border-collapse: collapse;
    border-spacing: 0;
  }

  /* Container */
  .ct6__container {
    display: block;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Grid - Mobile First (stacked) */
  .ct6__grid {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  /* Content - Left Side */
  .ct6__content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .ct6__heading {
    font-size: 28px;
    font-weight: 600;
    color: var(--ct6-heading-color);
    line-height: 1.2;
    margin: 0 0 16px 0;
  }

  .ct6__heading-italic {
    font-style: italic;
    font-weight: 400;
  }

  .ct6__description {
    font-size: 14px;
    font-weight: 400;
    color: var(--ct6-text-color);
    line-height: 1.5;
    margin: 0 0 24px 0;
    max-width: 340px;
  }

  /* Feature List */
  .ct6__features {
    display: flex;
    flex-direction: column;
    gap: 14px;
    margin-bottom: 32px;
  }

  .ct6__feature-item {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .ct6__feature-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    border: 1.5px solid var(--ct6-heading-color);
    border-radius: 50%;
    flex-shrink: 0;
    color: var(--ct6-heading-color);
  }

  .ct6__feature-icon svg {
    width: 14px;
    height: 14px;
  }

  .ct6__feature-text {
    font-size: 14px;
    font-weight: 400;
    color: var(--ct6-heading-color);
    line-height: 1.4;
  }

  /* Button */
  .ct6__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background-color: var(--ct6-button-bg);
    color: var(--ct6-button-text);
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 16px 32px;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    transition: background-color 0.25s ease, transform 0.2s ease;
  }

  .ct6__button:hover {
    background-color: var(--ct6-button-hover-bg);
    transform: translateY(-1px);
  }

  /* Table Wrapper */
  .ct6__table-wrapper {
    width: 100%;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  /* Table */
  .ct6__table {
    width: 100%;
    min-width: 320px;
    background-color: var(--ct6-table-bg);
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid var(--ct6-table-border);
  }

  /* Table Header */
  .ct6__table-header {
    background-color: var(--ct6-table-bg);
  }

  .ct6__th {
    padding: 16px 12px;
    font-size: 12px;
    font-weight: 500;
    color: var(--ct6-text-color);
    text-align: center;
    vertical-align: middle;
    border-bottom: 1px solid var(--ct6-table-border);
  }

  .ct6__th--feature {
    width: 40%;
    text-align: left;
  }

  .ct6__th--brand,
  .ct6__th--others {
    width: 30%;
  }

  .ct6__brand-logo {
    display: block;
    max-width: 80px;
    max-height: 40px;
    width: auto;
    height: auto;
    margin: 0 auto;
    object-fit: contain;
  }

  .ct6__brand-name {
    font-size: 14px;
    font-weight: 600;
    color: var(--ct6-heading-color);
  }

  /* Table Rows */
  .ct6__row {
    background-color: var(--ct6-table-bg);
    transition: background-color 0.2s ease;
  }

  .ct6__row:nth-child(odd) {
    background-color: var(--ct6-table-row-bg);
  }

  .ct6__td {
    padding: 14px 12px;
    font-size: 13px;
    font-weight: 400;
    color: var(--ct6-heading-color);
    text-align: center;
    vertical-align: middle;
    border-bottom: 1px solid var(--ct6-table-border);
  }

  .ct6__row:last-child .ct6__td {
    border-bottom: none;
  }

  .ct6__td--feature {
    text-align: left;
    font-weight: 500;
  }

  /* Icons in table */
  .ct6__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .ct6__icon--check {
    color: var(--ct6-check-color);
  }

  .ct6__icon--x {
    color: var(--ct6-x-color);
  }

  .ct6__icon svg {
    display: block;
  }

  /* ========================================
     RESPONSIVE BREAKPOINTS
     ======================================== */

  /* Small Mobile (< 400px) */
  @media screen and (max-width: 399px) {
    .comparison-table-6 {
      padding: 32px 16px;
    }

    .ct6__grid {
      gap: 32px;
    }

    .ct6__heading {
      font-size: 24px;
    }

    .ct6__description {
      font-size: 13px;
    }

    .ct6__features {
      gap: 12px;
      margin-bottom: 28px;
    }

    .ct6__feature-icon {
      width: 22px;
      height: 22px;
    }

    .ct6__feature-icon svg {
      width: 12px;
      height: 12px;
    }

    .ct6__feature-text {
      font-size: 13px;
    }

    .ct6__button {
      font-size: 11px;
      padding: 14px 28px;
    }

    .ct6__th {
      padding: 12px 8px;
      font-size: 11px;
    }

    .ct6__td {
      padding: 12px 8px;
      font-size: 12px;
    }

    .ct6__brand-logo {
      max-width: 60px;
      max-height: 30px;
    }

    .ct6__icon svg {
      width: 16px;
      height: 16px;
    }
  }

  /* Medium Mobile (400px+) */
  @media screen and (min-width: 400px) {
    .comparison-table-6 {
      padding: 48px 24px;
    }

    .ct6__heading {
      font-size: 30px;
    }

    .ct6__description {
      font-size: 15px;
    }

    .ct6__feature-text {
      font-size: 15px;
    }

    .ct6__th {
      padding: 18px 14px;
    }

    .ct6__td {
      padding: 16px 14px;
      font-size: 14px;
    }

    .ct6__brand-logo {
      max-width: 90px;
      max-height: 40px;
    }
  }

  /* Large Mobile (550px+) */
  @media screen and (min-width: 550px) {
    .comparison-table-6 {
      padding: 56px 32px;
    }

    .ct6__heading {
      font-size: 34px;
    }

    .ct6__description {
      font-size: 16px;
      max-width: 380px;
    }

    .ct6__features {
      gap: 16px;
      margin-bottom: 36px;
    }

    .ct6__feature-icon {
      width: 26px;
      height: 26px;
    }

    .ct6__feature-icon svg {
      width: 15px;
      height: 15px;
    }

    .ct6__feature-text {
      font-size: 16px;
    }

    .ct6__button {
      font-size: 12px;
      padding: 18px 36px;
    }
  }

  /* Tablet (768px+) */
  @media screen and (min-width: 768px) {
    .comparison-table-6 {
      padding: 64px 40px;
    }

    .ct6__grid {
      flex-direction: row;
      align-items: flex-start;
      gap: 48px;
    }

    .ct6__content {
      flex: 0 0 40%;
      max-width: 40%;
      padding-top: 20px;
    }

    .ct6__table-wrapper {
      flex: 1;
      overflow-x: visible;
    }

    .ct6__heading {
      font-size: 36px;
      margin-bottom: 20px;
    }

    .ct6__description {
      margin-bottom: 28px;
    }

    .ct6__features {
      margin-bottom: 40px;
    }

    .ct6__table {
      border-radius: 12px;
    }

    .ct6__th {
      padding: 20px 16px;
      font-size: 13px;
    }

    .ct6__td {
      padding: 18px 16px;
      font-size: 14px;
    }

    .ct6__brand-logo {
      max-width: 100px;
      max-height: 45px;
    }

    .ct6__icon svg {
      width: 20px;
      height: 20px;
    }
  }

  /* Desktop (1024px+) */
  @media screen and (min-width: 1024px) {
    .comparison-table-6 {
      padding: 80px 50px;
    }

    .ct6__grid {
      gap: 60px;
    }

    .ct6__content {
      flex: 0 0 38%;
      max-width: 38%;
      padding-top: 30px;
    }

    .ct6__heading {
      font-size: 40px;
    }

    .ct6__description {
      font-size: 16px;
      max-width: 360px;
    }

    .ct6__feature-text {
      font-size: 16px;
    }

    .ct6__button {
      font-size: 13px;
      padding: 18px 40px;
    }

    .ct6__th {
      padding: 22px 20px;
      font-size: 14px;
    }

    .ct6__td {
      padding: 20px;
      font-size: 15px;
    }

    .ct6__icon svg {
      width: 22px;
      height: 22px;
    }
  }

  /* Large Desktop (1400px+) */
  @media screen and (min-width: 1400px) {
    .comparison-table-6 {
      padding: 100px 60px;
    }

    .ct6__container {
      max-width: 1300px;
    }

    .ct6__grid {
      gap: 80px;
    }

    .ct6__content {
      padding-top: 40px;
    }

    .ct6__heading {
      font-size: 44px;
    }

    .ct6__description {
      font-size: 17px;
      max-width: 400px;
    }

    .ct6__features {
      gap: 18px;
    }

    .ct6__feature-icon {
      width: 28px;
      height: 28px;
    }

    .ct6__feature-icon svg {
      width: 16px;
      height: 16px;
    }

    .ct6__feature-text {
      font-size: 17px;
    }

    .ct6__button {
      font-size: 13px;
      padding: 20px 44px;
    }

    .ct6__table {
      border-radius: 14px;
    }

    .ct6__th {
      padding: 24px;
    }

    .ct6__td {
      padding: 22px 24px;
      font-size: 16px;
    }

    .ct6__brand-logo {
      max-width: 120px;
      max-height: 50px;
    }

    .ct6__icon svg {
      width: 24px;
      height: 24px;
    }
  }
</style>

