{% style %}
  #shopify-section-{{ section.id }} {
    width: 100%;
    max-width: 100%;
    margin-left: 0;
    margin-right: 0;
    padding-left: 0;
    padding-right: 0;
  }

  .shop-the-look-section-{{ section.id }} {
    --stl-bg: {{ section.settings.background_color }};
    --stl-text: {{ section.settings.text_color }};
    --stl-heading: {{ section.settings.heading_color }};
    --stl-card-bg: {{ section.settings.card_background }};
    --stl-card-border: {{ section.settings.card_border_color }};
    --stl-dot-bg: {{ section.settings.dot_background }};
    --stl-dot-active: {{ section.settings.dot_active_color }};
    --stl-btn-bg: {{ section.settings.button_background }};
    --stl-btn-text: {{ section.settings.button_text_color }};
    --stl-sale: {{ section.settings.sale_color }};
    background-color: var(--stl-bg);
    color: var(--stl-text);
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .shop-the-look-section-{{ section.id }} * {
    box-sizing: border-box;
  }

  .stl-container-{{ section.id }} {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Header - Above section */
  .stl-header-{{ section.id }} {
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: 30px;
  }

  .stl-heading-{{ section.id }} {
    font-size: {{ section.settings.heading_size_mobile }}px;
    font-weight: 600;
    color: var(--stl-heading);
    margin: 0;
    line-height: 1.2;
  }

  /* Desktop Layout */
  .stl-desktop-{{ section.id }} {
    display: none;
  }

  .stl-grid-{{ section.id }} {
    display: grid;
    grid-template-columns: 1fr {{ section.settings.card_width }}px;
    gap: {{ section.settings.grid_gap }}px;
    align-items: start;
  }

  /* Main Image with Hotspots */
  .stl-image-wrapper-{{ section.id }} {
    position: relative;
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .stl-main-image-{{ section.id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Hotspot Dots - Small circles */
  .stl-hotspot-{{ section.id }} {
    position: absolute;
    width: {{ section.settings.hotspot_size }}px;
    height: {{ section.settings.hotspot_size }}px;
    transform: translate(-50%, -50%);
    cursor: pointer;
    z-index: 10;
  }

  .stl-hotspot-dot-{{ section.id }} {
    width: 100%;
    height: 100%;
    background: var(--stl-dot-bg);
    border: 2px solid rgba(255, 255, 255, 0.9);
    border-radius: 50%;
    transition: transform 0.2s ease, background 0.2s ease, box-shadow 0.2s ease;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.25);
  }

  .stl-hotspot-{{ section.id }}:hover .stl-hotspot-dot-{{ section.id }},
  .stl-hotspot-{{ section.id }}.active .stl-hotspot-dot-{{ section.id }} {
    transform: scale(1.15);
    background: var(--stl-dot-active);
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.3);
  }

  /* Product Card Area */
  .stl-products-{{ section.id }} {
    position: relative;
  }

  /* Product Card Wrapper - For stacking cards */
  .stl-product-cards-wrapper-{{ section.id }} {
    position: relative;
    min-height: 400px;
  }

  /* Product Card */
  .stl-product-card-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    background: var(--stl-card-bg);
    border: 1px solid var(--stl-card-border);
    border-radius: {{ section.settings.card_border_radius }}px;
    overflow: hidden;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .stl-product-card-{{ section.id }}.active {
    position: relative;
    opacity: 1;
    visibility: visible;
  }

  .stl-product-image-wrapper-{{ section.id }} {
    position: relative;
    overflow: hidden;
    display: block;
    text-decoration: none;
  }

  .stl-product-image-{{ section.id }} {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  .stl-product-card-{{ section.id }}:hover .stl-product-image-{{ section.id }} {
    transform: scale(1.03);
  }

  .stl-product-image-wrapper-{{ section.id }} svg,
  .stl-product-image-placeholder {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
    display: block;
    background: #f5f5f5;
  }

  .stl-product-info-{{ section.id }} {
    padding: 16px 20px 20px;
  }

  .stl-product-title-{{ section.id }} {
    font-size: 15px;
    font-weight: 600;
    color: var(--stl-heading);
    margin: 0 0 8px 0;
    line-height: 1.4;
  }

  .stl-product-title-{{ section.id }} a {
    color: inherit;
    text-decoration: none;
  }

  .stl-product-title-{{ section.id }} a:hover {
    text-decoration: underline;
  }

  .stl-product-price-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 15px;
  }

  .stl-price-current-{{ section.id }} {
    font-weight: 600;
    color: var(--stl-heading);
  }

  .stl-price-compare-{{ section.id }} {
    text-decoration: line-through;
    color: #999;
    font-size: 13px;
  }

  .stl-price-badge-{{ section.id }} {
    font-size: 11px;
    font-weight: 600;
    color: var(--stl-sale);
    background: rgba(248, 58, 58, 0.1);
    padding: 3px 8px;
    border-radius: 4px;
  }

  /* Navigation Arrows - Below card */
  .stl-nav-{{ section.id }} {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin-top: 20px;
  }

  .stl-nav-btn-{{ section.id }} {
    width: 44px;
    height: 44px;
    border: 1px solid var(--stl-card-border);
    background: var(--stl-card-bg);
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  .stl-nav-btn-{{ section.id }}:hover {
    background: var(--stl-btn-bg);
    border-color: var(--stl-btn-bg);
  }

  .stl-nav-btn-{{ section.id }} svg {
    width: 18px;
    height: 18px;
    stroke: var(--stl-heading);
    transition: stroke 0.2s ease;
  }

  .stl-nav-btn-{{ section.id }}:hover svg {
    stroke: var(--stl-btn-text);
  }

  /* Mobile Layout */
  .stl-mobile-{{ section.id }} {
    display: block;
  }

  .stl-mobile-image-wrapper-{{ section.id }} {
    position: relative;
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
    margin-bottom: 20px;
  }

  .stl-mobile-image-{{ section.id }} {
    width: 100%;
    display: block;
  }

  .stl-mobile-scroll-{{ section.id }} {
    display: flex;
    gap: 16px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    padding: 10px 0 20px;
    margin: 0 -20px;
    padding-left: 20px;
    padding-right: 20px;
  }

  .stl-mobile-scroll-{{ section.id }}::-webkit-scrollbar {
    height: 4px;
  }

  .stl-mobile-scroll-{{ section.id }}::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 2px;
  }

  .stl-mobile-scroll-{{ section.id }}::-webkit-scrollbar-thumb {
    background: #ccc;
    border-radius: 2px;
  }

  .stl-mobile-card-{{ section.id }} {
    flex: 0 0 70vw;
    max-width: 280px;
    background: var(--stl-card-bg);
    border: 1px solid var(--stl-card-border);
    border-radius: {{ section.settings.card_border_radius }}px;
    overflow: hidden;
    scroll-snap-align: start;
  }

  .stl-mobile-card-image-{{ section.id }} {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
  }

  .stl-mobile-card-{{ section.id }} svg,
  .stl-mobile-card-image-placeholder {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
    display: block;
    background: #f5f5f5;
  }

  .stl-mobile-card-info-{{ section.id }} {
    padding: 15px;
  }

  .stl-mobile-card-title-{{ section.id }} {
    font-size: 14px;
    font-weight: 600;
    color: var(--stl-heading);
    margin: 0 0 8px 0;
  }

  .stl-mobile-card-title-{{ section.id }} a {
    color: inherit;
    text-decoration: none;
  }

  .stl-mobile-card-price-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
  }

  /* Responsive */
  @media (min-width: 750px) {
    .stl-mobile-{{ section.id }} {
      display: none;
    }

    .stl-desktop-{{ section.id }} {
      display: block;
    }

    .stl-heading-{{ section.id }} {
      font-size: {{ section.settings.heading_size_desktop }}px;
    }

    .stl-container-{{ section.id }} {
      padding: 0 40px;
    }
  }

  @media (min-width: 1024px) {
    .stl-container-{{ section.id }} {
      padding: 0 60px;
    }

    .stl-grid-{{ section.id }} {
      gap: {{ section.settings.grid_gap | plus: 20 }}px;
    }
  }
{% endstyle %}

<section class="shop-the-look-section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="stl-container-{{ section.id }}">
    <!-- Header - Above image -->
    {%- if section.settings.heading != blank -%}
      <div class="stl-header-{{ section.id }}">
        <h2 class="stl-heading-{{ section.id }}">{{ section.settings.heading }}</h2>
      </div>
    {%- endif -%}

    <!-- Desktop Layout -->
    <div class="stl-desktop-{{ section.id }}" data-desktop>
      <div class="stl-grid-{{ section.id }}">
        <!-- Main Image with Hotspots -->
        <div class="stl-image-wrapper-{{ section.id }}">
          {%- if section.settings.main_image != blank -%}
            <img
              class="stl-main-image-{{ section.id }}"
              src="{{ section.settings.main_image | image_url: width: 1200 }}"
              alt="{{ section.settings.heading | default: 'Shop the Look' | escape }}"
              loading="lazy"
            >
          {%- else -%}
            {{ 'collection-1' | placeholder_svg_tag: 'stl-main-image-' | append: section.id }}
          {%- endif -%}

          {%- assign product_blocks = section.blocks | where: 'type', 'product' -%}
          {%- for block in product_blocks -%}
            <div
              class="stl-hotspot-{{ section.id }}{% if forloop.first %} active{% endif %}"
              style="left: {{ block.settings.hotspot_x }}%; top: {{ block.settings.hotspot_y }}%;"
              data-hotspot="{{ forloop.index0 }}"
              aria-label="View product {{ forloop.index }}"
              {{ block.shopify_attributes }}
            >
              <div class="stl-hotspot-dot-{{ section.id }}"></div>
            </div>
          {%- endfor -%}
        </div>

        <!-- Product Cards + Navigation -->
        <div class="stl-products-{{ section.id }}">
          <div class="stl-product-cards-wrapper-{{ section.id }}">
            {%- for block in product_blocks -%}
              {%- assign product = block.settings.product -%}
              <div
                class="stl-product-card-{{ section.id }}{% if forloop.first %} active{% endif %}"
                data-product-card="{{ forloop.index0 }}"
              >
                {%- if product != blank -%}
                  <a href="{{ product.url }}" class="stl-product-image-wrapper-{{ section.id }}">
                    <img
                      class="stl-product-image-{{ section.id }}"
                      src="{{ product.featured_image | image_url: width: 600 }}"
                      alt="{{ product.title | escape }}"
                      loading="lazy"
                    >
                  </a>
                  <div class="stl-product-info-{{ section.id }}">
                    <h3 class="stl-product-title-{{ section.id }}">
                      <a href="{{ product.url }}">{{ product.title }}</a>
                    </h3>
                    <div class="stl-product-price-{{ section.id }}">
                      <span class="stl-price-current-{{ section.id }}">{{ product.price | money }}</span>
                      {%- if product.compare_at_price > product.price -%}
                        <span class="stl-price-compare-{{ section.id }}">{{ product.compare_at_price | money }}</span>
                      {%- endif -%}
                    </div>
                  </div>
                {%- else -%}
                  <div class="stl-product-image-wrapper-{{ section.id }}">
                    {{ 'product-1' | placeholder_svg_tag: 'stl-product-image-placeholder' }}
                  </div>
                  <div class="stl-product-info-{{ section.id }}">
                    <h3 class="stl-product-title-{{ section.id }}">Product Title</h3>
                    <div class="stl-product-price-{{ section.id }}">
                      <span class="stl-price-current-{{ section.id }}">$99.00</span>
                    </div>
                  </div>
                {%- endif -%}
              </div>
            {%- endfor -%}
          </div>

          <!-- Navigation Arrows - Below card -->
          {%- if product_blocks.size > 1 -%}
            <div class="stl-nav-{{ section.id }}">
              <button class="stl-nav-btn-{{ section.id }}" data-prev aria-label="Previous product">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
              </button>
              <button class="stl-nav-btn-{{ section.id }}" data-next aria-label="Next product">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="9 6 15 12 9 18"></polyline>
                </svg>
              </button>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>

    <!-- Mobile Layout -->
    <div class="stl-mobile-{{ section.id }}" data-mobile>
      <div class="stl-mobile-image-wrapper-{{ section.id }}">
        {%- if section.settings.main_image != blank -%}
          <img
            class="stl-mobile-image-{{ section.id }}"
            src="{{ section.settings.main_image | image_url: width: 800 }}"
            alt="{{ section.settings.heading | default: 'Shop the Look' | escape }}"
            loading="lazy"
          >
        {%- else -%}
          {{ 'collection-1' | placeholder_svg_tag: 'stl-mobile-image-' | append: section.id }}
        {%- endif -%}

        {%- for block in product_blocks -%}
          <div
            class="stl-hotspot-{{ section.id }}{% if forloop.first %} active{% endif %}"
            style="left: {{ block.settings.hotspot_x }}%; top: {{ block.settings.hotspot_y }}%;"
            data-mobile-hotspot="{{ forloop.index0 }}"
            aria-label="View product {{ forloop.index }}"
          >
            <div class="stl-hotspot-dot-{{ section.id }}"></div>
          </div>
        {%- endfor -%}
      </div>

      <div class="stl-mobile-scroll-{{ section.id }}" data-mobile-scroll>
        {%- for block in product_blocks -%}
          {%- assign product = block.settings.product -%}
          <div class="stl-mobile-card-{{ section.id }}" data-mobile-card="{{ forloop.index0 }}">
            {%- if product != blank -%}
              <a href="{{ product.url }}">
                <img
                  class="stl-mobile-card-image-{{ section.id }}"
                  src="{{ product.featured_image | image_url: width: 400 }}"
                  alt="{{ product.title | escape }}"
                  loading="lazy"
                >
              </a>
              <div class="stl-mobile-card-info-{{ section.id }}">
                <h3 class="stl-mobile-card-title-{{ section.id }}">
                  <a href="{{ product.url }}">{{ product.title }}</a>
                </h3>
                <div class="stl-mobile-card-price-{{ section.id }}">
                  <span class="stl-price-current-{{ section.id }}">{{ product.price | money }}</span>
                  {%- if product.compare_at_price > product.price -%}
                    <span class="stl-price-compare-{{ section.id }}">{{ product.compare_at_price | money }}</span>
                  {%- endif -%}
                </div>
              </div>
            {%- else -%}
              {{ 'product-1' | placeholder_svg_tag: 'stl-mobile-card-image-placeholder' }}
              <div class="stl-mobile-card-info-{{ section.id }}">
                <h3 class="stl-mobile-card-title-{{ section.id }}">Product Title</h3>
                <div class="stl-mobile-card-price-{{ section.id }}">
                  <span class="stl-price-current-{{ section.id }}">$99.00</span>
                </div>
              </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

<script>
  (function() {
    function initShopTheLook() {
      const section = document.querySelector('[data-section-id="{{ section.id }}"]');
      if (!section || section.dataset.initialized) return;
      section.dataset.initialized = 'true';

      const hotspots = section.querySelectorAll('[data-hotspot]');
      const mobileHotspots = section.querySelectorAll('[data-mobile-hotspot]');
      const productCards = section.querySelectorAll('[data-product-card]');
      const prevBtn = section.querySelector('[data-prev]');
      const nextBtn = section.querySelector('[data-next]');
      const mobileScroll = section.querySelector('[data-mobile-scroll]');
      const mobileCards = section.querySelectorAll('[data-mobile-card]');

      let currentIndex = 0;
      const totalProducts = productCards.length;

      if (totalProducts === 0) return;

      function switchProduct(index) {
        if (index < 0) index = totalProducts - 1;
        if (index >= totalProducts) index = 0;

        // Update hotspots
        hotspots.forEach((hotspot, i) => {
          hotspot.classList.toggle('active', i === index);
        });

        mobileHotspots.forEach((hotspot, i) => {
          hotspot.classList.toggle('active', i === index);
        });

        // Update product cards
        productCards.forEach((card, i) => {
          card.classList.toggle('active', i === index);
        });

        // Scroll mobile cards
        if (mobileScroll && mobileCards[index]) {
          mobileCards[index].scrollIntoView({
            behavior: 'smooth',
            block: 'nearest',
            inline: 'start'
          });
        }

        currentIndex = index;
      }

      // Hotspot clicks
      hotspots.forEach((hotspot, index) => {
        hotspot.addEventListener('click', () => switchProduct(index));
      });

      mobileHotspots.forEach((hotspot, index) => {
        hotspot.addEventListener('click', () => {
          switchProduct(index);
        });
      });

      // Navigation buttons
      if (prevBtn) {
        prevBtn.addEventListener('click', () => switchProduct(currentIndex - 1));
      }

      if (nextBtn) {
        nextBtn.addEventListener('click', () => switchProduct(currentIndex + 1));
      }

      // Mobile scroll sync
      if (mobileScroll) {
        let scrollTimeout;
        mobileScroll.addEventListener('scroll', () => {
          clearTimeout(scrollTimeout);
          scrollTimeout = setTimeout(() => {
            const scrollLeft = mobileScroll.scrollLeft;
            const cardWidth = mobileCards[0]?.offsetWidth + 16 || 280;
            const newIndex = Math.round(scrollLeft / cardWidth);
            if (newIndex !== currentIndex && newIndex >= 0 && newIndex < totalProducts) {
              currentIndex = newIndex;
              hotspots.forEach((h, i) => h.classList.toggle('active', i === currentIndex));
              mobileHotspots.forEach((h, i) => h.classList.toggle('active', i === currentIndex));
              productCards.forEach((c, i) => c.classList.toggle('active', i === currentIndex));
            }
          }, 100);
        });
      }

      // Keyboard navigation
      section.setAttribute('tabindex', '0');
      section.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowLeft') {
          e.preventDefault();
          switchProduct(currentIndex - 1);
        }
        if (e.key === 'ArrowRight') {
          e.preventDefault();
          switchProduct(currentIndex + 1);
        }
      });
    }

    // Initialize
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initShopTheLook);
    } else {
      initShopTheLook();
    }

    // Shopify theme editor support
    document.addEventListener('shopify:section:load', function(e) {
      if (e.target.querySelector('[data-section-id="{{ section.id }}"]')) {
        const section = e.target.querySelector('[data-section-id="{{ section.id }}"]');
        if (section) section.removeAttribute('data-initialized');
        initShopTheLook();
      }
    });
  })();
</script>

