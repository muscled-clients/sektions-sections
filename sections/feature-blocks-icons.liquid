<!-- Feature Blocks with Icons Section -->
<style>
  #feature-blocks-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
    background-color: {{ section.settings.background_color }};
  }

  #feature-blocks-{{ section.id }} .container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 {{ section.settings.container_padding }}px;
  }

  #feature-blocks-{{ section.id }} .section-header {
    text-align: center;
    margin-bottom: {{ section.settings.header_margin_bottom }}px;
  }

  #feature-blocks-{{ section.id }} .section-title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    color: {{ section.settings.title_color }};
    margin-bottom: {{ section.settings.title_margin_bottom }}px;
  }

  #feature-blocks-{{ section.id }} .section-subtitle {
    font-size: {{ section.settings.subtitle_size }}px;
    color: {{ section.settings.subtitle_color }};
    line-height: 1.6;
  }

  #feature-blocks-{{ section.id }} .feature-blocks-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: {{ section.settings.column_gap }}px;
    align-items: start;
  }

  #feature-blocks-{{ section.id }} .feature-block {
    text-align: center;
    padding: {{ section.settings.block_padding }}px;
  }

  #feature-blocks-{{ section.id }} .icon-circle {
    width: {{ section.settings.circle_size }}px;
    height: {{ section.settings.circle_size }}px;
    border-radius: 50%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto {{ section.settings.icon_margin_bottom }}px;
    transition: all 0.3s ease;
  }

  {% if section.settings.enable_hover_effect %}
  #feature-blocks-{{ section.id }} .feature-block:hover .icon-circle {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
  }
  {% endif %}

  #feature-blocks-{{ section.id }} .icon-circle svg,
  #feature-blocks-{{ section.id }} .icon-circle img {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    object-fit: contain;
  }

  #feature-blocks-{{ section.id }} .icon-circle svg {
    stroke: {{ section.settings.icon_color }};
    stroke-width: {{ section.settings.icon_stroke_width }};
    fill: none;
  }

  #feature-blocks-{{ section.id }} .feature-title {
    font-size: {{ section.settings.feature_title_size }}px;
    font-weight: {{ section.settings.feature_title_weight }};
    color: {{ section.settings.feature_title_color }};
    margin-bottom: {{ section.settings.feature_title_margin }}px;
    line-height: 1.2;
  }

  #feature-blocks-{{ section.id }} .feature-description {
    font-size: {{ section.settings.feature_description_size }}px;
    color: {{ section.settings.feature_description_color }};
    line-height: {{ section.settings.feature_description_line_height }};
    max-width: {{ section.settings.description_max_width }}px;
    margin: 0 auto;
  }

  /* Tablet */
  @media (max-width: 992px) {
    #feature-blocks-{{ section.id }} .feature-blocks-grid {
      grid-template-columns: repeat({{ section.settings.columns_tablet }}, 1fr);
      gap: {{ section.settings.column_gap_tablet }}px;
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    #feature-blocks-{{ section.id }} .feature-blocks-grid {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: {{ section.settings.column_gap_mobile }}px;
    }

    #feature-blocks-{{ section.id }} .section-title {
      font-size: {{ section.settings.title_size_mobile }}px;
    }

    #feature-blocks-{{ section.id }} .feature-title {
      font-size: {{ section.settings.feature_title_size_mobile }}px;
    }

    #feature-blocks-{{ section.id }} .feature-description {
      font-size: {{ section.settings.feature_description_size_mobile }}px;
    }

    #feature-blocks-{{ section.id }} .icon-circle {
      width: {{ section.settings.circle_size_mobile }}px;
      height: {{ section.settings.circle_size_mobile }}px;
    }

    #feature-blocks-{{ section.id }} .icon-circle svg,
    #feature-blocks-{{ section.id }} .icon-circle img {
      width: {{ section.settings.icon_size_mobile }}px;
      height: {{ section.settings.icon_size_mobile }}px;
    }
  }
</style>

<section id="feature-blocks-{{ section.id }}">
  <div class="container">
    {% if section.settings.section_title != blank or section.settings.section_subtitle != blank %}
      <div class="section-header">
        {% if section.settings.section_title != blank %}
          <h2 class="section-title">{{ section.settings.section_title }}</h2>
        {% endif %}
        {% if section.settings.section_subtitle != blank %}
          <p class="section-subtitle">{{ section.settings.section_subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="feature-blocks-grid">
      {% for block in section.blocks %}
        {% if block.type == 'feature_block' %}
          <div class="feature-block" {{ block.shopify_attributes }}>
            <div class="icon-circle" style="background-color: {{ block.settings.circle_color }};">
              {% if block.settings.icon_image %}
                <img src="{{ block.settings.icon_image | image_url: width: 200 }}"
                     alt="{{ block.settings.title | escape }}"
                     loading="lazy">
              {% elsif block.settings.icon_svg != blank %}
                {{ block.settings.icon_svg }}
              {% else %}
                <!-- Default icon if none selected -->
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
                </svg>
              {% endif %}
            </div>

            {% if block.settings.title != blank %}
              <h3 class="feature-title">{{ block.settings.title }}</h3>
            {% endif %}

            {% if block.settings.description != blank %}
              <p class="feature-description">{{ block.settings.description }}</p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

