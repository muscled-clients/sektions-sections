{% comment %}
  Works On Any Garment Section
  - Dark background with border bottom
  - Two-column layout (content + image)
  - Fabric type icons with labels
  - Two CTA buttons
  - Product image with dot indicators
{% endcomment %}

<div class="wog" style="
  --wog-bg: {{ section.settings.background_color }};
  --wog-border: {{ section.settings.border_color }};
  --wog-tagline: {{ section.settings.tagline_color }};
  --wog-title: {{ section.settings.title_color }};
  --wog-highlight-bg: {{ section.settings.highlight_bg_color }};
  --wog-highlight-text: {{ section.settings.highlight_text_color }};
  --wog-underline: {{ section.settings.underline_color }};
  --wog-desc: {{ section.settings.description_color }};
  --wog-icon-label: {{ section.settings.icon_label_color }};
  --wog-btn-primary-bg: {{ section.settings.btn_primary_bg }};
  --wog-btn-primary-text: {{ section.settings.btn_primary_text_color }};
  --wog-btn-secondary-bg: {{ section.settings.btn_secondary_bg }};
  --wog-btn-secondary-text: {{ section.settings.btn_secondary_text_color }};
  --wog-btn-secondary-border: {{ section.settings.btn_secondary_border }};
  --wog-dots: {{ section.settings.dots_color }};
">
  <div class="wog__container">
    <!-- Left Content -->
    <div class="wog__content">
      <!-- Tagline -->
      {% if section.settings.tagline != blank %}
        <p class="wog__tagline">{{ section.settings.tagline }}</p>
      {% endif %}

      <!-- Main Heading -->
      <h2 class="wog__heading">
        {% if section.settings.heading_line1 != blank %}
          <span class="wog__heading-line">{{ section.settings.heading_line1 }}</span>
        {% endif %}
        {% if section.settings.heading_highlight != blank or section.settings.heading_line2 != blank %}
          <span class="wog__heading-line">
            {% if section.settings.heading_highlight != blank %}
              <span class="wog__heading-highlight">{{ section.settings.heading_highlight }}</span>
            {% endif %}
            {% if section.settings.heading_line2 != blank %}
              {{ section.settings.heading_line2 }}
            {% endif %}
          </span>
        {% endif %}
        {% if section.settings.heading_line3 != blank %}
          <span class="wog__heading-line">{{ section.settings.heading_line3 }}</span>
        {% endif %}
        {% if section.settings.heading_underline != blank %}
          <span class="wog__heading-line">
            <span class="wog__heading-underline">{{ section.settings.heading_underline }}</span>
          </span>
        {% endif %}
      </h2>

      <!-- Description -->
      {% if section.settings.description != blank %}
        <p class="wog__description">{{ section.settings.description }}</p>
      {% endif %}

      <!-- Fabric Icons -->
      <div class="wog__fabrics">
        {% for block in section.blocks %}
          {% if block.type == 'fabric_icon' %}
            <div class="wog__fabric" {{ block.shopify_attributes }}>
              <div class="wog__fabric-icon">
                {% if block.settings.icon != blank %}
                  <img src="{{ block.settings.icon | image_url: width: 72 }}" alt="{{ block.settings.label }}" loading="lazy">
                {% elsif block.settings.icon_text != blank %}
                  <span class="wog__fabric-icon-text">{{ block.settings.icon_text }}</span>
                {% else %}
                  <svg width="36" height="36" viewBox="0 0 36 36" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect x="4" y="4" width="28" height="28" rx="4" stroke="currentColor" stroke-width="2"/>
                    <circle cx="18" cy="18" r="6" stroke="currentColor" stroke-width="2"/>
                  </svg>
                {% endif %}
              </div>
              {% if block.settings.label != blank %}
                <span class="wog__fabric-label">{{ block.settings.label }}</span>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- CTA Buttons -->
      <div class="wog__buttons">
        {% if section.settings.btn_primary_text != blank %}
          <a href="{{ section.settings.btn_primary_link }}" class="wog__btn wog__btn--primary">
            {{ section.settings.btn_primary_text }}
          </a>
        {% endif %}
        {% if section.settings.btn_secondary_text != blank %}
          <a href="{{ section.settings.btn_secondary_link }}" class="wog__btn wog__btn--secondary">
            {{ section.settings.btn_secondary_text }}
          </a>
        {% endif %}
      </div>
    </div>

    <!-- Right Image -->
    <div class="wog__image-wrapper">
      <div class="wog__image-container">
        {% if section.settings.main_image != blank %}
          <img
            src="{{ section.settings.main_image | image_url: width: 1200 }}"
            srcset="{{ section.settings.main_image | image_url: width: 600 }} 600w,
                    {{ section.settings.main_image | image_url: width: 900 }} 900w,
                    {{ section.settings.main_image | image_url: width: 1200 }} 1200w"
            sizes="(max-width: 768px) 100vw, 50vw"
            alt="{{ section.settings.main_image.alt | default: section.settings.tagline }}"
            class="wog__image"
            loading="lazy"
          >
        {% else %}
          <div class="wog__image-placeholder">
            {{ 'image' | placeholder_svg_tag: 'wog__placeholder-svg' }}
          </div>
        {% endif %}

        <!-- Dot Indicators -->
        {% if section.settings.show_dots %}
          <div class="wog__dots">
            {% if section.settings.dots_image != blank %}
              <img src="{{ section.settings.dots_image | image_url: width: 84 }}" alt="" class="wog__dots-image" loading="lazy">
            {% else %}
              <span class="wog__dot"></span>
              <span class="wog__dot"></span>
              <span class="wog__dot"></span>
              <span class="wog__dot"></span>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  /* ========================================
     WORKS ON GARMENT - BASE STYLES
     ======================================== */
  .wog {
    display: flex;
    padding: 64px 24px;
    flex-direction: column;
    align-items: center;
    gap: 48px;
    background: var(--wog-bg, #171717);
    border-bottom: 1px solid var(--wog-border, #EBEBEB);
    overflow: hidden;
  }

  .wog__container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 48px;
    width: 100%;
    max-width: 1400px;
  }

  /* ========================================
     LEFT CONTENT STYLES
     ======================================== */
  .wog__content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 24px;
    width: 100%;
  }

  .wog__tagline {
    font-family: inherit;
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--wog-tagline, #888888);
    margin: 0;
  }

  .wog__heading {
    font-family: inherit;
    font-size: clamp(28px, 6vw, 42px);
    font-weight: 700;
    line-height: 1.15;
    color: var(--wog-title, #FFFFFF);
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .wog__heading-line {
    display: block;
  }

  .wog__heading-highlight {
    display: inline-block;
    background: var(--wog-highlight-bg, #00D4D4);
    color: var(--wog-highlight-text, #000000);
    padding: 2px 8px;
    margin-right: 8px;
  }

  .wog__heading-underline {
    display: inline-block;
    text-decoration: underline;
    text-decoration-color: var(--wog-underline, #00D4D4);
    text-decoration-thickness: 3px;
    text-underline-offset: 6px;
  }

  .wog__description {
    font-family: inherit;
    font-size: 14px;
    font-weight: 400;
    line-height: 1.6;
    color: var(--wog-desc, #AAAAAA);
    margin: 0;
    max-width: 420px;
  }

  /* ========================================
     FABRIC ICONS STYLES
     ======================================== */
  .wog__fabrics {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    gap: 16px;
    margin-top: 8px;
  }

  .wog__fabric {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    min-width: 50px;
  }

  .wog__fabric-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    color: var(--wog-icon-label, #FFFFFF);
  }

  .wog__fabric-icon img {
    width: 28px;
    height: 28px;
    object-fit: contain;
    filter: brightness(0) invert(1);
  }

  .wog__fabric-icon-text {
    font-family: inherit;
    font-size: 14px;
    font-weight: 600;
    color: var(--wog-icon-label, #FFFFFF);
  }

  .wog__fabric-icon svg {
    width: 28px;
    height: 28px;
  }

  .wog__fabric-label {
    font-family: inherit;
    font-size: 11px;
    font-weight: 400;
    color: var(--wog-icon-label, #FFFFFF);
    text-align: center;
  }

  /* ========================================
     BUTTONS STYLES
     ======================================== */
  .wog__buttons {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 12px;
    margin-top: 8px;
  }

  .wog__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 24px;
    font-family: inherit;
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.2s ease;
    cursor: pointer;
    white-space: nowrap;
  }

  .wog__btn--primary {
    background: var(--wog-btn-primary-bg, #1A1A1A);
    color: var(--wog-btn-primary-text, #FFFFFF);
    border: 2px solid var(--wog-btn-primary-bg, #1A1A1A);
  }

  .wog__btn--primary:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  .wog__btn--secondary {
    background: var(--wog-btn-secondary-bg, #FFFFFF);
    color: var(--wog-btn-secondary-text, #000000);
    border: 2px solid var(--wog-btn-secondary-border, #FFFFFF);
  }

  .wog__btn--secondary:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  /* ========================================
     IMAGE WRAPPER STYLES
     ======================================== */
  .wog__image-wrapper {
    width: 100%;
    position: relative;
  }

  .wog__image-container {
    position: relative;
    width: 100%;
    border-radius: 12px;
    overflow: hidden;
  }

  .wog__image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    aspect-ratio: 16 / 10;
  }

  .wog__image-placeholder {
    width: 100%;
    aspect-ratio: 16 / 10;
    background: #2D2D2D;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .wog__placeholder-svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  /* ========================================
     DOTS INDICATOR STYLES
     ======================================== */
  .wog__dots {
    position: absolute;
    left: 50%;
    bottom: 20px;
    transform: translateX(-50%);
    display: flex;
    flex-direction: row;
    gap: 8px;
  }

  .wog__dots-image {
    height: 12px;
    width: auto;
  }

  .wog__dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--wog-dots, #D4A000);
  }

  /* ========================================
     RESPONSIVE - SMALL MOBILE (400px+)
     ======================================== */
  @media (min-width: 400px) {
    .wog {
      padding: 72px 28px;
      gap: 56px;
    }

    .wog__tagline {
      font-size: 13px;
    }

    .wog__description {
      font-size: 15px;
    }

    .wog__fabric {
      min-width: 45px;
    }

    .wog__fabric-icon {
      width: 36px;
      height: 36px;
    }

    .wog__fabric-label {
      font-size: 12px;
    }
  }

  /* ========================================
     RESPONSIVE - MOBILE LANDSCAPE (550px+)
     ======================================== */
  @media (min-width: 550px) {
    .wog {
      padding: 80px 36px;
      gap: 64px;
    }

    .wog__content {
      gap: 28px;
    }

    .wog__tagline {
      font-size: 14px;
    }

    .wog__heading {
      gap: 6px;
    }

    .wog__heading-highlight {
      padding: 3px 10px;
    }

    .wog__fabrics {
      gap: 24px;
    }

    .wog__fabric {
      min-width: 50px;
    }

    .wog__fabric-icon {
      width: 36px;
      height: 36px;
    }

    .wog__fabric-icon img {
      width: 32px;
      height: 32px;
    }

    .wog__btn {
      padding: 16px 28px;
      font-size: 14px;
    }
  }

  /* ========================================
     RESPONSIVE - TABLET (768px+)
     ======================================== */
  @media (min-width: 768px) {
    .wog {
      padding: 88px 48px;
      gap: 80px;
    }

    .wog__container {
      flex-direction: row;
      align-items: center;
      gap: 48px;
    }

    .wog__content {
      flex: 1;
      max-width: 50%;
    }

    .wog__image-wrapper {
      flex: 1;
      max-width: 50%;
    }

    .wog__image {
      aspect-ratio: 4 / 3;
    }
  }

  /* ========================================
     RESPONSIVE - DESKTOP (1024px+)
     ======================================== */
  @media (min-width: 1024px) {
    .wog {
      padding: 96px 48px;
    }

    .wog__container {
      gap: 64px;
    }

    .wog__content {
      gap: 32px;
    }

    .wog__heading-underline {
      text-decoration-thickness: 4px;
      text-underline-offset: 8px;
    }

    .wog__description {
      font-size: 16px;
      max-width: 460px;
    }

    .wog__fabrics {
      gap: 28px;
    }

    .wog__fabric-icon {
      width: 36px;
      height: 36px;
    }

    .wog__fabric-icon img {
      width: 32px;
      height: 32px;
    }

    .wog__fabric-icon-text {
      font-size: 16px;
    }

    .wog__fabric-label {
      font-size: 12px;
    }

    .wog__buttons {
      gap: 16px;
      margin-top: 12px;
    }

    .wog__btn {
      padding: 16px 32px;
    }

    .wog__dot {
      width: 12px;
      height: 12px;
    }
  }

  /* ========================================
     RESPONSIVE - LARGE DESKTOP (1200px+)
     ======================================== */
  @media (min-width: 1200px) {
    .wog__container {
      gap: 80px;
    }

    .wog__content {
      max-width: 520px;
    }

    .wog__image-wrapper {
      max-width: 600px;
    }

    .wog__image {
      aspect-ratio: 16 / 11;
    }
  }

  /* ========================================
     RESPONSIVE - XL DESKTOP (1400px+)
     ======================================== */
  @media (min-width: 1400px) {
    .wog {
      padding: 96px 64px;
    }

    .wog__container {
      gap: 100px;
    }

    .wog__content {
      max-width: 560px;
    }

    .wog__image-wrapper {
      max-width: 650px;
    }
  }

  /* ========================================
     RESPONSIVE - XXL DESKTOP (1600px+)
     ======================================== */
  @media (min-width: 1600px) {
    .wog__container {
      max-width: 1500px;
    }

    .wog__content {
      max-width: 600px;
    }

    .wog__image-wrapper {
      max-width: 700px;
    }
  }
</style>

{% schema %}
{
  "name": "Works On Garment",
  "tag": "section",
  "class": "wog-section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "WORKS ON ANY GARMENT"
    },
    {
      "type": "text",
      "id": "heading_line1",
      "label": "Heading Line 1",
      "default": "STAND OUT WITH"
    },
    {
      "type": "text",
      "id": "heading_highlight",
      "label": "Highlighted Text (with background)",
      "default": "DTFSHEET™"
    },
    {
      "type": "text",
      "id": "heading_line2",
      "label": "Heading Line 2 (after highlight)",
      "default": "TRANSFERS -"
    },
    {
      "type": "text",
      "id": "heading_line3",
      "label": "Heading Line 3",
      "default": "CRISP RESULTS ON"
    },
    {
      "type": "text",
      "id": "heading_underline",
      "label": "Underlined Text",
      "default": "ANY GARMENT"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "DTFSheet™ transfers apply cleanly onto cotton, linen, bamboo, wool, nylon blends, and more. Compatible with 20+ fabric types and counting."
    },
    {
      "type": "header",
      "content": "Primary Button"
    },
    {
      "type": "text",
      "id": "btn_primary_text",
      "label": "Primary Button Text",
      "default": "UPLOAD & PRINT NOW"
    },
    {
      "type": "url",
      "id": "btn_primary_link",
      "label": "Primary Button Link"
    },
    {
      "type": "header",
      "content": "Secondary Button"
    },
    {
      "type": "text",
      "id": "btn_secondary_text",
      "label": "Secondary Button Text",
      "default": "BUILD GANG SHEET"
    },
    {
      "type": "url",
      "id": "btn_secondary_link",
      "label": "Secondary Button Link"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "checkbox",
      "id": "show_dots",
      "label": "Show Dot Indicators",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "dots_image",
      "label": "Custom Dots Image (optional)"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#171717"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#EBEBEB"
    },
    {
      "type": "color",
      "id": "tagline_color",
      "label": "Tagline Color",
      "default": "#888888"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "highlight_bg_color",
      "label": "Highlight Background",
      "default": "#00D4D4"
    },
    {
      "type": "color",
      "id": "highlight_text_color",
      "label": "Highlight Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "underline_color",
      "label": "Underline Color",
      "default": "#00D4D4"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Color",
      "default": "#AAAAAA"
    },
    {
      "type": "color",
      "id": "icon_label_color",
      "label": "Icon & Label Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "btn_primary_bg",
      "label": "Primary Button Background",
      "default": "#1A1A1A"
    },
    {
      "type": "color",
      "id": "btn_primary_text_color",
      "label": "Primary Button Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "btn_secondary_bg",
      "label": "Secondary Button Background",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "btn_secondary_text_color",
      "label": "Secondary Button Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "btn_secondary_border",
      "label": "Secondary Button Border",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "dots_color",
      "label": "Dots Color",
      "default": "#D4A000"
    }
  ],
  "blocks": [
    {
      "type": "fabric_icon",
      "name": "Fabric Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "icon_text",
          "label": "Icon Text (if no image)",
          "info": "Used if no icon image is uploaded (e.g., '20+')"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Fabric"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Works On Garment",
      "blocks": [
        {
          "type": "fabric_icon",
          "settings": {
            "label": "Leather"
          }
        },
        {
          "type": "fabric_icon",
          "settings": {
            "label": "Linen"
          }
        },
        {
          "type": "fabric_icon",
          "settings": {
            "label": "Wool"
          }
        },
        {
          "type": "fabric_icon",
          "settings": {
            "label": "Bamboo"
          }
        },
        {
          "type": "fabric_icon",
          "settings": {
            "label": "Cotton"
          }
        },
        {
          "type": "fabric_icon",
          "settings": {
            "icon_text": "20+",
            "label": "Fabrics"
          }
        }
      ]
    }
  ]
}
{% endschema %}
