{% comment %}
  Hero 38-3 Section - Pilates Equipment Style
  Image left, Content right with rounded card container and feature badges
{% endcomment %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 990px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .hero-38-3-{{ section.id }} {
    --hero38-3-bg: {{ section.settings.background_color }};
    --hero38-3-card-bg: {{ section.settings.card_background }};
    --hero38-3-heading-color: {{ section.settings.heading_color }};
    --hero38-3-text-color: {{ section.settings.text_color }};
    --hero38-3-accent: {{ section.settings.accent_color }};
    --hero38-3-button-border: {{ section.settings.button_border_color }};
  }
{%- endstyle -%}

<div class="hero-38-3 hero-38-3-{{ section.id }} section-{{ section.id }}-padding">
  <div class="hero-38-3__container {% if section.settings.full_width %}hero-38-3__container--full{% else %}page-width{% endif %}">
    <div class="hero-38-3__card">
      <div class="hero-38-3__grid">
        <!-- Image Side -->
        <div class="hero-38-3__media">
          {%- if section.settings.image != blank -%}
            <img
              src="{{ section.settings.image | image_url: width: 1200 }}"
              srcset="{{ section.settings.image | image_url: width: 600 }} 600w,
                      {{ section.settings.image | image_url: width: 900 }} 900w,
                      {{ section.settings.image | image_url: width: 1200 }} 1200w"
              sizes="(max-width: 989px) 100vw, 50vw"
              alt="{{ section.settings.image.alt | default: section.settings.heading }}"
              loading="lazy"
              class="hero-38-3__image"
            >
          {%- else -%}
            <div class="hero-38-3__placeholder">
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {%- endif -%}
        </div>

        <!-- Content Side -->
        <div class="hero-38-3__content">
          {%- if section.settings.subheading != blank -%}
            <p class="hero-38-3__subheading">{{ section.settings.subheading }}</p>
          {%- endif -%}

          {%- if section.settings.heading != blank -%}
            <h2 class="hero-38-3__heading">{{ section.settings.heading }}</h2>
          {%- endif -%}

          {%- if section.settings.button_text != blank -%}
            <a href="{{ section.settings.button_link }}" class="hero-38-3__button">
              {{ section.settings.button_text }}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="16" height="16">
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </a>
          {%- endif -%}

          <!-- Feature Bullets with Icons -->
          <div class="hero-38-3__features">
            {%- for block in section.blocks -%}
              {%- if block.type == 'feature' -%}
                <div class="hero-38-3__feature" {{ block.shopify_attributes }}>
                  <div class="hero-38-3__feature-icon">
                    {%- if block.settings.icon_svg != blank -%}
                      {{ block.settings.icon_svg }}
                    {%- else -%}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12"></polyline>
                      </svg>
                    {%- endif -%}
                  </div>
                  <div class="hero-38-3__feature-content">
                    {%- if block.settings.feature_title != blank -%}
                      <span class="hero-38-3__feature-title">{{ block.settings.feature_title }}</span>
                    {%- endif -%}
                    {%- if block.settings.feature_text != blank -%}
                      <span class="hero-38-3__feature-text">{{ block.settings.feature_text }}</span>
                    {%- endif -%}
                  </div>
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>

          <!-- Trust Badges -->
          <div class="hero-38-3__badges">
            {%- for block in section.blocks -%}
              {%- if block.type == 'badge' -%}
                <div class="hero-38-3__badge" {{ block.shopify_attributes }}>
                  <div class="hero-38-3__badge-icon">
                    {%- if block.settings.badge_svg != blank -%}
                      {{ block.settings.badge_svg }}
                    {%- else -%}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                      </svg>
                    {%- endif -%}
                  </div>
                  <span class="hero-38-3__badge-text">{{ block.settings.badge_text }}</span>
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .hero-38-3 {
    background-color: var(--hero38-3-bg);
    width: 100%;
  }

  .hero-38-3__container {
    width: 100%;
  }

  .hero-38-3__container--full {
    max-width: 1500px;
    margin: 0 auto;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  @media screen and (min-width: 750px) {
    .hero-38-3__container--full {
      padding-left: 3rem;
      padding-right: 3rem;
    }
  }

  @media screen and (min-width: 990px) {
    .hero-38-3__container--full {
      padding-left: 3rem;
      padding-right: 3rem;
    }
  }

  .hero-38-3__card {
    background-color: var(--hero38-3-card-bg);
    border-radius: 20px;
    overflow: hidden;
  }

  @media screen and (min-width: 990px) {
    .hero-38-3__card {
      border-radius: 28px;
    }
  }

  .hero-38-3__grid {
    display: grid;
    grid-template-columns: 1fr;
  }

  @media screen and (min-width: 990px) {
    .hero-38-3__grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  /* Media */
  .hero-38-3__media {
    position: relative;
    aspect-ratio: 4 / 3;
    overflow: hidden;
  }

  @media screen and (min-width: 990px) {
    .hero-38-3__media {
      aspect-ratio: auto;
      min-height: 500px;
    }
  }

  .hero-38-3__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-38-3__placeholder {
    width: 100%;
    height: 100%;
    background-color: #e8e4dc;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-38-3__placeholder .placeholder-svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  /* Content */
  .hero-38-3__content {
    padding: 32px 24px;
    display: flex;
    flex-direction: column;
  }

  @media screen and (min-width: 990px) {
    .hero-38-3__content {
      padding: 48px 56px;
      justify-content: center;
    }
  }

  .hero-38-3__subheading {
    font-size: 13px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--hero38-3-text-color);
    margin: 0 0 8px;
    opacity: 0.7;
  }

  @media screen and (min-width: 990px) {
    .hero-38-3__subheading {
      font-size: 14px;
      margin-bottom: 10px;
    }
  }

  .hero-38-3__heading {
    font-family: 'Figtree', sans-serif;
    font-size: 36px;
    font-weight: 800;
    line-height: 1.1;
    color: var(--hero38-3-heading-color);
    margin: 0 0 20px;
  }

  @media screen and (min-width: 750px) {
    .hero-38-3__heading {
      font-size: 48px;
    }
  }

  @media screen and (min-width: 990px) {
    .hero-38-3__heading {
      font-size: 56px;
      margin-bottom: 24px;
    }
  }

  .hero-38-3__button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 0;
    background: none;
    border: none;
    color: var(--hero38-3-heading-color);
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    border-bottom: 1px solid var(--hero38-3-button-border);
    padding-bottom: 4px;
    transition: all 0.3s ease;
    align-self: flex-start;
    margin-bottom: 32px;
  }

  @media screen and (min-width: 990px) {
    .hero-38-3__button {
      margin-bottom: 40px;
    }
  }

  .hero-38-3__button:hover {
    opacity: 0.7;
  }

  .hero-38-3__button svg {
    transition: transform 0.3s ease;
  }

  .hero-38-3__button:hover svg {
    transform: translateX(4px);
  }

  /* Features */
  .hero-38-3__features {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-bottom: 32px;
  }

  @media screen and (min-width: 990px) {
    .hero-38-3__features {
      gap: 24px;
      margin-bottom: 40px;
    }
  }

  .hero-38-3__feature {
    display: flex;
    align-items: flex-start;
    gap: 14px;
  }

  .hero-38-3__feature-icon {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--hero38-3-accent);
    flex-shrink: 0;
    margin-top: 2px;
  }

  .hero-38-3__feature-icon svg {
    width: 100%;
    height: 100%;
  }

  .hero-38-3__feature-content {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .hero-38-3__feature-title {
    font-size: 14px;
    font-weight: 600;
    color: var(--hero38-3-heading-color);
  }

  .hero-38-3__feature-text {
    font-size: 14px;
    line-height: 1.5;
    color: var(--hero38-3-text-color);
  }

  /* Badges */
  .hero-38-3__badges {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    padding-top: 24px;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  @media screen and (min-width: 750px) {
    .hero-38-3__badges {
      gap: 24px;
    }
  }

  .hero-38-3__badge {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .hero-38-3__badge-icon {
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--hero38-3-text-color);
    opacity: 0.7;
  }

  .hero-38-3__badge-icon svg {
    width: 100%;
    height: 100%;
  }

  .hero-38-3__badge-text {
    font-size: 12px;
    color: var(--hero38-3-text-color);
    opacity: 0.7;
  }

  @media screen and (min-width: 990px) {
    .hero-38-3__badge-text {
      font-size: 13px;
    }
  }
</style>

{% schema %}
