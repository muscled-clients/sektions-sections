      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Bullet",
      "settings": [
        {
          "type": "text",
          "id": "feature_title",
          "label": "Feature title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "feature_text",
          "label": "Feature description",
          "default": "Brief description of this feature benefit."
        },
        {
          "type": "html",
          "id": "icon_svg",
          "label": "Custom SVG icon",
          "info": "Paste SVG code here for custom icon"
        }
      ]
    },
    {
      "type": "badge",
      "name": "Trust Badge",
      "settings": [
        {
          "type": "text",
          "id": "badge_text",
          "label": "Badge text",
          "default": "Secure Payment"
        },
        {
          "type": "html",
          "id": "badge_svg",
          "label": "Custom SVG icon",
          "info": "Paste SVG code here for custom icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero 38-3",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "feature_title": "Premium Quality",
            "feature_text": "Crafted from high-grade materials for durability and performance during every workout."
          }
        },
        {
          "type": "feature",
          "settings": {
            "feature_title": "Complete Set",
            "feature_text": "Everything you need to start your Pilates journey at home or in the studio."
          }
        },
        {
          "type": "feature",
          "settings": {
            "feature_title": "Expert Approved",
            "feature_text": "Designed with input from professional Pilates instructors worldwide."
          }
        },
        {
          "type": "badge",
          "settings": {
            "badge_text": "Secure Payment"
          }
        },
        {
          "type": "badge",
          "settings": {
            "badge_text": "24/7 Support"
          }
        },
        {
          "type": "badge",
          "settings": {
            "badge_text": "Easy Returns"
          }
        }
      ]
    }
  ]
}
