      "default": "Equipment"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Pilates Essential Kit"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "SHOP PILATES ESSENTIALS"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f5f3ef"
    },
    {
      "type": "color",
      "id": "card_background",
      "label": "Card background",
      "default": "#f9f7f3"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#2d2a26"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#67645e"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent color (icons)",
      "default": "#d4b872"
    },
    {
      "type": "color",
      "id": "button_border_color",
      "label": "Button border color",
      "default": "#2d2a26"
    },
    {
      "type": "header",
      "content": "Layout"
    },
