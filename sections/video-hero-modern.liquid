<style>
  .video-hero-modern {
    position: relative;
    width: 100%;
    height: {{ section.settings.section_height }}vh;
    min-height: {{ section.settings.min_height }}px;
    overflow: hidden;
    background-color: #000;
  }

  .video-hero-modern__video-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .video-hero-modern__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-hero-modern__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to right, transparent 0%, rgba(0,0,0,{{ section.settings.overlay_opacity | divided_by: 100.0 }}) 60%);
    z-index: 2;
    pointer-events: none;
  }

  .video-hero-modern__pause-btn {
    position: absolute;
    top: {{ section.settings.pause_btn_top }}px;
    right: {{ section.settings.pause_btn_right }}px;
    z-index: 10;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .video-hero-modern__pause-btn:hover {
    background-color: rgba(255, 255, 255, 0.25);
  }

  .video-hero-modern__pause-btn svg {
    width: 14px;
    height: 14px;
    fill: #ffffff;
  }

  .video-hero-modern__pause-icon,
  .video-hero-modern__play-icon {
    display: none;
  }

  .video-hero-modern__pause-btn[data-playing="true"] .video-hero-modern__pause-icon {
    display: block;
  }

  .video-hero-modern__pause-btn[data-playing="false"] .video-hero-modern__play-icon {
    display: block;
  }

  .video-hero-modern__container {
    position: relative;
    z-index: 5;
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    height: 100%;
    padding: 0 {{ section.settings.container_padding }}px;
    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
  }

  .video-hero-modern__content {
    text-align: right;
    max-width: {{ section.settings.content_max_width }}px;
    padding: 0 0 {{ section.settings.content_padding_bottom }}px;
  }

  .video-hero-modern__title {
    font-family: {{ section.settings.title_font }}, sans-serif;
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    line-height: 1.15;
    color: {{ section.settings.title_color }};
    margin: 0 0 {{ section.settings.title_margin_bottom }}px 0;
    letter-spacing: -0.5px;
  }

  .video-hero-modern__subtitle {
    font-family: {{ section.settings.body_font }}, sans-serif;
    font-size: {{ section.settings.subtitle_size }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.subtitle_color }};
    margin: 0 0 {{ section.settings.subtitle_margin_bottom }}px 0;
    opacity: 0.9;
  }

  .video-hero-modern__buttons {
    display: flex;
    gap: {{ section.settings.buttons_gap }}px;
    justify-content: flex-end;
    flex-wrap: wrap;
  }

  .video-hero-modern__button {
    display: inline-block;
    padding: 12px 22px;
    font-family: {{ section.settings.body_font }}, sans-serif;
    font-size: 13px;
    font-weight: 500;
    color: #ffffff;
    background-color: rgba(40, 40, 40, 0.65);
    border: 1px solid rgba(255, 255, 255, 0.25);
    border-radius: 4px;
    text-decoration: none;
    transition: all 0.25s ease;
    cursor: pointer;
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
  }

  .video-hero-modern__button:hover {
    background-color: rgba(30, 30, 30, 0.8);
    transform: scale(1.02);
  }

  .video-hero-modern__button--secondary {
    background-color: rgba(40, 40, 40, 0.65);
  }

  .video-hero-modern__button--secondary:hover {
    background-color: rgba(30, 30, 30, 0.8);
  }

  @media (max-width: 1024px) {
    .video-hero-modern__title {
      font-size: {{ section.settings.title_size | minus: 10 }}px;
    }

    .video-hero-modern__subtitle {
      font-size: {{ section.settings.subtitle_size | minus: 2 }}px;
    }

    .video-hero-modern__button {
      padding: {{ section.settings.button_padding_vertical | minus: 2 }}px {{ section.settings.button_padding_horizontal | minus: 6 }}px;
      font-size: {{ section.settings.button_font_size | minus: 1 }}px;
    }
  }

  @media (max-width: 768px) {
    .video-hero-modern {
      height: {{ section.settings.mobile_section_height }}vh;
      min-height: {{ section.settings.mobile_min_height }}px;
    }

    .video-hero-modern__overlay {
      background: rgba(0,0,0,0.15);
    }

    .video-hero-modern__container {
      justify-content: center;
      align-items: center;
      padding: 0 20px;
    }

    .video-hero-modern__content {
      text-align: center;
      max-width: 100%;
      padding: 0;
    }

    .video-hero-modern__title {
      font-size: {{ section.settings.mobile_title_size }}px;
      font-weight: 700;
      margin-bottom: 15px;
    }

    .video-hero-modern__subtitle {
      font-size: {{ section.settings.mobile_subtitle_size }}px;
      margin-bottom: 25px;
      line-height: 1.5;
    }

    .video-hero-modern__buttons {
      justify-content: center;
      flex-direction: row;
      gap: 12px;
    }

    .video-hero-modern__button {
      width: auto;
      text-align: center;
      padding: 14px 28px;
      font-size: 14px;
    }

    .video-hero-modern__pause-btn {
      top: 15px;
      right: 15px;
      width: 32px;
      height: 32px;
    }

    .video-hero-modern__pause-btn svg {
      width: 12px;
      height: 12px;
    }
  }
</style>

<section class="video-hero-modern" data-section-id="{{ section.id }}">
  <div class="video-hero-modern__video-wrapper">
    {% if section.settings.video != blank %}
      {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true, playsinline: true, class: 'video-hero-modern__video' }}
    {% elsif section.settings.video_url != blank %}
      <video class="video-hero-modern__video" autoplay loop muted playsinline>
        <source src="{{ section.settings.video_url }}" type="video/mp4">
      </video>
    {% elsif section.settings.fallback_image != blank %}
      <img
        src="{{ section.settings.fallback_image | image_url: width: 1920 }}"
        alt="{{ section.settings.title }}"
        class="video-hero-modern__video"
        loading="eager"
      />
    {% else %}
      <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);"></div>
    {% endif %}
  </div>

  <div class="video-hero-modern__overlay"></div>

  <button class="video-hero-modern__pause-btn" data-playing="true" aria-label="Pause video">
    <svg class="video-hero-modern__pause-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <rect x="6" y="4" width="4" height="16" rx="1"/>
      <rect x="14" y="4" width="4" height="16" rx="1"/>
    </svg>
    <svg class="video-hero-modern__play-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path d="M8 5v14l11-7z"/>
    </svg>
  </button>

  <div class="video-hero-modern__container">
    <div class="video-hero-modern__content">
      {% if section.settings.title != blank %}
        <h1 class="video-hero-modern__title">{{ section.settings.title }}</h1>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <p class="video-hero-modern__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}

      {% if section.settings.button_1_text != blank or section.settings.button_2_text != blank %}
        <div class="video-hero-modern__buttons">
          {% if section.settings.button_1_text != blank %}
            <a href="{{ section.settings.button_1_link }}" class="video-hero-modern__button">
              {{ section.settings.button_1_text }}
            </a>
          {% endif %}
          {% if section.settings.button_2_text != blank %}
            <a href="{{ section.settings.button_2_link }}" class="video-hero-modern__button video-hero-modern__button--secondary">
              {{ section.settings.button_2_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<script>
  (function() {
    const section = document.querySelector('[data-section-id="{{ section.id }}"]');
    const pauseBtn = section.querySelector('.video-hero-modern__pause-btn');
    const video = section.querySelector('.video-hero-modern__video');

    if (pauseBtn && video && video.tagName === 'VIDEO') {
      pauseBtn.addEventListener('click', function() {
        if (video.paused) {
          video.play();
          pauseBtn.setAttribute('data-playing', 'true');
          pauseBtn.setAttribute('aria-label', 'Pause video');
        } else {
          video.pause();
          pauseBtn.setAttribute('data-playing', 'false');
          pauseBtn.setAttribute('aria-label', 'Play video');
        }
      });
    }
  })();
</script>

