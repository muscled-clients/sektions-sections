{{ 'video-feature-cards.css' | asset_url | stylesheet_tag }}

<div class="video-feature-cards" style="--section-padding-top: {{ section.settings.padding_top }}px; --section-padding-bottom: {{ section.settings.padding_bottom }}px; --section-padding-left: {{ section.settings.padding_left }}px; --section-padding-right: {{ section.settings.padding_right }}px; --mobile-padding-top: {{ section.settings.mobile_padding_top }}px; --mobile-padding-bottom: {{ section.settings.mobile_padding_bottom }}px; --mobile-padding-left: {{ section.settings.mobile_padding_left }}px; --mobile-padding-right: {{ section.settings.mobile_padding_right }}px; --desktop-gap: {{ section.settings.desktop_gap }}px; --mobile-gap: {{ section.settings.mobile_gap }}px; --section-bg: {{ section.settings.background_color }}; --card-radius: {{ section.settings.card_border_radius }}px; --text-color: {{ section.settings.text_color }}; --text-size: {{ section.settings.text_size }}px; --text-size-mobile: {{ section.settings.text_size_mobile }}px; --text-weight: {{ section.settings.text_weight }}; --container-width: {{ section.settings.container_width }}px; --card-aspect-ratio: {{ section.settings.card_aspect_ratio }}; --card-aspect-ratio-mobile: {{ section.settings.card_aspect_ratio_mobile }}; --shadow-intensity: {{ section.settings.shadow_intensity }}; --video-speed: {{ section.settings.video_speed }};">
  <div class="video-feature-cards__container page-width">
    <div class="video-feature-cards__grid">
      {% for block in section.blocks %}
        <div class="video-feature-card" {{ block.shopify_attributes }}>
          <div class="video-feature-card__inner">
            <div class="video-feature-card__media">
              {% if block.settings.video != blank %}
                {{ block.settings.video | video_tag: autoplay: true, loop: true, muted: true, playsinline: true, controls: false, class: 'video-feature-card__video', data-speed: section.settings.video_speed }}
              {% elsif block.settings.video_url != blank %}
                {% if block.settings.video_url.type == 'youtube' %}
                  <iframe
                    src="https://www.youtube.com/embed/{{ block.settings.video_url.id }}?autoplay=1&mute=1&loop=1&playlist={{ block.settings.video_url.id }}&controls=0&showinfo=0&rel=0&modestbranding=1"
                    class="video-feature-card__video"
                    frameborder="0"
                    allow="autoplay; encrypted-media"
                    allowfullscreen>
                  </iframe>
                {% elsif block.settings.video_url.type == 'vimeo' %}
                  <iframe
                    src="https://player.vimeo.com/video/{{ block.settings.video_url.id }}?autoplay=1&muted=1&loop=1&background=1"
                    class="video-feature-card__video"
                    frameborder="0"
                    allow="autoplay; encrypted-media"
                    allowfullscreen>
                  </iframe>
                {% endif %}
              {% else %}
                <div class="video-feature-card__placeholder">
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
              <div class="video-feature-card__overlay video-feature-card__overlay--{{ block.settings.text_position }}">
                <span class="video-feature-card__label">{{ block.settings.label }}</span>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .video-feature-cards {
    padding-top: var(--section-padding-top);
    padding-bottom: var(--section-padding-bottom);
    background: var(--section-bg);
  }

  .video-feature-cards__container {
    max-width: var(--container-width);
    margin: 0 auto;
    padding: 0 var(--section-padding-right) 0 var(--section-padding-left);
  }

  .video-feature-cards__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--desktop-gap);
    align-items: stretch;
  }

  .video-feature-card {
    background: transparent;
    border-radius: var(--card-radius);
    overflow: visible;
    box-shadow: 0 8px 32px rgba(0, 0, 0, var(--shadow-intensity)), 0 2px 8px rgba(0, 0, 0, calc(var(--shadow-intensity) * 0.67));
    transition: box-shadow 0.3s ease;
  }

  .video-feature-card:hover {
    box-shadow: 0 12px 40px rgba(0, 0, 0, calc(var(--shadow-intensity) * 1.25)), 0 4px 12px rgba(0, 0, 0, calc(var(--shadow-intensity) * 0.83));
  }

  .video-feature-card__inner {
    padding: 0;
  }

  .video-feature-card__media {
    position: relative;
    width: 100%;
    padding-top: var(--card-aspect-ratio);
    overflow: hidden;
    border-radius: var(--card-radius);
  }

  .video-feature-card__video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: var(--card-radius);
  }

  .video-feature-card__placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(160deg, #c8dced 0%, #a3c4db 100%);
    border-radius: var(--card-radius);
  }

  .video-feature-card__placeholder .placeholder-svg {
    width: 60%;
    height: 60%;
    opacity: 0.4;
  }

  .video-feature-card__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    pointer-events: none;
  }

  .video-feature-card__overlay--top-left { align-items: flex-start; justify-content: flex-start; }
  .video-feature-card__overlay--top-center { align-items: flex-start; justify-content: center; }
  .video-feature-card__overlay--top-right { align-items: flex-start; justify-content: flex-end; }
  .video-feature-card__overlay--center-left { align-items: center; justify-content: flex-start; }
  .video-feature-card__overlay--center { align-items: center; justify-content: center; }
  .video-feature-card__overlay--center-right { align-items: center; justify-content: flex-end; }
  .video-feature-card__overlay--bottom-left { align-items: flex-end; justify-content: flex-start; }
  .video-feature-card__overlay--bottom-center { align-items: flex-end; justify-content: center; }
  .video-feature-card__overlay--bottom-right { align-items: flex-end; justify-content: flex-end; }

  .video-feature-card__label {
    color: var(--text-color);
    font-size: var(--text-size);
    font-weight: var(--text-weight);
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    letter-spacing: 0.3px;
  }

  @media screen and (max-width: 749px) {
    .video-feature-cards {
      padding-top: var(--mobile-padding-top);
      padding-bottom: var(--mobile-padding-bottom);
    }

    .video-feature-cards__container {
      padding: 0 var(--mobile-padding-right) 0 var(--mobile-padding-left);
    }

    .video-feature-cards__grid {
      grid-template-columns: 1fr;
      gap: var(--mobile-gap);
    }

    .video-feature-card__media {
      padding-top: var(--card-aspect-ratio-mobile);
    }

    .video-feature-card__label {
      font-size: var(--text-size-mobile);
    }
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .video-feature-card__label {
      font-size: calc(var(--text-size) - 4px);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const videos = document.querySelectorAll('.video-feature-card__video');
    const speed = parseFloat(getComputedStyle(document.querySelector('.video-feature-cards')).getPropertyValue('--video-speed')) || 1;
    videos.forEach(function(video) {
      if (video.tagName === 'VIDEO') {
        video.playbackRate = speed;
      }
    });
  });
</script>

