{% comment %}
  Image Grid Collections
  A responsive grid layout showcasing collection items with images and labels
{% endcomment %}

<div class="image-grid-collections" data-section-id="{{ section.id }}" style="--shadow-opacity: {{ section.settings.shadow_opacity | divided_by: 100.0 }}; --shadow-height: {{ section.settings.shadow_height }}%; --container-width: {{ section.settings.container_width }}px; --card-gap: {{ section.settings.card_gap }}px;">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="image-grid-collections__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="image-grid-collections__grid">
      {% for block in section.blocks %}
        <a
          href="{{ block.settings.collection_link }}"
          class="image-grid-collections__item {% if forloop.first or forloop.last %}image-grid-collections__item--wide{% endif %}"
          data-index="{{ forloop.index }}"
        >
          <div class="image-grid-collections__image-wrapper">
            {% if block.settings.image %}
              <img
                src="{{ block.settings.image | img_url: '800x' }}"
                alt="{{ block.settings.label }}"
                loading="lazy"
                class="image-grid-collections__image"
              >
            {% else %}
              <div class="image-grid-collections__placeholder">
                {{ 'collection-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
            {% if block.settings.label != blank %}
              <div class="image-grid-collections__label">{{ block.settings.label }}</div>
            {% endif %}
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.image-grid-collections {
  padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  background: {{ section.settings.background_color }};
}

.page-width {
  max-width: var(--container-width, 1400px);
  margin: 0 auto;
  padding: 0 20px;
}

.image-grid-collections__heading {
  text-align: center;
  font-size: {{ section.settings.heading_size }}px;
  font-weight: {{ section.settings.heading_weight }};
  margin: 0 0 {{ section.settings.heading_margin_bottom }}px;
  color: {{ section.settings.heading_color }};
  text-transform: capitalize;
}

.image-grid-collections__grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-auto-rows: 300px;
  gap: var(--card-gap, 15px);
}

.image-grid-collections__item {
  position: relative;
  display: block;
  overflow: hidden;
  text-decoration: none;
  border-radius: 0;
}

.image-grid-collections__item--wide {
  grid-column: span 2;
}

.image-grid-collections__image-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.image-grid-collections__image-wrapper::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: var(--shadow-height, 50%);
  background: linear-gradient(to top, rgba(0, 0, 0, var(--shadow-opacity, 0.7)) 0%, rgba(0, 0, 0, 0) 100%);
  pointer-events: none;
  z-index: 1;
}

.image-grid-collections__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  transition: transform 0.6s ease;
}

.image-grid-collections__placeholder {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-grid-collections__placeholder svg {
  width: 60%;
  height: 60%;
  opacity: 0.3;
}

.image-grid-collections__label {
  position: absolute;
  bottom: 15px;
  left: 15px;
  color: {{ section.settings.label_color }};
  font-size: {{ section.settings.label_size }}px;
  font-weight: 700;
  letter-spacing: 1px;
  text-transform: uppercase;
  z-index: 3;
  pointer-events: none;
}

/* Hover Effect */
.image-grid-collections__item:hover .image-grid-collections__image {
  transform: scale(1.1);
}

/* Tablet Layout (â‰¥768px and <1200px) */
@media screen and (min-width: 768px) and (max-width: 1199px) {
  .image-grid-collections__grid {
    grid-template-columns: repeat(2, 1fr);
    grid-auto-rows: 280px;
  }

  .image-grid-collections__item--wide {
    grid-column: span 2;
  }
}

/* Mobile Layout (<768px) */
@media screen and (max-width: 767px) {
  .image-grid-collections {
    padding: calc({{ section.settings.padding_top }}px * 0.67) 0 calc({{ section.settings.padding_bottom }}px * 0.67);
  }

  .image-grid-collections__heading {
    font-size: calc({{ section.settings.heading_size }}px * 0.75);
    margin-bottom: calc({{ section.settings.heading_margin_bottom }}px * 0.75);
  }

  .image-grid-collections__grid {
    grid-template-columns: repeat(2, 1fr);
    grid-auto-rows: 200px;
    gap: calc(var(--card-gap, 15px) * 0.67);
  }

  /* Row 1: Backpacks (wide) */
  .image-grid-collections__item[data-index="1"] {
    grid-column: span 2;
  }

  /* Row 2: Caps, Cardigans (2 small cards) */
  .image-grid-collections__item[data-index="2"],
  .image-grid-collections__item[data-index="3"] {
    grid-column: span 1;
  }

  /* Row 3: Home Page, Mugs (2 small cards) */
  .image-grid-collections__item[data-index="4"],
  .image-grid-collections__item[data-index="5"] {
    grid-column: span 1;
  }

  /* Row 4: Pullovers (wide) */
  .image-grid-collections__item[data-index="6"] {
    grid-column: span 2;
  }

  .image-grid-collections__label {
    font-size: calc({{ section.settings.label_size }}px * 0.83);
    bottom: 10px;
    left: 10px;
  }
}

/* Very Small Mobile (<480px) */
@media screen and (max-width: 479px) {
  .page-width {
    padding: 0 15px;
  }

  .image-grid-collections__heading {
    font-size: calc({{ section.settings.heading_size }}px * 0.625);
    margin-bottom: calc({{ section.settings.heading_margin_bottom }}px * 0.5);
  }

  .image-grid-collections__grid {
    gap: calc(var(--card-gap, 15px) * 0.5);
  }
}
</style>

