{% style %}
  #shopify-section-{{ section.id }} {
    --mcv-bg: {{ section.settings.background_color }};
    --mcv-text: {{ section.settings.text_color }};
    --mcv-heading: {{ section.settings.heading_color }};
    --mcv-card-bg: {{ section.settings.card_background }};
    --mcv-btn-bg: {{ section.settings.button_background }};
    --mcv-btn-text: {{ section.settings.button_text_color }};
    --mcv-card-radius: {{ section.settings.card_border_radius }}px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }
{% endstyle %}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&family=Montserrat:wght@400;500;600;700&display=swap');

  .multicolumn-video {
    background: var(--mcv-bg, #ffffff);
    padding: 60px 20px;
    font-family: 'Poppins', sans-serif;
  }

  .multicolumn-video__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Header */
  .multicolumn-video__header {
    text-align: center;
    margin-bottom: 50px;
  }

  .multicolumn-video__title {
    font-size: 36px;
    font-weight: 700;
    color: var(--mcv-heading, #000000);
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .multicolumn-video__subtitle {
    font-size: 18px;
    font-weight: 400;
    color: var(--mcv-text, #1d1d1f);
    margin: 0;
    line-height: 1.6;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Grid */
  .multicolumn-video__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 30px;
  }

  /* Card */
  .multicolumn-video__card {
    background: var(--mcv-card-bg, #f5f5f7);
    border-radius: var(--mcv-card-radius, 16px);
    overflow: hidden;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .multicolumn-video__card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
  }

  /* Media */
  .multicolumn-video__media {
    position: relative;
    width: 100%;
    padding-bottom: 75%;
    overflow: hidden;
    background: #e8e8e8;
  }

  .multicolumn-video__media video,
  .multicolumn-video__media img,
  .multicolumn-video__media iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .multicolumn-video__media-placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #e0e0e0 0%, #c8c8c8 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
    font-size: 14px;
  }

  /* Content */
  .multicolumn-video__content {
    padding: 32px 24px;
  }

  .multicolumn-video__card-title {
    font-size: 24px;
    font-weight: 700;
    color: #1d1d1f;
    margin: 0 0 12px;
    line-height: 1.3;
  }

  .multicolumn-video__card-description {
    font-size: 15px;
    font-weight: 400;
    color: #1d1d1f;
    line-height: 1.6;
    margin: 0 0 24px;
  }

  /* Button */
  .multicolumn-video__button {
    display: inline-block;
    background: var(--mcv-btn-bg, #424750);
    color: var(--mcv-btn-text, #ffffff);
    padding: 14px 32px;
    font-size: 13px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
  }

  .multicolumn-video__button:hover {
    background: #2d3138;
    transform: translateY(-1px);
  }

  /* Tablet */
  @media (min-width: 768px) {
    .multicolumn-video {
      padding: 70px 30px;
    }

    .multicolumn-video__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 32px;
    }

    .multicolumn-video__title {
      font-size: 42px;
    }

    .multicolumn-video__subtitle {
      font-size: 19px;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .multicolumn-video {
      padding: 80px 40px;
    }

    .multicolumn-video__grid {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
      gap: 40px;
    }

    .multicolumn-video__title {
      font-size: 48px;
    }

    .multicolumn-video__media {
      padding-bottom: 70%;
    }
  }

  /* Large Desktop */
  @media (min-width: 1400px) {
    .multicolumn-video {
      padding: 90px 60px;
    }

    .multicolumn-video__grid {
      gap: 48px;
    }
  }
</style>

<section class="multicolumn-video" data-section-id="{{ section.id }}">
  <div class="multicolumn-video__container">
    <!-- Header -->
    {%- if section.settings.title != blank or section.settings.subtitle != blank -%}
      <div class="multicolumn-video__header">
        {%- if section.settings.title != blank -%}
          <h2 class="multicolumn-video__title">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.subtitle != blank -%}
          <p class="multicolumn-video__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <!-- Grid -->
    <div class="multicolumn-video__grid">
      {%- for block in section.blocks -%}
        <div class="multicolumn-video__card" {{ block.shopify_attributes }}>
          <!-- Media -->
          <div class="multicolumn-video__media">
            {%- if block.settings.video != blank -%}
              <video class="multicolumn-video__video" muted loop playsinline preload="metadata" {% if section.settings.autoplay %}autoplay{% endif %}>
                {%- for source in block.settings.video.sources -%}
                  <source src="{{ source.url }}" type="{{ source.mime_type }}">
                {%- endfor -%}
              </video>
            {%- elsif block.settings.video_url != blank -%}
              <iframe src="{{ block.settings.video_url }}" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen loading="lazy"></iframe>
            {%- elsif block.settings.image != blank -%}
              {{ block.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', alt: block.settings.title }}
            {%- else -%}
              <div class="multicolumn-video__media-placeholder">
                <span>Add media</span>
              </div>
            {%- endif -%}
          </div>

          <!-- Content -->
          <div class="multicolumn-video__content">
            {%- if block.settings.title != blank -%}
              <h3 class="multicolumn-video__card-title">{{ block.settings.title }}</h3>
            {%- endif -%}

            {%- if block.settings.description != blank -%}
              <p class="multicolumn-video__card-description">{{ block.settings.description }}</p>
            {%- endif -%}

            {%- if block.settings.button_text != blank -%}
              <a href="{{ block.settings.button_link }}" class="multicolumn-video__button">
                {{ block.settings.button_text }}
              </a>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sectionId = '{{ section.id }}';
    const section = document.querySelector(`[data-section-id="${sectionId}"]`);
    if (!section) return;

    const videos = section.querySelectorAll('.multicolumn-video__video');

    // Function to play video
    function playVideo(video) {
      if (video && video.paused) {
        video.play().catch(err => {
          console.log('Video autoplay prevented:', err);
        });
      }
    }

    // Play all videos if autoplay is enabled
    {% if section.settings.autoplay %}
    videos.forEach(video => {
      playVideo(video);
    });
    {% endif %}

    // Intersection Observer for better performance
    if ('IntersectionObserver' in window) {
      const videoObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          const video = entry.target;
          if (entry.isIntersecting) {
            {% if section.settings.autoplay %}
            playVideo(video);
            {% endif %}
          } else {
            if (!video.paused) {
              video.pause();
            }
          }
        });
      }, {
        threshold: 0.5
      });

      videos.forEach(video => {
        videoObserver.observe(video);
      });
    }

    // Play on hover (fallback if autoplay doesn't work)
    {% unless section.settings.autoplay %}
    videos.forEach(video => {
      const card = video.closest('.multicolumn-video__card');
      if (card) {
        card.addEventListener('mouseenter', () => playVideo(video));
        card.addEventListener('mouseleave', () => {
          if (!video.paused) {
            video.pause();
            video.currentTime = 0;
          }
        });
      }
    });
    {% endunless %}
  });
</script>

