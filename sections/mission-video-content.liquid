<style>
  .mission-video-section {
    background-color: #ffffff;
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
  }

  .mission-video__container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 {{ section.settings.container_padding }}px;
  }

  .mission-video__wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    align-items: stretch;
    min-height: {{ section.settings.media_min_height }}px;
  }

  .mission-video__media {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: {{ section.settings.media_min_height }}px;
    border-radius: 0;
    overflow: hidden;
  }

  .mission-video__video,
  .mission-video__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .mission-video__content {
    padding: {{ section.settings.content_padding_top }}px {{ section.settings.content_padding_horizontal }}px {{ section.settings.content_padding_bottom }}px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .mission-video__title {
    font-family: {{ section.settings.title_font }}, serif;
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    font-style: italic;
    line-height: {{ section.settings.title_line_height }};
    color: {{ section.settings.title_color }};
    letter-spacing: {{ section.settings.title_letter_spacing }}px;
    margin: 0 0 {{ section.settings.title_margin_bottom }}px 0;
  }

  .mission-video__description {
    font-family: {{ section.settings.body_font }}, sans-serif;
    font-size: {{ section.settings.description_size }}px;
    line-height: {{ section.settings.description_line_height }};
    color: {{ section.settings.description_color }};
    margin: 0 0 {{ section.settings.description_margin_bottom }}px 0;
    max-width: {{ section.settings.description_max_width }}px;
  }

  .mission-video__button {
    display: inline-block;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    font-family: {{ section.settings.body_font }}, sans-serif;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    letter-spacing: {{ section.settings.button_letter_spacing }}px;
    text-transform: uppercase;
    color: {{ section.settings.button_text_color }};
    background-color: transparent;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    text-decoration: none;
    transition: opacity 0.3s ease;
    cursor: pointer;
  }

  .mission-video__button:hover {
    opacity: 0.7;
  }

  @media (max-width: 1024px) {
    .mission-video__content {
      padding: {{ section.settings.content_padding_top | minus: 10 }}px {{ section.settings.content_padding_horizontal | minus: 20 }}px {{ section.settings.content_padding_bottom | minus: 10 }}px;
    }

    .mission-video__title {
      font-size: {{ section.settings.title_size | minus: 8 }}px;
    }

    .mission-video__description {
      font-size: {{ section.settings.description_size | minus: 1 }}px;
    }
  }

  @media (max-width: 768px) {
    .mission-video-section {
      padding: 0;
      background-color: #ffffff;
    }

    .mission-video__container {
      padding: 0;
    }

    .mission-video__wrapper {
      grid-template-columns: 1fr;
      gap: 0;
    }

    .mission-video__media {
      min-height: {{ section.settings.mobile_media_height }}px;
      border-radius: 0;
      margin: 0 20px;
    }

    .mission-video__content {
      padding: 50px 30px 60px 30px;
      background-color: #ffffff;
    }

    .mission-video__title {
      font-size: {{ section.settings.mobile_title_size }}px;
      font-style: italic;
      margin-bottom: 25px;
      color: {{ section.settings.title_color }};
    }

    .mission-video__description {
      font-size: {{ section.settings.mobile_description_size }}px;
      margin-bottom: 30px;
      max-width: 100%;
      line-height: 1.6;
      color: {{ section.settings.description_color }};
    }

    .mission-video__button {
      padding: 14px 32px;
      font-size: {{ section.settings.button_font_size | minus: 1 }}px;
    }
  }
</style>

<div class="mission-video-section">
  <div class="mission-video__container">
    <div class="mission-video__wrapper">
      <!-- Left Media Column -->
      <div class="mission-video__media">
        {% if section.settings.video != blank %}
          {{ section.settings.video | video_tag: autoplay: section.settings.autoplay, loop: section.settings.loop, muted: section.settings.muted, playsinline: true, class: 'mission-video__video' }}
        {% elsif section.settings.video_url != blank %}
          <video
            class="mission-video__video"
            {% if section.settings.autoplay %}autoplay{% endif %}
            {% if section.settings.loop %}loop{% endif %}
            {% if section.settings.muted %}muted{% endif %}
            playsinline
          >
            <source src="{{ section.settings.video_url }}" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        {% elsif section.settings.image != blank %}
          <img
            src="{{ section.settings.image | image_url: width: 1000 }}"
            srcset="{{ section.settings.image | image_url: width: 600 }} 600w,
                    {{ section.settings.image | image_url: width: 900 }} 900w,
                    {{ section.settings.image | image_url: width: 1200 }} 1200w"
            sizes="(max-width: 768px) 100vw, 50vw"
            alt="{{ section.settings.image.alt | default: section.settings.title }}"
            class="mission-video__image"
            loading="lazy"
          />
        {% else %}
          <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-size: 18px;">
            Add Video or Image
          </div>
        {% endif %}
      </div>

      <!-- Right Content Column -->
      <div class="mission-video__content">
        {% if section.settings.title != blank %}
          <h2 class="mission-video__title">{{ section.settings.title }}</h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <p class="mission-video__description">{{ section.settings.description }}</p>
        {% endif %}

        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link }}" class="mission-video__button">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

