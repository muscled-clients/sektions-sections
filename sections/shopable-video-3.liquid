</style>

<section class="shoppable-video-3" data-section-id="{{ section.id }}">
  <div class="shoppable-video-3__container">
    {%- if section.settings.heading != blank -%}
      <div class="shoppable-video-3__header">
        <h2 class="shoppable-video-3__title">
          {{ section.settings.heading }} <span>{{ section.settings.heading_suffix }}</span>
        </h2>
      </div>
    {%- endif -%}

    <div class="shoppable-video-3__carousel-wrap">
      <div class="shoppable-video-3__carousel" data-carousel>
        {%- for block in section.blocks -%}
          <div
            class="shoppable-video-3__card{% if forloop.first %} active{% endif %}"
            data-index="{{ forloop.index0 }}"
            data-video-url="{{ block.settings.video_url }}"
            data-product-image="{%- if block.settings.product != blank -%}{{ block.settings.product.featured_image | image_url: width: 200 }}{%- elsif block.settings.custom_product_image != blank -%}{{ block.settings.custom_product_image | image_url: width: 200 }}{%- endif -%}"
            data-product-title="{%- if block.settings.product != blank -%}{{ block.settings.product.title }}{%- else -%}{{ block.settings.custom_product_title }}{%- endif -%}"
            data-product-price="{%- if block.settings.product != blank -%}{{ block.settings.product.price | money }}{%- else -%}{{ block.settings.custom_product_price }}{%- endif -%}"
            data-product-compare="{%- if block.settings.product != blank and block.settings.product.compare_at_price > block.settings.product.price -%}{{ block.settings.product.compare_at_price | money }}{%- else -%}{{ block.settings.custom_compare_price }}{%- endif -%}"
            data-product-url="{%- if block.settings.product != blank -%}{{ block.settings.product.url }}{%- else -%}{{ block.settings.custom_product_url }}{%- endif -%}"
            {{ block.shopify_attributes }}
          >
            <div class="shoppable-video-3__video-wrapper">
              {%- if block.settings.poster_image != blank -%}
                <img
                  src="{{ block.settings.poster_image | image_url: width: 600 }}"
                  alt=""
                  class="shoppable-video-3__poster"
                  loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                >
              {%- endif -%}

              {%- if block.settings.video_url != blank -%}
                <video
                  class="shoppable-video-3__video"
                  muted
                  loop
                  playsinline
                  preload="metadata"
                >
                  <source src="{{ block.settings.video_url }}" type="video/mp4">
                </video>
              {%- elsif block.settings.video != blank -%}
                <video
                  class="shoppable-video-3__video"
                  muted
                  loop
                  playsinline
                  preload="metadata"
                >
                  {%- for source in block.settings.video.sources -%}
                    <source src="{{ source.url }}" type="{{ source.mime_type }}">
                  {%- endfor -%}
                </video>
              {%- else -%}
                <div class="shoppable-video-3__video" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>

      <button class="shoppable-video-3__nav shoppable-video-3__nav--prev" aria-label="Previous" data-prev>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"/>
        </svg>
      </button>
      <button class="shoppable-video-3__nav shoppable-video-3__nav--next" aria-label="Next" data-next>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- Modal -->
  <div class="shoppable-video-3__modal" data-modal>
    <button class="shoppable-video-3__modal-close" data-modal-close aria-label="Close">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"/>
        <line x1="6" y1="6" x2="18" y2="18"/>
      </svg>
    </button>

    <div class="shoppable-video-3__modal-inner">
      <div class="shoppable-video-3__modal-video-wrap">
        <video class="shoppable-video-3__modal-video" data-modal-video playsinline loop></video>

        <!-- Sound Toggle -->
        <button class="shoppable-video-3__modal-sound" data-mute-toggle aria-label="Toggle sound">
          <svg class="icon-muted" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"/>
            <line x1="23" y1="9" x2="17" y2="15"/>
            <line x1="17" y1="9" x2="23" y2="15"/>
          </svg>
          <svg class="icon-unmuted" style="display:none;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"/>
            <path d="M19.07 4.93a10 10 0 0 1 0 14.14M15.54 8.46a5 5 0 0 1 0 7.07"/>
          </svg>
        </button>

        <!-- Product Card -->
        <div class="shoppable-video-3__modal-product" data-modal-product style="display: none;">
          <img class="shoppable-video-3__modal-product-img" data-modal-product-img src="" alt="">
          <div class="shoppable-video-3__modal-product-info">
            <p class="shoppable-video-3__modal-product-title" data-modal-product-title></p>
            <div class="shoppable-video-3__modal-product-prices">
              <p class="shoppable-video-3__modal-product-price" data-modal-product-price></p>
              <p class="shoppable-video-3__modal-product-compare" data-modal-product-compare></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Vertical Navigation - Outside video -->
      <div class="shoppable-video-3__modal-nav">
        <button class="shoppable-video-3__modal-nav-btn" data-modal-prev aria-label="Previous video">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="18 15 12 9 6 15"/>
          </svg>
        </button>
