<script>
(function() {
  const section = document.querySelector('.shoppable-video-3[data-section-id="{{ section.id }}"]');
  if (!section) return;

  const carousel = section.querySelector('[data-carousel]');
  const cards = section.querySelectorAll('.shoppable-video-3__card');
  const prevBtn = section.querySelector('[data-prev]');
  const nextBtn = section.querySelector('[data-next]');
  const modal = section.querySelector('[data-modal]');
  const modalVideo = modal.querySelector('[data-modal-video]');
  const modalClose = modal.querySelector('[data-modal-close]');
  const muteToggle = modal.querySelector('[data-mute-toggle]');
  const modalPrev = modal.querySelector('[data-modal-prev]');
  const modalNext = modal.querySelector('[data-modal-next]');
  const modalProduct = modal.querySelector('[data-modal-product]');
  const modalProductImg = modal.querySelector('[data-modal-product-img]');
  const modalProductTitle = modal.querySelector('[data-modal-product-title]');
  const modalProductPrice = modal.querySelector('[data-modal-product-price]');
  const modalProductCompare = modal.querySelector('[data-modal-product-compare]');

  let currentIndex = 0;
  let currentModalIndex = 0;
  let isMuted = true;
  let autoplayTimer = null;
  const autoplayDuration = {{ section.settings.autoplay_duration }}000;

  // Sequential autoplay
  function playVideo(index) {
    cards.forEach((card, i) => {
      const video = card.querySelector('video');
      card.classList.remove('active', 'playing');
      if (video) {
        video.pause();
        video.currentTime = 0;
      }
    });

    const activeCard = cards[index];
    const video = activeCard.querySelector('video');
    activeCard.classList.add('active', 'playing');

    if (video) {
      video.play().catch(() => {});
    }

    // Scroll card into view
    const cardLeft = activeCard.offsetLeft;
    const cardWidth = activeCard.offsetWidth;
    const carouselWidth = carousel.offsetWidth;
    const scrollTarget = cardLeft - (carouselWidth / 2) + (cardWidth / 2);
    carousel.scrollTo({ left: scrollTarget, behavior: 'smooth' });
  }

  function nextVideo() {
    currentIndex = (currentIndex + 1) % cards.length;
    playVideo(currentIndex);
  }

  function prevVideo() {
    currentIndex = (currentIndex - 1 + cards.length) % cards.length;
    playVideo(currentIndex);
  }

  function startAutoplay() {
    stopAutoplay();
    autoplayTimer = setInterval(nextVideo, autoplayDuration);
  }

  function stopAutoplay() {
    if (autoplayTimer) {
      clearInterval(autoplayTimer);
      autoplayTimer = null;
    }
  }

  // Carousel navigation
  prevBtn.addEventListener('click', () => {
    stopAutoplay();
    prevVideo();
    startAutoplay();
  });

  nextBtn.addEventListener('click', () => {
    stopAutoplay();
    nextVideo();
    startAutoplay();
  });

  // Click to open modal
  cards.forEach((card, index) => {
    card.addEventListener('click', () => {
      stopAutoplay();
      openModal(index);
    });
  });

  // Modal functions
  function openModal(index) {
    currentModalIndex = index;
    const card = cards[index];
    const videoUrl = card.dataset.videoUrl;
    const video = card.querySelector('video');

    if (videoUrl) {
      modalVideo.src = videoUrl;
    } else if (video) {
      const source = video.querySelector('source');
      if (source) modalVideo.src = source.src;
    }

    modalVideo.muted = isMuted;
    modalVideo.play().catch(() => {});

    // Product info
    const productImg = card.dataset.productImage;
    const productTitle = card.dataset.productTitle;
    const productPrice = card.dataset.productPrice;
    const productCompare = card.dataset.productCompare;

    if (productTitle) {
      if (productImg) modalProductImg.src = productImg;
      modalProductTitle.textContent = productTitle;
      modalProductPrice.textContent = productPrice || '';
      modalProductCompare.textContent = productCompare || '';
      modalProductCompare.style.display = productCompare ? 'block' : 'none';
      modalProduct.style.display = 'flex';
    } else {
      modalProduct.style.display = 'none';
    }

    modal.classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  function closeModal() {
    modal.classList.remove('active');
    modalVideo.pause();
    modalVideo.src = '';
    document.body.style.overflow = '';
    startAutoplay();
  }

  function navigateModal(direction) {
    currentModalIndex += direction;
    if (currentModalIndex < 0) currentModalIndex = cards.length - 1;
    if (currentModalIndex >= cards.length) currentModalIndex = 0;
    openModal(currentModalIndex);
  }

  modalClose.addEventListener('click', closeModal);
  modal.addEventListener('click', (e) => {
    if (e.target === modal) closeModal();
  });

  document.addEventListener('keydown', (e) => {
    if (!modal.classList.contains('active')) return;
    if (e.key === 'Escape') closeModal();
    if (e.key === 'ArrowUp') navigateModal(-1);
    if (e.key === 'ArrowDown') navigateModal(1);
  });

  modalPrev.addEventListener('click', () => navigateModal(-1));
  modalNext.addEventListener('click', () => navigateModal(1));

  muteToggle.addEventListener('click', () => {
    isMuted = !isMuted;
    modalVideo.muted = isMuted;
    muteToggle.querySelector('.icon-muted').style.display = isMuted ? 'block' : 'none';
    muteToggle.querySelector('.icon-unmuted').style.display = isMuted ? 'none' : 'block';
  });

  modalVideo.addEventListener('ended', () => {
    navigateModal(1);
  });

  // Pause autoplay on hover
  section.addEventListener('mouseenter', stopAutoplay);
  section.addEventListener('mouseleave', () => {
    if (!modal.classList.contains('active')) startAutoplay();
  });

  // Start sequential autoplay
  playVideo(0);
  startAutoplay();
})();
</script>

