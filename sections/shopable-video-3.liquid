    }

    .shoppable-video-3__carousel {
      gap: 14px;
      padding: 10px 0;
    }

    .shoppable-video-3__card {
      flex: 0 0 calc(50% - 7px);
      border-radius: 12px;
    }

    .shoppable-video-3__nav {
      width: 40px;
      height: 40px;
    }

    .shoppable-video-3__nav svg {
      width: 16px;
      height: 16px;
    }

    .shoppable-video-3__modal {
      padding: 15px;
    }

    .shoppable-video-3__modal-video-wrap {
      max-width: 320px;
      border-radius: 18px;
    }

    .shoppable-video-3__modal-close {
      top: 15px;
      right: 15px;
      width: 44px;
      height: 44px;
    }

    .shoppable-video-3__modal-close svg {
      width: 20px;
      height: 20px;
    }

    .shoppable-video-3__modal-nav {
      gap: 10px;
    }

    .shoppable-video-3__modal-nav-btn {
      width: 42px;
      height: 42px;
    }

    .shoppable-video-3__modal-nav-btn svg {
      width: 17px;
      height: 17px;
    }

    .shoppable-video-3__modal-sound {
      bottom: 14px;
      right: 14px;
      width: 38px;
      height: 38px;
    }

    .shoppable-video-3__modal-sound svg {
      width: 17px;
      height: 17px;
    }

    .shoppable-video-3__modal-product {
      bottom: 14px;
      left: 14px;
      right: 64px;
      padding: 10px 12px;
      gap: 12px;
      border-radius: 11px;
    }

    .shoppable-video-3__modal-product-img {
      width: 48px;
      height: 48px;
      border-radius: 6px;
    }

    .shoppable-video-3__modal-product-title {
      font-size: 13px;
    }

    .shoppable-video-3__modal-product-price {
      font-size: 14px;
    }

    .shoppable-video-3__modal-product-compare {
      font-size: 12px;
    }
  }

  /* Tablet - 768px */
  @media (min-width: 768px) {
    .shoppable-video-3 {
      padding: 44px 0;
    }

    .shoppable-video-3__container {
      padding: 0 30px;
    }

    .shoppable-video-3__header {
      margin-bottom: 30px;
    }

    .shoppable-video-3__title {
      font-size: 14px;
    }

    .shoppable-video-3__carousel-wrap {
      padding: 0 50px;
    }

    .shoppable-video-3__carousel {
      gap: 18px;
    }

    .shoppable-video-3__card {
      flex: 0 0 calc(30% - 14px);
    }

    .shoppable-video-3__modal {
      background: rgba(245, 245, 245, 0.75);
      justify-content: flex-end;
      padding: 20px;
    }

    .shoppable-video-3__modal-inner {
      gap: 14px;
      margin-right: 5%;
    }

    .shoppable-video-3__modal-close {
      top: 50%;
      left: 20px;
      right: auto;
      transform: translateY(-50%);
      width: 46px;
      height: 46px;
    }

    .shoppable-video-3__modal-video-wrap {
      width: 340px;
      max-width: none;
      border-radius: 20px;
    }

    .shoppable-video-3__modal-nav-btn {
      width: 44px;
      height: 44px;
    }

    .shoppable-video-3__modal-nav-btn svg {
      width: 18px;
      height: 18px;
    }

    .shoppable-video-3__modal-sound {
      bottom: 16px;
      right: 16px;
      width: 40px;
      height: 40px;
    }

    .shoppable-video-3__modal-sound svg {
      width: 18px;
      height: 18px;
    }

    .shoppable-video-3__modal-product {
      bottom: 16px;
      left: 16px;
      right: 70px;
      border-radius: 12px;
    }

    .shoppable-video-3__modal-product-img {
      width: 50px;
      height: 50px;
    }
  }

  /* Small Desktop - 1024px */
  @media (min-width: 1024px) {
    .shoppable-video-3 {
      padding: 50px 0;
    }

    .shoppable-video-3__container {
      padding: 0 50px;
    }

    .shoppable-video-3__carousel {
      gap: 20px;
    }

    .shoppable-video-3__card {
      flex: 0 0 calc(22% - 15px);
