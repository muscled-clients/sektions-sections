    padding-top: 16px;
    padding-left: 32px;
  }

  .image-with-text-24__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 32px;
    background: var(--iwt24-btn-bg, #1a1a5e);
    color: var(--iwt24-btn-text, #ffffff);
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    border-radius: 30px;
    border: none;
    cursor: pointer;
    transition: all 0.25s ease;
  }

  .image-with-text-24__btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(26, 26, 94, 0.3);
  }

