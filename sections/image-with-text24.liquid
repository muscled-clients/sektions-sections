<style>
  @import url('https://fonts.googleapis.com/css2?family=DM+Serif+Display:wght@400&family=Inter:wght@400;500;600;700&display=swap');

  .image-with-text-24 {
    background: var(--iwt24-bg, #ffffff);
    font-family: 'Inter', sans-serif;
  }

  .image-with-text-24__container {
    max-width: 1300px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .image-with-text-24__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
  }

  /* Image - Sticky */
  .image-with-text-24__image-col {
    order: 1;
  }

  .image-with-text-24__image-sticky {
    position: relative;
  }

  .image-with-text-24__image-wrapper {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    background: #f0f0f0;
    aspect-ratio: 3 / 4;
  }

  .image-with-text-24__image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .image-with-text-24__image.active {
    opacity: 1;
  }

  .image-with-text-24__image-placeholder {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #e8e0f0 0%, #d0c8e0 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #888;
    font-size: 14px;
  }

  /* Content */
  .image-with-text-24__content {
    order: 2;
  }

  .image-with-text-24__header {
    margin-bottom: 40px;
  }

  .image-with-text-24__title {
    font-family: 'DM Serif Display', serif;
    font-size: 32px;
    font-weight: 400;
    line-height: 1.2;
    color: var(--iwt24-heading, #1a1a5e);
    margin: 0 0 16px;
  }

  .image-with-text-24__subtitle {
    font-size: 14px;
    line-height: 1.7;
    color: var(--iwt24-text, #1a1a5e);
    margin: 0;
    max-width: 500px;
  }

  /* Features */
  .image-with-text-24__features {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .image-with-text-24__feature {
    display: flex;
    align-items: stretch;
    gap: 20px;
    padding: 24px 0;
  }

  .image-with-text-24__feature-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 12px;
    flex-shrink: 0;
  }

  .image-with-text-24__feature-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--iwt24-accent, #1a1a5e);
    opacity: 0.3;
    flex-shrink: 0;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .image-with-text-24__feature.active .image-with-text-24__feature-dot {
    opacity: 1;
    transform: scale(1.1);
  }

  .image-with-text-24__feature-line {
    width: 2px;
    flex: 1;
    background: var(--iwt24-accent, #1a1a5e);
    opacity: 0.15;
    margin-top: 8px;
  }

  .image-with-text-24__feature:last-child .image-with-text-24__feature-line {
    display: none;
  }

  .image-with-text-24__feature-content {
    flex: 1;
  }

  .image-with-text-24__feature-title {
    font-size: 16px;
    font-weight: 700;
    color: var(--iwt24-heading, #1a1a5e);
    margin: 0 0 8px;
    line-height: 1.4;
  }

  .image-with-text-24__feature-text {
    font-size: 14px;
    line-height: 1.65;
    color: var(--iwt24-text, #1a1a5e);
    margin: 0;
    opacity: 0.75;
  }

  /* Button */
