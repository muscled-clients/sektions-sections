    }

    .hero-45__modal-close {
      width: 40px;
      height: 40px;
      top: 16px;
      right: 16px;
    }
  }
</style>

<section class="hero-45" data-section-id="{{ section.id }}">
  <div class="hero-45__container">
    <!-- Content -->
    <div class="hero-45__content">
      {%- if section.settings.heading != blank -%}
        <h1 class="hero-45__heading">{{ section.settings.heading }}</h1>
      {%- endif -%}

      {%- if section.settings.subtitle != blank -%}
        <p class="hero-45__subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}

      <!-- Buttons -->
      <div class="hero-45__buttons">
        {%- if section.settings.primary_button_text != blank -%}
          <a href="{{ section.settings.primary_button_link }}" class="hero-45__btn hero-45__btn--primary">
            {{ section.settings.primary_button_text }}
            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <line x1="5" y1="12" x2="19" y2="12"/>
              <polyline points="12 5 19 12 12 19"/>
            </svg>
          </a>
        {%- endif -%}

        {%- if section.settings.secondary_button_text != blank -%}
          <button type="button" class="hero-45__btn hero-45__btn--secondary" data-video-trigger>
            {{ section.settings.secondary_button_text }}
            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M8 5v14l11-7z"/>
            </svg>
          </button>
        {%- endif -%}
      </div>

      <!-- Rating -->
      {%- if section.settings.show_rating -%}
        <div class="hero-45__rating">
          <div class="hero-45__stars">
            {%- for i in (1..5) -%}
              <div class="hero-45__star">
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              </div>
            {%- endfor -%}
          </div>
          <span class="hero-45__rating-text">{{ section.settings.rating_text }}</span>
        </div>
      {%- endif -%}

      <!-- Testimonials -->
      {%- if section.blocks.size > 0 -%}
        <div class="hero-45__testimonial">
          {%- for block in section.blocks -%}
            {%- if block.type == 'testimonial' -%}
              <div class="hero-45__testimonial-item {% if forloop.first %}active{% endif %}" {{ block.shopify_attributes }}>
                {%- if block.settings.avatar != blank -%}
                  {{ block.settings.avatar | image_url: width: 150 | image_tag: class: 'hero-45__avatar', loading: 'lazy' }}
                {%- else -%}
                  <div class="hero-45__avatar" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
                {%- endif -%}
                <div class="hero-45__testimonial-content">
                  {%- if block.settings.quote != blank -%}
                    <p class="hero-45__quote">{{ block.settings.quote }}</p>
                  {%- endif -%}
                  {%- if block.settings.author != blank -%}
                    <p class="hero-45__author">{{ block.settings.author }}</p>
                  {%- endif -%}
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>

    <!-- Image -->
    <div class="hero-45__image-wrapper">
      {%- assign image_count = 0 -%}
      {%- for block in section.blocks -%}
        {%- if block.type == 'image' -%}
          {%- assign image_count = image_count | plus: 1 -%}
        {%- endif -%}
      {%- endfor -%}

      {%- if image_count > 0 -%}
        {%- assign image_index = 0 -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'image' -%}
            <div class="hero-45__image-slide {% if image_index == 0 %}active{% endif %}" {{ block.shopify_attributes }}>
              {%- if block.settings.image != blank -%}
                {{ block.settings.image | image_url: width: 1200 | image_tag: class: 'hero-45__image', loading: 'eager' }}
              {%- else -%}
                <div class="hero-45__image" style="background: linear-gradient(135deg, #fceabb 0%, #f8b500 100%);"></div>
              {%- endif -%}
            </div>
            {%- assign image_index = image_index | plus: 1 -%}
          {%- endif -%}
        {%- endfor -%}
      {%- else -%}
        <div class="hero-45__image-slide active">
          <div class="hero-45__image" style="background: linear-gradient(135deg, #fceabb 0%, #f8b500 100%);"></div>
        </div>
      {%- endif -%}
    </div>
  </div>

  <!-- Video Modal -->
  <div class="hero-45__modal" data-video-modal>
    <div class="hero-45__modal-overlay" data-modal-close></div>
    <div class="hero-45__modal-content">
      <button class="hero-45__modal-close" data-modal-close aria-label="Close video">
        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="none">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>
      <div class="hero-45__modal-video">
        {%- if section.settings.video_url != blank -%}
          {%- if section.settings.video_url contains 'youtube' or section.settings.video_url contains 'youtu.be' -%}
            {%- assign video_id = section.settings.video_url | split: 'v=' | last | split: '&' | first -%}
            {%- if section.settings.video_url contains 'youtu.be' -%}
              {%- assign video_id = section.settings.video_url | split: 'youtu.be/' | last | split: '?' | first -%}
            {%- endif -%}
            <iframe data-src="https://www.youtube.com/embed/{{ video_id }}?autoplay=1" allow="autoplay; encrypted-media" allowfullscreen></iframe>
          {%- elsif section.settings.video_url contains 'vimeo' -%}
            {%- assign video_id = section.settings.video_url | split: 'vimeo.com/' | last | split: '?' | first -%}
            <iframe data-src="https://player.vimeo.com/video/{{ video_id }}?autoplay=1" allow="autoplay; encrypted-media" allowfullscreen></iframe>
          {%- endif -%}
        {%- elsif section.settings.video != blank -%}
          {{ section.settings.video | video_tag: autoplay: false, loop: false, muted: false, controls: true, class: 'hero-45__video' }}
        {%- else -%}
          <div style="display: flex; align-items: center; justify-content: center; height: 100%; background: #f0f0f0; color: #666;">
            No video configured
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sectionId = '{{ section.id }}';
    const section = document.querySelector(`[data-section-id="${sectionId}"]`);
    if (!section) return;

    // Testimonial rotation
    const testimonials = section.querySelectorAll('.hero-45__testimonial-item');
    if (testimonials.length > 1) {
      let currentTestimonialIndex = 0;

      setInterval(function() {
        testimonials[currentTestimonialIndex].classList.remove('active');
        currentTestimonialIndex = (currentTestimonialIndex + 1) % testimonials.length;
        testimonials[currentTestimonialIndex].classList.add('active');
      }, 5000);
    }

    // Image rotation
    const imageSlides = section.querySelectorAll('.hero-45__image-slide');
    if (imageSlides.length > 1) {
      let currentImageIndex = 0;

      setInterval(function() {
        imageSlides[currentImageIndex].classList.remove('active');
        currentImageIndex = (currentImageIndex + 1) % imageSlides.length;
        imageSlides[currentImageIndex].classList.add('active');
      }, 4000);
    }

    // Video modal
    const videoTrigger = section.querySelector('[data-video-trigger]');
    const videoModal = section.querySelector('[data-video-modal]');
    const modalCloseButtons = section.querySelectorAll('[data-modal-close]');
    const iframe = videoModal ? videoModal.querySelector('iframe') : null;
    const video = videoModal ? videoModal.querySelector('video') : null;

    if (videoTrigger && videoModal) {
      videoTrigger.addEventListener('click', function() {
        videoModal.classList.add('active');
        document.body.style.overflow = 'hidden';

        // Load iframe src if present
        if (iframe && iframe.dataset.src) {
          iframe.src = iframe.dataset.src;
        }

        // Play video if present
        if (video) {
          video.play().catch(err => console.log('Video play failed:', err));
        }
      });

      modalCloseButtons.forEach(btn => {
        btn.addEventListener('click', function() {
          videoModal.classList.remove('active');
          document.body.style.overflow = '';

          // Stop iframe video
          if (iframe) {
            iframe.src = '';
          }

          // Pause video
          if (video) {
            video.pause();
            video.currentTime = 0;
          }
        });
      });

      // Close on escape key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && videoModal.classList.contains('active')) {
          videoModal.classList.remove('active');
          document.body.style.overflow = '';
          if (iframe) iframe.src = '';
          if (video) {
            video.pause();
            video.currentTime = 0;
          }
        }
      });
    }
  });
</script>

