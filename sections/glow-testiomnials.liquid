  "name": "SEK Glow Testimonial",
  "tag": "section",
  "class": "sek-glow-testimonial-section",
  "settings": [
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our customers [love] the product",
      "info": "Wrap text in [brackets] to highlight it with gradient color"
    },
    {
      "type": "header",
      "content": "Animation Speed"
    },
    {
      "type": "range",
      "id": "row1_speed",
      "label": "Row 1 speed (seconds)",
      "min": 20,
      "max": 80,
      "step": 2,
      "default": 40,
      "unit": "s"
    },
    {
      "type": "range",
      "id": "row2_speed",
      "label": "Row 2 speed (seconds)",
      "min": 20,
      "max": 80,
      "step": 2,
      "default": 46,
      "unit": "s"
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top (desktop)",
      "min": 0,
      "max": 120,
      "step": 5,
      "default": 60,
