{% comment %}
  SEK Glow Testimonial - Marquee testimonials with avatar, rating badge, and auto-scrolling rows
  Features: Multiple rows scrolling in opposite directions, gradient highlight word, star ratings
{% endcomment %}

{%- assign section_id = section.id -%}

{% style %}
  #sek-glow-testimonial-{{ section_id }} {
    padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px;
    background: {{ section.settings.background_color }};
    overflow: hidden;
  }

  @media (min-width: 750px) {
    #sek-glow-testimonial-{{ section_id }} {
      padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    }
  }

  #sek-glow-testimonial-{{ section_id }} .sek-gt__header {
    text-align: center;
    padding: 0 20px;
    margin-bottom: 40px;
  }

  @media (min-width: 750px) {
    #sek-glow-testimonial-{{ section_id }} .sek-gt__header {
      margin-bottom: 50px;
    }
  }

  #sek-glow-testimonial-{{ section_id }} .sek-gt__heading {
    font-size: 32px;
    font-weight: 600;
    line-height: 1.3;
    color: {{ section.settings.heading_color }};
    margin: 0;
  }

  @media (min-width: 750px) {
    #sek-glow-testimonial-{{ section_id }} .sek-gt__heading {
      font-size: 40px;
    }
  }

  #sek-glow-testimonial-{{ section_id }} .sek-gt__highlight {
    background: linear-gradient(90deg, {{ section.settings.highlight_color_1 }}, {{ section.settings.highlight_color_2 }});
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-style: italic;
  }

  /* Marquee Rows */
  #sek-glow-testimonial-{{ section_id }} .sek-gt__marquee-wrapper {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  @media (min-width: 750px) {
    #sek-glow-testimonial-{{ section_id }} .sek-gt__marquee-wrapper {
      gap: 26px;
    }
  }

  #sek-glow-testimonial-{{ section_id }} .sek-gt__marquee {
    display: flex;
    overflow: hidden;
    position: relative;
  }

  #sek-glow-testimonial-{{ section_id }} .sek-gt__marquee-track {
    display: flex;
    gap: 20px;
    animation: sekGtMarquee var(--marquee-duration, 40s) linear infinite;
    will-change: transform;
  }

  @media (min-width: 750px) {
    #sek-glow-testimonial-{{ section_id }} .sek-gt__marquee-track {
      gap: 26px;
    }
  }

  #sek-glow-testimonial-{{ section_id }} .sek-gt__marquee--reverse .sek-gt__marquee-track {
    animation-direction: reverse;
  }

  #sek-glow-testimonial-{{ section_id }} .sek-gt__marquee:hover .sek-gt__marquee-track {
    animation-play-state: paused;
  }

  @keyframes sekGtMarquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Testimonial Card */
  #sek-glow-testimonial-{{ section_id }} .sek-gt__card {
    display: flex;
    align-items: center;
    gap: 16px;
    background: {{ section.settings.card_background }};
    padding: 12px 20px 12px 12px;
    border-radius: 100px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    flex-shrink: 0;
    min-width: max-content;
  }

  @media (min-width: 750px) {
    #sek-glow-testimonial-{{ section_id }} .sek-gt__card {
      padding: 14px 24px 14px 14px;
      gap: 18px;
    }
  }

  /* Avatar with Rating Badge */
  #sek-glow-testimonial-{{ section_id }} .sek-gt__avatar-wrapper {
    position: relative;
    flex-shrink: 0;
  }

  #sek-glow-testimonial-{{ section_id }} .sek-gt__avatar {
    width: 52px;
    height: 52px;
    border-radius: 50%;
    object-fit: cover;
  }

  @media (min-width: 750px) {
    #sek-glow-testimonial-{{ section_id }} .sek-gt__avatar {
      width: 56px;
      height: 56px;
    }
  }

  #sek-glow-testimonial-{{ section_id }} .sek-gt__avatar-placeholder {
    width: 52px;
    height: 52px;
    border-radius: 50%;
    background: linear-gradient(135deg, #e0e0e0 0%, #c0c0c0 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (min-width: 750px) {
    #sek-glow-testimonial-{{ section_id }} .sek-gt__avatar-placeholder {
      width: 56px;
      height: 56px;
    }
  }

  #sek-glow-testimonial-{{ section_id }} .sek-gt__avatar-placeholder svg {
    width: 28px;
    height: 28px;
    fill: #fff;
    opacity: 0.7;
  }

  #sek-glow-testimonial-{{ section_id }} .sek-gt__rating-badge {
    position: absolute;
    bottom: -4px;
    right: -4px;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: linear-gradient(135deg, {{ section.settings.badge_color_1 }}, {{ section.settings.badge_color_2 }});
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
  }

  #sek-glow-testimonial-{{ section_id }} .sek-gt__rating-badge span {
    font-size: 10px;
    font-weight: 700;
    color: #ffffff;
    line-height: 1;
  }

  #sek-glow-testimonial-{{ section_id }} .sek-gt__rating-badge svg {
    width: 10px;
    height: 10px;
    fill: #ffffff;
  }

  /* Testimonial Text */
  #sek-glow-testimonial-{{ section_id }} .sek-gt__text {
    font-size: 14px;
    line-height: 1.5;
    color: {{ section.settings.text_color }};
    margin: 0;
    white-space: nowrap;
  }

  @media (min-width: 750px) {
    #sek-glow-testimonial-{{ section_id }} .sek-gt__text {
      font-size: 16px;
    }
  }
{% endstyle %}

