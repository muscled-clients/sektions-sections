      {%- assign row1_end = testimonials_size | divided_by: 2 -%}

      <!-- Row 1 - Left to Right -->
      <div class="sek-gt__marquee" style="--marquee-duration: {{ section.settings.row1_speed }}s;">
        <div class="sek-gt__marquee-track">
          {%- for i in (1..2) -%}
            {%- for block in testimonials limit: row1_end -%}
              <div class="sek-gt__card" {{ block.shopify_attributes }}>
                <div class="sek-gt__avatar-wrapper">
                  {%- if block.settings.avatar != blank -%}
                    <img
                      class="sek-gt__avatar"
                      src="{{ block.settings.avatar | image_url: width: 120 }}"
                      alt="{{ block.settings.author | default: 'Customer' | escape }}"
                      loading="lazy"
                    >
                  {%- else -%}
