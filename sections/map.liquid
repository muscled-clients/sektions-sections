{% style %}
  #shopify-section-{{ section.id }} {
    --map-bg: {{ section.settings.background_color }};
    --map-card-bg: {{ section.settings.card_background }};
    --map-text: {{ section.settings.text_color }};
    --map-btn-bg: {{ section.settings.button_bg_color }};
    --map-btn-text: {{ section.settings.button_text_color }};
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }
{% endstyle %}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap');

  .map-section {
    position: relative;
    background: var(--map-bg, #ffffff);
    font-family: 'Montserrat', sans-serif;
  }

  .map-section__container {
    position: relative;
    width: 100%;
  }

  /* Map */
  .map-section__map {
    width: 100%;
    height: 450px;
    background: rgb(225, 225, 225);
    overflow: hidden;
  }

  .map-section__map iframe {
    width: 100%;
    height: 100%;
    border: 0;
  }

  .map-section__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #e8e8e8 0%, #d0d0d0 100%);
    color: #666;
    font-size: 14px;
  }

  /* Content Overlay */
  .map-section__content {
    background: var(--map-card-bg, #ffffff);
    padding: 30px 24px;
    color: var(--map-text, #000000);
  }

  .map-section__title {
    font-size: 24px;
    font-weight: 700;
    margin: 0 0 20px;
    line-height: 1.2;
  }

  .map-section__info {
    margin-bottom: 24px;
  }

  .map-section__address {
    font-size: 14px;
    line-height: 1.6;
    margin: 0 0 20px;
    opacity: 0.85;
  }

  .map-section__hours {
    font-size: 14px;
    line-height: 1.8;
  }

  .map-section__hours-title {
    font-weight: 600;
    margin: 0 0 8px;
  }

  .map-section__hours-row {
    display: flex;
    justify-content: space-between;
    margin: 0;
    opacity: 0.85;
  }

  .map-section__hours-day {
    font-weight: 500;
  }

  .map-section__hours-time {
    text-align: right;
  }

  .map-section__contact {
    font-size: 14px;
    line-height: 1.8;
    margin-top: 20px;
  }

  .map-section__contact-item {
    display: flex;
    align-items: center;
    gap: 10px;
    margin: 0 0 6px;
    opacity: 0.85;
  }

  .map-section__contact-item svg {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
    opacity: 0.7;
  }

  .map-section__contact-item a {
    color: inherit;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .map-section__contact-item a:hover {
    opacity: 0.7;
  }

  /* Button */
  .map-section__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    width: 100%;
    padding: 14px 28px;
    background: var(--map-btn-bg, #111111);
    color: var(--map-btn-text, #ffffff);
    font-family: 'Montserrat', sans-serif;
    font-size: 13px;
    font-weight: 600;
    text-decoration: none;
    border: none;
    border-radius: 0;
    transition: all 0.25s ease;
    cursor: pointer;
  }

  .map-section__btn:hover {
    opacity: 0.85;
  }

  .map-section__btn svg {
    width: 16px;
    height: 16px;
  }

  /* Responsive - Desktop */
  @media (min-width: 768px) {
    .map-section__map {
      height: 500px;
    }

    .map-section__content {
      padding: 36px 30px;
    }

    .map-section__title {
      font-size: 28px;
    }

    .map-section__btn {
      width: auto;
      padding: 16px 32px;
      font-size: 14px;
    }
  }

  @media (min-width: 1024px) {
    .map-section__container {
      display: flex;
      min-height: 550px;
    }

    .map-section__map {
      flex: 1;
      height: auto;
      min-height: 550px;
    }

    .map-section__content {
      position: absolute;
      left: 40px;
      top: 50%;
      transform: translateY(-50%);
      width: 380px;
      padding: 40px 36px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      z-index: 10;
    }

    .map-section__title {
      font-size: 30px;
      margin-bottom: 24px;
    }

    .map-section__info {
      margin-bottom: 28px;
    }
  }

  @media (min-width: 1200px) {
    .map-section__map {
      min-height: 600px;
    }

    .map-section__content {
      left: 60px;
      width: 420px;
      padding: 48px 44px;
    }

    .map-section__title {
      font-size: 32px;
    }

    .map-section__address,
    .map-section__hours,
    .map-section__contact {
      font-size: 15px;
    }
  }

  @media (min-width: 1400px) {
    .map-section__content {
      left: 80px;
      width: 450px;
    }
  }
</style>

<section class="map-section" data-section-id="{{ section.id }}">
  <div class="map-section__container">
    <!-- Map -->
    <div class="map-section__map">
      {%- if section.settings.map_address != blank -%}
        {%- assign map_address_encoded = section.settings.map_address | url_encode -%}
        <iframe
          src="https://maps.google.com/maps?q={{ map_address_encoded }}&t=m&z={{ section.settings.map_zoom }}&output=embed&iwloc=near"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Store location map"
        ></iframe>
      {%- else -%}
        <div class="map-section__placeholder">
          <span>Enter an address in section settings to display the map</span>
        </div>
      {%- endif -%}
    </div>

    <!-- Content Overlay -->
    <div class="map-section__content">
      {%- if section.settings.title != blank -%}
        <h2 class="map-section__title">{{ section.settings.title }}</h2>
      {%- endif -%}

      <div class="map-section__info">
        {%- if section.settings.address != blank -%}
          <p class="map-section__address">{{ section.settings.address | newline_to_br }}</p>
        {%- endif -%}

        {%- if section.settings.show_hours -%}
          <div class="map-section__hours">
            <p class="map-section__hours-title">Opening Hours</p>
            {%- if section.settings.hours_weekday != blank -%}
              <p class="map-section__hours-row">
                <span class="map-section__hours-day">Mon - Fri</span>
                <span class="map-section__hours-time">{{ section.settings.hours_weekday }}</span>
              </p>
            {%- endif -%}
            {%- if section.settings.hours_saturday != blank -%}
              <p class="map-section__hours-row">
                <span class="map-section__hours-day">Saturday</span>
                <span class="map-section__hours-time">{{ section.settings.hours_saturday }}</span>
              </p>
            {%- endif -%}
            {%- if section.settings.hours_sunday != blank -%}
              <p class="map-section__hours-row">
                <span class="map-section__hours-day">Sunday</span>
                <span class="map-section__hours-time">{{ section.settings.hours_sunday }}</span>
              </p>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- if section.settings.phone != blank or section.settings.email != blank -%}
          <div class="map-section__contact">
            {%- if section.settings.phone != blank -%}
              <p class="map-section__contact-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                </svg>
                <a href="tel:{{ section.settings.phone | remove: ' ' }}">{{ section.settings.phone }}</a>
              </p>
            {%- endif -%}
            {%- if section.settings.email != blank -%}
              <p class="map-section__contact-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                  <polyline points="22,6 12,13 2,6"/>
                </svg>
                <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
              </p>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>

      {%- if section.settings.button_text != blank and section.settings.map_address != blank -%}
        <a
          href="https://www.google.com/maps/dir/?api=1&destination={{ map_address_encoded }}"
          target="_blank"
          rel="noopener noreferrer"
          class="map-section__btn"
        >
          {{ section.settings.button_text }}
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polygon points="3 11 22 2 13 21 11 13 3 11"/>
          </svg>
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

