<style>
  #signup-steps-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    max-width: 100%;
    overflow-x: hidden;
  }

  #signup-steps-{{ section.id }} .container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    box-sizing: border-box;
  }

  #signup-steps-{{ section.id }} .section-title {
    text-align: center;
    margin-bottom: 60px;
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: 700;
    color: {{ section.settings.title_color }};
  }

  #signup-steps-{{ section.id }} .steps-container {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    position: relative;
    max-width: 900px;
    margin: 0 auto;
  }

  #signup-steps-{{ section.id }} .steps-container::before {
    content: '';
    position: absolute;
    top: 40px;
    left: 8%;
    right: 8%;
    height: 2px;
    background-color: {{ section.settings.line_color }};
    z-index: 1;
  }

  #signup-steps-{{ section.id }} .step {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    position: relative;
    z-index: 2;
  }

  #signup-steps-{{ section.id }} .step-circle {
    width: 80px;
    height: 80px;
    border: 3px solid {{ section.settings.circle_border_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ section.settings.background_color }};
    margin-bottom: 25px;
  }

  #signup-steps-{{ section.id }} .step-number {
    font-size: 36px;
    font-weight: 700;
    color: {{ section.settings.number_color }};
  }

  #signup-steps-{{ section.id }} .step-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  #signup-steps-{{ section.id }} .step-title {
    font-size: {{ section.settings.step_title_font_size }}px;
    font-weight: 700;
    color: {{ section.settings.step_title_color }};
    margin-bottom: {{ section.settings.step_title_gap }}px;
    line-height: 1.2;
  }

  #signup-steps-{{ section.id }} .step-description {
    font-size: {{ section.settings.step_description_font_size }}px;
    color: {{ section.settings.step_description_color }};
    line-height: 1.4;
    max-width: 280px;
  }

  /* Tablet & Mobile - vertical layout, left aligned with padding */
  @media (max-width: 768px) {
    #signup-steps-{{ section.id }} .steps-container {
      flex-direction: column;
      align-items: flex-start;
      gap: 0;
      max-width: none;
      margin: 0;
      position: relative;
      padding-left: 0;
    }

    #signup-steps-{{ section.id }} .steps-container::before {
      display: none;
    }

    #signup-steps-{{ section.id }} .step {
      max-width: 100%;
      width: 100%;
      flex-direction: row;
      align-items: center;
      text-align: left;
      margin-bottom: 30px;
      position: relative;
    }

    #signup-steps-{{ section.id }} .step:not(:last-child) .step-circle::after {
      content: '';
      position: absolute;
      top: 50px;
      left: 50%;
      transform: translateX(-50%);
      width: 2px;
      height: 80px;
      background-color: {{ section.settings.line_color }};
      z-index: -1;
    }

    #signup-steps-{{ section.id }} .step-circle {
      width: 50px;
      height: 50px;
      margin-bottom: 0;
      margin-right: 20px;
      flex-shrink: 0;
      position: relative;
      border: 2px solid {{ section.settings.circle_border_color }};
    }

    #signup-steps-{{ section.id }} .step-number {
      font-size: 24px;
    }

    #signup-steps-{{ section.id }} .step-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      text-align: left;
    }

    #signup-steps-{{ section.id }} .step-title {
      margin-bottom: {{ section.settings.step_title_gap_mobile }}px;
      font-size: calc({{ section.settings.step_title_font_size }}px * 0.75);
      font-weight: 700;
      line-height: 1;
    }

    #signup-steps-{{ section.id }} .step-description {
      max-width: none;
      font-size: calc({{ section.settings.step_description_font_size }}px * 0.875);
      line-height: 1.4;
      margin-bottom: 0;
    }

    #signup-steps-{{ section.id }} .section-title {
      margin-bottom: 40px;
      font-size: calc({{ section.settings.title_font_size }}px * 0.75);
      text-align: center;
    }
  }

</style>

<section id="signup-steps-{{ section.id }}">
  <div class="container">
    <h2 class="section-title">{{ section.settings.section_title }}</h2>

    <div class="steps-container">
      {% for block in section.blocks %}
        {% if block.type == 'step' %}
          <div class="step">
            <div class="step-circle">
              <span class="step-number">{{ forloop.index }}</span>
            </div>
            <div class="step-content">
              <h3 class="step-title">{{ block.settings.title }}</h3>
              <p class="step-description">{{ block.settings.description }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

