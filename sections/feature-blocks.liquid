{% comment %}
  Feature Blocks Section
  Displays 4 horizontal feature blocks with icons, headings, and descriptions
{% endcomment %}

<style>
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    max-width: 100%;
    overflow-x: hidden;
  }

  #shopify-section-{{ section.id }} .feature-blocks-container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  #shopify-section-{{ section.id }} .feature-blocks-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ section.settings.column_gap }}px;
    align-items: start;
  }

  #shopify-section-{{ section.id }} .feature-block {
    text-align: center;
    padding: {{ section.settings.block_padding }}px;
  }

  #shopify-section-{{ section.id }} .feature-icon {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    margin: 0 auto {{ section.settings.icon_margin }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ section.settings.icon_color }};
  }

  #shopify-section-{{ section.id }} .feature-icon svg {
    width: 100%;
    height: 100%;
    stroke: currentColor;
    fill: none;
    stroke-width: {{ section.settings.icon_weight }};
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  #shopify-section-{{ section.id }} .feature-heading {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    color: {{ section.settings.heading_color }};
    margin: 0 0 {{ section.settings.heading_margin }}px 0;
    line-height: 1.3;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  #shopify-section-{{ section.id }} .feature-description {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
    margin: 0;
    line-height: 1.4;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  /* Tablet Layout - 2x2 Grid */
  @media screen and (max-width: 990px) and (min-width: 750px) {
    #shopify-section-{{ section.id }} .feature-blocks-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: {{ section.settings.mobile_gap }}px;
    }
  }

  /* Mobile Layout - 1 per row */
  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .feature-blocks-grid {
      grid-template-columns: 1fr;
      gap: {{ section.settings.mobile_gap }}px;
    }

    #shopify-section-{{ section.id }} .feature-block {
      padding: {{ section.settings.block_padding | times: 0.8 }}px;
    }

    #shopify-section-{{ section.id }} .feature-heading {
      font-size: {{ section.settings.heading_size | times: 0.9 }}px;
    }

    #shopify-section-{{ section.id }} .feature-description {
      font-size: {{ section.settings.description_size | times: 0.95 }}px;
    }
  }
</style>

<div class="feature-blocks-container">
  <div class="feature-blocks-grid">
    <!-- Feature Block 1: Package -->
    <div class="feature-block">
      <div class="feature-icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path d="M12.89 1.45l8 4A2 2 0 0 1 22 7.24v9.53a2 2 0 0 1-1.11 1.79l-8 4a2 2 0 0 1-1.78 0l-8-4a2 2 0 0 1-1.11-1.79V7.24a2 2 0 0 1 1.11-1.79l8-4a2 2 0 0 1 1.78 0z"/>
          <polyline points="2.32 6.16 12 11 21.68 6.16"/>
          <line x1="12" y1="22.76" x2="12" y2="11"/>
        </svg>
      </div>
      <h3 class="feature-heading">{{ section.settings.block_1_heading }}</h3>
      <p class="feature-description">{{ section.settings.block_1_description }}</p>
    </div>

    <!-- Feature Block 2: Clock -->
    <div class="feature-block">
      <div class="feature-icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <circle cx="12" cy="12" r="10"/>
          <polyline points="12,6 12,12 16,14"/>
        </svg>
      </div>
      <h3 class="feature-heading">{{ section.settings.block_2_heading }}</h3>
      <p class="feature-description">{{ section.settings.block_2_description }}</p>
    </div>

    <!-- Feature Block 3: Chat Bubble -->
    <div class="feature-block">
      <div class="feature-icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
          <circle cx="9" cy="10" r="1" fill="currentColor"/>
          <circle cx="15" cy="10" r="1" fill="currentColor"/>
        </svg>
      </div>
      <h3 class="feature-heading">{{ section.settings.block_3_heading }}</h3>
      <p class="feature-description">{{ section.settings.block_3_description }}</p>
    </div>

    <!-- Feature Block 4: Credit Card -->
    <div class="feature-block">
      <div class="feature-icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <rect x="1" y="4" width="22" height="16" rx="2" ry="2"/>
          <line x1="1" y1="10" x2="23" y2="10"/>
          <line x1="5" y1="15" x2="7" y2="15"/>
          <line x1="9" y1="15" x2="13" y2="15"/>
        </svg>
      </div>
      <h3 class="feature-heading">{{ section.settings.block_4_heading }}</h3>
      <p class="feature-description">{{ section.settings.block_4_description }}</p>
    </div>
  </div>
</div>

