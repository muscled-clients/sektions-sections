{% style %}
  #shopify-section-{{ section.id }} {
    --h6-bg: {{ section.settings.background_color }};
    --h6-text: {{ section.settings.text_color }};
    --h6-heading: {{ section.settings.heading_color }};
    --h6-accent: {{ section.settings.accent_color }};
    --h6-badge-bg: {{ section.settings.badge_background }};
    --h6-badge-text: {{ section.settings.badge_text_color }};
    --h6-btn-bg: {{ section.settings.button_background }};
    --h6-btn-text: {{ section.settings.button_text_color }};
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }
{% endstyle %}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;500;600;700&family=Poppins:wght@400;500;600;700&display=swap');

  .hero-6 {
    position: relative;
    background: var(--h6-bg, #41441c);
    min-height: 500px;
    overflow: hidden;
    font-family: 'Josefin Sans', sans-serif;
  }

  .hero-6__container {
    display: flex;
    flex-direction: column;
    max-width: 1600px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  /* Content */
  .hero-6__content {
    padding: 40px 20px;
    max-width: 600px;
  }

  /* Badges */
  .hero-6__badges {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-bottom: 24px;
  }

  .hero-6__badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: var(--h6-badge-bg, #000000);
    color: var(--h6-badge-text, #ffffff);
    padding: 8px 16px;
    border-radius: 50px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .hero-6__badge-icon {
    font-size: 14px;
  }

  /* Heading */
  .hero-6__heading {
    font-size: 28px;
    font-weight: 400;
    color: var(--h6-heading, #f5f5f5);
    margin: 0 0 20px;
    line-height: 1.3;
  }

  /* Description */
  .hero-6__description {
    font-size: 16px;
    font-weight: 400;
    color: var(--h6-text, #f5f5f5);
    line-height: 1.6;
    margin: 0 0 28px;
  }

  .hero-6__description strong {
    font-weight: 700;
    color: var(--h6-accent, #f5f5f5);
  }

  /* Features */
  .hero-6__features {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-bottom: 28px;
  }

  .hero-6__feature {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 15px;
    font-weight: 700;
    color: var(--h6-text, #f5f5f5);
  }

  .hero-6__feature-icon {
    font-size: 18px;
    flex-shrink: 0;
  }

  /* Button */
  .hero-6__button {
    display: inline-flex;
    align-items: center;
    gap: 21px;
    background: var(--h6-btn-bg, #000000);
    color: var(--h6-btn-text, #ffffff);
    padding: 12px 38px;
    border-radius: 12px;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    text-decoration: none;
    transition: all 0.25s ease;
    margin-bottom: 20px;
  }

  .hero-6__button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  .hero-6__button-arrow {
    width: 18px;
    height: 18px;
  }

  /* Reviews */
  .hero-6__reviews {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .hero-6__stars {
    display: flex;
    gap: 3px;
  }

  .hero-6__star {
    width: 16px;
    height: 16px;
    color: #ffc107;
  }

  .hero-6__review-text {
    font-size: 13px;
    font-weight: 600;
    color: var(--h6-text, #f5f5f5);
  }

  /* Image */
  .hero-6__image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 75%;
    overflow: hidden;
  }

  .hero-6__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .hero-6__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-6__image-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #c4b5ab 0%, #a89a95 100%);
  }

  /* Tablet */
  @media (min-width: 768px) {
    .hero-6 {
      min-height: 600px;
    }

    .hero-6__content {
      padding: 60px 40px;
    }

    .hero-6__heading {
      font-size: 34px;
    }

    .hero-6__description {
      font-size: 18px;
    }

    .hero-6__feature {
      font-size: 16px;
    }

    .hero-6__button {
      gap: 28px;
      padding: 16px 50px;
      font-size: 15px;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .hero-6 {
      min-height: 700px;
    }

    .hero-6__container {
      flex-direction: row;
      align-items: center;
    }

    .hero-6__content {
      flex: 0 0 48%;
      padding: 80px 60px;
      max-width: none;
    }

    .hero-6__heading {
      font-size: 40px;
    }

    .hero-6__description {
      font-size: 20px;
    }

    .hero-6__image-wrapper {
      position: absolute;
      right: 0;
      top: 0;
      width: 50%;
      height: 100%;
      padding-bottom: 0;
    }
  }

  /* Large Desktop */
  @media (min-width: 1400px) {
    .hero-6__content {
      padding: 100px 80px;
    }

    .hero-6__heading {
      font-size: 44px;
    }

    .hero-6__description {
      font-size: 22px;
    }
  }
</style>

<section class="hero-6" data-section-id="{{ section.id }}">
  <div class="hero-6__container">
    <!-- Content -->
    <div class="hero-6__content">
      <!-- Badges -->
      {%- if section.blocks.size > 0 -%}
        <div class="hero-6__badges">
          {%- for block in section.blocks -%}
            {%- if block.type == 'badge' -%}
              <div class="hero-6__badge" {{ block.shopify_attributes }}>
                {%- if block.settings.icon != blank -%}
                  <span class="hero-6__badge-icon">{{ block.settings.icon }}</span>
                {%- endif -%}
                <span>{{ block.settings.text }}</span>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      {%- endif -%}

      <!-- Heading -->
      {%- if section.settings.heading != blank -%}
        <h1 class="hero-6__heading">{{ section.settings.heading }}</h1>
      {%- endif -%}

      <!-- Description -->
      {%- if section.settings.description != blank -%}
        <div class="hero-6__description">{{ section.settings.description }}</div>
      {%- endif -%}

      <!-- Features -->
      {%- assign feature_blocks = section.blocks | where: "type", "feature" -%}
      {%- if feature_blocks.size > 0 -%}
        <div class="hero-6__features">
          {%- for block in feature_blocks -%}
            <div class="hero-6__feature" {{ block.shopify_attributes }}>
              {%- if block.settings.icon != blank -%}
                <span class="hero-6__feature-icon">{{ block.settings.icon }}</span>
              {%- endif -%}
              <span>{{ block.settings.text }}</span>
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}

      <!-- Button -->
      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_link }}" class="hero-6__button">
          <span>{{ section.settings.button_text }}</span>
          <svg class="hero-6__button-arrow" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"/>
            <polyline points="12 5 19 12 12 19"/>
          </svg>
        </a>
      {%- endif -%}

      <!-- Reviews -->
      {%- if section.settings.show_reviews -%}
        <div class="hero-6__reviews">
          <div class="hero-6__stars">
            {%- for i in (1..5) -%}
              <svg class="hero-6__star" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
              </svg>
            {%- endfor -%}
          </div>
          <span class="hero-6__review-text">{{ section.settings.review_text }}</span>
        </div>
      {%- endif -%}
    </div>

    <!-- Image -->
    <div class="hero-6__image-wrapper">
      <div class="hero-6__image">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 1200 | image_tag: loading: 'eager', alt: section.settings.heading }}
        {%- else -%}
          <div class="hero-6__image-placeholder"></div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

